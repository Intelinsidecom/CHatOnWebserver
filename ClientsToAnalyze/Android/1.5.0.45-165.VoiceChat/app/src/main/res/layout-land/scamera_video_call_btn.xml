<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="right"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/video_call_btn_layout"
        android:background="@drawable/call_btn_bg_light_h"
        android:layout_width="152dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/sub_video_call_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">
            <Button
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:ellipsize="marquee"
                android:id="@+id/video_end_call_btn"
                android:background="@drawable/call_btn_selector"
                android:paddingTop="12dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:text="@string/call_btn_callend"
                android:singleLine="true"
                android:drawableTop="@drawable/call_end_call_icon_selector"
                android:drawablePadding="7dp"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="15dp"
                android:textColor="#2b2b2b"
                android:ellipsize="marquee"
                android:id="@+id/video_hideme_btn"
                android:background="@drawable/call_btn_selector"
                android:paddingTop="12dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@string/call_btn_hideme"
                android:singleLine="true"
                android:drawableTop="@drawable/call_hide_me_selector"
                android:drawablePadding="7dp"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="15dp"
                android:textColor="#2b2b2b"
                android:ellipsize="marquee"
                android:id="@+id/video_mute_btn"
                android:background="@drawable/call_btn_selector"
                android:paddingTop="12dp"
                android:paddingBottom="7dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@string/call_btn_mute"
                android:singleLine="true"
                android:drawableTop="@drawable/call_mute_icon_selector"
                android:drawableBottom="@drawable/call_btn_focus_switch_off"
                android:drawablePadding="0dp"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="15dp"
                android:textColor="#2b2b2b"
                android:ellipsize="marquee"
                android:id="@+id/record_stop_btn"
                android:background="@drawable/call_btn_selector"
                android:paddingTop="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@string/call_btn_record_stop"
                android:singleLine="true"
                android:drawableTop="@drawable/call_video_btn_record_selector"
                android:drawablePadding="7dp"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="15dp"
                android:textColor="#2b2b2b"
                android:ellipsize="marquee"
                android:id="@+id/invite_buddies_btn"
                android:background="@drawable/call_btn_selector"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="@string/call_btn_invite_buddy"
                android:singleLine="true"
                android:drawableTop="@drawable/call_invite_icon_selector"
                android:drawablePadding="7dp"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="15dp"
                android:textColor="#2b2b2b"
                android:ellipsize="marquee"
                android:id="@+id/show_me_btn"
                android:background="@drawable/call_btn_selector"
                android:paddingTop="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="@string/call_menu_show_me"
                android:singleLine="true"
                android:drawableTop="@drawable/call_show_me_selector"
                android:drawablePadding="7dp"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
