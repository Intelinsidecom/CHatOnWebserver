<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/call_btn_bg_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/video_call_end_layout"
        android:layout_width="335dp"
        android:layout_height="match_parent">
        <com.coolots.chaton.common.util.BuddyImageView
            android:id="@+id/video_call_end_ui_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/call_img_unknown"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/video_call_end_layout"
        android:background="#55fb4a05"
        android:visibility="gone"
        android:layout_width="335dp"
        android:layout_height="38dp">
        <TextView
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:id="@+id/video_call_end_ui_call_status_h"
            android:paddingRight="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_call"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/video_call_end_ui_branding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:src="@drawable/logo_outline"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:id="@+id/frameLayout1"
        android:background="#55fb4a05"
        android:layout_width="263dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/video_call_end_layout"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/linearLayout1"
            android:paddingLeft="8dp"
            android:paddingTop="0dp"
            android:paddingRight="12dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/video_call_img"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:textSize="27dp"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/video_call_end_ui_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxWidth="147dp"
                        android:singleLine="true"/>
                    <TextView
                        android:textSize="27dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/video_member_count"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="(2)"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/video_call_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/vt_call_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="7dp">
                <TextView
                    android:textSize="21dp"
                    android:textColor="#ffd1b3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/video_call_end_ui_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="120dp"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:textSize="21dp"
                    android:textColor="#ffffff"
                    android:id="@+id/video_call_end_ui_call_status"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_call"
                    android:layout_alignParentRight="true"/>
                <Chronometer
                    android:textSize="21dp"
                    android:textColor="#ffffff"
                    android:id="@+id/video_call_end_ui_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:33:05"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
