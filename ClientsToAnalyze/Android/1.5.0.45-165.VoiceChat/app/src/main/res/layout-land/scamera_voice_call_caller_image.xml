<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/voice_call_member_layout"
    android:background="@drawable/call_btn_bg_light"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="335dp"
            android:layout_height="match_parent">
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/voice_call_memberimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/call_img_unknown_h"
                android:contentDescription="@string/app_name"/>
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/voice_call_memberimage_conf"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/call_img_conference_h"
                android:contentDescription="@string/app_name"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9.33dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/call_icon_rec"
                    android:visibility="gone"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/cv_icon_recorder"
                    android:contentDescription="@string/app_name"/>
                <View
                    android:layout_width="6.66dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="30px"
                    android:textColor="#eb0d0d"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/voice_call_rec_text"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call_voice_recording"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/coolots_logo"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/coolots_logo_no_line"
                    android:visibility="gone"
                    android:layout_width="188dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logo_no_outline"
                    android:contentDescription="@string/app_name"/>
                <ImageView
                    android:id="@+id/coolots_logo_line"
                    android:visibility="gone"
                    android:layout_width="188dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logo_outline"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
            <RelativeLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/voice_call_icon_layout"
                android:background="#50000000"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/voice_call_bluetooth"
                    android:visibility="gone"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="9dp"
                    android:src="@drawable/call_bt_icon_selector"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"/>
                <View
                    android:background="#40cccccc"
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="7dp"
                    android:layout_toLeftOf="@+id/voice_call_hold_layout"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/voice_call_hold_layout"
                    android:background="@drawable/button_hold_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <Button
                        android:id="@+id/voice_call_hold_btn"
                        android:background="@drawable/hold_icon_pause_normal"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginLeft="9dp"/>
                    <TextView
                        android:textSize="17dp"
                        android:textColor="@drawable/call_white_text_color_selector"
                        android:id="@+id/voice_call_hold_text"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="@string/call_btn_hold"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/voice_call_state_info"
        android:background="#50000000"
        android:paddingRight="14dp"
        android:layout_width="335dp"
        android:layout_height="31dp"
        android:text="@string/call_info_outgoing_voice_call"/>
</FrameLayout>
