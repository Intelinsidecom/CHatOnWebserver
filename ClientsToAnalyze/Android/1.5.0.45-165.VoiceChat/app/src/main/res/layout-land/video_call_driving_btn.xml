<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/call_btn_bg_light_h"
        android:paddingLeft="13dp"
        android:paddingRight="12dp"
        android:layout_width="194dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/video_call_driving_outgoing_btn_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="98dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/carkit_cancel_frame_layout"
                android:background="@drawable/button_default_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/driving_mode_cancel_icon_h"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:textSize="27dp"
                    android:textColor="@drawable/call_btn_text_color_selector"
                    android:ellipsize="end"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_profile_question_cancel"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/video_call_driving_incoming_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/carkit_answer_frame_layout"
                android:background="@drawable/button_default_selector"
                android:layout_width="match_parent"
                android:layout_height="98dp">
                <ImageView
                    android:background="@drawable/driving_mode_answer_icon_h"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:textSize="27dp"
                    android:textColor="@drawable/call_btn_text_color_selector"
                    android:ellipsize="end"
                    android:id="@+id/carkit_answer_text"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_to_answer"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/carkit_reject_frame_layout"
                android:background="@drawable/button_default_selector"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:background="@drawable/driving_mode_reject_icon_h"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:textSize="27dp"
                    android:textColor="@drawable/call_btn_text_color_selector"
                    android:ellipsize="end"
                    android:id="@+id/carkit_reject_text"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call_swipe_left_message"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
