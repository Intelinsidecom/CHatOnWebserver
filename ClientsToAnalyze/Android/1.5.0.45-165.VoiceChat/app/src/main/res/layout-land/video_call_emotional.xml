<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="@drawable/action_bar_bg_02"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/animation_setting_layout"
        android:background="@drawable/videocall_emotionalanimation_bg"
        android:layout_width="315dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp">
        <FrameLayout
            android:id="@+id/animation_always_layout"
            android:background="@drawable/button_emotion_selector_left"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/call_btn_animation_always"
                android:ellipsize="marquee"
                android:gravity="center"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/video_option_menu_auto"
                android:singleLine="true"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:id="@+id/animation_always_button"
                android:paddingLeft="4dp"
                android:paddingTop="30dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/videocall_emotionalanimation_auto_off"/>
        </FrameLayout>
        <ImageView
            android:background="@drawable/videocall_emotionalanimation_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/animation5"
            android:background="@drawable/button_emotion_selector_center"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/videocall_emotionalanimation_01"
            android:soundEffectsEnabled="false"/>
        <ImageView
            android:background="@drawable/videocall_emotionalanimation_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/animation1"
            android:background="@drawable/button_emotion_selector_center"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/videocall_emotionalanimation_02"
            android:soundEffectsEnabled="false"/>
        <ImageView
            android:background="@drawable/videocall_emotionalanimation_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/animation2"
            android:background="@drawable/button_emotion_selector_center"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/videocall_emotionalanimation_03"
            android:soundEffectsEnabled="false"/>
        <ImageView
            android:background="@drawable/videocall_emotionalanimation_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/animation4"
            android:background="@drawable/button_emotion_selector_center"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/videocall_emotionalanimation_04"
            android:soundEffectsEnabled="false"/>
        <ImageView
            android:background="@drawable/videocall_emotionalanimation_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/animation3"
            android:background="@drawable/button_emotion_selector_right"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/videocall_emotionalanimation_05"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/animation_cancel"
        android:focusable="true"
        android:layout_width="37dp"
        android:layout_height="20dp"
        android:src="@drawable/videocall_emotionalanimation_cancel"
        android:soundEffectsEnabled="false"
        android:contentDescription="@string/cancel"/>
</LinearLayout>
