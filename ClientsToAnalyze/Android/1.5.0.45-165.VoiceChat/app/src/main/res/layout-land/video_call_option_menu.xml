<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/animation_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="9dp">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#cccccc"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/animation_show_btn"
            android:background="@drawable/call_video_tool_bar_selector"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="65dp"
            android:text="@string/video_option_menu_hide"
            android:singleLine="true"
            android:soundEffectsEnabled="false"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/animation_setting_layout"
            android:layout_width="wrap_content"
            android:layout_height="65dp">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/videocall_emotionalanimation_bg"
                android:layout_width="336dp"
                android:layout_height="65dp">
                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="65dp">
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:id="@+id/animation_always"
                        android:focusable="true"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:text="@string/video_option_menu_auto"
                        android:singleLine="true"/>
                    <ImageView
                        android:id="@+id/animation_always_button"
                        android:paddingLeft="9dp"
                        android:paddingTop="40dp"
                        android:paddingRight="9dp"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:src="@drawable/videocall_emotionalanimation_auto_off"/>
                </FrameLayout>
                <ImageView
                    android:id="@+id/animation5"
                    android:background="@drawable/call_video_btn_ani_selector"
                    android:focusable="true"
                    android:layout_width="52dp"
                    android:layout_height="65dp"
                    android:src="@drawable/videocall_emotionalanimation_01"/>
                <ImageView
                    android:id="@+id/animation1"
                    android:background="@drawable/call_video_btn_ani_selector"
                    android:focusable="true"
                    android:layout_width="52dp"
                    android:layout_height="65dp"
                    android:src="@drawable/videocall_emotionalanimation_02"/>
                <ImageView
                    android:id="@+id/animation2"
                    android:background="@drawable/call_video_btn_ani_selector"
                    android:focusable="true"
                    android:layout_width="52dp"
                    android:layout_height="65dp"
                    android:src="@drawable/videocall_emotionalanimation_03"/>
                <ImageView
                    android:id="@+id/animation4"
                    android:background="@drawable/call_video_btn_ani_selector"
                    android:focusable="true"
                    android:layout_width="52dp"
                    android:layout_height="65dp"
                    android:src="@drawable/videocall_emotionalanimation_04"/>
                <ImageView
                    android:id="@+id/animation3"
                    android:background="@drawable/call_video_btn_ani_selector"
                    android:focusable="true"
                    android:layout_width="52dp"
                    android:layout_height="65dp"
                    android:src="@drawable/videocall_emotionalanimation_05"/>
                <ImageView
                    android:id="@+id/animation_cancel"
                    android:background="@drawable/call_video_btn_ani_last_selector"
                    android:paddingLeft="4dp"
                    android:paddingTop="15dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="15dp"
                    android:focusable="true"
                    android:layout_width="24dp"
                    android:layout_height="65dp"
                    android:src="@drawable/videocall_emotionalanimation_cancel"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/themeshot_all_layout"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="9dp">
        <TextView
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#cccccc"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/themeshot_show_btn"
            android:background="@drawable/call_video_tool_bar_selector"
            android:focusable="true"
            android:layout_width="52dp"
            android:layout_height="65dp"
            android:text="@string/video_option_menu_hide"
            android:singleLine="true"
            android:soundEffectsEnabled="false"/>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/themeshot_setting_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_toRightOf="@+id/themeshot_show_btn">
            <LinearLayout
                android:id="@+id/themeshot_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/videocall_themeshot_bg"
                    android:layout_width="284dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:id="@+id/themeshot1"
                        android:background="@drawable/call_video_btn_ani_selector"
                        android:focusable="true"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:src="@drawable/emotional_1st_party"/>
                    <ImageView
                        android:id="@+id/themeshot2"
                        android:background="@drawable/call_video_btn_ani_selector"
                        android:focusable="true"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:src="@drawable/emotional_1st_animal"/>
                    <ImageView
                        android:id="@+id/themeshot3"
                        android:background="@drawable/call_video_btn_ani_selector"
                        android:focusable="true"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:src="@drawable/emotional_1st_glasses"/>
                    <ImageView
                        android:id="@+id/themeshot4"
                        android:background="@drawable/call_video_btn_ani_selector"
                        android:focusable="true"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:src="@drawable/emotional_1st_hat"/>
                    <ImageView
                        android:id="@+id/themeshot5"
                        android:background="@drawable/call_video_btn_ani_selector"
                        android:focusable="true"
                        android:layout_width="52dp"
                        android:layout_height="65dp"
                        android:src="@drawable/emotional_1st_mustache"/>
                    <ImageView
                        android:id="@+id/themeshot_cancel"
                        android:background="@drawable/call_video_btn_ani_last_selector"
                        android:paddingLeft="4dp"
                        android:paddingTop="15dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="15dp"
                        android:focusable="true"
                        android:layout_width="24dp"
                        android:layout_height="65dp"
                        android:src="@drawable/videocall_emotionalanimation_cancel"
                        android:soundEffectsEnabled="false"/>
                </LinearLayout>
            </LinearLayout>
            <include
                android:id="@+id/video_call_theme_animal_layout"
                android:visibility="gone"
                layout="@layout/video_call_theme_animal"/>
            <include
                android:id="@+id/video_call_theme_glasses_layout"
                android:visibility="gone"
                layout="@layout/video_call_theme_glasses"/>
            <include
                android:id="@+id/video_call_theme_hat_layout"
                android:visibility="gone"
                layout="@layout/video_call_theme_hat"/>
            <include
                android:id="@+id/video_call_theme_mustache_layout"
                android:visibility="gone"
                layout="@layout/video_call_theme_mustache"/>
            <include
                android:id="@+id/video_call_theme_party_layout"
                android:visibility="gone"
                layout="@layout/video_call_theme_party"/>
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>
