<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="@drawable/action_bar_bg_02"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/themeshot_hat_layout"
        android:background="@drawable/videocall_emotionalanimation_bg"
        android:layout_width="315dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/themeshot_hat_back"
                android:background="@drawable/button_emotion_selector_center"
                android:focusable="true"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:src="@drawable/videocall_emotionalanimation_back"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:background="@drawable/videocall_emotionalanimation_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/themeshot_hat_1"
                android:background="@drawable/button_emotion_selector_center"
                android:focusable="true"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/hat_01"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:background="@drawable/videocall_emotionalanimation_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/themeshot_hat_2"
                android:background="@drawable/button_emotion_selector_center"
                android:focusable="true"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/hat_02"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:background="@drawable/videocall_emotionalanimation_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/themeshot_hat_3"
                android:background="@drawable/button_emotion_selector_center"
                android:focusable="true"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/hat_03"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/themeshot_hat_cancel"
        android:focusable="true"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:src="@drawable/videocall_emotionalanimation_cancel"
        android:soundEffectsEnabled="false"
        android:contentDescription="@string/cancel"/>
</LinearLayout>
