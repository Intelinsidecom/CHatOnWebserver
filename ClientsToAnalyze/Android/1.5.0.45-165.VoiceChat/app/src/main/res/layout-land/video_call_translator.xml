<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/translate_background_color_1"
    android:layout_width="446dp"
    android:layout_height="335dp">
    <RelativeLayout
        android:id="@+id/voice_call_member_layout"
        android:background="@color/translate_background_color_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/translate_background_color_2"
            android:layout_width="312dp"
            android:layout_height="284dp">
            <com.coolots.chaton.call.view.layout.CallTranslatorScrollViewLayout
                android:id="@+id/video_call_translator_content_id"
                android:background="@color/translate_background_color_2"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/translator_change_languae_help"
            android:background="@drawable/translator_toast_popup_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="210dp">
            <TextView
                android:textSize="15dp"
                android:textColor="@color/chaton_color_translate_translate_popup"
                android:paddingLeft="14dp"
                android:paddingTop="11dp"
                android:paddingRight="14dp"
                android:paddingBottom="11dp"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="@string/translator_chagne_lang_help_toast"
                android:maxLines="2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:background="@color/translate_background_color_2"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/translator_bg_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/translator_show"
                    android:background="@drawable/translator_bg_selector"
                    android:layout_width="112dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/translator_image_show"
                        android:background="@drawable/translator_show_off_image_selector"
                        android:duplicateParentState="true"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@drawable/call_btn_text_color_selector"
                        android:id="@+id/translator_hold_textView"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video_option_menu_hide"
                        android:maxLines="2"/>
                </LinearLayout>
                <ImageView
                    android:background="@drawable/translator_btn_divider_line"
                    android:visibility="visible"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:soundEffectsEnabled="false"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/translator_tts"
                    android:background="@drawable/translator_bg_selector"
                    android:layout_width="186dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/translator_image_tts"
                        android:background="@drawable/translator_tts_off_image_selector"
                        android:duplicateParentState="true"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="3dp"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@drawable/call_btn_text_color_selector"
                        android:id="@+id/translator_tts_textView"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/translator_change_tts_btn"
                        android:maxLines="2"/>
                </LinearLayout>
                <ImageView
                    android:background="@drawable/translator_btn_divider_line"
                    android:visibility="visible"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:soundEffectsEnabled="false"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/translator_change_language"
                    android:background="@drawable/translator_bg_selector"
                    android:layout_width="145dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:duplicateParentState="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/translator_language_image_selector"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@drawable/call_btn_text_color_selector"
                        android:id="@+id/translator_change_language_textView"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/translator_change_lang_btn"
                        android:maxLines="2"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
