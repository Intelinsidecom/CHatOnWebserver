<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <RelativeLayout
        android:id="@+id/voice_call_member_info_bg"
        android:background="@drawable/action_bar_bg_02"
        android:layout_width="305dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/voice_call_icon"
            android:background="@drawable/voip_call_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="7dp"
            android:layout_alignParentLeft="true"/>
        <FrameLayout
            android:id="@+id/chat_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_gravity="center_vertical"
                android:background="@drawable/action_bar_divider_02"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/option_chat_btn"
                android:background="@drawable/action_bar_btn_option_selector"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/talk_back_go_to_chaton"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/chat_btn_img"
                android:background="@drawable/v_title_chat_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@+id/chat_btn_layout"
            android:layout_toRightOf="@+id/voice_call_icon"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="19dp"
                android:textColor="#ffffff"
                android:ellipsize="marquee"
                android:id="@+id/voice_call_membername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:marqueeRepeatLimit="1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/voice_call_membernumber_layout"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/call_status_bar_status_msg"
                        android:ellipsize="marquee"
                        android:gravity="left"
                        android:id="@+id/voice_call_membernumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="777-777-7777"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/voiceCallDialingFrame"
                        android:layout_alignParentLeft="true"/>
                    <FrameLayout
                        android:id="@+id/voiceCallDialingFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <Chronometer
                            android:textSize="15dp"
                            android:textColor="@color/call_status_bar_status_msg"
                            android:id="@+id/elapsedTime"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                        <LinearLayout
                            android:id="@+id/voiceCallDialing"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="15dp"
                                android:textColor="@color/chaton_color_008_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/call_info_outgoing_video_call"
                                android:singleLine="true"/>
                            <ImageButton
                                android:layout_gravity="bottom"
                                android:id="@+id/voice_call_dialing_image"
                                android:layout_width="35dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="4dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/voice_call_wait_group_call_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <ProgressBar
                        android:id="@+id/inviting_progressBar"
                        android:visibility="visible"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:indeterminateDrawable="@drawable/inviting_ani_progress"
                        android:indeterminateDuration="50"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/call_status_bar_status_msg"
                        android:ellipsize="marquee"
                        android:id="@+id/voice_call_wait_group_call"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/change_to_conference_wait"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/inviting_progressBar"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
