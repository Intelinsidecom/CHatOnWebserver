<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <Button
            android:textColor="#323838"
            android:id="@+id/menu_switch_video_call"
            android:background="@drawable/call_video_option_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/call_menu_switch_videocall"
            android:drawableTop="@drawable/call_video_option_switch_voice"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"/>
        <Button
            android:textColor="#323838"
            android:id="@+id/menu_switch_headset"
            android:background="@drawable/call_video_option_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/call_menu_switch_headset"
            android:drawableTop="@drawable/call_video_option_bluetooth"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <Button
            android:textColor="#323838"
            android:id="@+id/menu_noise_reduction"
            android:background="@drawable/call_video_option_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/call_menu_noise_reduction"
            android:drawableTop="@drawable/ic_menu_showme"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"/>
        <Button
            android:textColor="#323838"
            android:id="@+id/menu_send_file"
            android:background="@drawable/call_video_option_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/call_menu_share_chaton"
            android:drawableTop="@drawable/call_video_option_send_file"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"/>
        <Button
            android:textColor="#323838"
            android:id="@+id/menu_conference_call"
            android:background="@drawable/call_video_option_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/call_menu_conference_call"
            android:drawableTop="@drawable/call_video_option_layout"
            android:layout_weight="1"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>
</LinearLayout>
