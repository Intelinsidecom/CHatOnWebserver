<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="@color/tw_light_color001"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/clear_cover_accept_voice_call"
        android:background="@color/tw_light_color001"
        android:layout_width="320dp"
        android:layout_height="117dp"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/accept_user_info"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:id="@+id/accept_cover_user_name"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:id="@+id/accept_cover_user_message"
                android:duplicateParentState="true"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">
                <Chronometer
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:ellipsize="end"
                    android:id="@+id/voice_status_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/clear_end_layout"
            android:layout_width="157dp"
            android:layout_height="157dp"
            android:layout_marginRight="-35.5dp"
            android:layout_marginBottom="-40.5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/clear_end_circle"
                android:background="@drawable/clear_reject_circle_big_01_j"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/clear_reject_circle_small_j"
                android:layout_width="66dp"
                android:layout_height="66dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/clear_end_call"
                android:background="@drawable/clear_accept_incomingcall_endcall_j"
                android:clickable="true"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:contentDescription="@string/call_btn_callend"/>
        </FrameLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="168dp"
            android:layout_height="66dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/accept_green_arrow_cover"
                android:background="@anim/green_arrow_effect"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="11dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/accept_red_arrow_cover"
                android:background="@anim/red_arrow_effect"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
