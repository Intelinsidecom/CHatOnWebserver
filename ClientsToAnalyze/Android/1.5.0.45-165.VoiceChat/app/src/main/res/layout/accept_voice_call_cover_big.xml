<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center_horizontal"
    android:background="@color/tw_light_color001"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/call_pattern_mainarea"
        android:layout_width="318dp"
        android:layout_height="293dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/clear_cover_accept_big_text_layout"
            android:background="#805ea30a"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Chronometer
                    android:textSize="14dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:id="@+id/clear_accept_big_cover_ui_call_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_chrometer_shadow_color"
                    android:shadowDy="2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/clear_big_cover_ic_chaton_call"
                    android:background="@drawable/ic_chaton_call"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:ellipsize="marquee"
                    android:id="@+id/clear_accpet_big_cover_status_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/call_info_outgoing_voice_call"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_text_shadow_color"
                    android:shadowDy="2"
                    android:layout_toRightOf="@+id/clear_big_cover_ic_chaton_call"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:paddingLeft="40dp"
            android:paddingTop="14dp"
            android:paddingRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_below="@+id/clear_cover_accept_big_text_layout">
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/voice_ac_call_memberimage_covered"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/voice_ac_call_memberimage_covered"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:ellipsize="marquee"
                    android:id="@+id/clear_accept_big_cover_ui_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emily Blunt"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_text_shadow_color"
                    android:shadowDy="2"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:ellipsize="marquee"
                    android:id="@+id/clear_accpet_big_cover_ui_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="010-2222-3333"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_text_shadow_color"
                    android:shadowDy="2"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/clear_accpet_big_cover_incoming_call_widget"
            android:background="#70000000"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/clear_accpet_big_cover_during_option_wdiget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="37dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/clear_accept_big_cover_speaker"
                android:background="@drawable/s_view_cover_speaker_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/clear_accept_big_cover_mute"
                android:background="@drawable/s_view_cover_mute_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/clear_reject_circle_big_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-20dp"
            android:layout_marginBottom="-24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/clear_reject_big_circle_1"
                android:background="@drawable/clear_reject_circle_big_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/clear_reject_circle_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/clear_reject_big_call_1"
                android:background="@drawable/clear_accept_incomingcall_endcall"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/red_accept_arrow_big_cover"
                android:background="@anim/red_arrow_big_effect"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginRight="56dp"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
