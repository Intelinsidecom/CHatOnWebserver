<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/chaton_color_011_light"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <View
        android:background="@color/chaton_color_009_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/buttons"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:id="@+id/action_back"
            android:background="@drawable/action_bar_btn_selector"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickBackPage"
            android:contentDescription="@string/back_button">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="31dp"
                android:layout_height="32dp"
                android:src="@drawable/actionbar_ic_arrow"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"/>
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/actionbar_ic_chaton"
                android:layout_toRightOf="@+id/back_btn"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:textSize="19dp"
                android:textColor="@color/chaton_color_001_light"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/action_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="@string/preference_3_1_title"
                android:singleLine="true"
                android:layout_toRightOf="@+id/back_img"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <View
            android:layout_gravity="center"
            android:background="@color/action_bar_2_divider"
            android:layout_width="1dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/action_btn1"
            android:background="@drawable/action_bar_btn_selector"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/action_btn_cancel_img"
                android:paddingLeft="14dp"
                android:paddingTop="8dp"
                android:paddingRight="14dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/actionbar_ic_cancel"/>
            <TextView
                android:textSize="19dp"
                android:textColor="@drawable/action_bar_text_color_selector"
                android:layout_gravity="center"
                android:id="@+id/action_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="@string/cancel"
                android:shadowColor="@color/chaton_actionbar_title_shadow"
                android:shadowDy="0.5"/>
        </LinearLayout>
        <View
            android:layout_gravity="center"
            android:background="@color/action_bar_2_divider"
            android:layout_width="1dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/action_btn2"
            android:background="@drawable/action_bar_btn_selector"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/action_btn_done_img"
                android:paddingLeft="14dp"
                android:paddingTop="8dp"
                android:paddingRight="14dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/tw_action_bar_icon_check_selector"/>
            <TextView
                android:textSize="19dp"
                android:textColor="@drawable/action_bar_text_color_selector"
                android:layout_gravity="center"
                android:id="@+id/action_btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="@string/done"
                android:shadowColor="@color/chaton_actionbar_title_shadow"
                android:shadowDy="0.5"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
