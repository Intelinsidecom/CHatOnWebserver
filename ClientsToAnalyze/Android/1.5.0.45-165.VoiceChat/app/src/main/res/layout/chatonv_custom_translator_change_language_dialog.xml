<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:minWidth="328dp"
    android:minHeight="170dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/custom_topPanel"
        android:background="@drawable/popup_winset_top_bright"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minHeight="64dp">
            <ImageView
                android:id="@+id/general_dialog_title_image"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@null"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/general_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hehehe"
                android:singleLine="true"
                style="@style/DialogText.Title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/general_dialog_message_layout"
        android:background="@drawable/popup_winset_center_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/general_dialog_message_top"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DialogText"/>
        <Spinner
            android:gravity="center_vertical"
            android:id="@+id/add_country_spinner"
            android:background="@drawable/pulldown_ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:dropDownSelector="@drawable/button_default_selector"
            android:dropDownWidth="wrap_content"
            android:dropDownVerticalOffset="1dp"/>
        <TextView
            android:id="@+id/general_dialog_message_middle"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DialogText"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/chaton_customPanel"
        android:background="@drawable/popup_winset_center_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/chaton_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/custom_buttonPanel"
        android:background="@drawable/popup_winset_bottom_medium_01"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:minHeight="48dp"
        android:showDividers="beginning"
        android:dividerPadding="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:id="@+id/general_dialog_negative_btn"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:maxLines="2"
                android:layout_weight="1"/>
            <Button
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_gravity="right"
                android:id="@+id/general_dialog_positive_btn"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:maxLines="2"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
