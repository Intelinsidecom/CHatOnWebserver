<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:minWidth="328dp"
    android:minHeight="170dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/custom_topPanel"
        android:background="@drawable/popup_winset_top_bright"
        android:layout_width="match_parent"
        android:layout_height="47.5dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minHeight="64dp">
            <ImageView
                android:id="@+id/general_dialog_title_image"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@null"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/general_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/call_menu_translator"
                android:singleLine="true"
                style="@style/DialogText.Title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/general_dialog_message_layout"
        android:background="@drawable/popup_winset_center_bright"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/incoming_message_only_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/general_dialog_message_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translator_message_top"
                android:layout_weight="1"
                style="@style/DialogText"/>
            <CheckBox
                android:gravity="right"
                android:id="@+id/translator_checkbox"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:button="@drawable/button_checkbox_selector"/>
        </LinearLayout>
        <View
            android:background="@drawable/list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp">
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/translator_top_buddy_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call_img_unknown_list"/>
            <TextView
                android:id="@+id/translator_top_buddy_name"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Me"
                style="@style/DialogText"/>
            <Spinner
                android:layout_gravity="right"
                android:id="@+id/add_country_spinner_top"
                android:background="@drawable/pulldown_ic"
                android:layout_width="132dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp"
                android:dropDownSelector="@drawable/button_default_selector"
                android:dropDownWidth="wrap_content"
                android:dropDownVerticalOffset="1dp"/>
        </LinearLayout>
        <View
            android:background="@drawable/list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp">
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/translator_middle_buddy_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call_img_unknown_list"/>
            <TextView
                android:id="@+id/translator_middle_buddy_name"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Buddy"
                style="@style/DialogText"/>
            <Spinner
                android:layout_gravity="right"
                android:id="@+id/add_country_spinner_middle"
                android:background="@drawable/pulldown_ic"
                android:layout_width="132dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp"
                android:dropDownSelector="@drawable/button_default_selector"
                android:dropDownWidth="wrap_content"
                android:dropDownVerticalOffset="1dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/custom_buttonPanel"
        android:background="@drawable/popup_winset_bottom_medium_01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"
        android:showDividers="beginning"
        android:dividerPadding="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp">
            <Button
                android:textSize="14sp"
                android:textColor="#000000"
                android:id="@+id/general_dialog_negative_btn"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:minHeight="50dp"
                android:maxLines="2"
                android:layout_weight="1"/>
            <Button
                android:textSize="14sp"
                android:textColor="#000000"
                android:id="@+id/general_dialog_positive_btn"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:minHeight="50dp"
                android:maxLines="2"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
