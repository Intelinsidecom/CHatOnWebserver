<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center_horizontal"
    android:background="@color/tw_light_color001"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/call_pattern_mainarea"
        android:layout_width="318dp"
        android:layout_height="293dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/clear_cover_big_text_layout"
            android:background="#80fb4a05"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <ImageView
                android:id="@+id/clear_big_cover_ic_chaton_call_end"
                android:background="@drawable/ic_chaton_call"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/chaton_covered_text_color"
                android:id="@+id/clear_end_big_cover_ui_call_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/call_btn_callend"
                android:singleLine="true"
                android:shadowDy="2"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Chronometer
                    android:textSize="17dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:gravity="right"
                    android:id="@+id/clear_end_big_cover_ended_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_text_shadow_color"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:paddingLeft="40dp"
            android:paddingTop="14dp"
            android:paddingRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_below="@+id/clear_cover_big_text_layout">
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/voice_end_call_memberimage_covered"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/voice_end_call_memberimage_covered"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:ellipsize="marquee"
                    android:id="@+id/clear_end_big_cover_ui_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emily Blunt"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_text_shadow_color"
                    android:shadowDy="2"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/chaton_covered_text_color"
                    android:ellipsize="marquee"
                    android:id="@+id/clear_end_big_cover_ui_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="010-2222-3333"
                    android:singleLine="true"
                    android:shadowColor="@color/chaton_covered_text_shadow_color"
                    android:shadowDy="2"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/clear_big_cover_incoming_call_widget"
            android:background="#70000000"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
