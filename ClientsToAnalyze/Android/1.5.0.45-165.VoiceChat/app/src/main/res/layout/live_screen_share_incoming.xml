<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/share_incomming_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:layout_marginTop="138dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/share_incomming_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="197dp">
                <ImageView
                    android:background="@drawable/share_incomming_sequence_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
                <ImageView
                    android:background="@drawable/share_incomming_sequence_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
                <ImageView
                    android:background="@drawable/share_incomming_sequence_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
                <ImageView
                    android:background="@drawable/share_incomming_sequence_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/tw_color001"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/call_btn_share_screen"
            android:shadowColor="@color/tw_color002"
            android:shadowDy="3"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:background="#7f000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.coolots.chaton.common.util.BuddyImageView
            android:id="@+id/voice_in_call_memberimage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/call_img_unknown"
            android:contentDescription="@string/app_name"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/voice_in_call_memberimage">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/voice_call_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:textSize="27dp"
                        android:textColor="#ffffff"
                        android:ellipsize="end"
                        android:id="@+id/voice_in_call_membername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxWidth="255dp"
                        android:text="user name"
                        android:singleLine="true"
                        android:shadowDy="-1"/>
                    <TextView
                        android:textSize="27dp"
                        android:textColor="#ffffff"
                        android:id="@+id/conf_member_count"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:minWidth="35dp"
                        android:text="(3)"
                        android:singleLine="true"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:textSize="21dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:id="@+id/voice_in_call_membernumber"
                android:paddingBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="777-777-7777"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/voice_in_call_state_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
