<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/reject_call_layout"
    android:background="@color/list_bg_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/reject_msg_actionbar"
            android:background="@color/chaton_color_011_light"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/buttons">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/action_back"
                    android:background="@drawable/action_bar_btn_selector"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onClickBackPage"
                    android:contentDescription="@string/back_button">
                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="31dp"
                        android:layout_height="32dp"
                        android:src="@drawable/actionbar_ic_arrow"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/actionbar_ic_chaton"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:textSize="19dp"
                        android:textColor="@drawable/action_bar_text_color_selector"
                        android:ellipsize="end"
                        android:id="@+id/title_reject_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/preference_3_1_title"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <View
                    android:layout_gravity="center"
                    android:background="@color/action_bar_2_divider"
                    android:layout_width="1dp"
                    android:layout_height="32dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/reject_call_with_msg_delete_layout"
                    android:background="@drawable/action_bar_btn_selector"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onClickDeleteItem"
                    android:contentDescription="@string/reject_msg_delete_popup_title">
                    <ImageView
                        android:id="@+id/reject_call_with_msg_delete_item_button"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/actionbar_ic_delete"/>
                    <TextView
                        android:textSize="19dp"
                        android:textColor="@color/chaton_color_001_light"
                        android:gravity="center_vertical"
                        android:id="@+id/reject_call_with_msg_delete_item_text"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="12dp"
                        android:text="@string/reject_msg_delete_popup_title"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="@color/chaton_actionbar_title_shadow"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/create_reject_message"
        android:background="@drawable/tw_list_btn_item_selector"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <ImageView
            android:id="@+id/add_reject_msg_btn"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/reject_call_create_msg_add_button_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:gravity="center_vertical"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/reject_msg_new_msg_page_title"
            android:layout_toLeftOf="@+id/add_reject_msg_btn"
            android:layout_alignParentLeft="true"
            style="@style/ft_btn_01_light"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/reject_call_With_msg_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/reject_call_with_msg_list"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/reject_call_with_msg_line"
                android:background="@color/reject_msg_list_divider_white_theme"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>
        </LinearLayout>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/tw_light_color001"
            android:gravity="center"
            android:id="@+id/reject_call_with_msg_no_messae_info"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/reject_msg_no_list_info"/>
    </FrameLayout>
</LinearLayout>
