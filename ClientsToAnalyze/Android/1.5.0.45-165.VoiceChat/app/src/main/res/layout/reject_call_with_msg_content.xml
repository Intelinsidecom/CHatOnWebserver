<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/reject_call_with_msg_create"
            android:background="@drawable/call_reject_with_msg_top_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/tw_light_color001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/reject_call_with_msg_create"
                android:layout_toLeftOf="@+id/reject_msg_add_btn"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/reject_msg_add_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/reject_call_create_msg_add_button_selector"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/reject_call_with_msg_item1"
                style="@style/RejectWithMsgItem">
                <TextView
                    android:id="@+id/reject_call_with_msg_item_text"
                    style="@style/RejectWithMsgItemText"/>
                <Button
                    android:id="@+id/reject_call_with_msg_item_button"
                    style="@style/RejectWithMsgItemBtn"/>
            </LinearLayout>
            <View
                android:id="@+id/reject_call_with_msg_item_view_1"
                android:background="@color/tw_light_color008"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/reject_call_with_msg_item2"
                style="@style/RejectWithMsgItem">
                <TextView
                    android:id="@+id/reject_call_with_msg_item_text"
                    style="@style/RejectWithMsgItemText"/>
                <Button
                    android:id="@+id/reject_call_with_msg_item_button"
                    style="@style/RejectWithMsgItemBtn"/>
            </LinearLayout>
            <View
                android:id="@+id/reject_call_with_msg_item_view_2"
                android:background="@color/tw_light_color008"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/reject_call_with_msg_item3"
                style="@style/RejectWithMsgItem">
                <TextView
                    android:id="@+id/reject_call_with_msg_item_text"
                    style="@style/RejectWithMsgItemText"/>
                <Button
                    android:id="@+id/reject_call_with_msg_item_button"
                    style="@style/RejectWithMsgItemBtn"/>
            </LinearLayout>
            <View
                android:id="@+id/reject_call_with_msg_item_view_3"
                android:background="@color/tw_light_color008"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/reject_call_with_msg_item4"
                style="@style/RejectWithMsgItem">
                <TextView
                    android:id="@+id/reject_call_with_msg_item_text"
                    style="@style/RejectWithMsgItemText"/>
                <Button
                    android:id="@+id/reject_call_with_msg_item_button"
                    style="@style/RejectWithMsgItemBtn"/>
            </LinearLayout>
            <View
                android:id="@+id/reject_call_with_msg_item_view_4"
                android:background="@color/tw_light_color008"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/reject_call_with_msg_item5"
                style="@style/RejectWithMsgItem">
                <TextView
                    android:id="@+id/reject_call_with_msg_item_text"
                    style="@style/RejectWithMsgItemText"/>
                <Button
                    android:id="@+id/reject_call_with_msg_item_button"
                    style="@style/RejectWithMsgItemBtn"/>
            </LinearLayout>
            <View
                android:id="@+id/reject_call_with_msg_item_view_5"
                android:background="@color/tw_light_color008"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/reject_call_with_msg_item6"
                style="@style/RejectWithMsgItem">
                <TextView
                    android:id="@+id/reject_call_with_msg_item_text"
                    style="@style/RejectWithMsgItemText"/>
                <Button
                    android:id="@+id/reject_call_with_msg_item_button"
                    style="@style/RejectWithMsgItemBtn"/>
            </LinearLayout>
            <View
                android:id="@+id/reject_call_with_msg_item_view_6"
                android:background="@color/tw_light_color008"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
