<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/reject_Call_with_msg_delete_layout"
    android:background="@color/list_bg_normal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/reject_msg_actionbar"
            android:background="@color/chaton_color_011_light"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/buttons">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/action_back"
                    android:background="@drawable/action_bar_btn_selector"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onClickBackPage"
                    android:contentDescription="@string/back_button">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/back_btn"
                        android:layout_width="31dp"
                        android:layout_height="32dp"
                        android:src="@drawable/actionbar_ic_arrow"
                        android:contentDescription="@string/app_name"/>
                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/actionbar_ic_chaton"
                        android:layout_toRightOf="@+id/back_btn"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:textSize="19dp"
                        android:textColor="@drawable/action_bar_text_color_selector"
                        android:ellipsize="end"
                        android:id="@+id/title_reject_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/menu_buddy_delete"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/back_img"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <View
                    android:layout_gravity="center"
                    android:background="@color/action_bar_2_divider"
                    android:layout_width="1dp"
                    android:layout_height="32dp"/>
                <LinearLayout
                    android:background="@drawable/action_bar_btn_selector"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onClickCancel">
                    <TextView
                        android:textSize="19dp"
                        android:textColor="@drawable/action_bar_text_color_selector"
                        android:gravity="center"
                        android:id="@+id/cancel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/cancel"/>
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:background="@color/action_bar_2_divider"
                    android:layout_width="1dp"
                    android:layout_height="32dp"/>
                <LinearLayout
                    android:id="@+id/select_done_layout"
                    android:background="@drawable/action_bar_btn_selector"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="onClickDone">
                    <TextView
                        android:textSize="19dp"
                        android:textColor="@drawable/action_bar_text_color_selector"
                        android:gravity="center"
                        android:id="@+id/selected_done_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:text="@string/done"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="@color/chaton_actionbar_title_shadow"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/reject_call_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/reject_call_with_msg_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/reject_msg_delete_with_msg_line"
            android:background="@drawable/list_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</LinearLayout>
