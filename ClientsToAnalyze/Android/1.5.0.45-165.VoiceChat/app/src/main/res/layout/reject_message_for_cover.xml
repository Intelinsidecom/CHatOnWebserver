<?xml version="1.0" encoding="utf-8"?>
<com.coolots.chaton.call.view.RejectMsgSlidingdrawer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reject_call_with_msg_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:bottomOffset="27dp"
    android:topOffset="0dp"
    android:allowSingleTap="false"
    android:handle="@+id/reject_call_with_msg_handle"
    android:content="@+id/reject_call_with_msg_content">
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/reject_call_with_msg_handle"
        android:background="@drawable/call_incoming_reject_handle01"
        android:paddingBottom="6dp"
        android:focusable="true"
        android:clickable="true"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:contentDescription="@string/talk_back_reject_call_with_msg">
        <ImageView
            android:background="@drawable/ic_reject_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="19dp"
            android:textColor="@color/chaton_covered_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/reject_call_with_msg"
            android:shadowColor="@color/chaton_covered_text_shadow_color"
            android:shadowDy="2"/>
    </LinearLayout>
    <com.coolots.chaton.call.view.layout.RejectMsgLayoutForCover
        android:orientation="vertical"
        android:id="@+id/reject_call_with_msg_content"
        android:background="@color/chaton_covered_list_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.coolots.chaton.call.view.RejectMsgSlidingdrawer>
