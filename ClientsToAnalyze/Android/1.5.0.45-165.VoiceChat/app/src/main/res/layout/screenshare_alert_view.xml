<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/alret_dialog_view"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:minHeight="163dp"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="19dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/alert_title"
            android:background="@drawable/popup_winset_top_bright"
            android:paddingLeft="26dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="title"
            android:singleLine="true"
            android:shadowColor="@color/chaton_actionbar_title_shadow"
            android:shadowDy="0.5"
            android:shadowRadius="1"
            style="@style/ft_pop_01_dark"/>
        <TextView
            android:textSize="19dp"
            android:gravity="center_vertical"
            android:id="@+id/alert_msg"
            android:background="@drawable/popup_winset_center_bright"
            android:paddingLeft="26dp"
            android:paddingTop="23dp"
            android:paddingRight="26dp"
            android:paddingBottom="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="66dp"
            android:text="messsage"
            android:layout_weight="1"
            style="@style/ft_list_04_light"/>
        <FrameLayout
            android:id="@+id/alert_customPanel"
            android:background="#55ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/alert_custom"
                android:background="#5500ff00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/alert_btns"
            android:background="@drawable/popup_winset_bottom_medium_01"
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <Button
                android:textSize="17dp"
                android:textColor="#000000"
                android:id="@+id/alert_btn3"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"/>
            <Button
                android:textSize="17dp"
                android:textColor="#000000"
                android:id="@+id/alert_btn2"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"/>
            <Button
                android:textSize="17dp"
                android:textColor="#000000"
                android:id="@+id/alert_btn1"
                android:background="@drawable/button_dialog_selector"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
