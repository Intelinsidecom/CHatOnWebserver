<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/remote_control_popup_layout"
    android:layout_width="360dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/menu_main_layout"
        android:background="@drawable/share_view_toast_popup_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="68dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/menu_main_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="1dp"
            android:divider="@drawable/share_view_toast_popup_divider"
            android:showDividers="middle">
            <FrameLayout
                android:id="@+id/menu_pause_layout"
                android:layout_width="86dp"
                android:layout_height="53dp">
                <Button
                    android:id="@+id/menu_pause_btn"
                    android:background="@drawable/screenshare_main_popup_left_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screenshare_talkback_share_menu_pause"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_pause_img"
                    android:duplicateParentState="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="31dp"
                    android:src="@drawable/screenshare_main_popup_pause_selector"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearance"
                    android:textSize="13dp"
                    android:textColor="#454d55"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_pause_txt"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/screenshare_menu_pause"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/menu_pen_writing_layout"
                android:layout_width="85dp"
                android:layout_height="53dp">
                <Button
                    android:id="@+id/menu_pen_writing_btn"
                    android:background="@drawable/screenshare_main_popup_center_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screenshare_talkback_share_menu_penwriting"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_pen_writing_img"
                    android:duplicateParentState="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="31dp"
                    android:src="@drawable/screenshare_main_popup_penwriting_selector"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@drawable/screenshare_popup_btn_text_selector"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_pen_writing_txt"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/screenshare_talkback_share_menu_penwriting"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/menu_remote_layout"
                android:layout_width="85dp"
                android:layout_height="53dp">
                <Button
                    android:id="@+id/menu_remote_btn"
                    android:background="@drawable/screenshare_main_popup_center_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screenshare_menu_remote_btn"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_remote_img"
                    android:duplicateParentState="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="31dp"
                    android:src="@drawable/screenshare_main_popup_remotecontrol_selector"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@drawable/screenshare_popup_btn_text_selector"
                    android:ellipsize="end"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_remote_txt"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/screenshare_menu_end_remote_btn"
                    android:lines="2"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/menu_end_layout"
                android:layout_width="86dp"
                android:layout_height="53dp">
                <Button
                    android:id="@+id/menu_end_btn"
                    android:background="@drawable/screenshare_main_popup_right_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/call_menu_docs_view"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_end_img"
                    android:duplicateParentState="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="31dp"
                    android:src="@drawable/screenshare_main_popup_shareview_selector"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@drawable/screenshare_popup_btn_text_selector"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_end_txt"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/call_menu_docs_view"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:textSize="11dp"
            android:textColor="#454d55"
            android:layout_gravity="left"
            android:id="@+id/remote_textview"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:text="@string/screenshare_menu_remote_btn"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/remote_control_layout"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="7dp"
            android:divider="@drawable/share_view_toast_popup_divider"
            android:showDividers="middle">
            <FrameLayout
                android:id="@+id/menu_main_remote_menu_layout"
                android:layout_width="114dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/menu_main_remote_menu"
                    android:background="@drawable/screenshare_main_popup_left_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screenshare_talkback_share_menu_remotecontroller_menu"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_main_remote_menu_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/screenshare_remotecontrol_menu_btn_selector"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="#454d55"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_main_remote_menu_txt"
                    android:layout_width="114dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/screenshare_menu_remote_menu"
                    android:contentDescription="@string/screenshare_talkback_share_menu_remotecontroller_menu"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/menu_main_remote_home_layout"
                android:layout_width="114dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/menu_main_remote_home"
                    android:background="@drawable/screenshare_main_popup_center_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screenshare_talkback_share_menu_remotecontroller_home"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_main_remote_home_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/screenshare_remotecontrol_home_btn_selector"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="#454d55"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_main_remote_home_txt"
                    android:layout_width="114dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/screenshare_menu_remote_home"
                    android:contentDescription="@string/screenshare_talkback_share_menu_remotecontroller_menu"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/menu_main_remote_back_layout"
                android:layout_width="114dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/menu_main_remote_back"
                    android:background="@drawable/screenshare_main_popup_right_background_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/screenshare_talkback_share_menu_remotecontroller_back"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/menu_main_remote_back_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/screenshare_remotecontrol_back_btn_selector"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="#454d55"
                    android:gravity="top|center_horizontal"
                    android:id="@+id/menu_main_remote_back_txt"
                    android:layout_width="114dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/screenshare_menu_remote_back"
                    android:contentDescription="@string/screenshare_talkback_share_menu_remotecontroller_menu"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
