<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quick_layout"
    android:background="@drawable/share_view_toast_popup_bg"
    android:visibility="visible"
    android:layout_width="314dp"
    android:layout_height="127dp">
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:maxWidth="16dp"
        android:maxHeight="16dp"
        android:indeterminateDrawable="@drawable/chaton_ani_progress"
        android:indeterminateBehavior="repeat"
        android:minWidth="16dp"
        android:minHeight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        style="?android:attr/progressBarStyleLarge"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:gravity="center"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="5dp"
        android:text="@string/call_info_outgoing_voice_call"
        android:layout_toRightOf="@+id/progressBar1"
        android:layout_alignTop="@+id/progressBar1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/progressBar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false">
        <FrameLayout
            android:id="@+id/button2_layout"
            android:layout_width="101dp"
            android:layout_height="match_parent">
            <Button
                android:enabled="false"
                android:id="@+id/button2"
                android:background="@drawable/screenshare_main_popup_background_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/buttonStyleSmall"/>
            <ImageView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/button2_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/share_view_popup_icon_pause_dim"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#0000"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/button2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:text="@string/screenshare_menu_pause"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/button3_layout"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <Button
                android:enabled="false"
                android:id="@+id/button3"
                android:background="@drawable/screenshare_main_popup_background_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/buttonStyleSmall"/>
            <ImageView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/button3_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/share_view_popup_icon_pen_writing_dim"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#0000"
                android:gravity="center"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/button3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:text="@string/screenshare_talkback_share_menu_penwriting"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/share_live_end_btn_layout"
            android:layout_width="101dp"
            android:layout_height="match_parent">
            <Button
                android:enabled="false"
                android:id="@+id/share_live_end_btn"
                android:background="@drawable/screenshare_main_popup_background_selector"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                style="?android:attr/buttonStyleSmall"/>
            <ImageView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/share_live_end_btn_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/share_view_popup_icon_end"/>
            <TextView
                android:textSize="13dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/share_live_end_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:text="@string/call_menu_docs_view"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
