<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/tw_light_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbarStyle="outsideOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.coolots.chaton.common.util.CTextView
                android:textColor="@color/licence_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_source_licence_1"/>
            <TextView
                android:textColor="@color/licence_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/open_source_licence_2"/>
            <com.coolots.chaton.common.util.CTextView
                android:textColor="@color/licence_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_source_licence_3"/>
            <TextView
                android:textColor="@color/copyright_color"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/copyright_samsung"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
