<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/block_title_layout"
    android:background="@color/chaton_color_011_light"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <View
        android:background="@color/chaton_color_009_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/action_back"
        android:background="@drawable/action_bar_btn_selector"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="onClickBackPage"
        android:contentDescription="@string/back_button">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:src="@drawable/actionbar_ic_arrow"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"/>
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/actionbar_ic_chaton"
            android:layout_toRightOf="@+id/back_btn"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:textSize="19dp"
            android:textColor="@drawable/action_bar_text_color_selector"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/user_preference_tab_title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="@string/app_name"
            android:singleLine="true"
            android:layout_toRightOf="@+id/back_img"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/opton_btn_group"
        android:background="@drawable/action_bar_btn_selector"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/preference_buddies_btn_add_buddies">
        <View
            android:layout_gravity="center"
            android:background="@color/action_bar_2_divider"
            android:layout_width="1dp"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/option_btn"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@drawable/list_ic_add"/>
    </LinearLayout>
</RelativeLayout>
