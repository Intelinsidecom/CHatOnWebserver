<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/video_member_item_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <com.coolots.chaton.common.util.BuddyImageView
                android:id="@+id/video_member_item_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/vt_caller_id"/>
            <TextView
                android:textSize="17dp"
                android:typeface="sans"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:id="@+id/video_member_item_name"
                android:paddingLeft="10dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:singleLine="true"/>
        </LinearLayout>
        <Button
            android:textSize="20dp"
            android:id="@+id/video_member_item_end_button"
            android:background="@drawable/call_end_btn"
            android:visibility="gone"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginRight="9dp"
            android:text="@string/call_info_callend"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
