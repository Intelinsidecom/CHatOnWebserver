<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/video_call_text_section"
        android:background="@drawable/action_bar_bg_01"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/voip_call_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/voip_vt_call_icon"/>
        <LinearLayout
            android:id="@+id/hide_me_layout"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:background="@drawable/action_bar_divider_01"
                android:layout_width="1dp"
                android:layout_height="46dp"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/hide_me_btn"
                android:background="@drawable/action_bar_btn_hide_me_selector"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:contentDescription="@string/call_menu_hide_me">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/hide_me_img"
                    android:background="@drawable/action_bar_icon_hide_me"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/chaton_color_008_light"
                    android:id="@+id/hide_me_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="@string/call_btn_hideme"
                    android:layout_below="@+id/hide_me_img"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="3dp"
            android:layout_toLeftOf="@+id/hide_me_layout"
            android:layout_toRightOf="@+id/voip_call_icon">
            <TextView
                android:textSize="19dp"
                android:textColor="@color/chaton_color_002_light"
                android:ellipsize="marquee"
                android:id="@+id/video_call_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="user name"
                android:singleLine="true"
                android:marqueeRepeatLimit="1"/>
            <LinearLayout
                android:id="@+id/video_call_status_msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/chaton_color_008_light"
                    android:id="@+id/video_call_status_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call_info_outgoing_video_call"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/chaton_color_008_light"
                android:ellipsize="marquee"
                android:id="@+id/video_call_member_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="010-7777-7777"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/video_call_status_msg_layout"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.coolots.chaton.call.view.InviteViewMemberLayout
        android:id="@+id/video_call_inviteview_member_incoming"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
