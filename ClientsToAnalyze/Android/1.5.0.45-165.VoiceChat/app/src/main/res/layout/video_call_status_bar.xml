<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_call_status_bar_layout_id"
    android:background="@drawable/action_bar_bg_02"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/voip_call_icon"
        android:background="@drawable/voip_vt_call_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentLeft="true"/>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/video_call_text_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="3dp"
        android:layout_toLeftOf="@+id/option_btn_layout"
        android:layout_toRightOf="@+id/voip_call_icon">
        <TextView
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:ellipsize="marquee"
            android:id="@+id/video_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="255dp"
            android:text="User name"
            android:singleLine="true"
            android:marqueeRepeatLimit="1"/>
        <RelativeLayout
            android:id="@+id/video_call_membernumber_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="15dp"
                android:textColor="#e0e0e0"
                android:ellipsize="marquee"
                android:gravity="left"
                android:id="@+id/video_status_phone"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-7777-7777"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/video_member_count"
                android:layout_alignParentLeft="true"/>
            <Chronometer
                android:textSize="15dp"
                android:textColor="#e0e0e0"
                android:gravity="center"
                android:id="@+id/video_status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/option_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <FrameLayout
            android:id="@+id/option_fun_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/action_bar_divider_02"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/option_fun_btn"
                android:background="@drawable/action_bar_btn_option_selector"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/call_btn_option_fun"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/fun_btn_img"
                android:background="@drawable/action_bar_icon_fun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/option_share_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/action_bar_divider_02"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/option_share_btn"
                android:background="@drawable/action_bar_btn_option_selector"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/talk_back_go_to_chaton"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/share_btn_img"
                android:background="@drawable/action_bar_icon_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
