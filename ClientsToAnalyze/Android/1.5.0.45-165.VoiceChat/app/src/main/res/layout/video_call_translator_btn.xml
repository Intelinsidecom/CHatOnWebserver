<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/video_call_btn_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="259dp">
        <include layout="@layout/video_call_translator_sliding_drawer"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@drawable/vtcall_bg_light"
        android:paddingLeft="4dp"
        android:paddingTop="12dp"
        android:paddingRight="4dp"
        android:paddingBottom="11dp"
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <FrameLayout
            android:id="@+id/show_me_btn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_show_me_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/translator_tts_on_btn"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_translator_tts_on_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/translator_tts_off_btn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_translator_change_language_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/translator_change_language_btn"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_translator_change_language_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/camera_change_btn"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_camera_spin_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/record_stop_btn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_video_btn_record_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/video_mute_btn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/video_mute_center_image"
                android:background="@drawable/call_mute_icon_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
            <ImageView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/video_mute_bottom_image"
                android:background="@drawable/call_btn_focus_switch_off"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/video_hideme_btn"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/video_hideme_btn_center_image"
                android:background="@drawable/call_hide_me_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="44dp"
                android:layout_height="44dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/video_end_call_btn"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1">
            <Button
                android:background="@drawable/translator_btn_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/call_end_call_icon_selector"
                android:clickable="false"
                android:duplicateParentState="true"
                android:layout_width="58dp"
                android:layout_height="44dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
