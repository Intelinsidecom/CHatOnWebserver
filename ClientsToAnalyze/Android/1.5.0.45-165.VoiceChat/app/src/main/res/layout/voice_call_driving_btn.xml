<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.coolots.chaton.call.view.InviteViewMemberLayout
        android:id="@+id/voice_call_inviteview_member_incoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="360dp"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/call_btn_bg_light"
        android:paddingLeft="13dp"
        android:paddingTop="12dp"
        android:paddingRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="206dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/carkit_answer_frame_layout"
                android:background="@drawable/button_default_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/driving_mode_answer_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:textSize="38dp"
                    android:textColor="@drawable/call_btn_text_color_selector"
                    android:ellipsize="end"
                    android:id="@+id/carkit_answer_text"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_to_answer"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="0.3"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/carkit_cancel_frame_layout"
                android:background="@drawable/button_default_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:background="@drawable/driving_mode_cancel_icon"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:textSize="38dp"
                    android:textColor="@drawable/call_btn_text_color_selector"
                    android:ellipsize="end"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_profile_question_cancel"
                    android:shadowDx="-1"
                    android:shadowDy="-1"
                    android:shadowRadius="0.3"
                    android:soundEffectsEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/carkit_reject_frame_layout"
            android:background="@drawable/button_default_selector"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:background="@drawable/driving_mode_reject_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="4dp"/>
            <TextView
                android:textSize="38dp"
                android:textColor="@drawable/call_btn_text_color_selector"
                android:ellipsize="end"
                android:id="@+id/carkit_reject_text"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_swipe_left_message"
                android:singleLine="true"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="0.3"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp">
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/voice_call_incoming_status_bar"
                android:background="@drawable/action_bar_bg_01"
                android:layout_width="335dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true">
                <ImageView
                    android:id="@+id/voice_call_icon"
                    android:background="@drawable/voip_call_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="7dp"
                    android:layout_alignParentLeft="true"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toRightOf="@+id/voice_call_icon"
                    android:layout_alignParentTop="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/voice_call_icon"
                        android:layout_alignParentTop="true">
                        <TextView
                            android:textSize="19dp"
                            android:textColor="@color/chaton_color_002_light"
                            android:ellipsize="marquee"
                            android:id="@+id/voice_in_call_membername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user name"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/conf_member_count"
                            android:layout_alignParentLeft="true"/>
                        <TextView
                            android:textSize="19dp"
                            android:textColor="@color/chaton_color_002_light"
                            android:id="@+id/conf_member_count"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(3)"
                            android:singleLine="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/voice_call_icon"
                        android:layout_alignParentBottom="true">
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/chaton_color_008_light"
                            android:ellipsize="marquee"
                            android:id="@+id/voice_in_call_membernumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:text="777-777-7777"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/voice_in_call_state_text"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"/>
                        <TextView
                            android:textSize="15dp"
                            android:textColor="@color/chaton_color_008_light"
                            android:id="@+id/voice_in_call_state_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/call_info_incoming_voice_call"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
