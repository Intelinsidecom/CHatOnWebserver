<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/quick_panel_app_control_bg"
    android:layout_width="match_parent"
    android:layout_height="82dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="17dp">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/quickpanel_vcall_type_layout"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp">
            <Button
                android:id="@+id/quickpanel_vcall_type_btn"
                android:background="@drawable/call_quick_panel_normal_btn_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:clickable="false"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/quick_panel_icon_chatonv_videocall"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/quickpanel_call_type_layout"
            android:visibility="gone"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp">
            <Button
                android:id="@+id/quickpanel_call_type_btn"
                android:background="@drawable/call_quick_panel_normal_btn_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:soundEffectsEnabled="false"/>
            <ImageView
                android:layout_gravity="center"
                android:clickable="false"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/quick_panel_icon_chatonv_voicecall"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="11dp">
            <Button
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_unhold"
                android:background="@drawable/call_quick_panel_normal_btn_selector"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/call_btn_off_hold"
                android:layout_weight="0.5"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_mute"
                android:background="@drawable/call_quick_panel_btn_off_selector"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="@string/call_btn_mute"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_muteon"
                android:background="@drawable/call_quick_panel_btn_on_selector"
                android:paddingTop="3dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="@string/call_btn_mute"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:enabled="false"
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_mutedisable"
                android:background="@drawable/call_quick_panel_btn_off_selector"
                android:paddingTop="3dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="@string/call_btn_mute"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_speaker"
                android:background="@drawable/call_quick_panel_btn_off_selector"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="5dp"
                android:text="@string/call_btn_speaker"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_speakeron"
                android:background="@drawable/call_quick_panel_btn_on_selector"
                android:paddingTop="3dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="5dp"
                android:text="@string/call_btn_speaker"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
            <Button
                android:textSize="14dp"
                android:textColor="@drawable/call_white_text_color_selector"
                android:layout_gravity="center_vertical"
                android:id="@+id/quickpanel_call_end"
                android:background="@drawable/call_quick_panel_red_btn_selector"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="13dp"
                android:text="@string/call_info_callend"
                android:layout_weight="1"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/tw_color001"
            android:ellipsize="marquee"
            android:gravity="center"
            android:layout_gravity="left"
            android:id="@+id/quickpanel_call_usernumber"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:singleLine="true"
            android:maxLength="20"
            android:marqueeRepeatLimit="marquee_forever"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/tw_color001"
            android:layout_gravity="right"
            android:id="@+id/quickpanel_call_unhold_text"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:text="@string/call_on_hold_s"/>
        <Chronometer
            android:textSize="15dp"
            android:textColor="@color/tw_color001"
            android:layout_gravity="right"
            android:id="@+id/quickpanel_elapsedTime"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"/>
    </FrameLayout>
</LinearLayout>
