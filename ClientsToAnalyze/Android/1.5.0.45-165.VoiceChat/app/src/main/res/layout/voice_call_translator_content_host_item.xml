<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.coolots.chaton"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/voice_call_guest_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/voice_call_host_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="#ffffff"
                android:padding="1dp"
                android:layout_width="36dp"
                android:layout_height="36dp">
                <com.coolots.chaton.common.util.BuddyImageView
                    android:id="@+id/voice_call_host_image"
                    android:background="@drawable/tw_action_item_background_holo_light_selector"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myprofile_thumbnail_default"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="7dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/voice_call_host_image_layout">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/translate_background_color_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/translate_background_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/translate_background_color_2"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                    <com.coolots.chaton.call.view.StrokeTextView
                        android:textSize="12dp"
                        android:textColor="#ffffffff"
                        android:id="@+id/voice_call_translator_host_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30 pm"
                        android:shadowColor="#c0ffffff"
                        android:shadowDy="-2"
                        app:textStroke="true"
                        app:textStrokeWidth="2"
                        app:textStrokeColor="#ff000000"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/translate_background_color_2"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/translate_background_color_2"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bubble_send_normal"
                android:paddingLeft="10dp"
                android:paddingTop="9dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/voice_call_translator_host_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안녕하세요"
                    style="@style/ft_translate_recognize_popup"/>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/voice_call_translator_host_translator_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        style="@style/ft_translate_translate_popup"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
