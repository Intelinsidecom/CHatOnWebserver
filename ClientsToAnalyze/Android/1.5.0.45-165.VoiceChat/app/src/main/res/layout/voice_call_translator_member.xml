<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/voice_call_translator_member_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/voice_call_translator_member_info_bg"
                android:background="#50000000"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:paddingRight="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentLeft="true">
                            <TextView
                                android:textSize="27dp"
                                android:textColor="#ffffff"
                                android:ellipsize="end"
                                android:id="@+id/voice_call_translator_membername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="255dp"
                                android:text="user name"
                                android:singleLine="true"
                                android:shadowDy="-1"/>
                            <TextView
                                android:textSize="27dp"
                                android:textColor="#ffffff"
                                android:id="@+id/conf_member_count"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:minWidth="35dp"
                                android:text="(3)"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:paddingRight="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Chronometer
                            android:textSize="15dp"
                            android:textColor="#ffffff"
                            android:id="@+id/translator_elapsedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:singleLine="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/translator_change_language">
                            <ImageButton
                                android:id="@+id/translator_tts_on"
                                android:background="@drawable/translator_tts_selector"
                                android:visibility="visible"
                                android:layout_width="47dp"
                                android:layout_height="38dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_alignParentBottom="true"
                                android:soundEffectsEnabled="false"/>
                            <ImageButton
                                android:id="@+id/translator_tts_off"
                                android:background="@drawable/translator_tts_off_selector"
                                android:visibility="gone"
                                android:layout_width="47dp"
                                android:layout_height="38dp"
                                android:layout_marginRight="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_alignParentBottom="true"
                                android:soundEffectsEnabled="false"/>
                        </RelativeLayout>
                        <ImageButton
                            android:id="@+id/translator_change_language"
                            android:background="@drawable/translator_change_language_selector"
                            android:layout_width="47dp"
                            android:layout_height="38dp"
                            android:layout_marginBottom="3dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:soundEffectsEnabled="false"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/chat_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="80dp">
        <com.coolots.chaton.call.view.layout.CallTranslatorScrollViewLayout
            android:id="@+id/voice_call_translator_content_id"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>
