<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_02_h"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayoutid_01"
            android:background="@drawable/co_header2_bg"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="25.33dp">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/brown_color_001"
                android:gravity="center"
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/setting_enter_name"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/txtRegistName_0"
            android:paddingLeft="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.6dp"
            android:text="@string/regist_name"
            android:layout_below="@+id/llayoutid_01"/>
        <EditText
            android:id="@+id/txtName"
            android:background="@drawable/textfield_bg_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:singleLine="true"
            android:maxLength="30"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/pushnameExplain"
            android:paddingLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/regist_name_detail"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layoutRegistName_0"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <Button
            android:enabled="false"
            android:textSize="16dp"
            android:id="@+id/btnDone"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:text="@string/done"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
