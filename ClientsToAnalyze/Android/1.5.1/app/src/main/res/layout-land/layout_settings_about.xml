<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_about"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/LinearLayout01"
        android:background="@drawable/logo_03"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16sp"
            android:typeface="sans"
            android:textColor="@color/gray"
            android:id="@+id/setting_current_version"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/setting_current_version"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="16sp"
            android:typeface="sans"
            android:textColor="@color/gray"
            android:id="@+id/setting_upgrade_version"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:text=""
            android:layout_below="@+id/setting_current_version"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="16sp"
            android:typeface="sans"
            android:textColor="@color/blue_color_021"
            android:gravity="center"
            android:id="@+id/setting_help_explain"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/setting_help_explain"
            android:layout_above="@+id/bottom_linear"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/bottom_linear"
            android:paddingLeft="26.6dp"
            android:paddingTop="6dp"
            android:paddingRight="26.6dp"
            android:paddingBottom="8dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:id="@+id/setting_about_btn_license"
                android:layout_width="232dp"
                android:layout_height="50dp"
                android:text="@string/settings_license"
                android:layout_weight="1"/>
            <Button
                android:textSize="16sp"
                android:typeface="sans"
                android:textStyle="bold"
                android:id="@+id/setting_about_btn1"
                android:layout_width="232dp"
                android:layout_height="50dp"
                android:text="@string/setting_upgrade_text"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
