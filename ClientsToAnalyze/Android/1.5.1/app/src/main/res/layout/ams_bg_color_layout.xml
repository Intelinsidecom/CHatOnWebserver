<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_color_picker_height">
        <ViewStub
            android:id="@+id/stub_default_color"
            android:layout="@layout/ams_stub_default_color_layout"
            android:inflatedId="@+id/default_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_color_picker_height"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/layout_color_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btn_default_color"
            android:visibility="invisible"
            android:layout_width="28.7dp"
            android:layout_height="28.7dp"
            android:layout_margin="10dp"
            android:src="@drawable/ams_color_selector"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_ok_cancel"
        android:background="@drawable/co_bg"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="24sp"
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ams_btn_apply"
            android:layout_weight="1"/>
        <Button
            android:textSize="24sp"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ams_btn_cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
