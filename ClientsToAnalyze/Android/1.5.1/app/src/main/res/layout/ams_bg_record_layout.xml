<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_status"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <LinearLayout
                android:id="@+id/layout_ams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_above="@+id/layout_ok_cancel">
        <RelativeLayout
            android:id="@+id/layout_progressbar"
            android:background="@drawable/progressive_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_record_current"
                android:paddingLeft="6dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="16sp"
                android:gravity="right"
                android:id="@+id/tv_record_max"
                android:paddingRight="6dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="2:00"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <SeekBar
                android:layout_gravity="center"
                android:id="@+id/progressbar"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxHeight="10dp"
                android:progressDrawable="@drawable/ams_progressbar_custom"
                android:minHeight="10dp"
                android:thumb="@drawable/music_player_progressive_ing"
                android:thumbOffset="8dp"
                android:layout_toLeftOf="@+id/tv_record_max"
                android:layout_toRightOf="@+id/tv_record_current"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                style="?android:attr/progressBarStyleHorizontal"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layout_ok_cancel"
        android:background="@drawable/bottom_recorder_bg"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/btn_record_cancel"
            android:background="@drawable/ams_basic_selector_record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ams_basic_selector_record_cancel"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btn_record_start"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recorder_player_recoding"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@+id/btn_record_add"
            android:layout_toRightOf="@+id/btn_record_cancel"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btn_record_stop"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recorder_player_stop"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@+id/btn_record_add"
            android:layout_toRightOf="@+id/btn_record_cancel"/>
        <ImageView
            android:id="@+id/btn_record_add"
            android:background="@drawable/ams_basic_selector_record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:src="@drawable/ams_basic_selector_record_send"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
