<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="220dp"
            android:layout_height="74dp">
            <ImageView
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:src="@drawable/slide_bar"
                android:layout_centerInParent="true"/>
            <SeekBar
                android:id="@+id/seekbar_eraser_size"
                android:paddingLeft="42dp"
                android:paddingRight="38dp"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:maxHeight="10dp"
                android:max="72"
                android:progress="0"
                android:secondaryProgress="0"
                android:progressDrawable="@drawable/ams_seekbar_progress"
                android:minHeight="10dp"
                android:thumb="@drawable/slide_bar_nobe"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_line_04"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="74dp"
            android:layout_height="74dp">
            <ImageView
                android:id="@+id/image_eraser_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_ok_cancel"
        android:background="@drawable/co_bg"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="18sp"
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/ams_btn_apply"
            android:layout_weight="1"/>
        <Button
            android:textSize="18sp"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/ams_btn_cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
