<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_ams_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/image_ams_image"
                android:padding="1dp"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_centerInParent="true">
            <CheckBox
                android:id="@+id/check_box_delete"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:button="@drawable/ams_checkbox_selector"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/layout_create_new"
            android:background="@drawable/ams_grid_selector_create_new"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
