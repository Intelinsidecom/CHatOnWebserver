<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_button"
        android:layout_alignParentTop="true">
        <TabHost
            android:id="@+id/tab_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tabStripLeft="@drawable/ams_tab_bottom_left"
                    android:tabStripRight="@drawable/ams_tab_bottom_right"/>
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layout_basic_file"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <GridView
                            android:gravity="center"
                            android:id="@+id/grid_basic_file_list"
                            android:paddingLeft="3dp"
                            android:paddingTop="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnWidth="104dp"
                            android:numColumns="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layout_user_file"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <GridView
                            android:gravity="center"
                            android:id="@+id/grid_user_file_list"
                            android:paddingLeft="3dp"
                            android:paddingTop="5dp"
                            android:paddingRight="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnWidth="104dp"
                            android:numColumns="3"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_button"
        android:background="@drawable/co_bg"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="18sp"
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/ams_btn_delete"
            android:layout_weight="1"/>
        <Button
            android:textSize="18sp"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/ams_btn_cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
