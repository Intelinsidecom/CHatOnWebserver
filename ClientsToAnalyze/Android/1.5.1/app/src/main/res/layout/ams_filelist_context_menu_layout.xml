<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_play"
            android:background="@drawable/ams_filelist_context_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ams_preview_selector"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_line"/>
        <ImageView
            android:id="@+id/iv_send"
            android:background="@drawable/ams_filelist_context_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ams_send_selector"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_tab_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_line"/>
        <ImageView
            android:id="@+id/iv_delete"
            android:background="@drawable/ams_filelist_context_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ams_delete_selector"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
