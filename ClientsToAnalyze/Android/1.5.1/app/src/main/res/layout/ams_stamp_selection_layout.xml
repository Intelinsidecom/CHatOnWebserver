<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_preference"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <GridView
            android:id="@+id/gridview_preference"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnWidth="55dp"
            android:numColumns="auto_fit"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/stamp_line"
        android:background="@drawable/emoticon_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_stamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <GridView
            android:id="@+id/gridview_stamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnWidth="55dp"
            android:numColumns="auto_fit"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_ok_cancel"
        android:background="@drawable/co_bg"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="18sp"
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/ams_btn_delete"
            android:layout_weight="1"/>
        <Button
            android:textSize="18sp"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/ams_btn_cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
