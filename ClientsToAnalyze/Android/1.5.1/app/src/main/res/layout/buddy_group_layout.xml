<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/header_color"
        android:layout_width="match_parent"
        android:layout_height="25.33dp">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/brown_color_001"
            android:id="@+id/buddy_group_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.66dp"
            android:text="@string/buddy_group_list_newgroup_info"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buddy_group_addgroup_area"
        android:layout_width="match_parent"
        android:layout_height="54.66dp"
        android:layout_marginLeft="10.66dp"
        android:layout_marginRight="8dp">
        <EditText
            android:textSize="14dp"
            android:id="@+id/buddy_group_groupname_field"
            android:background="@drawable/btn_search_dialog_xml"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:hint="@string/buddy_group_list_newgroup_hint"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
        <Button
            android:enabled="false"
            android:textSize="16dp"
            android:id="@+id/buddy_group_create_btn"
            android:layout_width="97.33dp"
            android:layout_height="48.55dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5.5dp"
            android:text="@string/buddy_group_edit_menubar_add"
            android:layout_weight="0"/>
    </LinearLayout>
</LinearLayout>
