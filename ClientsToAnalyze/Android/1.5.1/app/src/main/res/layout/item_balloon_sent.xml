<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentSnd"
    android:background="@null"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/lSubParentSnd2"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lSubParentSnd"
        android:layout_alignBottom="@+id/lSubParentSnd">
        <TextView
            android:textSize="10.6dp"
            android:textColor="#ffca77"
            android:id="@+id/textSndTime"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="12dp"
            android:typeface="sans"
            android:textColor="#ffca77"
            android:id="@+id/chat_ack"
            android:paddingRight="3.6dp"
            android:focusable="false"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_toLeftOf="@+id/textSndTime"
            android:layout_alignBaseline="@+id/textSndTime"/>
        <Button
            android:id="@+id/btnFailCancel"
            android:background="@drawable/message_resend_delete"
            android:visibility="visible"
            android:layout_width="25.3dp"
            android:layout_height="25.3dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#a2a2a2"
            android:id="@+id/devision1"
            android:background="@drawable/line_h_02"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="25.3dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/btnFailCancel"/>
        <Button
            android:id="@+id/btnResend"
            android:background="@drawable/message_resend_retry"
            android:visibility="visible"
            android:layout_width="25.3dp"
            android:layout_height="25.3dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/btnFailCancel"
            android:layout_alignTop="@+id/btnFailCancel"
            android:layout_alignBottom="@+id/btnFailCancel"/>
        <TextView
            android:id="@+id/devision2"
            android:background="@drawable/line_h_02"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="25.3dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/btnResend"/>
        <Button
            android:id="@+id/btnMessage"
            android:background="@drawable/message_resend_sms"
            android:visibility="visible"
            android:layout_width="25.3dp"
            android:layout_height="25.3dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/btnResend"
            android:layout_alignTop="@+id/btnResend"
            android:layout_alignBottom="@+id/btnResend"/>
        <ProgressBar
            android:id="@+id/progressbarUp"
            android:visibility="gone"
            android:layout_width="92dp"
            android:layout_height="7.33dp"
            android:max="100"
            android:layout_alignParentRight="true"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <ProgressBar
            android:id="@+id/progressBalloon"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:indeterminateDrawable="@anim/progressbar_ssm"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/btnSendCancel"
            android:background="@drawable/message_send_cancle"
            android:visibility="gone"
            android:layout_width="25.3dp"
            android:layout_height="25.3dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/progressBalloon"
            android:layout_below="@+id/progressbarUp"
            android:layout_alignWithParentIfMissing="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lSubParentSnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lchkSnd">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lLayoutSndContent"
            android:background="@drawable/message_bubble_sent1"
            android:visibility="visible"
            android:addStatesFromChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp">
            <TextView
                android:textSize="8dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:autoLink="all"
                android:id="@+id/textSndContent"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:maxWidth="100dp"
                android:shadowColor="#ffffff"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>
            <ImageView
                android:id="@+id/imageSndTranIcon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/messenger_icon_translate"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/chat_translate"
                android:id="@+id/textSndTranslated"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:layout_below="@+id/lLayoutRcvContent"/>
            <ImageView
                android:id="@+id/imageSndContent"
                android:background="@drawable/msg_image_bg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="13.9dp"
                android:layout_marginBottom="12dp"/>-\10
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/lLayoutSndETC"
                android:visibility="gone"
                android:addStatesFromChildren="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="13.9dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:id="@+id/imageEtcSndContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/messenger_chat_contact"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/textEtcSndContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="160dp"/>
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/lLayoutSndTime"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgEnvelop"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/messenger_icon_unread"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/chat_unread"
                    android:id="@+id/txtUnread"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgEnvelop"/>
                <TextView
                    android:textColor="@color/chat_snd_fail"
                    android:id="@+id/textSndStatus"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lchkSnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">
        <CheckBox
            android:id="@+id/chkSndId"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_background_xml"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageAlert"
        android:background="@drawable/balloon_fail"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lSubParentSnd"
        android:layout_alignBottom="@+id/lSubParentSnd"/>
</RelativeLayout>
