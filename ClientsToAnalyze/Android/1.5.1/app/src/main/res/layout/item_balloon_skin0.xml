<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rLayoutBalloon"
        android:background="@null"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingRight="5dp"
        android:paddingBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/lLayoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/DateRcvId">
            <ImageView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/textDateLeft"
                android:background="@drawable/chat_day_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textDate"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:id="@+id/textDate"
                android:paddingLeft="5.3dp"
                android:paddingRight="5.3dp"
                android:longClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.8dp"
                android:layout_marginBottom="9.3dp"
                android:shadowColor="#0f0f0f"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_centerInParent="true"/>
            <ImageView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/textDateRight"
                android:background="@drawable/chat_day_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textDate"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <CheckBox
            android:id="@+id/DateRcvId"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:button="@drawable/checkbox_background_xml"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:textSize="12dp"
            android:typeface="sans"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textInvite"
            android:background="@drawable/co_invite_bg"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#0f0f0f"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_below="@+id/lLayoutDate"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="10.6dp"
            android:typeface="sans"
            android:textColor="@color/white"
            android:id="@+id/textLeave"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0f0f0f"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_below="@+id/lLayoutDate"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/parentRcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lLayoutDate">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lLayoutRcvContent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <com.sec.chaton.widget.ProfileImageView
                    android:id="@+id/imageProfile"
                    android:background="@drawable/msg_list_img"
                    android:padding="0.6dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentBottom="true"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lLayoutRcvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:textSize="10dp"
                    android:textColor="#141414"
                    android:layout_gravity="top"
                    android:id="@+id/textName"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:lines="1"
                    android:shadowColor="#ccffffff"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lLayoutRcvContent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@+id/lLayoutRcvContent2"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/lLayoutRcvContent"
                    android:background="@drawable/message_bubble_receive1"
                    android:focusable="true"
                    android:addStatesFromChildren="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11.3dp"
                    android:maxWidth="100dp"
                    android:layout_toRightOf="@+id/lLayoutRcvContent2">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:autoLink="all"
                        android:id="@+id/textRcvContent"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:maxWidth="100dp"
                        android:shadowColor="#ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"/>
                    <ImageView
                        android:id="@+id/imageRcvTranIcon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/messenger_icon_translate"/>
                    <TextView
                        android:textSize="16dp"
                        android:textStyle="normal"
                        android:textColor="@color/chat_translate"
                        android:id="@+id/textRcvTranslated"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="200dp"
                        android:layout_below="@+id/lLayoutRcvContent"/>
                    <ImageView
                        android:id="@+id/imageRcvContent"
                        android:background="@drawable/msg_image_bg"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/lLayoutETC"
                        android:visibility="gone"
                        android:addStatesFromChildren="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp">
                        <ImageView
                            android:id="@+id/imageEtcContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/messenger_chat_contact"/>
                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/textEtcContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="160dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_gravity="right"
                        android:id="@+id/lLayoutTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/lLayoutsendread"
                android:paddingBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lLayoutRcvContent3"
                android:layout_alignBottom="@+id/lLayoutRcvContent3">
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="#eff16a"
                    android:id="@+id/textRcvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:shadowColor="#666666"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressbarDown"
                android:visibility="gone"
                android:layout_width="92dp"
                android:layout_height="7.33dp"
                android:layout_marginBottom="2dp"
                android:max="100"
                android:layout_toRightOf="@+id/lLayoutRcvContent3"
                android:layout_above="@+id/btnDownCancel"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <ProgressBar
                android:id="@+id/DownProgressBalloon"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:indeterminateDrawable="@anim/progressbar_ssm"
                android:layout_toRightOf="@+id/lLayoutRcvContent3"
                android:layout_alignBottom="@+id/btnDownCancel"/>
            <Button
                android:id="@+id/btnDownCancel"
                android:background="@drawable/message_send_cancle"
                android:visibility="gone"
                android:layout_width="25.3dp"
                android:layout_height="25.3dp"
                android:layout_toRightOf="@+id/DownProgressBalloon"
                android:layout_above="@+id/lLayoutsendread"/>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true">
                <CheckBox
                    android:id="@+id/chkRcvId"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/checkbox_background_xml"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rSendRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lLayoutDate"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
