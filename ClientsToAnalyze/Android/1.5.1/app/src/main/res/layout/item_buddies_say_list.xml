<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/rLayoutFriend"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/friendImageCheck"
        android:background="@drawable/pic_default"
        android:focusable="false"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:scaleType="fitCenter"
        android:layout_weight="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="22dp"
            android:id="@+id/buddy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buddys Name"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/blue_color_021"
            android:id="@+id/buddy_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buddys Status"/>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:gravity="top"
        android:id="@+id/said_time"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1 min ago"
        android:layout_weight="0"/>
</LinearLayout>
