<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="182.6dp">
        <ImageView
            android:id="@+id/trunkContentMainImage"
            android:layout_width="match_parent"
            android:layout_height="182.6dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/defaultPlayBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_play_button"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/trunkContentDownloadProgressbar"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@anim/progressbar_trunk"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#202020"
        android:layout_width="match_parent"
        android:layout_height="26.7dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_comment"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color1"
            android:id="@+id/trunkContentCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.3dp"
            android:singleLine="true"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/trunkPreviousArea"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="44.6dp">
        <Button
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:id="@+id/trunkPreviousCommentsButton"
            android:background="@drawable/trunk_previous_comment_button_xml"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="31.3dp"
            android:layout_marginLeft="6.6dp"
            android:layout_marginRight="6.6dp"
            android:text="@string/trunk_btn_previous_comments"
            android:singleLine="true"/>
        <Button
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:id="@+id/trunkRefreshCommentsButton"
            android:background="@drawable/trunk_previous_comment_button_xml"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="31.3dp"
            android:layout_marginLeft="6.6dp"
            android:layout_marginRight="6.6dp"
            android:text="@string/trunk_menu_refresh"
            android:singleLine="true"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/trunkCommentsLoadingProgressbar"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:indeterminateDrawable="@anim/progressbar_ssm"/>
    </FrameLayout>
    <TextView
        android:textSize="17.3dp"
        android:textColor="@color/color1"
        android:gravity="center"
        android:id="@+id/trunkNoCommentTextView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/trunk_write_comment"
        android:inputType="textMultiLine"/>
</LinearLayout>
