<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/btn_write_bg"
        android:layout_width="match_parent"
        android:layout_height="26.7dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="22.7dp"
            android:layout_height="20.7dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="3.3dp"
            android:src="@drawable/ic_comment"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color1"
            android:gravity="center"
            android:id="@+id/trunkContentCommentCount"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3.3dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/color1"
            android:gravity="center"
            android:id="@+id/trunkContentCommentPrevious"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/trunk_comment"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trunkPreviousArea"
        android:layout_width="match_parent"
        android:layout_height="44.6dp">
        <Button
            android:id="@+id/trunkPreviousCommentsButton"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="31.3dp"
            android:layout_marginLeft="6.6dp"
            android:layout_marginTop="6.6dp"
            android:layout_marginRight="6.6dp"
            android:layout_marginBottom="6.6dp"/>
        <FrameLayout
            android:id="@+id/trunkContentProgressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:indeterminateDrawable="@anim/progressbar_ssm"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
