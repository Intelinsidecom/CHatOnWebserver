<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_change_skins"/>
    <RelativeLayout
        android:id="@+id/skin_preview"
        android:background="@drawable/skin_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/photo_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/imgfriend"
            android:layout_width="53.3dp"
            android:layout_height="56.3dp"
            android:layout_marginLeft="6.7dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/contacts_default_img"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/textRecvContent"
            android:background="@drawable/message_bubble_read"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgfriend"
            android:layout_alignBottom="@+id/imgfriend">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/read_font_size"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:text="@string/setting_set_font_hello"/>
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/blue_color_017"
            android:id="@+id/read_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/setting_change_skin_time"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_toRightOf="@+id/textRecvContent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRecvContent">
            <TextView
                android:textSize="11.3dp"
                android:typeface="sans"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/textfriend1"
                android:layout_width="wrap_content"
                android:layout_height="16.7dp"
                android:layout_marginLeft="6.7dp"
                android:layout_marginBottom="6.7dp"
                android:text="Victoria Justice"
                android:singleLine="true"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lLayoutSndContent"
            android:background="@drawable/message_bubble_sent"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textRecvContent"
            android:layout_alignParentRight="true">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:autoLink="all"
                android:id="@+id/sent_font_size"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:maxWidth="100dp"
                android:text="@string/setting_set_font_hi"/>
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/blue_color_016"
            android:id="@+id/sent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.7dp"
            android:text="@string/setting_change_skin_time"
            android:shadowColor="#666666"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_toLeftOf="@+id/lLayoutSndContent"
            android:layout_alignBottom="@+id/lLayoutSndContent"/>
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:scrollbars="none"
        android:fadingEdgeLength="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_skins"
            android:background="@drawable/bg_bubble_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/thumb_skin_bg_default"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_default"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/thum_my_skin_bg"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView1"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_01"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView2"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_02"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView3"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_03"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView4"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_04"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView5"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_05"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView6"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_06"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView7"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_07"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView8"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_08"
                android:scaleType="center"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView9"
                android:background="@drawable/btn_change_skin_bg_xml"
                android:paddingBottom="2dp"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thumb_skin_bg_09"
                android:scaleType="center"/>
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:scrollbars="none"
        android:fadingEdgeLength="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_bubble_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bubble_imageView1"
                android:background="@drawable/btn_change_bubble_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thmub_bubble_01"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bubble_imageView2"
                android:background="@drawable/btn_change_bubble_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thmub_bubble_02"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bubble_imageView3"
                android:background="@drawable/btn_change_bubble_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thmub_bubble_03"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bubble_imageView4"
                android:background="@drawable/btn_change_bubble_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thmub_bubble_04"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bubble_imageView5"
                android:background="@drawable/btn_change_bubble_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thmub_bubble_05"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/bubble_imageView6"
                android:background="@drawable/btn_change_bubble_bg_xml"
                android:layout_width="81.33dp"
                android:layout_height="82dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/thmub_bubble_06"/>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="16dp"
            android:id="@+id/setSkin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/setSkin"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
