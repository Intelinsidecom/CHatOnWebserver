<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/LinearLayout01"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/Relativemaintop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/record_bg"
            android:background="@drawable/record_voice_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/record_status"
            android:background="@drawable/red_light"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="52dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/LinearLayout02"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/Relativetop"
            android:background="@drawable/bottom_recorder_bg"
            android:layout_width="match_parent"
            android:layout_height="53.3dp">
            <TextView
                android:textSize="15dp"
                android:layout_gravity="center"
                android:id="@+id/Timechek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:text="@string/layout_audio_timer_run"
                android:layout_alignParentLeft="true"/>
            <RelativeLayout
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/Relativetopcenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_toLeftOf="@+id/Timechekdim"
                android:layout_toRightOf="@+id/Timechek">
                <SeekBar
                    android:id="@+id/progressbar"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="38.6dp"
                    android:maxHeight="6dp"
                    android:max="947"
                    android:progress="0"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:minHeight="6dp"
                    android:thumb="@drawable/seek_thumb"/>
            </RelativeLayout>
            <TextView
                android:textSize="15dp"
                android:layout_gravity="center"
                android:id="@+id/Timechekdim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:text="@string/layout_audio_timer_dim"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/Relativebottom"
            android:background="@drawable/bottom_recorder_bg"
            android:layout_width="match_parent"
            android:layout_height="54.6dp">
            <ImageButton
                android:gravity="center"
                android:id="@+id/btn_cancel_record_audio"
                android:background="@drawable/btn_bottom_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/btn_record_audio_cancel"
                android:text="@string/cancel"
                android:layout_alignParentLeft="true"/>
            <RelativeLayout
                android:textSize="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/Relativebottomcenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/btn_send_record_audio"
                android:layout_toRightOf="@+id/btn_cancel_record_audio">
                <Button
                    android:gravity="center"
                    android:id="@+id/btn_start_record_audio"
                    android:background="@drawable/recorder_player_recoding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageButton
                android:gravity="center"
                android:id="@+id/btn_send_record_audio"
                android:background="@drawable/btn_bottom_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_record_audio_send"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
