<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/linear_layout_vcard_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/header_color"
        android:layout_width="match_parent"
        android:layout_height="25.33dp">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/brown_color_001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.66dp"
            android:text="@string/menu_multimedia_contact"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/co_status_bar_header_bg3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0">
        <ImageView
            android:id="@+id/vcard_image_icon"
            android:layout_width="43.33dp"
            android:layout_height="43.33dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/msg_list_id_default"
            android:scaleType="fitXY"
            android:layout_weight="0"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="43.33dp"
            android:layout_marginRight="9.33dp"
            android:layout_weight="1">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/brown_color_001"
                android:ellipsize="marquee"
                android:id="@+id/vcard_name_text"
                android:layout_width="match_parent"
                android:layout_height="22.66dp"
                android:singleLine="true"
                android:shadowColor="@color/brown_color_002"
                android:shadowDx="-1"
                android:shadowDy="-1"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#ffe2b6"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fastScrollEnabled="true"/>
    <LinearLayout
        android:id="@+id/vcard_menubar"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="4.66dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="56.66dp"
        android:layout_weight="0">
        <Button
            android:enabled="false"
            android:textSize="16dp"
            android:id="@+id/vcard_send_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/vcard_detail_send"
            android:layout_weight="1"/>
        <Button
            android:enabled="false"
            android:textSize="16dp"
            android:id="@+id/vcard_save_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/vcard_detail_save"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/vcard_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/vcard_detail_cancel"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/vcard_nocontact_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="18dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#efad51"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vcard_nocontact_message"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
