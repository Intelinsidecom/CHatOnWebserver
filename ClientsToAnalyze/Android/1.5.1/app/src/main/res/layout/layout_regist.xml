<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_02"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/brown_color_001"
                android:gravity="center"
                android:id="@+id/txt_title"
                android:background="@drawable/co_header2_bg"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="25.33dp"
                android:text="@string/layout_regist_country_registration"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="left"
                android:id="@+id/txt_select_country"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.6dp"
                android:text="@string/layout_regist_country_code"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/newSearch"
                android:background="@drawable/co_btn_01_default_normal"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_color_001"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:id="@+id/editCountryName"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/layout_regist_country"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_color_001"
                        android:gravity="center_vertical"
                        android:id="@+id/editCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@string/layout_regist_code"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@drawable/btn_country_code_bg_xml"
                        android:duplicateParentState="true"
                        android:layout_width="16dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:id="@+id/txtRegist_1"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/regist_inputPno"/>
            <EditText
                android:id="@+id/editPno"
                android:background="@drawable/textfield_bg_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:inputType="number"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <Button
            android:enabled="false"
            android:id="@+id/btnSelfSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/done"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="3"/>
        <Button
            android:textSize="7sp"
            android:id="@+id/btnGenerateIMEI"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMEI"
            android:layout_weight="3"/>
        <Button
            android:textSize="7sp"
            android:id="@+id/btnNSS"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NSS"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>
