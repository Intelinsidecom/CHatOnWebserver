<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_chat_view_font_size"/>
    <ScrollView
        android:background="@drawable/preview_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linear_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgfriend"
                        android:layout_width="53.3dp"
                        android:layout_height="56.3dp"
                        android:layout_marginLeft="6.7dp"
                        android:src="@drawable/contacts_default_img"
                        android:scaleType="fitXY"
                        android:layout_alignBottom="@+id/textSndContent"/>
                    <TextView
                        android:textSize="11.3dp"
                        android:typeface="sans"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/textfriend1"
                        android:layout_width="54dp"
                        android:layout_height="16.7dp"
                        android:layout_marginLeft="6.7dp"
                        android:layout_marginBottom="6.7dp"
                        android:text="Victoria"
                        android:singleLine="true"
                        android:layout_below="@+id/imgfriend"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/linear_1">
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/textSndContent"
                        android:background="@drawable/message_bubble_read"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgfriend">
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:autoLink="all"
                            android:id="@+id/read_font_size"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="8dp"
                            android:maxWidth="180dp"
                            android:text="@string/setting_set_font_hello"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/blue_color_017"
                        android:id="@+id/read_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/setting_change_skin_time"
                        android:shadowColor="#666666"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_toRightOf="@+id/textSndContent"
                        android:layout_alignBottom="@+id/textSndContent"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/lLayoutSndContent"
                    android:background="@drawable/message_bubble_sent"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:autoLink="all"
                        android:id="@+id/sent_font_size"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/setting_set_font_hi"/>
                </LinearLayout>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/blue_color_016"
                    android:id="@+id/sent_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.7dp"
                    android:text="@string/setting_change_skin_time"
                    android:shadowColor="#666666"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:layout_toLeftOf="@+id/lLayoutSndContent"
                    android:layout_alignBottom="@+id/lLayoutSndContent"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:gravity="center"
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="50%"
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="70%"
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="100%"
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="150%"
                android:layout_weight="1"/>
            <TextView
                android:gravity="center"
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="200%"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout1">
            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/size100"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/size50"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/contacts_list_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/size70"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/contacts_list_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/size100"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/contacts_list_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/size150"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/contacts_list_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/size200"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/vcalendar_receive_menu_bar"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <Button
            android:textSize="16sp"
            android:id="@+id/save_viewsize"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.7dp"
            android:text="@string/save"
            android:layout_weight="1"/>
        <Button
            android:textSize="16sp"
            android:id="@+id/btnCancel"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.7dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
