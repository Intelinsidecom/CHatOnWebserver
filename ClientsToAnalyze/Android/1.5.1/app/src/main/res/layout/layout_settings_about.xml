<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_about"/>
    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/LinearLayout01"
        android:background="@drawable/logo_03"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:typeface="sans"
                android:textColor="@color/blue_color_021"
                android:gravity="center"
                android:id="@+id/setting_help_explain"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:text="@string/setting_help_explain"/>
            <TextView
                android:textSize="16sp"
                android:typeface="sans"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/setting_current_version"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/setting_current_version"/>
            <TextView
                android:textSize="16sp"
                android:typeface="sans"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/setting_upgrade_version"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:text=""/>
            <LinearLayout
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:id="@+id/setting_about_btn_license"
                    android:layout_width="232dp"
                    android:layout_height="50dp"
                    android:text="@string/settings_license"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="22.6dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:id="@+id/setting_about_btn1"
                    android:layout_width="232dp"
                    android:layout_height="50dp"
                    android:text="@string/setting_upgrade_text"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
