<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/setting_about_btn1_text"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9.3dp">
        <TextView
            android:textSize="14.66sp"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_about_disclaimer_txt"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42.66dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="42.66dp"
        android:layout_weight="1">
        <Button
            android:textSize="16sp"
            android:id="@+id/setting_about_btn1"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/setting_disclaimer_terms"/>
        <Button
            android:textSize="16sp"
            android:id="@+id/setting_about_btn2"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10.6dp"
            android:text="@string/setting_disclaimer_policy"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="16sp"
            android:typeface="sans"
            android:id="@+id/setting_about_btn3"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="42.66dp"
            android:layout_marginRight="42.66dp"
            android:text="@string/setting_disclaimer_accept"/>
    </LinearLayout>
</LinearLayout>
