<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlay_relation"
    android:background="@drawable/relationship_rank_bg"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="2.66dp">
    <com.sec.chaton.widget.ProfileImageView
        android:id="@+id/relation_img"
        android:background="@drawable/id_bg_01"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10.6dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6.3dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relation_img">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/relation_rank_text_name"
                android:layout_width="match_parent"
                android:layout_height="18.6dp"
                android:text="@string/setting_interaction_wall"
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/namenpoint"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_rank"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_rank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_point"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_interaction_zero"/>
            </LinearLayout>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/relation_status_msg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:singleLine="true"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/lbar"
                android:layout_width="149dp"
                android:layout_height="21dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/linear0">
                <ImageView
                    android:layout_width="18.66dp"
                    android:layout_height="22.77dp"
                    android:src="@drawable/relationship_bubble2_left_tail"
                    android:scaleType="fitXY"
                    android:minWidth="18.66dp"
                    android:layout_weight="0"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/relation_received"
                    android:background="@drawable/relationship_bubble_left"
                    android:layout_width="18.66dp"
                    android:layout_height="25.33dp"
                    android:layout_marginLeft="0dp"
                    android:text="Buddy"
                    android:layout_weight="250"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/relation_send"
                    android:background="@drawable/relationship_bubble_right"
                    android:layout_width="18.66dp"
                    android:layout_height="25.33dp"
                    android:text="@string/setting_interaction_me"
                    android:layout_weight="150"/>
                <ImageView
                    android:id="@+id/interaction_right_tail"
                    android:background="@drawable/relationship_bubble2_right_tail"
                    android:layout_width="18.66dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="1dp"
                    android:scaleType="fitXY"
                    android:minWidth="18.66dp"
                    android:layout_weight="0"/>
                <RelativeLayout
                    android:id="@+id/rbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="50"
                    android:layout_toRightOf="@+id/lbar">
                    <TextView
                        android:textSize="14dp"
                        android:typeface="sans"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:id="@+id/relation_gap"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14.7dp"
                        android:text="@string/setting_interaction_gap"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LinearLayout2"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/relation_rank_img"
            android:background="@drawable/rank_1"
            android:visibility="invisible"
            android:layout_width="80dp"
            android:layout_height="93dp"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:background="@drawable/relationship_rank_bg"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginRight="13dp">
            <TextView
                android:textSize="8.66dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/relation_left_parenthesis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ("
                android:shadowColor="@color/black"
                android:shadowDy="1"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/relation_img_increase"
                android:background="@drawable/relationship_arrow_up"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="1.5dp"/>
            <TextView
                android:textSize="8.66dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/relation_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:shadowColor="@color/black"/>
            <TextView
                android:textSize="8.66dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/relation_rigth_parenthesis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=") "
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="2.66dp"
        android:layout_below="@+id/rlay_relation"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
