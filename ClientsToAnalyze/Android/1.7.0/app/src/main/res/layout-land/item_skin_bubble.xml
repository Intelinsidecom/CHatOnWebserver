        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:layout_width="@dimen/change_skin_item_width"
        android:layout_height="@dimen/change_skin_item_height"
        android:src="@drawable/thumb_bubble_01"
        android:scaleType="fitXY"/>
</LinearLayout>
