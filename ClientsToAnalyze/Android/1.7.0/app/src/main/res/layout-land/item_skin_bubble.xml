    android:paddingRight="@dimen/change_skin_item_padding"
    android:paddingBottom="3dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/skin_bubble"
        android:background="@drawable/btn_change_bubble_bg_xml"
        android:paddingLeft="2dp"
