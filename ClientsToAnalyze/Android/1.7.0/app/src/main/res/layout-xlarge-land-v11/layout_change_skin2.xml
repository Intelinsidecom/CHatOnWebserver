<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/skin_window"
    android:paddingBottom="14dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/layout_skin_chatroom_bubble"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/chaton_chats_header_shadow"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <com.sec.widget.HorizontalListView
            android:id="@+id/list_bg_horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentTop="true"/>
        <com.sec.widget.HorizontalListView
            android:id="@+id/list_bubble_horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/list_bg_horizontal"
            android:layout_alignParentBottom="true"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="right"
                android:layout_width="56dp"
                android:layout_height="300dp"
                android:src="@drawable/chaton_setting_mask"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
