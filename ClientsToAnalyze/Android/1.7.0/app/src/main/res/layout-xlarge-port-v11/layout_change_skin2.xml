<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/skin_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_height="343dp"
            layout="@layout/layout_skin_chatroom_bubble"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:src="@drawable/chaton_chats_header_shadow"
            android:scaleType="fitXY"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sec.widget.HorizontalListView
            android:id="@+id/list_bg_horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"/>
        <com.sec.widget.HorizontalListView
            android:id="@+id/list_bubble_horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="180dp"
            android:layout_weight="0"/>
        <ImageView
            android:layout_gravity="right"
            android:layout_width="56dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/chaton_setting_mask"
            android:scaleType="fitXY"/>
    </FrameLayout>
</LinearLayout>
