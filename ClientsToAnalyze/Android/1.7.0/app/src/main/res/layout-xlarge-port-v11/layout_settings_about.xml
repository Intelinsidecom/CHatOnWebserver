<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp">
        <ImageView
            android:layout_width="340dp"
            android:layout_height="320dp"
            android:src="@drawable/logo_03"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="73dp">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_13"
            android:id="@+id/setting_current_version"
            android:layout_width="wrap_content"
            android:layout_height="21dp"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_13"
            android:id="@+id/setting_upgrade_version"
            android:layout_width="wrap_content"
            android:layout_height="21dp"/>
        <Button
            android:id="@+id/setting_about_btn_license"
            android:layout_width="329dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/settings_license"/>
        <Button
            android:id="@+id/setting_about_btn1"
            android:layout_width="329dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/setting_upgrade_text"/>
    </LinearLayout>
</LinearLayout>
