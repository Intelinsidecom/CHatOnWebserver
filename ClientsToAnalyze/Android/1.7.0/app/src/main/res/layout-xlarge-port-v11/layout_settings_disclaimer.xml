<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/color_palette_11"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="178dp"
        android:text="@string/setting_about_btn1_text"/>
    <ImageView
        android:background="@color/color_palette_12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="50dp">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_13"
            android:id="@+id/textView2"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_about_disclaimer_txt"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/LinearLayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp">
            <Button
                android:textSize="18dp"
                android:id="@+id/setting_about_btn1"
                android:layout_width="329dp"
                android:layout_height="40dp"
                android:layout_marginRight="6dp"
                android:text="@string/setting_disclaimer_terms"
                android:layout_weight="1"/>
            <Button
                android:textSize="18dp"
                android:id="@+id/setting_about_btn2"
                android:layout_width="329dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:text="@string/setting_disclaimer_policy"
                android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:textSize="18dp"
            android:id="@+id/setting_about_btn3"
            android:layout_width="329dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/setting_disclaimer_accept"/>
    </LinearLayout>
</LinearLayout>
