<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/llayout_subTitle"
        android:background="@drawable/tw_title_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/subTitle"
            android:paddingLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/settings_select_country_code"
            android:layout_weight="1"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/subTitle_tablet"
            android:paddingLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/settings_select_country_code"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayout_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/buddy_profile_close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_menu_close_clear_cancel"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:id="@+id/subTitle_candel"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="14dp"
                android:text="@string/dialog_cancel"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageButton
            android:id="@+id/buttonAdd"
            android:visibility="gone"
            android:layout_width="41.33dp"
            android:layout_height="41.33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"/>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/brown_color_002"
            android:gravity="center_vertical"
            android:id="@+id/editCountry"
            android:background="@drawable/btn_search_dialog_xml"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_marginLeft="10.66dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginBottom="10.7dp"
            android:hint="@string/country_search_hint"
            android:singleLine="true"
            android:maxLength="30"
            android:editable="true"
            android:layout_weight="1"
            android:inputType="textVisiblePassword"/>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollingCache="false"
        android:choiceMode="singleChoice"
        android:layout_weight="1"
        android:fastScrollEnabled="true"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <Button
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/buttonSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:text="@string/done"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>
