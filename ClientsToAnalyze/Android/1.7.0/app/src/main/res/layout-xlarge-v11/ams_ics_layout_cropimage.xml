<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_template_buttons"
            android:background="@drawable/ams_top_bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/ams_toolbar_bg_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">
                <ImageView
                    android:id="@+id/iv_template_rect"
                    android:background="@drawable/ams_ics_selector_userstamp_bg_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_rect"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/tab_line_menu_02"/>
                <ImageView
                    android:id="@+id/iv_template_roundrect"
                    android:background="@drawable/ams_ics_selector_userstamp_bg_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_rect_round"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/tab_line_menu_02"/>
                <ImageView
                    android:id="@+id/iv_template_circle"
                    android:background="@drawable/ams_ics_selector_userstamp_bg_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_circle"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/tab_line_menu_02"/>
                <ImageView
                    android:id="@+id/iv_template_star"
                    android:background="@drawable/ams_ics_selector_userstamp_bg_center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_star"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/tab_line_menu_02"/>
                <ImageView
                    android:id="@+id/iv_template_heart"
                    android:background="@drawable/ams_ics_selector_userstamp_bg_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_heart"
                    android:scaleType="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <view
            android:id="@+id/image"
            android:background="#55000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:layout_below="@+id/layout_template_buttons"
            class="com.sec.vip.cropimage.CropImageView"/>
    </RelativeLayout>
</FrameLayout>
