<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/buddy_child_check"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:button="@drawable/checkbox_background_xml"
        android:layout_weight="0"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/buddy_child_profile_outline"
        android:background="#6b6b6b"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0">
        <ImageView
            android:id="@+id/buddy_child_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="14dp"
        android:layout_weight="1">
        <TextView
            android:textSize="22dp"
            android:textColor="#3c1f0a"
            android:ellipsize="marquee"
            android:id="@+id/buddy_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#e07a20"
            android:ellipsize="marquee"
            android:id="@+id/buddy_child_status_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/buddy_child_selected_arrow"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/chaton_contents_list_arrow_3"
        android:scaleType="fitXY"
        android:layout_weight="0"/>
    <ImageView
        android:id="@+id/buddy_child_selected_none"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/chaton_contents_list_line_left"
        android:scaleType="fitXY"
        android:layout_weight="0"/>
</LinearLayout>
