<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buddy_layout_main"
    android:background="#e3e3e3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/chaton_contents_list_line_left"
        android:scaleType="fitXY"
        android:layout_weight="0"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/honeycomb_bar"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/chatprofile_menu_back"
            android:background="@drawable/btn_default"
            android:visibility="visible"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/chat_profile_back"/>
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_palette_13"
            android:id="@+id/honeycomb_title"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13.5dp"
            android:text="@string/buddy_chat_profile"
            android:layout_toRightOf="@+id/chatprofile_menu_back"/>
        <ImageButton
            android:id="@+id/chatprofile_menu_invite"
            android:background="@drawable/btn_default"
            android:visibility="visible"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/buddy_list_menu_button_xml"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/title_menu"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="7.3dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="25.33dp"
        android:text="@string/buddy_chat_profile"
        android:layout_below="@+id/honeycomb_bar"/>
    <com.sec.widget.ChoicePanel
        android:id="@+id/buddy_choice_panel"
        android:background="@drawable/co_add_plate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title_menu">
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="3.33dp"
            android:paddingTop="2.66dp"
            android:paddingRight="3.33dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"/>
    </com.sec.widget.ChoicePanel>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/searcdh_bar"
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@+id/buddy_choice_panel">
        <com.sec.widget.EditTextWithClearButton
            android:textColor="@color/buddylist_search_edittext_text_color"
            android:gravity="center_vertical"
            android:id="@+id/buddy_search"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="12dp"
            android:hint="@string/buddy_list_search_hint"
            android:singleLine="true"
            android:editable="true"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/buddy_list_option_spinner_layout"
            android:background="@drawable/btn_default"
            android:addStatesFromChildren="true"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:layout_weight="0">
            <com.sec.chaton.widget.MenuSpinner
                android:id="@+id/buddy_list_option_spinner"
                android:background="@drawable/buddy_list_menu_button_xml"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:drawSelectorOnTop="true"
                android:dropDownWidth="211dp"
                android:dropDownHorizontalOffset="-147dp"
                android:dropDownVerticalOffset="1dp"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/chat_title_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1">
            <com.sec.widget.EditTextWithClearButton
                android:textSize="22dp"
                android:textColor="@color/color_edittext_disabled"
                android:gravity="center_vertical"
                android:id="@+id/edit_title"
                android:paddingLeft="12dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="6dp"
                android:singleLine="true"
                android:maxLength="30"
                android:editable="true"
                android:layout_weight="1"
                android:layout_toLeftOf="@+id/buddy_menu_save"
                android:imeOptions="actionDone"/>
            <EditText
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/tmp_title"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:editable="true"
                android:imeOptions="actionDone"/>
            <Button
                android:enabled="false"
                android:textSize="16dp"
                android:id="@+id/buddy_menu_save"
                android:visibility="gone"
                android:layout_width="125dp"
                android:layout_height="41dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="14dp"
                android:text="@string/done"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/brown_color_002"
            android:gravity="center_vertical"
            android:id="@+id/chat_title"
            android:background="@drawable/btn_search_dialog_xml"
            android:paddingLeft="7dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_marginLeft="10.66dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginBottom="6dp"
            android:singleLine="true"
            android:editable="true"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/chaton_contents_list_line_left"
            android:scaleType="fitXY"
            android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lLayoutProfile"
        android:background="@drawable/messenger_info_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.sec.chaton.util.EllipsisTextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/textNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:lines="2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buddy_list_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searcdh_bar">
        <com.sec.widget.FastScrollableExpandableListView
            android:id="@+id/buddy_list"
            android:background="@null"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:listSelector="#00000000"
            android:scrollingCache="false"
            android:groupIndicator="@null"
            android:childDivider="@color/color_buddy_list_divider"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/buddy_list_noresult_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#efad51"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_title_no_buddies"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buddy_menu_bar"
            android:background="@drawable/co_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2.6dp">
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_group_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.7dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_broadcast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1.3dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_invite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1.3dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_add_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.7dp"
                    android:text="@string/save"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_blind_memo"
                    android:background="@drawable/buddyprofile_chat_button_xml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1.3dp"
                    android:text="@string/save"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.7dp"
                    android:text="@string/buddy_list_menubar_cancel"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tell_friends_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searcdh_bar">
        <LinearLayout
            android:background="@drawable/list_divider_holo_dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="#6b6b6b"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:background="@drawable/msg_list_id_4"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>
            </LinearLayout>
            <TextView
                android:textSize="22dp"
                android:textColor="#3c1f0a"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="@string/buddy_list_tell_friends_info"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/tell_friends_button"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:text="@string/buddy_list_tell_friends_button"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/no_item_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/chaton_list_ic_none2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="24dp"
            android:textColor="#4dffffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title_noblock_item"/>
    </LinearLayout>
</RelativeLayout>
