<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/buddy_select_child_check"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp"
        android:button="@drawable/checkbox_background_xml"/>
    <LinearLayout
        android:gravity="center"
        android:background="#6b6b6b"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/buddy_select_child_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:textSize="22dp"
            android:textColor="#3c1f0a"
            android:ellipsize="marquee"
            android:id="@+id/buddy_select_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#e07a20"
            android:ellipsize="marquee"
            android:id="@+id/buddy_select_child_status_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/buddy_select_child_remove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="23dp"
        android:src="@drawable/hc_buddy_select_remove_icon_xml"
        android:layout_weight="0"/>
</LinearLayout>
