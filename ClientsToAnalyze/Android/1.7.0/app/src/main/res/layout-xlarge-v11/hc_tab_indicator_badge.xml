<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/actionbar_tab_bg"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_weight="0">
    <View
        android:id="@+id/tab_indicator_left_spacer"
        android:layout_width="16dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/tab_icon"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tab_indicator_left_spacer"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tab_title"
        android:paddingLeft="0dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tab_icon"
        android:layout_centerVertical="true"
        style="@style/ChatONCustomTabText"/>
    <TextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/tab_badge"
        android:background="@drawable/chaton_top_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
