<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentSnd"
    android:background="@null"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/lSubParentSnd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_toLeftOf="@+id/lSubParentSnd"
        android:layout_alignBottom="@+id/lSubParentSnd">
        <Button
            android:id="@+id/btnError"
            android:background="@drawable/message_error"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"/>
        <ProgressBar
            android:id="@+id/progressbarUp"
            android:visibility="gone"
            android:layout_width="141dp"
            android:layout_height="9dp"
            android:max="100"
            android:layout_alignParentRight="true"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <ProgressBar
            android:id="@+id/progressBalloon"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateDrawable="@anim/chat_profressbar_ssm_honeycom"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/btnSendCancel"
            android:background="@drawable/chat_message_resend_cancle_honeycom"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/progressBalloon"
            android:layout_below="@+id/progressbarUp"
            android:layout_alignWithParentIfMissing="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lSubParentSnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lchkSnd">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lLayoutSndContent"
            android:background="@drawable/message_bubble_sent1"
            android:visibility="visible"
            android:addStatesFromChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="600dp">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bubbleLayout"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:autoLink="all"
                        android:id="@+id/textSndContent"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="0dp"
                        android:maxWidth="238dp"
                        android:text="12345"
                        android:shadowColor="#ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"/>
                    <ImageView
                        android:id="@+id/imageSndTranIcon"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/messenger_icon_translate"/>
                    <TextView
                        android:textSize="16dp"
                        android:textStyle="normal"
                        android:textColor="@color/chat_translate"
                        android:id="@+id/textSndTranslated"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="200dp"
                        android:layout_below="@+id/lLayoutRcvContent"/>
                    <ImageView
                        android:id="@+id/imageSndContent"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="3dp"/>
                    <ImageView
                        android:id="@+id/imageSndContentbottom"
                        android:background="@drawable/chaton_buddy_audio_b"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="13.9dp"
                        android:layout_marginBottom="12dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="15dp"
                    android:id="@+id/spaceText"
                    android:focusable="false"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text=" (00) 00:00 AM"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bubbleLayout_E"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/lLayoutSndETC"
                    android:visibility="visible"
                    android:addStatesFromChildren="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="0dp"
                    android:minWidth="111dp">
                    <ImageView
                        android:id="@+id/imageEtcSndContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/messenger_chat_contact"/>
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:id="@+id/textEtcSndContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:maxWidth="160dp"
                        android:shadowColor="#ffffff"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"/>
                </LinearLayout>
                <TextView
                    android:textSize="15dp"
                    android:id="@+id/spaceText_E"
                    android:focusable="false"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text=" (00) 00:00 AM"/>
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/lLayoutSndTime"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgEnvelop"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/messenger_icon_unread"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/chat_unread"
                    android:id="@+id/txtUnread"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgEnvelop"/>
                <TextView
                    android:textColor="@color/chat_snd_fail"
                    android:id="@+id/textSndStatus"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="15dp"
                    android:textColor="#282319"
                    android:id="@+id/textSndTime"
                    android:paddingLeft="3.6dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="14dp"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:10 PM"
                    android:maxLines="1"
                    android:layout_toRightOf="@+id/chat_ack"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="#c50303"
                    android:id="@+id/chat_ack"
                    android:paddingLeft="6dp"
                    android:paddingBottom="6dp"
                    android:focusable="false"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_alignBaseline="@+id/textSndTime"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lchkSnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">
        <CheckBox
            android:id="@+id/chkSndId"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_background_xml"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageAlert"
        android:background="@drawable/balloon_fail"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lSubParentSnd"
        android:layout_alignBottom="@+id/lSubParentSnd"/>
</RelativeLayout>
