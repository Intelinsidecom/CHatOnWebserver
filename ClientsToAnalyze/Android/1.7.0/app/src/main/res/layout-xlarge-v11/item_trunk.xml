<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:paddingTop="3dp"
    android:paddingRight="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/playButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_buddy_play"
            android:layout_centerInParent="true"/>
        <ProgressBar
            android:id="@+id/downloadProgressbar"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminateDrawable="@anim/progressbar_ssm"
            android:layout_centerInParent="true"/>
        <View
            android:id="@+id/unreadCommentBorder"
            android:background="@drawable/trunk_item_image_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="13.3dp"
            android:textStyle="bold"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:id="@+id/totalCommentCountTextView"
            android:background="@drawable/thumbnail_bubble"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
