<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="368dp">
        <ImageView
            android:id="@+id/trunkContentMainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/defaultPlayBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_play_button_03"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/trunkContentDownloadProgressbar"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@anim/progressbar_trunk"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/refreshCommentButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trunk_menu_refresh"
            android:drawableLeft="@drawable/chaton_trunk_ic_refresh"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_13"
            android:id="@+id/previousCommentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trunk_btn_previous_comments"
            android:drawableLeft="@drawable/chaton_ic_arrow_l"
            android:drawablePadding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_11"
            android:id="@+id/trunkContentCommentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/chaton_trunk_ic_comment"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ProgressBar
            android:id="@+id/trunkCommentsLoadingProgressbar"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:indeterminateDrawable="@anim/progressbar_ssm"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="22dp"
        android:textColor="@color/color_palette_13"
        android:gravity="center"
        android:id="@+id/trunkNoCommentTextView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/trunk_write_comment"
        android:inputType="textMultiLine"/>
</LinearLayout>
