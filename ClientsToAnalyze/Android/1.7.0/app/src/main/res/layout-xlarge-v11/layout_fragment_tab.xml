<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@android:id/tabhost"
    android:background="#ebebeb"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:background="@drawable/chaton_title_bar"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/chatview_menu_forward"/>
            <RelativeLayout
                android:background="@drawable/forward_actionbar_bg"
                android:addStatesFromChildren="true"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/cancel_image_btn"
                    android:background="@drawable/chaton_title_ic_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/cancel_text_btn"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/cancel_text_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/cancel"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"/>
        <LinearLayout
            android:id="@+id/honeycomb_divider"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">
            <ImageView
                android:id="@+id/divider"
                android:background="@drawable/list_divider_holo_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</TabHost>
