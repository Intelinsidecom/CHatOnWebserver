<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="600dp"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp">
                <LinearLayout
                    android:gravity="bottom|left"
                    android:orientation="vertical"
                    android:id="@+id/llayoutid_01"
                    android:layout_width="match_parent"
                    android:layout_height="64dp">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/blue_color_021"
                        android:gravity="center"
                        android:id="@+id/txt_title"
                        android:paddingLeft="8.66dp"
                        android:paddingBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/provisioning_registration"/>
                </LinearLayout>
                <ImageView
                    android:background="@color/color_palette_1"
                    android:layout_width="600dp"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginLeft="6.66dp"
                        android:layout_marginRight="6.66dp"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/blue_color_021"
                            android:gravity="center"
                            android:id="@+id/txt_title"
                            android:paddingLeft="8.66dp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/provisioning_nonself_sent"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="17dp"
                            android:textColor="@color/color_palette_1"
                            android:gravity="center"
                            android:id="@+id/phoneNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="6.66dp"
                            android:text="+1234567890"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.66dp"
                        android:layout_marginRight="6.66dp">
                        <TextView
                            android:textSize="17dp"
                            android:gravity="center"
                            android:id="@+id/changePho"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6.66dp"
                            android:layout_marginRight="15dp"
                            android:text="@string/ams_optmenu_edit"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:background="@color/color_palette_2"
                    android:layout_width="600dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/blue_color_021"
                    android:id="@+id/txtRegistName_0"
                    android:paddingLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/provisioning_verification_code"
                    android:layout_weight="1"
                    android:layout_below="@+id/llayoutid_01"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/color_palette_2"
                    android:id="@+id/verification_explain_text"
                    android:paddingLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/provisioning_verification_explain"/>
                <EditText
                    android:id="@+id/vCode"
                    android:background="@drawable/textfield_bg_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6.66dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="6.66dp"
                    android:singleLine="true"
                    android:maxLength="4"
                    android:inputType="numberDecimal"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6.66dp"
                    android:layout_marginRight="6.66dp"
                    android:layout_weight="1">
                    <Button
                        android:enabled="true"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:id="@+id/reSend"
                        android:background="@drawable/btn_disclaimer_bg_xml"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/provisioning_resend"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/layout_done"
                android:background="@drawable/co_bg"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/btnDone"
                    android:background="@drawable/btn_disclaimer_bg_xml"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginRight="64dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/btnCancel"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/cancel"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
