<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/color_palette_9"
                android:gravity="center"
                android:id="@+id/txt_title"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/layout_regist_country_registration"/>
            <ImageView
                android:background="@color/color_palette_1"
                android:layout_width="600dp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/newSearch"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/color_palette_2"
                        android:gravity="left"
                        android:id="@+id/txt_select_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/layout_regist_country_code"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_palette_1"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:id="@+id/editCountryName"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="country"
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:textColor="@color/color_palette_1"
                            android:gravity="center_vertical"
                            android:id="@+id/editCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/layout_regist_code"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/llayout_btn_round_more"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageButton
                        android:gravity="center"
                        android:id="@+id/layout_btn_round_more"
                        android:background="@drawable/sw_btn_round_more_xml"
                        android:duplicateParentState="true"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="42dp"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:background="@color/color_palette_2"
                android:layout_width="600dp"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_palette_2"
                android:id="@+id/txtRegist_1"
                android:paddingLeft="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/regist_inputPno"/>
            <EditText
                android:id="@+id/editPno"
                android:background="@drawable/textfield_bg_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:inputType="number"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <Button
            android:enabled="false"
            android:id="@+id/btnSelfSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/done"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="3"/>
        <Button
            android:textSize="7dp"
            android:id="@+id/btnGenerateIMEI"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMEI"
            android:layout_weight="3"/>
        <Button
            android:textSize="7dp"
            android:id="@+id/btnNSS"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NSS"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>
