<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlay_relation"
    android:layout_width="match_parent"
    android:layout_height="86dp">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/linear_relation_img"
        android:background="#6b6b6b"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/relation_img"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/relative0"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/linear_relation_img">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/black"
                android:ellipsize="marquee"
                android:id="@+id/relation_rank_text_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Sam"
                android:singleLine="true"
                android:shadowColor="@color/black"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/namenpoint"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="14dp">
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_rank"
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_rank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_rank"
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_point"
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_interaction_zero"
                    android:shadowColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/linear0">
            <ImageView
                android:layout_width="18.66dp"
                android:layout_height="35dp"
                android:src="@drawable/chaton_relationship_bubble_l"
                android:scaleType="fitXY"
                android:layout_weight="0"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/relation_received"
                android:background="@drawable/chaton_relationship_bubble_l_b"
                android:layout_width="18.66dp"
                android:layout_height="35dp"
                android:text="Buddy"
                android:layout_weight="250"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/relation_send"
                android:background="@drawable/chaton_relationship_bubble_r_b"
                android:layout_width="18.66dp"
                android:layout_height="35dp"
                android:text="@string/setting_interaction_me"
                android:layout_weight="150"/>
            <ImageView
                android:id="@+id/interaction_right_tail"
                android:background="@drawable/chaton_relationship_bubble_r"
                android:layout_width="18.66dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:layout_weight="0"/>
            <RelativeLayout
                android:id="@+id/rbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="150dp"
                android:layout_weight="50"
                android:layout_toRightOf="@+id/lbar">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:id="@+id/relation_gap"
                    android:background="#ffffff"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14.7dp"
                    android:text="@string/setting_interaction_gap"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="37dp"
        android:layout_marginRight="38dp"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/relation_img_increase"
            android:background="@drawable/relationship_arrow_up"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="16dp"
            android:textColor="@color/color_palette_13"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/relation_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="30"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/relation_rank_img"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_relation_img">
        <ImageView
            android:background="#333a3a"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
</RelativeLayout>
