<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlay_relation"
    android:layout_width="match_parent"
    android:layout_height="106dp">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/linear_relation_img"
        android:background="#6b6b6b"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/relation_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="13dp"
        android:layout_toRightOf="@+id/linear_relation_img">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/black"
                android:ellipsize="marquee"
                android:id="@+id/relation_rank_text_name"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Amanda Seyfried"
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/namenpoint"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_rank"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_rank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_point"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="10.6dp"
                    android:textColor="@color/white"
                    android:id="@+id/relation_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_interaction_zero"/>
            </LinearLayout>
            <TextView
                android:textSize="28dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/relation_status_msg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:singleLine="true"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/lbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/linear0">
                <ImageView
                    android:background="@drawable/chaton_relationship_bubble_l"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:minWidth="18.66dp"
                    android:layout_weight="0"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/relation_received"
                    android:background="@drawable/chaton_relationship_bubble_l_b"
                    android:layout_width="18.66dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="0dp"
                    android:text="Buddy"
                    android:layout_weight="250"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/relation_send"
                    android:background="@drawable/chaton_relationship_bubble_r_b"
                    android:layout_width="18.66dp"
                    android:layout_height="35dp"
                    android:text="@string/setting_interaction_me"
                    android:layout_weight="150"/>
                <ImageView
                    android:id="@+id/interaction_right_tail"
                    android:background="@drawable/chaton_relationship_bubble_r"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:minWidth="18.66dp"
                    android:layout_weight="0"/>
                <RelativeLayout
                    android:id="@+id/rbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:layout_toRightOf="@+id/lbar">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:id="@+id/relation_gap"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14.7dp"
                        android:text="@string/setting_interaction_gap"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/lbar"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_gravity="top"
            android:id="@+id/relation_rank_img"
            android:background="@drawable/rank_1"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/relation_img_increase"
                android:background="@drawable/relationship_arrow_up"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/color_palette_13"
                android:gravity="center"
                android:id="@+id/relation_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="30"
                android:shadowColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear_relation_img"/>
</RelativeLayout>
