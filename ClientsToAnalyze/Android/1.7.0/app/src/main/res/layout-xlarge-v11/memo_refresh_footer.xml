<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/list_footer"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/footer_progress"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <Button
        android:textColor="#787878"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/footer_memo_content"
        android:background="@color/white"
        android:padding="10dp"
        android:focusable="false"
        android:visibility="visible"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="160dp"
        android:text="@string/dialog_title_noblock_item"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/footer_no_memo"
        android:visibility="gone"
        android:alwaysDrawnWithCache="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_weight="1">
        <ImageView
            android:background="@drawable/chaton_list_ic_none2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="22dp"
            android:textColor="#aaaaaa"
            android:id="@+id/msg_no_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_msgbox_no_chat"/>
    </LinearLayout>
</LinearLayout>
