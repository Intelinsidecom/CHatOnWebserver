<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rlay_details"
            android:background="@drawable/chaton_list_section_divider_nor"
            android:paddingLeft="6.7dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginRight="11dp">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color_palette_14"
                android:paddingLeft="6.7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_interaction_rank"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/flayout_relationship"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="2dp">
            <LinearLayout
                android:gravity="left"
                android:id="@+id/rParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.sec.widget.HorizontalListView
                    android:id="@+id/interaction_horizontal_listview"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/userprofile_interaction_rank"
                    android:background="@drawable/mypage_name_more_background_xml"
                    android:focusable="true"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="56dp"
                    android:layout_weight="0"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/list_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="14dp">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color_palette_14"
                android:gravity="center_vertical"
                android:id="@+id/memo_layout_title"
                android:background="@drawable/chaton_list_section_divider_nor"
                android:paddingLeft="6.7dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="@string/memo_title"/>
            <LinearLayout
                android:id="@+id/mypage_write_area"
                android:padding="6.66dp"
                android:layout_width="match_parent"
                android:layout_height="44.66dp">
                <Button
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/memo_btn_write"
                    android:background="@drawable/memo_write_button_xml"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/memo_btn_write"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/memo_write_below_line"
                android:background="#333a3a"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
