<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="@string/select_country_hint"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_field"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <com.sec.widget.EditTextWithClearButton
            android:textSize="21dp"
            android:textColor="#72000000"
            android:gravity="center_vertical"
            android:id="@+id/editCountry"
            android:background="@drawable/btn_search_dialog_list_xml"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_marginLeft="10.66dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginBottom="10.7dp"
            android:hint="@string/select_country_hint"
            android:singleLine="true"
            android:maxLength="30"
            android:editable="true"
            android:layout_weight="1"
            android:inputType="textCapSentences"
            android:imeOptions="actionDone"/>
    </LinearLayout>
    <com.sec.widget.FastScrollableListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:choiceMode="singleChoice"
        android:layout_weight="1"
        android:fastScrollEnabled="true"/>
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#efad51"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/country_list_no_search_result"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/list_no_country"
        android:singleLine="true"/>
</LinearLayout>
