<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/view_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_ics_titlebar_height"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:gravity="center"
            android:id="@+id/gridview_frame"
            android:paddingLeft="@dimen/ams_ics2_frame_layout_margin"
            android:paddingTop="@dimen/ams_ics2_frame_layout_margin_top"
            android:paddingRight="@dimen/ams_ics2_frame_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="@dimen/ams_ics2_frame_layout_column_width"
            android:numColumns="auto_fit"/>
    </LinearLayout>
</LinearLayout>
