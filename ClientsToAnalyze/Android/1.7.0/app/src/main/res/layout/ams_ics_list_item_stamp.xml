<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/ams_ics2_stamp_item_container_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_create_stamp"
        android:background="@drawable/ams_ics_selector_stamp_create"
        android:visibility="invisible"
        android:layout_width="@dimen/ams_ics2_stamp_item_container_width"
        android:layout_height="@dimen/ams_ics2_stamp_item_container_height">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ams_create"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#ff494949"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ams_btn_create"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_basic_stamp"
        android:background="@drawable/ams_ics_selector_stamp_item"
        android:layout_width="@dimen/ams_ics2_stamp_item_container_width"
        android:layout_height="@dimen/ams_ics2_stamp_item_container_height">
        <ImageView
            android:id="@+id/image_basic_stamp"
            android:layout_width="@dimen/ams_ics2_stamp_item_content_width"
            android:layout_height="@dimen/ams_ics2_stamp_item_content_height"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="top|right"
        android:id="@+id/layout_remove_stamp"
        android:visibility="invisible"
        android:layout_width="@dimen/ams_ics2_stamp_item_container_width"
        android:layout_height="@dimen/ams_ics2_stamp_item_container_height">
        <ImageView
            android:id="@+id/image_remove_stamp"
            android:layout_width="@dimen/ams_ics2_stamp_item_remove_icon_width"
            android:layout_height="@dimen/ams_ics2_stamp_item_remove_icon_height"
            android:src="@drawable/ic_image_crop_cancel"
            android:adjustViewBounds="true"/>
    </LinearLayout>
</RelativeLayout>
