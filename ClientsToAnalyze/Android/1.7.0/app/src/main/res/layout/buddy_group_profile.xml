<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/general_btn_down_arrow_xml"
        android:text="@string/buddy_group_list_header"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/buddy_group_profile_header_layout"
        android:background="@color/main_background_color"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageButton
            android:background="@drawable/contacts_default_image_group"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"/>
        <com.sec.widget.EditTextWithClearButton
            android:id="@+id/buddy_group_profile_edit_groupname"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="@null"
            style="@style/BuddySearchEditText"/>
        <ImageButton
            android:layout_gravity="center"
            android:background="@drawable/list_round_more_arrow"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/group_profile_memu_layout"
        android:background="@color/black"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageButton
            android:id="@+id/group_profile_start_chat"
            android:src="@drawable/add_buddies_color_chat_icon"
            android:contentDescription="@string/buddy_list_menubar_groupchat"
            style="@style/BuddyProfileMenuImageButton"/>
        <ImageButton
            android:id="@+id/group_profile_broadcast"
            android:layout_marginLeft="2dp"
            android:src="@drawable/add_buddies_color_broadcast_icon"
            android:contentDescription="@string/menu_inbox_broadcast"
            style="@style/BuddyProfileMenuImageButton"/>
        <ImageButton
            android:id="@+id/group_profile_call"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:src="@drawable/add_buddies_call_icon"
            android:contentDescription="@string/menu_voice_call"
            style="@style/BuddyProfileMenuImageButton"/>
        <ImageButton
            android:id="@+id/group_profile_videocall"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:src="@drawable/add_buddies_videocall_icon"
            android:contentDescription="@string/menu_video_call"
            style="@style/BuddyProfileMenuImageButton"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/buddies_subtitle_layout"
        style="@style/SubTitleStyle">
        <TextView
            android:id="@+id/group_profile_buddis_layout_title"
            style="@style/SubTitleTextStyle"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fragment_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
