<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/title_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/general_btn_down_arrow_xml"
        android:text="@string/chat_info_title"/>
    <LinearLayout
        android:id="@+id/layoutChatButtons"
        android:padding="6dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/button_start_chat"
            android:src="@drawable/add_buddies_color_chat_icon"
            android:contentDescription="@string/menu_button_start_chat"
            style="@style/BuddyGroupProfileMenuImageButton"/>
        <ImageButton
            android:id="@+id/button_broadcast"
            android:layout_marginLeft="2dp"
            android:src="@drawable/add_buddies_color_broadcast_icon"
            android:contentDescription="@string/menu_inbox_broadcast"
            style="@style/BuddyGroupProfileMenuImageButton"/>
    </LinearLayout>
    <com.sec.widget.ChoicePanel
        android:id="@+id/buddy_choice_panel"
        android:background="@drawable/name_field_bar_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.sec.widget.ChoicePanel>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/chat_title_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/regist_name"/>
            <com.sec.widget.EditTextWithClearButton
                android:textSize="21dp"
                android:textColor="@color/brown_color_002"
                android:gravity="center_vertical"
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:singleLine="true"
                android:maxLength="30"
                android:soundEffectsEnabled="false"
                android:inputType="textCapSentences"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            style="@style/SubTitleStyle">
            <TextView
                android:id="@+id/ChatInfoBuddyTitle"
                style="@style/SubTitleTextStyle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/searcdh_bar"
        style="@style/BuddySearchContainer">
        <com.sec.widget.EditTextWithClearButton
            android:id="@+id/buddy_search"
            style="@style/BuddySearchEditText"/>
        <ImageButton
            android:id="@+id/buddy_dropdown"
            android:visibility="gone"
            style="@style/BuddyDropDownButton"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buddy_list_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sec.widget.FastScrollableExpandableListView
            android:id="@+id/buddy_list"
            android:background="@null"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:groupIndicator="@null"
            android:divider="@drawable/divider_horizontal_dark_opaque"
            android:layout_weight="1"/>
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#efad51"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/buddy_list_no_search_result"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/chat_title_no_buddies"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tell_friends_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">
            <ImageView
                android:background="@drawable/contacts_default_image"
                style="@style/BuddyListItemImage"/>
            <TextView
                android:textSize="22dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buddy_list_tell_friends_info"/>
        </LinearLayout>
        <Button
            android:textSize="16dp"
            android:textColor="#2b2b2b"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tell_friends_button"
            android:background="@drawable/btn_registration_bg_xml"
            android:layout_width="210.66dp"
            android:layout_height="wrap_content"
            android:text="@string/buddy_list_dialog_addbuddy_title"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/no_item_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/no_lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="24dp"
            android:textColor="#4dffffff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title_noblock_item"/>
    </LinearLayout>
</LinearLayout>
