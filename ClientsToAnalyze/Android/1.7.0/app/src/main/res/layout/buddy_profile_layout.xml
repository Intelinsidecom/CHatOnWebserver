<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="@string/buddy_profile"/>
    <LinearLayout
        android:background="@color/main_background_color"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="7.5dp"
            android:scaleType="fitXY"
            android:layout_weight="0"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/profile_name_status"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#7fbebe"
                android:gravity="center_vertical"
                android:id="@+id/profile_status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="3"/>
        </LinearLayout>
        <CheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/profile_is_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:button="@drawable/buddyprofile_favorite_btn_xml"
            android:layout_weight="0"/>
    </LinearLayout>
    <ListView
        android:id="@+id/profile_memo_list"
        android:background="@color/main_background_color"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"/>
</LinearLayout>
