<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lLayoutChatTitle"
            android:background="@drawable/chatting_header"
            android:layout_width="match_parent"
            android:layout_height="59dp">
            <ImageButton
                android:id="@+id/btnForChatlist"
                android:background="@drawable/chatting_btn_left_arrow_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/chatting_btn_arrow"
                android:contentDescription="@string/layout_chat_fragment_cancel"
                android:nextFocusForward="@+id/btnForChat"/>
            <ImageView
                android:background="@drawable/chatting_header_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:paddingTop="6dp"
                android:paddingBottom="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="4.2">
                <RelativeLayout
                    android:id="@+id/LayoutChatBtn"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:contentDescription="@string/dialog_header_text">
                    <Button
                        android:id="@+id/btnForChat"
                        android:background="@drawable/chatting_btn_left_icon_bg_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/dialog_header_text"
                        android:nextFocusForward="@+id/btnForTrunk"/>
                    <TextView
                        android:textColor="@color/chat_tabs"
                        android:gravity="center"
                        android:id="@+id/chat_type_icon"
                        android:background="@drawable/chatting_btn_icon_chat"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/shadow_4"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/LayoutTrunkBtn"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:contentDescription="@string/trunk_title">
                    <Button
                        android:id="@+id/btnForTrunk"
                        android:background="@drawable/chatting_btn_right_icon_bg_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/trunk_title"
                        android:nextFocusForward="@+id/btnChatOption"/>
                    <TextView
                        android:textColor="@color/trunk_tabs"
                        android:gravity="center"
                        android:id="@+id/imgTrunkNew"
                        android:background="@drawable/chat_trunk_new_selector"
                        android:paddingTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/shadow_5"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/textNames"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BroadCast(N)"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="1"/>
            </LinearLayout>
            <ImageView
                android:background="@drawable/chatting_header_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/btnChatOption"
                android:background="@drawable/chatting_btn_left_arrow_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/chatting_btn_down_arrow_selector"
                android:contentDescription="@string/chat_view_sendfail_title"
                android:nextFocusForward="@+id/btnForChatlist"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/realtabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</TabHost>
