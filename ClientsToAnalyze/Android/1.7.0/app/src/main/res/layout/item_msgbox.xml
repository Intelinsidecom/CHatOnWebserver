<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/msgLinear"
    style="@style/ChatListItemLayout">
    <RelativeLayout
        android:layout_gravity="fill"
        android:id="@+id/rLayoutMsg"
        android:padding="1dp"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_weight="1">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/msgboxImageCheck"
            android:layout_alignParentLeft="true"
            style="@style/ChatListItemImage"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/msgboxTextName"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:text="@string/layout_msgbox_name"
            android:layout_toRightOf="@+id/msgboxImageCheck"
            style="@style/ChatListItemMsgBoxName"/>
        <TextView
            android:id="@+id/participantcount"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/msgboxTextName"
            android:layout_alignTop="@+id/msgboxTextName"
            android:layout_alignBottom="@+id/msgboxTextName"
            style="@style/ChatListItemMsgBoxName"/>
        <TextView
            android:id="@+id/msgboxTextMessage"
            android:paddingRight="99dp"
            android:layout_toRightOf="@+id/msgboxImageCheck"
            android:layout_below="@+id/msgboxTextName"
            android:layout_alignLeft="@+id/msgboxTextName"
            style="@style/ChatListItemMsgBoxLastMsg"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/msgbox_list_item_time"
            android:id="@+id/msgboxTime"
            android:layout_marginTop="37dp"
            android:layout_marginRight="8dp"
            android:text="03:44pm"
            android:layout_alignBaseline="@+id/msgboxTextMessage"
            android:layout_alignParentRight="true"
            style="@style/ChatListItemMsgBoxLastMsg"/>
        <TextView
            android:textColor="#6a2a00"
            android:id="@+id/msgboxImageCount"
            android:background="@drawable/chat_talk"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_alignBaseline="@+id/msgboxTextName"
            android:layout_alignParentRight="true"
            style="@style/ChatListItemMsgBoxCount"/>
        <TextView
            android:textColor="#20504f"
            android:id="@+id/leftTrunkImageCount"
            android:background="@drawable/chat_trunk"
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0.3dp"
            android:layout_toLeftOf="@+id/msgboxImageCount"
            style="@style/ChatListItemMsgBoxCount"/>
        <TextView
            android:textColor="#20504f"
            android:id="@+id/rightTrunkImageCount"
            android:background="@drawable/chat_trunk"
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_alignBaseline="@+id/msgboxTextName"
            android:layout_alignParentRight="true"
            style="@style/ChatListItemMsgBoxCount"/>
    </RelativeLayout>
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/msgCheck"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.7dp"/>
</LinearLayout>
