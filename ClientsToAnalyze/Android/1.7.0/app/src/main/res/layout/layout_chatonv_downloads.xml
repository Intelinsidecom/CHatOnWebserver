<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/chatonv_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="@string/setting_downloads_chaton_v"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:textSize="19dp"
        android:gravity="center"
        android:id="@+id/chatonv_download_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="250dp"
        android:text="@string/setting_downloads_chaton_v_description"
        android:color="#ccffffff"/>
    <Button
        android:textSize="20dp"
        android:textColor="#2b2b2b"
        android:layout_gravity="center_horizontal"
        android:id="@+id/chatonv_download_accept"
        android:background="@drawable/btn_registration_bg_xml"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:text="@string/setting_disclaimer_accept"/>
</LinearLayout>
