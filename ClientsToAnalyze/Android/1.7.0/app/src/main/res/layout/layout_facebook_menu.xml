<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout style="@style/BuddyListItemLayout">
                <TextView
                    android:textColor="#fd8e3b"
                    android:id="@+id/facebook_account_info"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:singleLine="false"
                    android:layout_weight="1"
                    style="@style/BuddyListItemTextName"/>
                <Button
                    android:id="@+id/facebook_menu_logout"
                    android:text="@string/logout"
                    style="@style/BuddyListItemTextButton"/>
            </LinearLayout>
            <LinearLayout style="@style/SubTitleStyle">
                <TextView
                    android:text="@string/facebook_header_post"
                    style="@style/SubTitleTextStyle"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/facebook_menu_invitation_card"
                style="@style/BuddyListItemLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/facebook_invitation_card"
                    android:layout_weight="1"
                    style="@style/BuddyListItemTextName"/>
                <ImageView
                    android:background="@drawable/list_round_more_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/facebook_menu_chaton_family"
                android:visibility="gone"
                android:text="@string/facebook_chaton_family"
                style="@style/BuddyListItemLayout"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
