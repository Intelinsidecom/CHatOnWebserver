<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/trunk_image_view_loading_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trunk_list_item_height">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/playButton"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/msg_play_button"
        android:layout_centerInParent="true"/>
    <ProgressBar
        android:id="@+id/downloadProgressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@anim/progressbar_trunk"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/tab_indicator_badge_text"
        android:gravity="center"
        android:id="@+id/totalCommentCountTextView"
        android:background="@drawable/trunk_badge"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="2dp"
        android:shadowColor="@color/shadow_4"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
