<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/txt_title_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/general_btn_icon_complete_xml"
        android:text="@string/provisioning_registration"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:id="@+id/txt_select_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:text="@string/layout_regist_country_code"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/newSearch"
                android:background="@drawable/btn_registration_bg_xml"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:textSize="21dp"
                    android:textColor="#5c5c5c"
                    android:ellipsize="marquee"
                    android:id="@+id/editCountryName"
                    android:paddingLeft="5dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_regist_country"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="21dp"
                    android:textColor="#5c5c5c"
                    android:id="@+id/editCountryCode"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_regist_code"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/country_select_button_arrow"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:id="@+id/txtRegist_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/regist_inputPno"/>
            <com.sec.widget.EditTextWithClearButton
                android:textSize="21dp"
                android:textColor="#b2000000"
                android:id="@+id/editPno"
                android:paddingLeft="10.66dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:maxLength="20"
                android:inputType="number"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/firty_white"
                android:id="@+id/txtRegist_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/regist_select_acs_sms"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp">
        <Button
            android:enabled="false"
            android:textSize="20dp"
            android:textColor="#2b2b2b"
            android:id="@+id/btnSMS"
            android:background="@drawable/btn_registration_bg_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:layout_weight="1"/>
        <Button
            android:enabled="false"
            android:textSize="20dp"
            android:textColor="#2b2b2b"
            android:id="@+id/btnSMSACS"
            android:background="@drawable/btn_registration_bg_xml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/view_send_sms"
            android:layout_weight="1"/>
        <Button
            android:enabled="false"
            android:textSize="20dp"
            android:textColor="#2b2b2b"
            android:id="@+id/btnACS"
            android:background="@drawable/btn_registration_bg_xml"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/regist_acs_button"
            android:layout_weight="1"/>
        <Button
            android:textSize="20dp"
            android:textColor="#2b2b2b"
            android:id="@+id/btnCancel"
            android:background="@drawable/btn_registration_bg_xml"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1"/>
        <Button
            android:textSize="20dp"
            android:textColor="#2b2b2b"
            android:id="@+id/btnGenerateIMEI"
            android:background="@drawable/btn_registration_bg_xml"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="IMEI"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
