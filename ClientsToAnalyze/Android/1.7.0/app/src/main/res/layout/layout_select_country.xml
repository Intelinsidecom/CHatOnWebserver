<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sec.widget.GeneralHeaderView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/select_country"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/newSearch"
            android:background="@drawable/select_country_background"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:orientation="vertical"
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="20dp"
                    android:gravity="center"
                    android:id="@+id/editCountryCode"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="@string/select_country"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_color_016"
                    android:ellipsize="marquee"
                    android:gravity="top|left"
                    android:id="@+id/editCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/ic_btn_round_more_normal"
                android:duplicateParentState="true"
                android:layout_width="26dp"
                android:layout_height="33dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:enabled="false"
        android:textSize="20dp"
        android:textColor="#2b2b2b"
        android:id="@+id/btnSelfSMS"
        android:background="@drawable/btn_registration_bg_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:text="@string/provision_next"/>
</LinearLayout>
