<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skin_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/lLayoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textDateLeft"
            android:background="@drawable/chat_date_invite_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/textDate"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/white"
            android:id="@+id/textDate"
            android:background="@drawable/chat_date_invite_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:longClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.8dp"
            android:layout_marginBottom="9.3dp"
            android:text="2012.01.23"
            android:shadowColor="#0f0f0f"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_centerInParent="true"/>
        <ImageView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/textDateRight"
            android:background="@drawable/chat_date_invite_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/textDate"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/lLayoutSndContent"
        android:background="@drawable/message_bubble_sent1"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayoutDate"
        android:layout_alignParentRight="true">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:autoLink="all"
            android:id="@+id/sent_font_size"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:text="@string/setting_set_font_hi"
            android:layout_weight="1"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#282319"
            android:id="@+id/sent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/setting_change_skin_time"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayoutSndContent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/imgfriend"
            android:background="@drawable/messenger_chat_image_frame"
            android:paddingRight="0.5dp"
            android:paddingBottom="0.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.7dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/contacts_default_image"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_textfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgfriend"
            android:layout_alignTop="@+id/imgfriend">
            <TextView
                android:textSize="11.5dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/textfriend1"
                android:layout_width="wrap_content"
                android:layout_height="16.7dp"
                android:layout_marginLeft="10dp"
                android:text="Victoria Justice"
                android:singleLine="true"
                android:shadowColor="#ccffffff"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/textRecvContent"
            android:background="@drawable/message_bubble_receive1"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgfriend"
            android:layout_below="@+id/layout_textfriend">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/read_font_size"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:text="@string/setting_set_font_hello"
                android:layout_weight="1"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#282319"
                android:id="@+id/read_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="@string/setting_change_skin_time"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
