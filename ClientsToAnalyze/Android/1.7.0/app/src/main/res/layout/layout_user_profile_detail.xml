<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/birthday_headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/general_btn_icon_complete_xml"
        android:text="@string/setting_profile"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/imgbtnUPPhoto"
                    android:background="@drawable/buddiessay_image_selector"
                    android:focusable="true"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/firty_white"
                        android:id="@+id/nameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/mypage_profile_name"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/linear_profile_name"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="1dp"
                        android:minHeight="54dp">
                        <EditText
                            android:textSize="18dp"
                            android:textColor="@color/mypage_status_message_hint"
                            android:gravity="center_vertical"
                            android:id="@+id/textPersonalName"
                            android:background="@drawable/ams_edit_text"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:minHeight="30dp"
                            android:hint="@string/mypage_profile_name"
                            android:singleLine="true"
                            android:maxLength="30"
                            android:capitalize="sentences"
                            android:imeOptions="actionDone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/llayout_account_1"
                android:paddingLeft="13.3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="64dp">
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_samsung_account"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/ssm_blue"
                    android:gravity="left"
                    android:id="@+id/user_Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_gmail_account"/>
            </LinearLayout>
            <ImageView
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="7dp"/>
            <RelativeLayout
                android:id="@+id/rlayoutPhoneNumber"
                android:background="@drawable/buddy_item_xml"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/firty_white"
                    android:gravity="left"
                    android:id="@+id/text_phone_number"
                    android:paddingLeft="13.3dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.7dp"
                    android:text="@string/setting_phone"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:id="@+id/user_Pno"
                    android:paddingLeft="13.3dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/phone_number_detail"
                    android:layout_below="@+id/text_phone_number"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/phone_number_detail"
                    android:background="@drawable/list_round_more_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ImageView
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
            <RelativeLayout
                android:id="@+id/rlayoutBDay"
                android:background="@drawable/buddy_item_xml"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="65dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/firty_white"
                    android:gravity="left"
                    android:id="@+id/text_birthday"
                    android:paddingLeft="13.3dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.7dp"
                    android:text="@string/setting_birthday"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:id="@+id/dateDisplay"
                    android:paddingLeft="13.3dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_your_birthday"
                    android:layout_toLeftOf="@+id/birthday_detail"
                    android:layout_below="@+id/text_birthday"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/birthday_detail"
                    android:background="@drawable/list_round_more_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ImageView
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
            <RelativeLayout
                android:id="@+id/rlayout_facebook_account"
                android:background="@drawable/buddy_item_xml"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="65dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/firty_white"
                    android:gravity="left"
                    android:id="@+id/user_facebook_account"
                    android:paddingLeft="13.3dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.7dp"
                    android:text="@string/user_facebook_account"/>
                <TextView
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:id="@+id/user_facebook_account_id"
                    android:paddingLeft="13.3dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:layout_toLeftOf="@+id/user_facebook_account_detail"
                    android:layout_below="@+id/user_facebook_account"
                    android:layout_alignParentLeft="true"/>
                <ImageView
                    android:id="@+id/user_facebook_account_detail"
                    android:background="@drawable/list_round_more_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <ImageButton
                android:id="@+id/focus"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageView
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="13.3dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="64dp">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/blue_color_021"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_samsung_account"/>
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:id="@+id/user_samsung_account_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
