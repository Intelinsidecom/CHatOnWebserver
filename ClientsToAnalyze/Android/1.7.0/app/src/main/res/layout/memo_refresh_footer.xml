<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/footer_progress"
        android:background="@drawable/list_bg_normal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_provision_ing"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer_memo_content_layout"
        android:background="@color/main_background_color"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="14dp"
            android:textColor="@color/no_list_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/footer_memo_content"
            android:background="@drawable/info_popup_bg"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="60dp"
            android:text="@string/dialog_title_noblock_item"/>
    </LinearLayout>
</LinearLayout>
