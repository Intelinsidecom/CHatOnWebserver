<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/popup_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true">
        <ImageView
            android:gravity="center_horizontal"
            android:id="@+id/dialog_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:src="@android:drawable/ic_dialog_alert"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/upgrade_dialog_title"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/popup_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:gravity="left"
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/upgrade_dialog_basic_message"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/popup_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#2b2b2b"
            android:gravity="center"
            android:id="@+id/dialog_btn_no"
            android:background="@drawable/btn_alert_dialog_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:text="@string/dialog_cancel"
            android:layout_weight="1"/>
        <Button
            android:textColor="#2b2b2b"
            android:gravity="center"
            android:id="@+id/dialog_btn_yes"
            android:background="@drawable/btn_alert_dialog_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:text="@string/dialog_ok"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
