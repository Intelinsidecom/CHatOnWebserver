<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/main_background_color"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:contentDescription="@string/setting_profile">
        <ImageButton
            android:id="@+id/imgbtnUPPhoto"
            android:background="@color/main_background_color"
            android:focusable="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/mypage_profile_image"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout3"
            android:background="@drawable/buddy_item_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp">
            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/textPersonalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="Name"
                android:singleLine="true"
                android:layout_weight="1"
                android:imeOptions="actionDone"/>
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/userprofile_detail"
                android:background="@drawable/list_round_more_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/setting_profile"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
