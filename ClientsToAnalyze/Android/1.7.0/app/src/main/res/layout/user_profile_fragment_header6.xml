<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/interaction_rank_subtitle"
        android:background="@drawable/sub_title_bg"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/interaction_title"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/setting_interaction_rank"
            style="@style/MyPageSubTitleStyle">
            <TextView
                android:id="@+id/ChatInfoBuddyTitle"
                android:text="@string/setting_interaction_rank"
                style="@style/SubTitleTextStyle"/>
            <ImageView
                android:id="@+id/ChatInfoMoreBtn"
                android:src="@drawable/title_arrow_right"
                style="@style/BuddyListSubTitleImageFold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/flayout_relationship"
        android:background="@color/main_background_color"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <LinearLayout
            android:gravity="left"
            android:id="@+id/rParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sec.widget.HorizontalListView
                android:id="@+id/interaction_horizontal_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/no_list_text"
                android:gravity="center"
                android:id="@+id/no_interactions"
                android:background="@drawable/info_popup_bg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/buddy_profile_no_interations"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:background="#333a3a"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/rlay_details"
        android:paddingLeft="13.3dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:text="@string/setting_interaction_rank"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/setting_interaction_rank"/>
        <ImageButton
            android:id="@+id/userprofile_detail_del"
            android:background="@drawable/ams_btn_radio"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:src="@drawable/detail_round_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:background="#333a3a"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:id="@+id/buddies_say_subtitle"
        style="@style/SubTitleStyle">
        <TextView
            android:id="@+id/memo_layout_title"
            android:text="@string/memo_title"
            android:contentDescription="@string/memo_title"
            style="@style/SubTitleTextStyle"/>
    </LinearLayout>
</LinearLayout>
