<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_popup_pen_size"
        android:background="@drawable/ams_toolbar_menu_popup_h"
        android:paddingLeft="9dp"
        android:paddingRight="8dp"
        android:layout_width="@dimen/ams_ics_tool_pen_size_popup_w"
        android:layout_height="@dimen/ams_ics_tool_pen_size_popup_h"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:weightSum="216">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="180">
            <SeekBar
                android:id="@+id/seekbar_pen_size"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:maxHeight="9dp"
                android:progressDrawable="@drawable/ams_ics_seekbar_pen_size"
                android:minHeight="9dp"
                android:thumb="@drawable/ams_ics_selector_thumb_pen_size"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36">
            <RelativeLayout
                android:background="@drawable/ams_stroke_option_01"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_pen_stroke_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
