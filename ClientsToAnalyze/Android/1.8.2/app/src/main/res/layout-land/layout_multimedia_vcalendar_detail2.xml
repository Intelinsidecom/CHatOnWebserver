<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="77.33dp"
                android:layout_weight="0">
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/brown_color_029"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="23.7dp"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="12.2dp"
                    android:textColor="#efad51"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_date_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.5dp"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="12.2dp"
                    android:textColor="#efad51"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_date_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.5dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <ImageView
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"/>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="0">
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/brown_color_029"
                    android:ellipsize="marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:text="@string/layout_calendar_location"
                    android:singleLine="true"
                    android:layout_weight="0"/>
                <TextView
                    android:textSize="12.2dp"
                    android:textColor="#efad51"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/vcalendar_event_detail_map"
                android:layout_width="match_parent"
                android:layout_height="225.33dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6.66dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:layout_weight="0"/>
            <ImageView
                android:id="@+id/vcalendar_event_detail_map_bottom_line"
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/vcalendar_event_detail_desc_area"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="0">
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/brown_color_029"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/vcalendar_event_detail_desc_bottom_line"
                android:background="#333a3a"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="4.66dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="54.66dp"
        android:layout_weight="0">
        <Button
            android:textSize="16dp"
            android:id="@+id/vcal_event_detail_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/layout_vcalendar_event_detail_cancel"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/vcal_event_detail_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/layout_vcalendar_event_detail_save"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/vcal_event_detail_send"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/layout_vcalendar_event_detail_send"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
