<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_chat_view_font_size"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">
        <include layout="@layout/layout_skin_chatroom"/>
    </ScrollView>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="92dp"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/vcalendar_receive_menu_bar"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <Button
            android:textSize="16sp"
            android:id="@+id/save_viewsize"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.7dp"
            android:text="@string/save"
            android:layout_weight="1"/>
        <Button
            android:textSize="16sp"
            android:id="@+id/btnCancel"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0.7dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
