<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_change_skins"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/change_skin_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <include
            android:layout_height="match_parent"
            android:layout_weight="0"
            layout="@layout/layout_skin_chatroom"/>
        <com.sec.widget.HorizontalListView
            android:layout_gravity="center"
            android:id="@+id/list_bg_horizontal"
            android:background="@drawable/bg_bubble_option"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="0"/>
        <com.sec.widget.HorizontalListView
            android:layout_gravity="center"
            android:id="@+id/list_bubble_horizontal"
            android:background="@drawable/bg_bubble_option"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <Button
            android:textSize="16dp"
            android:id="@+id/setSkin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/setSkin"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
