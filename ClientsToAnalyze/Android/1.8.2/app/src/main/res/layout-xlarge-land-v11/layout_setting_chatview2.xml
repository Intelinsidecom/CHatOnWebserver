<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/fontsizetopPanel"
        android:background="@drawable/popup_bg_top"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="36dp">
        <TextView
            android:textAppearance="@style/ChatONTextAppearance.Dialog"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/fontsizetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/settings_chat_view_font_size"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/fontsizebuttonPanel"
        android:background="@drawable/popup_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:minHeight="75dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/font_size_cancel_button"
            android:background="@drawable/popup_btn_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/dialog_cancel"/>
    </LinearLayout>
    <ListView
        android:orientation="vertical"
        android:id="@android:id/list"
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:listSelector="#00000000"
        android:divider="@null"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/fontsizebuttonPanel"
        android:layout_below="@+id/fontsizetopPanel"/>
</RelativeLayout>
