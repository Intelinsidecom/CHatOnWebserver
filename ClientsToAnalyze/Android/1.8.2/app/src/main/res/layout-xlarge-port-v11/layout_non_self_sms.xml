<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:layout_gravity="left"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="bottom|left"
                    android:id="@+id/llayoutid_01"
                    android:paddingTop="22dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:gravity="center"
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/registration_verification_code_has_been_sent_to"/>
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/ics_orange_font_color"
                        android:gravity="center"
                        android:id="@+id/phoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:text="+919538913769"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/change_phone_no"
                        android:background="@drawable/list_round_more_arrow_selector"
                        android:duplicateParentState="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|left"
                    android:orientation="horizontal"
                    android:id="@+id/llayoutid_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp">
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:id="@+id/txtRegistName_0"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:text="@string/new_provisioning_verification_code"/>
                    <EditText
                        android:id="@+id/vCode"
                        android:layout_width="0dp"
                        android:layout_height="47dp"
                        android:layout_marginLeft="14dp"
                        android:singleLine="true"
                        android:maxLength="4"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:imeOptions="actionNone"/>
                    <TextView
                        android:textSize="18dp"
                        android:textColor="#fd8e3b"
                        android:layout_gravity="center"
                        android:id="@+id/regi_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"
                        android:text="00:00"/>
                </LinearLayout>
                <TextView
                    android:textSize="16.4dp"
                    android:textColor="@color/ics_main_font_color_2"
                    android:id="@+id/verification_explain_text"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/new_provisioning_verification_explain"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1">
                    <Button
                        android:enabled="true"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:id="@+id/reSend"
                        android:background="@drawable/btn_disclaimer_bg_xml"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:text="@string/view_send_sms"
                        android:layout_weight="1"/>
                    <Button
                        android:enabled="true"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:id="@+id/btnRegiACS"
                        android:background="@drawable/btn_disclaimer_bg_xml"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:text="@string/regist_acs_button"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom|left"
                    android:orientation="vertical"
                    android:id="@+id/llayoutid_03"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:textSize="17dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:id="@+id/txtRegistName_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/regist_having_problem"/>
                    <Button
                        android:enabled="true"
                        android:textSize="22dp"
                        android:layout_gravity="left"
                        android:id="@+id/contact_us"
                        android:background="@drawable/btn_disclaimer_bg_xml"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:text="@string/contact_us"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/layout_done"
                android:background="@drawable/co_bg"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/btnDone"
                    android:background="@drawable/btn_disclaimer_bg_xml"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginRight="64dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/btnCancel"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/cancel"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
