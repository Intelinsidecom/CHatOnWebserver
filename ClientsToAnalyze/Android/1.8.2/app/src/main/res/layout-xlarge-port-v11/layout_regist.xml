<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:gravity="left"
                        android:id="@+id/txt_select_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/layout_regist_country_code"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/newSearch"
                        android:background="@drawable/provisioning_btn01"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:textSize="22dp"
                            android:textColor="@color/ics_main_font_color_2"
                            android:ellipsize="marquee"
                            android:gravity="top|left"
                            android:id="@+id/editCountryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="@string/layout_regist_no_country_selected"
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="22dp"
                            android:textColor="@color/ics_main_font_color_2"
                            android:gravity="center_vertical"
                            android:id="@+id/editCountryCode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="@string/layout_regist_code"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/list_round_more_arrow_selector"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="15dp"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/ics_main_font_color_2"
                android:id="@+id/txtRegist_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/regist_inputPno"/>
            <com.sec.widget.EditTextWithClearButton
                android:textSize="22dp"
                android:id="@+id/editPno"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="7dp"
                android:maxLength="30"
                android:inputType="number"
                android:privateImeOptions="inputType=YearDateTime_edittext"
                android:imeOptions="actionNone"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/ics_black_font_opacity_40"
                android:id="@+id/txtRegist_2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20.66dp"
                android:text="@string/regist_select_acs_sms"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <Button
                    android:enabled="false"
                    android:id="@+id/btnSMSACS"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/view_send_sms"
                    android:layout_weight="1"/>
                <Button
                    android:enabled="false"
                    android:id="@+id/btnACS"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/regist_acs_button"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnGenerateIMEI"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20.66dp"
                    android:layout_marginRight="10.66dp"
                    android:text="IMEI"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnNSS"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20.66dp"
                    android:layout_marginRight="10.66dp"
                    android:text="NSS"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
