<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/txt_title"
            android:background="@drawable/co_header2_bg"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="@string/select_country"/>
        <TextView
            android:textSize="22dp"
            android:textColor="@color/ics_main_font_color_2"
            android:gravity="center"
            android:id="@+id/editCountryCode"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:minWidth="100dp"
            android:text="@string/settings_select_country_code"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/newSearch"
            android:background="@drawable/provisioning_btn01"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.5dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/ics_main_font_color_2"
                android:ellipsize="marquee"
                android:gravity="top|left"
                android:id="@+id/editCountryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/layout_regist_no_country_selected"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/list_round_more_arrow_selector"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
