<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/sub_title_bg_02"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/settings_about"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="340dp"
            android:layout_height="320dp"
            android:src="@drawable/setting_logo"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#646464"
            android:gravity="center"
            android:id="@+id/setting_sina_for_china"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="37dp"
            android:text="@string/setting_sina_for_china"
            style="@style/ShadowTextStyle"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_13"
            android:id="@+id/setting_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/color_palette_13"
            android:id="@+id/setting_upgrade_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/list_bg"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="73dp">
        <Button
            android:id="@+id/setting_about_btn_license"
            android:background="@drawable/bottom_button_background"
            android:layout_width="322dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:text="@string/settings_license"/>
        <Button
            android:id="@+id/setting_about_btn1"
            android:background="@drawable/bottom_button_background"
            android:layout_width="322dp"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:text="@string/setting_upgrade_text"/>
    </LinearLayout>
</LinearLayout>
