<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@null"
    android:layout_width="530dp"
    android:layout_height="360dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/llayout_subTitle"
        android:background="@drawable/provisioning_popup_top"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/subTitle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/select_country"
            android:layout_weight="1"/>
        <TextView
            android:textSize="22dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/subTitle_tablet"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/select_country"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/provisioning_popup_search"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageButton
            android:id="@+id/buttonAdd"
            android:visibility="gone"
            android:layout_width="41.33dp"
            android:layout_height="41.33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"/>
        <com.sec.widget.EditTextWithClearButton
            android:textColor="@color/brown_color_002"
            android:gravity="center_vertical"
            android:id="@+id/editCountry"
            android:background="@drawable/btn_search_dialog_xml"
            android:layout_width="480dp"
            android:layout_height="50dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="14dp"
            android:hint="@string/country_search_hint"
            android:singleLine="true"
            android:maxLength="30"
            android:editable="true"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:background="@color/ics_main_background_color_2"
        android:layout_width="508dp"
        android:layout_height="0dp"
        android:divider="@drawable/provisioning_popup_line"
        android:layout_weight="1"/>
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#efad51"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/country_list_no_search_result"
        android:background="@color/ics_main_background_color_2"
        android:visibility="gone"
        android:layout_width="508dp"
        android:layout_height="match_parent"
        android:text="@string/no_results"
        android:singleLine="true"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <Button
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/buttonSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:text="@string/done"
            android:layout_weight="1"
            android:onClick="onClick"/>
        <Button
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>
