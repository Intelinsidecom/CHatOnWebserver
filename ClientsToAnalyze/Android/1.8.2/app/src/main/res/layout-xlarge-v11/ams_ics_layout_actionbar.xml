<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/tab_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_ics_actionbar_height">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_left_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/layout_home"
                android:background="@drawable/ams_ics_selector_action_button_bg"
                android:paddingLeft="4dp"
                android:paddingRight="6dp"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/tab_icon_back"
                    android:scaleType="center"/>
                <ImageView
                    android:id="@+id/img_btn_home"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/chaton_logo"
                    android:scaleType="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                style="@style/AMSActionBarTitleTextStyle"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_right_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_left_container"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/layout_action_buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_btn_more"
                android:background="@drawable/ams_ics_selector_action_button_bg"
                android:focusable="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:src="@drawable/ams_ics_selector_title_ic_menu"
                android:scaleType="center"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
