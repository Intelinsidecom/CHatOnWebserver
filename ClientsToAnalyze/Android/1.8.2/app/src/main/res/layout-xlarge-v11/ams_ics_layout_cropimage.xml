<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/AMSIcsActionBarContainerStyle">
    <com.sec.vip.amschaton.AMSActionBarView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_ics_actionbar_height"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_template_buttons"
            android:background="@drawable/ams_top_bg"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/ams_toolbar_bg_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="9dp">
                <ImageView
                    android:id="@+id/iv_template_rect"
                    android:background="@drawable/ams_ics2_selector_basic_composer_tool_top_left"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_rect"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_toolbar_line"/>
                <ImageView
                    android:id="@+id/iv_template_roundrect"
                    android:background="@drawable/ams_ics2_selector_basic_composer_tool_top_mid"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_rect_round"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_toolbar_line"/>
                <ImageView
                    android:id="@+id/iv_template_circle"
                    android:background="@drawable/ams_ics2_selector_basic_composer_tool_top_mid"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_circle"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_toolbar_line"/>
                <ImageView
                    android:id="@+id/iv_template_star"
                    android:background="@drawable/ams_ics2_selector_basic_composer_tool_top_mid"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_star"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_toolbar_line"/>
                <ImageView
                    android:id="@+id/iv_template_heart"
                    android:background="@drawable/ams_ics2_selector_basic_composer_tool_top_right"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_ics_selector_userstamp_heart"
                    android:scaleType="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_template_buttons">
            <view
                android:id="@+id/image"
                android:background="#55000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.sec.vip.cropimage.CropImageView"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
