<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/AMSIcsActionBarContainerStyle">
    <com.sec.vip.amschaton.AMSActionBarView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_ics_actionbar_height"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_preference"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <GridView
                android:id="@+id/gridview_preference"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="22dp"
                android:columnWidth="144dp"
                android:numColumns="auto_fit"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/stamp_line"
            android:background="@drawable/emoticon_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_stamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <GridView
                android:id="@+id/gridview_stamp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:columnWidth="144dp"
                android:numColumns="auto_fit"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
