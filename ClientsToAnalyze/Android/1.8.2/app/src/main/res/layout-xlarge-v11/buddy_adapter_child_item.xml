<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <RelativeLayout
        android:id="@+id/buddy_child_profile_outline"
        android:layout_width="82dp"
        android:layout_height="match_parent">
        <com.sec.chaton.widget.RoundedImageView
            android:id="@+id/buddy_child_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:gravity="center"
            android:layout_gravity="top"
            android:id="@+id/buddy_like_badge"
            android:paddingLeft="@dimen/buddy_adapter_child_item_image_location"
            android:paddingTop="@dimen/buddy_adapter_child_item_image_location"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/special_buddies_list_icon"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="14dp"
        android:layout_weight="1">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/buddy_list_item_name"
            android:ellipsize="end"
            android:id="@+id/buddy_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/ics_buddy_profile_status"
            android:ellipsize="end"
            android:id="@+id/buddy_child_status_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"/>
    </LinearLayout>
    <CheckBox
        android:layout_gravity="center"
        android:id="@+id/buddy_child_check"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="12dp"
        android:button="@drawable/checkbox_background_xml"
        android:layout_weight="0"/>
    <Button
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/buddy_add_button"
        android:background="@drawable/btn_buddies_say"
        android:focusable="false"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="@string/edit_group_add_member"/>
    <ImageView
        android:id="@+id/buddy_chat_button"
        android:background="@drawable/buddylist_chat_button_selector"
        android:visibility="visible"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"/>
    <ImageView
        android:id="@+id/buddy_unselector"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/buddy_selector"
        android:visibility="visible"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:src="@drawable/chact_preference_contents_list_arrow_holo_dark"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</LinearLayout>
