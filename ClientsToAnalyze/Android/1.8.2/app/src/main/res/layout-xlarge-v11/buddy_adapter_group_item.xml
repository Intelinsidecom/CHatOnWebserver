<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@drawable/buddy_group_background"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/ics_buddy_list_group_name"
        android:ellipsize="marquee"
        android:id="@+id/buddy_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:singleLine="true"
        android:layout_weight="1"/>
    <TextView
        android:textSize="18dp"
        android:textColor="#003333"
        android:id="@+id/buddy_group_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="0"/>
    <ImageView
        android:id="@+id/buddy_group_fold"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0"/>
    <ImageView
        android:id="@+id/buddy_group_selected_none"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@drawable/chaton_contents_list_line_left"/>
</LinearLayout>
