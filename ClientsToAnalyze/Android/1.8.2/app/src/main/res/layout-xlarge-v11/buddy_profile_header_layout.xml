<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/list_header"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/ics_main_background_color"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp">
            <com.sec.chaton.widget.RoundedImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:textSize="32dp"
                    android:textColor="@color/ics_buddy_profile_name"
                    android:ellipsize="marquee"
                    android:layout_gravity="top"
                    android:id="@+id/profile_name"
                    android:layout_width="180dp"
                    android:layout_height="43dp"
                    android:text=""
                    android:singleLine="true"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/ics_buddy_profile_status"
                    android:ellipsize="marquee"
                    android:layout_gravity="top"
                    android:id="@+id/profile_status_message"
                    android:layout_width="180dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:gravity="left"
                    android:id="@+id/profile_is_favorite"
                    android:layout_width="38dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp"
                    android:button="@drawable/buddyprofile_favorite_btn_xml"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp">
            <ImageButton
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/profile_chat"
                android:background="@drawable/btn_search_dialog_voice_xml"
                android:layout_width="94dp"
                android:layout_height="72dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/buddyprofile_chat_xml"/>
            <ImageButton
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/profile_call"
                android:background="@drawable/btn_search_dialog_voice_xml"
                android:layout_width="94dp"
                android:layout_height="72dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/buddyprofile_call_3g_xml"/>
            <ImageButton
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/profile_contact"
                android:background="@drawable/btn_search_dialog_voice_xml"
                android:layout_width="94dp"
                android:layout_height="72dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/buddyprofile_contact_xml"/>
            <ImageButton
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/profile_voice_call"
                android:background="@drawable/btn_search_dialog_voice_xml"
                android:layout_width="94dp"
                android:layout_height="72dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/buddyprofile_call_xml"/>
            <ImageButton
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/profile_video_call"
                android:background="@drawable/btn_search_dialog_voice_xml"
                android:layout_width="94dp"
                android:layout_height="72dp"
                android:src="@drawable/buddyprofile_videocall_xml"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="26dp"
                android:textColor="#ffffff"
                android:layout_width="238dp"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:text="@string/buddy_profile_chaton"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#a6a6a6"
                android:id="@+id/profile_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=" "/>
        </LinearLayout>
        <ImageView
            android:background="@drawable/list_2line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="26dp"
                android:textColor="#ffffff"
                android:ellipsize="marquee"
                android:layout_width="238dp"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:text="@string/buddy_profile_birthday"
                android:singleLine="true"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#a6a6a6"
                android:id="@+id/profile_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=" "/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/profile_calendar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:src="@drawable/buddyprofile_add_event_xml"/>
        </LinearLayout>
        <ImageView
            android:background="@drawable/list_2line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="18dp">
            <TextView
                android:textSize="26dp"
                android:textColor="#ffffff"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:text="@string/buddy_profile_interaction"
                android:singleLine="true"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#a6a6a6"
                android:gravity="center_vertical"
                android:id="@+id/profile_relationship_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rank 5 / Point 400"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/interaction_point_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="0dp"
            android:baselineAligned="false">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/interaction_left"
                android:background="@drawable/interaction_rank_01"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_weight="1">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#513d2b"
                    android:gravity="center_vertical"
                    android:id="@+id/interaction_buddy_point"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:text="@string/buddy_profile_interaction_buddy"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/interaction_right"
                android:background="@drawable/interaction_rank_02"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_weight="1">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#513d2b"
                    android:gravity="center"
                    android:id="@+id/interaction_me_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dp"
                    android:text="@string/buddy_profile_interaction_me"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:background="#333a3a"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <LinearLayout
            android:background="@color/ics_main_background_color_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#787878"
                android:gravity="center"
                android:id="@+id/interaction_no_point_bar_layout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/buddy_profile_interaction_no_point"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#d2dfe0"
        android:gravity="center_vertical"
        android:id="@+id/memo_layout_title"
        android:background="@drawable/buddyprofile_buddysay_title_xml"
        android:paddingLeft="13dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/memo_title"/>
    <LinearLayout
        android:id="@+id/profile_write_area"
        android:background="@color/ics_main_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">
        <Button
            android:gravity="center"
            android:id="@+id/memo_btn_write"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/memo_btn_write"
            style="@style/ChatONDefaultButton"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/memo_write_below_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
