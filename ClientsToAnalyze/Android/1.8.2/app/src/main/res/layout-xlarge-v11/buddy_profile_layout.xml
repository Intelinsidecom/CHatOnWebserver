<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="left"
        android:background="@drawable/general_header"
        android:layout_width="696dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/buddy_profile_close_layout"
            android:background="@drawable/tab_title_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/actionButtonStyle">
            <Button
                android:id="@+id/buddy_profile_close"
                android:background="@drawable/header_btn_bg_xml"
                android:paddingLeft="10dp"
                android:paddingRight="14dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/title_arrow_left"
                android:drawableRight="@drawable/chaton_logo"/>
            <TextView
                android:textSize="21dp"
                android:textColor="@color/ics_main_font_color"
                android:gravity="center"
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:text="@string/buddy_profile"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/profile_memo_list"
        android:background="@color/ics_main_background_color_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/ics_main_background_color_2"
        android:dividerHeight="1dp"
        android:layout_weight="0"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"/>
</LinearLayout>
