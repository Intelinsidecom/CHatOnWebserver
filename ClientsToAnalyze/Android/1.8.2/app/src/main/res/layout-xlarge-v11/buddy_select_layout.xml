<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/list_bg_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buddy_select_group_name_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0">
        <LinearLayout
            android:id="@+id/buddy_select_group_name_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:textSize="22dp"
                android:id="@+id/buddy_select_group_name_edit"
                android:background="@drawable/edit_text"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/buddy_group_list_newgroup_hint"
                android:singleLine="true"
                android:maxLength="30"
                android:capitalize="sentences"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buddy_select_for_call_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="0">
        <LinearLayout
            android:id="@+id/buddy_select_call_type_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:enabled="false"
                android:textSize="18dp"
                android:id="@+id/buddy_select_voice_call"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_voice_call"
                android:layout_weight="0"/>
            <Button
                android:enabled="false"
                android:textSize="18dp"
                android:id="@+id/buddy_select_video_call"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:text="@string/menu_video_call"
                android:layout_weight="0"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buddy_select_group_chat_broadcast_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:layout_weight="0">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#787878"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:id="@+id/buddy_select_group_name_4_chat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_weight="0"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#787878"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:id="@+id/buddy_select_group_count_4_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:enabled="false"
            android:textSize="18dp"
            android:id="@+id/buddy_select_group_chat"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="@string/menu_button_start_chat"
            android:layout_weight="0"/>
        <Button
            android:enabled="false"
            android:textSize="18dp"
            android:id="@+id/buddy_select_group_broadcast"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:text="@string/buddy_list_optionmenu_broadcast"
            android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buddy_select_group_member_layout"
        android:background="@drawable/buddy_select_group_background_xml"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#d2dfe0"
            android:gravity="center_vertical"
            android:id="@+id/buddy_select_group_member"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/buddy_select_category_group_member"
            android:shadowColor="#243339"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="1"/>
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#d2dfe0"
            android:gravity="center_vertical"
            android:id="@+id/buddy_select_group_member_participant"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(0)"
            android:shadowColor="#243339"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:shadowRadius="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buddy_select_list_layout"
        android:addStatesFromChildren="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.sec.widget.FastScrollableExpandableListView
            android:id="@+id/buddy_select_list"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollingCache="false"
            android:groupIndicator="@null"
            android:childDivider="@drawable/list_2line"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/buddy_select_list_nobuddy_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:gravity="center_horizontal"
                android:id="@+id/buddy_select_list_nobuddy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chaton_list_ic_none"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#808080"
                android:gravity="center_horizontal"
                android:id="@+id/buddy_select_list_nobuddy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buddy_select_no_list_select_buddies"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
