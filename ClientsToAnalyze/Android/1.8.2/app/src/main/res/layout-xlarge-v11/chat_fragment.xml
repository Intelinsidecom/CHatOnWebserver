<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rLayoutChatParent"
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/title_menu"
            android:background="@drawable/co_title_bar"
            android:paddingLeft="7.3dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="25.33dp"
            android:text="@string/layout_chat_fragment_delete"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/honeycomb_deletetop"
            android:background="@color/white"
            android:visibility="gone"
            android:alwaysDrawnWithCache="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/shape_title_indicator_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="14dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@drawable/chaton_chats_header"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">
                    <TextView
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@color/color1"
                        android:id="@+id/honeycomb_title_menu"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/layout_chat_fragment_delete"/>
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_weight="1">
                        <Button
                            android:textSize="16dp"
                            android:textColor="@color/color1"
                            android:id="@+id/btnRangeAll"
                            android:background="@drawable/chat_title_btn_back_honeycom"
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="12dp"
                            android:text="@string/layout_chat_fragment_selectall"
                            android:layout_weight="1"
                            android:layout_toLeftOf="@+id/btnDelete"/>
                        <Button
                            android:textSize="16dp"
                            android:textColor="@color/color1"
                            android:id="@+id/btnDelete"
                            android:background="@drawable/chat_title_btn_back_honeycom"
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="12dp"
                            android:text="@string/done"
                            android:layout_weight="1"
                            android:layout_toLeftOf="@+id/btnDelCancel"/>
                        <Button
                            android:textSize="16dp"
                            android:textColor="@color/color1"
                            android:id="@+id/btnDelCancel"
                            android:background="@drawable/chat_title_btn_back_honeycom"
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="12dp"
                            android:text="@string/layout_chat_fragment_cancel"
                            android:layout_weight="1"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ldeletetop"
            android:background="@drawable/co_bt_bg2"
            android:padding="7.3dp"
            android:visibility="gone"
            android:alwaysDrawnWithCache="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="16dp"
                android:id="@+id/btnRangeAll"
                android:layout_width="97.3dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6.6dp"
                android:text="@string/layout_chat_fragment_selectall"
                android:layout_weight="1"/>
            <Button
                android:textSize="16dp"
                android:id="@+id/btnRangeRcv"
                android:layout_width="97.3dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6.6dp"
                android:text="@string/layout_chat_fragment_received"
                android:layout_weight="1"/>
            <Button
                android:textSize="16dp"
                android:id="@+id/btnRangeSnt"
                android:layout_width="97.3dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="@string/layout_chat_fragment_sent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lLayoutChat"
            android:visibility="visible"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/lLayoutProfile"
                android:background="@drawable/chatting_header"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="76dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/optionBar"
                    android:layout_width="match_parent"
                    android:layout_height="76dp">
                    <com.sec.chaton.widget.ProfileImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/Chaticon"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_marginLeft="12dp"/>
                    <TextView
                        android:textSize="22dp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/chatTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:maxLines="2"
                        android:shadowColor="@color/white"
                        android:shadowDx="0"
                        android:shadowDy="-1"
                        android:layout_weight="1"/>
                    <FrameLayout
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageTrunkBg"
                        android:background="@drawable/chatting_btn_trunk"
                        android:focusable="true"
                        android:fadingEdgeLength="0dp"
                        android:descendantFocusability="beforeDescendants"
                        android:layout_width="93dp"
                        android:layout_height="51dp"
                        android:layout_marginRight="14dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/chatting_btn_lcon_turnk"/>
                        <TextView
                            android:textColor="#ff6a2a00"
                            android:gravity="center"
                            android:layout_gravity="top|right"
                            android:id="@+id/unReadCount"
                            android:background="@drawable/tab_icon_notification"
                            android:visibility="gone"
                            android:layout_width="26dp"
                            android:layout_height="29dp"
                            android:layout_marginRight="13dp"
                            android:shadowColor="#80ffffff"/>
                    </FrameLayout>
                </LinearLayout>
                <TextView
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:id="@+id/textBroadcast"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="#60ffffff"
                    android:shadowDx="0"
                    android:shadowDy="-1"
                    android:drawableLeft="@drawable/chat_list_broadcast_default"
                    android:drawablePadding="19dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/chatlistframe"
                android:descendantFocusability="afterDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shadowColor="@color/ics_main_background_color"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10">
                <ImageView
                    android:id="@+id/imagebackgroup"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="matrix"/>
                <com.sec.widget.HeightChangedListView
                    android:id="@+id/chat_listview"
                    android:background="@null"
                    android:alwaysDrawnWithCache="true"
                    android:descendantFocusability="afterDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:listSelector="#00000000"
                    android:transcriptMode="alwaysScroll"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/previewText"
                        android:background="@color/transparent"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/new_message_noti"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/chatEditLayout"
            android:background="@drawable/chat_btn_bg"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/lLayoutMsgEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="14dp"
                android:minHeight="53dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_gravity="bottom"
                        android:id="@+id/btnAdd"
                        android:background="@drawable/chat_attach_button_honeycom"
                        android:layout_width="57dp"
                        android:layout_height="53dp"/>
                    <ImageButton
                        android:layout_gravity="bottom"
                        android:id="@+id/btnChatImage"
                        android:background="@drawable/chat_emoticon_btn_honeycom"
                        android:layout_width="57dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="13dp"
                        android:onClick="onEmoticonClick"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/mixedMessageLayout"
                        android:background="@drawable/ams_edit_text"
                        android:addStatesFromChildren="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="53dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/mMedia_layout"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/mMedia_imageView"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginBottom="13dp"/>
                            <ImageButton
                                android:id="@+id/mMedia_del_btn"
                                android:background="@drawable/message_send_cancel"
                                android:layout_width="39dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"/>
                        </LinearLayout>
                        <com.sec.chaton.chat.MyEditText
                            android:textSize="22dp"
                            android:textColorHint="#aa505050"
                            android:layout_gravity="bottom"
                            android:id="@+id/editChatMsg"
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:focusable="true"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/chat_enter_message_hint"
                            android:maxLines="5"
                            android:maxLength="2000"
                            android:inputType="textMultiLine"
                            android:imeOptions="actionSend"
                            android:nextFocusForward="@+id/btnChatSend"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <Button
                        android:enabled="false"
                        android:textSize="18dp"
                        android:textColor="@color/chat_send_button_xml"
                        android:id="@+id/btnChatSend"
                        android:background="@drawable/chat_send_btn_honeycom"
                        android:layout_width="93dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/layout_chat_fragment_send"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnImoticon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/ldeletebot"
            android:background="@drawable/co_bt_bg1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:enabled="false"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:text="@string/layout_chat_fragment_delete"
                android:layout_weight="0.5"/>
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/btnDelCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:text="@string/layout_chat_fragment_cancel"
                android:layout_weight="0.5"/>
        </LinearLayout>
    </LinearLayout>
    <com.sec.chaton.multimedia.emoticon.EmoticonSelectionView
        android:orientation="vertical"
        android:id="@+id/scrollemoticon"
        android:background="@drawable/chat_emoticon_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linearemoticon"
            android:background="#00000000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="142.6dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearemoticontop"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="52dp">
                <GridView
                    android:gravity="center"
                    android:id="@+id/emoticonGrid1"
                    android:visibility="visible"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="8dp"
                    android:stretchMode="columnWidth"
                    android:columnWidth="50dp"
                    android:numColumns="auto_fit"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageline"
                android:background="@drawable/emoticon_line"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="11dp"/>
            <GridView
                android:gravity="center"
                android:id="@+id/emoticonGrid0"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp"
                android:stretchMode="columnWidth"
                android:columnWidth="50dp"
                android:numColumns="auto_fit"
                android:layout_weight="1"/>
        </LinearLayout>
    </com.sec.chaton.multimedia.emoticon.EmoticonSelectionView>
</RelativeLayout>
