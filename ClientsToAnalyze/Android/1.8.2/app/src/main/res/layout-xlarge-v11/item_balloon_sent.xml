<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentSnd"
    android:background="@null"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/lSubParentSnd2"
        android:paddingRight="4dp"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lLayoutSndContent"
        android:layout_alignBottom="@+id/lLayoutSndContent">
        <Button
            android:id="@+id/btnError"
            android:background="@drawable/message_error"
            android:visibility="gone"
            android:layout_width="39dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"/>
        <ProgressBar
            android:id="@+id/progressBalloon"
            android:visibility="gone"
            android:layout_width="@dimen/bubble_icon_width"
            android:layout_height="@dimen/bubble_icon_width"
            android:indeterminateDrawable="@anim/progressbar_ssm"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingRight="3dp"
        android:paddingBottom="9dp"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lLayoutSndContent"
        android:layout_alignBottom="@+id/lLayoutSndContent">
        <TextView
            android:textSize="18dp"
            android:textColor="#931e00"
            android:id="@+id/chat_ack"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:text="(12)"
            android:singleLine="true"
            android:shadowColor="#ccffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#424242"
            android:id="@+id/textSndTime"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:10 PM"
            android:singleLine="true"
            android:shadowColor="#ccffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lLayoutSndContent"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSendCancel"
                android:background="@drawable/message_send_cancel"
                android:visibility="gone"
                android:layout_width="@dimen/bubble_icon_width"
                android:layout_height="49dp"/>
            <ProgressBar
                android:id="@+id/progressbarUp"
                android:visibility="visible"
                android:layout_width="@dimen/upload_progressbar_width"
                android:layout_height="@dimen/upload_progressbar_height"
                android:layout_marginLeft="@dimen/upload_progressbar_marginLeft"
                android:layout_marginRight="@dimen/upload_progressbar_marginRight"
                android:max="100"
                android:progressDrawable="@drawable/progressbar_custom"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/lLayoutSndContent"
        android:background="@drawable/bubble_send_01_normal"
        android:focusable="true"
        android:visibility="visible"
        android:addStatesFromChildren="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lchkSnd"
        android:soundEffectsEnabled="false">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/imageSndContent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/bubble_anicon_size"/>
        <TextView
            android:textSize="28dp"
            android:textColor="#3a1e0f"
            android:gravity="left"
            android:autoLink="all"
            android:id="@+id/textSndContent"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="16dp"
            android:text="1234567890123456789010"
            android:shadowDx="0"
            android:shadowDy="-2"
            android:shadowRadius="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/detailLayout"
            android:background="@drawable/sub_title_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp">
            <ImageView
                android:id="@+id/detailImageView"
                android:background="@drawable/list_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/detailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="130dp"
                android:text="MORE"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/lLayoutSndETC"
            android:visibility="gone"
            android:addStatesFromChildren="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageEtcSndContent"
                android:layout_width="119dp"
                android:layout_height="119dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/messenger_chat_contact"/>
            <TextView
                android:textSize="20dp"
                android:textColor="#3a1e0f"
                android:id="@+id/textEtcSndContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:maxWidth="130dp"
                android:text="asdfas"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lchkSnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true">
        <CheckBox
            android:id="@+id/chkSndId"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ams_ics_selector_checkbox"/>
    </LinearLayout>
</RelativeLayout>
