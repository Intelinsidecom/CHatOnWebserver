<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/rLayoutFriend"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="10dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/thumb_default_line"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <com.sec.chaton.widget.ProfileImageView
            android:layout_gravity="center"
            android:id="@+id/friendImageCheck"
            android:focusable="false"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:textColor="@color/ics_main_font_color_2"
        android:ellipsize="marquee"
        android:layout_gravity="center"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_centerVertical="true"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:textColor="@color/ics_main_font_color_2"
        android:id="@+id/buddyid"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/setting_hide_buddyid"
        android:layout_weight="0"
        android:layout_toRightOf="@+id/name"
        android:layout_centerVertical="true"/>
    <Button
        android:textSize="16dp"
        android:gravity="center"
        android:id="@+id/menuCall"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="42.66dp"
        android:text="@string/setting_interaction_show"
        android:layout_weight="0"/>
</LinearLayout>
