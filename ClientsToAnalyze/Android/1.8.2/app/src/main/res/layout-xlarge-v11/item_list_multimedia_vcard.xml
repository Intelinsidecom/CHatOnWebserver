<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/vcard_item"
    android:background="@drawable/sub_title_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/vcard_item_header"
        android:background="@drawable/attach_calender_date_selector"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/brown_color_001"
            android:gravity="center_vertical"
            android:id="@+id/vcard_item_header_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:text="@string/vcard_type_phone"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/buddy_item_xml"
        android:layout_width="match_parent"
        android:layout_height="74dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/vcard_item_text_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="72dp"
            android:layout_weight="1">
            <TextView
                android:textSize="18dp"
                android:textColor="#e86d00"
                android:ellipsize="marquee"
                android:id="@+id/list_vcard_main_text"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:id="@+id/list_vcard_sub_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/vcard_checkbtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/check_normal"
            android:scaleType="fitXY"
            android:layout_weight="0"/>
    </LinearLayout>
</LinearLayout>
