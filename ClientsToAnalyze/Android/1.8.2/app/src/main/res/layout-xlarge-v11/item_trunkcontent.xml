<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="top|left"
        android:id="@+id/trunk_profile_image_outer"
        android:background="@drawable/thumb_default_line"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="9dp"
        android:layout_weight="0">
        <com.sec.chaton.widget.ProfileImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/commentBuddyProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_weight="1">
        <TextView
            android:textSize="22dp"
            android:textColor="#ff000000"
            android:ellipsize="marquee"
            android:id="@+id/commentWriterName"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:textColor="#ff000000"
                android:ellipsize="marquee"
                android:id="@+id/commentBuddyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#ff3c7887"
                android:gravity="right"
                android:id="@+id/commentRegistrationTime"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:lines="1"
                android:singleLine="true"
                android:layout_weight="0"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
