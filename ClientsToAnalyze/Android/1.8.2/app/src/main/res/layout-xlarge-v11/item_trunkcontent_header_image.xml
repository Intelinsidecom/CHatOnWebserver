<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="465dp">
        <ImageView
            android:id="@+id/trunkContentMainImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="66dp"
            android:layout_marginBottom="32dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/defaultPlayBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msg_play_button_03"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/trunkContentDownloadProgressbar"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@anim/progressbar_trunk"/>
    </FrameLayout>
    <View
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/refreshCommentButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trunk_menu_refresh"
            android:drawableLeft="@drawable/chaton_trunk_ic_refresh"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:id="@+id/previousCommentButton"
            android:paddingTop="14dp"
            android:paddingBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trunk_btn_previous_comments"
            android:drawableRight="@drawable/detail_veiw_arrow_right"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#ffe86d00"
            android:gravity="center_vertical"
            android:id="@+id/trunkContentCommentCount"
            android:paddingTop="11dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/chat_comment"
            android:drawablePadding="6dp"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"/> --&gt;\10
        <ProgressBar
            android:id="@+id/trunkCommentsLoadingProgressbar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@anim/progressbar_trunk"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="22dp"
        android:textColor="@color/color_palette_13"
        android:gravity="center"
        android:id="@+id/trunkNoCommentTextView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/trunk_write_comment"
        android:inputType="textMultiLine"/>
</LinearLayout>
