<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/skin_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/list_frames"
        android:background="@drawable/thumb_skin_list_bg"
        android:focusable="true"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/list_bg_horizontal_parent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_marginRight="8dp">
            <com.sec.widget.SkinSettingPanel
                android:scrollbarThumbHorizontal="@drawable/scroll"
                android:scrollbarStyle="outsideInset"
                android:id="@+id/list_bg_horizontal"
                android:scrollbars="horizontal"
                android:descendantFocusability="afterDescendants"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="41dp"
                android:layout_alignParentTop="true"
                android:smoothScrollbar="true">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.sec.widget.SkinSettingPanel>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/list_bubble_horizontal_send_parent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp">
            <com.sec.widget.SkinSettingPanel
                android:scrollbarThumbHorizontal="@drawable/scroll"
                android:scrollbarStyle="outsideInset"
                android:id="@+id/list_bubble_horizontal_send"
                android:scrollbars="horizontal"
                android:descendantFocusability="afterDescendants"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="41dp"
                android:smoothScrollbar="true">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.sec.widget.SkinSettingPanel>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/list_bubble_horizontal_receive_parent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/list_bubble_horizontal_send_parent">
            <com.sec.widget.SkinSettingPanel
                android:scrollbarThumbHorizontal="@drawable/scroll"
                android:id="@+id/list_bubble_horizontal_receive"
                android:scrollbars="horizontal"
                android:descendantFocusability="afterDescendants"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="41dp"
                android:smoothScrollbar="true">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.sec.widget.SkinSettingPanel>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_frame_skin_chatroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_frames"
        android:layout_below="@+id/buddy_profile_title">
        <include
            android:layout_height="wrap_content"
            layout="@layout/layout_skin_chatroom_bubble"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/chaton_chats_header_shadow"
            android:scaleType="fitXY"/>
    </FrameLayout>
</RelativeLayout>
