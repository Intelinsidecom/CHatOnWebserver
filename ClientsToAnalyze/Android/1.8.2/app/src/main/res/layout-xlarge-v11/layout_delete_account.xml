<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/layout_change_skin_title"
        android:background="@drawable/sub_title_bg_02"
        android:paddingLeft="7.3dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/settings_delete"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_delete"
        android:background="@color/ics_main_background_color_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_change_skin_title">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/ics_main_font_color_2"
            android:gravity="center_horizontal"
            android:id="@+id/setting_chaton_account"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginTop="47dp"
            android:text="@string/setting_delete_account"/>
        <TextView
            android:textSize="24dp"
            android:textColor="#e78338"
            android:gravity="center_horizontal"
            android:id="@+id/txt_msisdn"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/ics_main_font_color_2"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="59dp"
            android:text="@string/setting_delete_account_warning"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_delete_account"
        android:background="@drawable/bottom_button_background"
        android:layout_width="420dp"
        android:layout_height="57dp"
        android:layout_marginTop="23dp"
        android:text="@string/setting_btn_delete_account_txt"
        android:layout_below="@+id/layout_delete"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
