<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/droppanel_menuitem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/droppanel_menu_item_height">
    <ImageView
        android:id="@+id/droppanel_menuitem_divider"
        android:background="#d8d8d8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/droppanel_menu_listitem"
        android:background="@drawable/droppanel_menu_bg_color"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/droppanel_menuitem_icon"
            android:paddingLeft="9dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/droppanel_menu_item_text"
            android:gravity="center_vertical"
            android:id="@+id/droppanel_menuitem_text"
            android:background="#00000000"
            android:paddingLeft="9dp"
            android:paddingTop="9dp"
            android:paddingRight="9dp"
            android:paddingBottom="9dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
