<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:local="http://schemas.android.com/apk/res/com.sec.chaton"
    android:orientation="vertical"
    android:id="@+id/EmoticonView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <RelativeLayout
        android:id="@android:id/title"
        android:background="@drawable/chatting_header"
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <LinearLayout
            android:orientation="horizontal"
            android:descendantFocusability="afterDescendants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <FrameLayout
                android:id="@+id/emoticonButton"
                android:background="@drawable/chatting_btn_left_icon_bg_selector"
                android:focusable="true"
                android:layout_width="268dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/chatting_btn_lcon_emotion"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/ticonButton"
                android:background="@drawable/chatting_btn_right_icon_bg_selector"
                android:focusable="true"
                android:layout_width="268dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/chatting_btn_lcon_emotion_2"/>
            </FrameLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/closeButton"
            android:background="@drawable/chatting_btn_trunk"
            android:layout_width="93dp"
            android:layout_height="50dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/chatting_btn_lcon_cancel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/title">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/pagerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sec.common.widget.PagerPositionStrip2
                android:layout_gravity="center"
                android:id="@+id/emoticonPositionStrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/emoticon_pager_position_strip_margin_top"
                android:layout_marginBottom="@dimen/emoticon_pager_position_strip_margin_bottom"
                local:indicator="@drawable/selector_pager_position_strip_indicator"
                local:firstIndicator="@drawable/selector_pager_position_strip_recent_indicator"
                local:indicator_margin="2dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/emoticonViewPager"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:layout_marginBottom="@dimen/emoticon_pager_position_strip_margin_bottom"
                android:layout_weight="1"/>
            <Button
                android:layout_gravity="center"
                android:id="@+id/viewMore"
                android:background="@drawable/chat_emoticon_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="23dp"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/previewLayout"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:fillViewport="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@android:id/icon"
                    android:layout_width="@dimen/anicon_preview_width"
                    android:layout_height="@dimen/anicon_preview_height"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp">
                    <Button
                        android:textSize="17dp"
                        android:textColor="#5c5c5c"
                        android:id="@android:id/button1"
                        android:background="@drawable/selector_anicon_select_button"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/layout_chat_fragment_send"/>
                    <Button
                        android:textSize="17dp"
                        android:textColor="#5c5c5c"
                        android:id="@android:id/button2"
                        android:background="@drawable/selector_anicon_select_button"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/layout_chat_fragment_cancel"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
