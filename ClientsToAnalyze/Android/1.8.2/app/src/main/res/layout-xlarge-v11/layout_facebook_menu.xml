<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/tab_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnExit"
            style="@style/BtnExitStyle"/>
        <TextView
            android:id="@+id/header_title"
            android:text="@string/user_facebook_account"
            style="@style/CommonTitleTextViewStyle"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/buddy_item_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp">&quot;\10
                <TextView
                    android:textSize="22dp"
                    android:typeface="sans"
                    android:textColor="@color/ics_main_font_color_2"
                    android:ellipsize="marquee"
                    android:id="@+id/facebook_account_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:singleLine="false"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:typeface="sans"
                    android:ellipsize="marquee"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/facebook_menu_logout"
                    android:background="@drawable/btn_block_buddy_bg_xml"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/logout"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/sub_title_bg_02"
                android:layout_width="match_parent"
                android:layout_height="28dp">&quot;\10
                <TextView
                    android:textSize="18dp"
                    android:typeface="sans"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@drawable/sub_title_bg_02"
                    android:paddingLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="@string/facebook_header_post"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="22dp"
                android:typeface="sans"
                android:textColor="@color/ics_main_font_color_2"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:id="@+id/facebook_menu_invitation_card"
                android:background="@drawable/buddy_item_xml"
                android:paddingLeft="8dp"
                android:paddingRight="22dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:text="@string/facebook_invitation_card"
                android:singleLine="true"
                android:drawableRight="@drawable/list_round_more_arrow"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/facebook_menu_chaton_family"
                android:background="@drawable/buddy_item_xml"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facebook_chaton_family"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
