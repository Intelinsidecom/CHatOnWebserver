<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_bg_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/list_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/honeycomb_menu"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="68dp">
            <Button
                android:id="@+id/button_start_chat"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="7.3dp"
                android:text="@string/menu_button_start_chat"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_broadcast"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="12dp"
                android:text="@string/menu_inbox_broadcast"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/honeycomb_divider"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/divider"
                android:background="@drawable/list_divider_holo_light"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/msg_no"
            android:visibility="gone"
            android:alwaysDrawnWithCache="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/msg_no_item"
                android:background="@drawable/chaton_chat_ic_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="24dp"
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/msg_no_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/layout_msgbox_no_chat"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/linList"
            android:background="@drawable/list_bg"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ListView
                android:id="@android:id/list"
                android:background="@drawable/list_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:layout_weight="1"
                android:fastScrollEnabled="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lLayoutMenu"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btnLeave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_chat_fragment_delete"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_chat_fragment_cancel"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
