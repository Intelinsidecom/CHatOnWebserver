<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/contentPanel"
        android:background="@color/ics_main_background_color_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="14dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:id="@+id/vcalendar_event_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0">
                <TextView
                    android:textSize="18dp"
                    android:textColor="#e86d00"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_date_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="#e86d00"
                    android:ellipsize="marquee"
                    android:id="@+id/vcalendar_event_detail_date_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:background="@drawable/list_2line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="@string/layout_calendar_location"
                android:singleLine="true"
                android:layout_weight="0"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#e86d00"
                android:ellipsize="marquee"
                android:id="@+id/vcalendar_event_detail_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/vcalendar_event_detail_map"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="448dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6.66dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:layout_weight="0"/>
        <ImageView
            android:id="@+id/vcalendar_event_detail_map_bottom_line"
            android:background="@drawable/list_2line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/vcalendar_event_detail_desc_area"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_weight="0">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/brown_color_029"
                android:ellipsize="marquee"
                android:id="@+id/vcalendar_event_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/vcalendar_event_detail_desc_bottom_line"
            android:background="@drawable/list_2line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/vcalendar_event_menubar"
            android:background="@drawable/co_bg"
            android:paddingLeft="4dp"
            android:paddingTop="4.66dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="54.66dp"
            android:layout_weight="0">
            <Button
                android:textSize="16dp"
                android:id="@+id/vcal_event_detail_save"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/layout_vcalendar_event_detail_save"
                android:layout_weight="1"/>
            <Button
                android:textSize="16dp"
                android:id="@+id/vcal_event_detail_send"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/layout_vcalendar_event_detail_send"
                android:layout_weight="1"/>
            <Button
                android:textSize="16dp"
                android:id="@+id/vcal_event_detail_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="@string/layout_vcalendar_event_detail_cancel"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
