<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/parentPanel"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/vcard_selectall_with_checkbox_layout"
        android:background="@color/ics_main_background_color_2"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/vcard_selectall_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1">
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:id="@+id/vcard_selectall_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ams_select_all"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/vcard_selectall_chckbtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/check_normal"
            android:scaleType="fitXY"
            android:layout_weight="0"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/vcard_line"
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/contentPanel"
        android:background="@color/ics_main_background_color_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear_layout_vcard_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0">
                <ImageView
                    android:id="@+id/vcard_image_icon"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/profile_noimage"
                    android:scaleType="fitXY"
                    android:layout_weight="0"/>
                <TextView
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:ellipsize="marquee"
                    android:id="@+id/vcard_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
            <ListView
                android:id="@android:id/list"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fastScrollEnabled="true"/>
            <ImageView
                android:id="@+id/divider"
                android:background="@drawable/list_2line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/vcard_nocontact_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#efad51"
                    android:ellipsize="marquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vcard_nocontact_message"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
