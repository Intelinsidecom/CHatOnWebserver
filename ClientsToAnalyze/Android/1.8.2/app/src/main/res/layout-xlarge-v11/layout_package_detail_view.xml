<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/buddy_item_xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/sub_title_bg_02"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/anicon_download_detail_title"/>
    <RelativeLayout
        android:id="@+id/anicon_package_item"
        android:background="@drawable/buddy_item_xml"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/anicon_package_item_thumbnail"
            android:background="@drawable/picturebox"
            android:layout_width="@dimen/anicon_download_thumbnail_width"
            android:layout_height="@dimen/anicon_download_thumbnail_height"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/anicon_package_item_ribbon"
            android:background="@drawable/thumbnail_new_bg"
            android:layout_width="@dimen/anicon_download_thumbnail_width"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:shadowColor="#7f000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_alignBottom="@+id/anicon_package_item_thumbnail"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/anicon_package_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/anicon_package_item_download"
            android:layout_toRightOf="@+id/anicon_package_item_thumbnail"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:id="@+id/anicon_package_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView
                android:textSize="17dp"
                android:textColor="#fd8e3b"
                android:ellipsize="marquee"
                android:id="@+id/anicon_package_item_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/anicon_package_item_download"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/anicon_package_item_download_event_xml"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="14dp"
            android:textColor="#737373"
            android:ellipsize="marquee"
            android:id="@+id/anicon_download_information"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/anicon_package_downloaded"
            android:singleLine="true"
            android:layout_alignBottom="@+id/anicon_package_item_text"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Button
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:id="@+id/anicon_package_item_uninstall"
        android:background="@drawable/unblock_btn_xml"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="@string/anicon_package_uninstall"/>
    <ImageView
        android:id="@+id/package_detail_divider"
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/anicon_preview_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp"
        android:scaleType="centerInside"
        android:layout_weight="1"/>
</LinearLayout>
