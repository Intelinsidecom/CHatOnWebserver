<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pushName_rootView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:minWidth="500dp"
        android:layout_alignParentTop="true">
        <TextView
            android:textSize="22dp"
            android:textColor="@color/ics_main_font_color_2"
            android:id="@+id/txtRegistName_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/setting_enter_name"/>
        <EditText
            android:textSize="22dp"
            android:id="@+id/txtName"
            android:paddingLeft="14dp"
            android:paddingTop="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Aaron Johnson"
            android:singleLine="true"
            android:maxLength="30"
            android:capitalize="sentences"
            android:imeOptions="actionNone"
            android:textCursorDrawable="@null"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/ics_main_font_color_2"
            android:id="@+id/pushnameExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/regist_name_detail"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layoutRegistName_0"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <Button
            android:enabled="false"
            android:textSize="16dp"
            android:id="@+id/btnDone"
            android:background="@drawable/btn_disclaimer_bg_xml"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:text="@string/done"
            android:layout_weight="1"/>
        <Button
            android:textSize="16dp"
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
