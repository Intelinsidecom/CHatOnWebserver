<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/sub_title_bg_02"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/interaction_setting_hidden_interactions"/>
    <ListView
        android:id="@+id/list"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:drawSelectorOnTop="false"
        android:scrollingCache="false"
        android:divider="@drawable/list_2line"
        android:layout_weight="1"
        android:fastScrollEnabled="true"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/no_item_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/no_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="24dp"
            android:textColor="#aaaaaa"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title_noblock_item"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#aaaaaa"
            android:gravity="center"
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/setting_hidden_interaction_text"
            android:lines="2"/>
    </LinearLayout>
</LinearLayout>
