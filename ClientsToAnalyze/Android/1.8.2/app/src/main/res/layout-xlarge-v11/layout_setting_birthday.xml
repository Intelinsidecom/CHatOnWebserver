<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:minHeight="50dp">
        <CheckBox
            android:id="@+id/birthday_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:button="@drawable/checkbox_background_xml"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/ics_main_font_color_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9dp"
            android:text="@string/birthday_open_mypagebirthday"
            android:layout_toLeftOf="@+id/birthday_check"/>
    </RelativeLayout>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/buddy_sub_nor"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/birthday_settings"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/llayoutBDay"
        android:background="@drawable/edit_text"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp">
        <TextView
            android:textSize="22dp"
            android:gravity="center_vertical"
            android:id="@+id/dateDisplay"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:text="@string/add_your_birthday"/>
    </LinearLayout>
</LinearLayout>
