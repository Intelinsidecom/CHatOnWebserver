<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/lLayoutProfile"
        android:background="@drawable/chatting_header"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <com.sec.chaton.widget.ProfileImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/Chaticon"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:textSize="22dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/chatTitle"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="-1"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <WebView
            android:id="@+id/spbd_webview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/network_error"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/trunk_empty_string"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toast_network_unable"
                android:drawableTop="@drawable/network_error"
                android:layout_centerInParent="true"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
