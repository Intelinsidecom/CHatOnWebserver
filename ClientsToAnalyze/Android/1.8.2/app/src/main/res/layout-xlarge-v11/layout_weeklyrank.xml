<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layoutWeek1"
        android:background="@drawable/select_week_bg"
        android:focusable="true"
        android:clickable="true"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/blue_color_021"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/textWeek1"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/week_selecter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chact_preference_contents_list_arrow_holo_dark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/layoutWeek2"
        android:background="@drawable/select_week_bg"
        android:focusable="true"
        android:clickable="true"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/ics_main_font_color_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/textWeek2"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/week_selecter2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chact_preference_contents_list_arrow_holo_dark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/layoutWeek3"
        android:background="@drawable/select_week_bg"
        android:focusable="true"
        android:clickable="true"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/ics_main_font_color_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/textWeek3"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/week_selecter3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chact_preference_contents_list_arrow_holo_dark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/layoutWeek4"
        android:background="@drawable/select_week_bg"
        android:focusable="true"
        android:clickable="true"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/ics_main_font_color_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/textWeek4"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/week_selecter4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chact_preference_contents_list_arrow_holo_dark"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView
        android:background="@drawable/list_2line"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
