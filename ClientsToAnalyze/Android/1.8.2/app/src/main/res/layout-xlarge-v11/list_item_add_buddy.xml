<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/BuddyListItemLayout">
    <ImageView
        android:id="@+id/listItemImage"
        style="@style/BuddyListItemImage"/>
    <TextView
        android:id="@+id/listItemText1"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        style="@style/BuddyListItemTextName"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/listItemButton"
            android:focusable="true"
            android:text="@string/buddy_group_edit_menubar_add"
            style="@style/BuddyListItemImageButton"/>
        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/listItemMoreButton"
            android:background="@drawable/list_round_more_arrow"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>
