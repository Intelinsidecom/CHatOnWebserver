<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlay_relation"
    android:focusableInTouchMode="true"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="130dp">
    <ImageView
        android:id="@+id/relation_background"
        android:background="@drawable/rank_list_light_01"
        android:layout_width="400dp"
        android:layout_height="130dp"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/linear_relation_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp">
        <com.sec.chaton.widget.RoundedImageView
            android:id="@+id/relation_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/detail_rank"
            android:visibility="visible"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:layout_alignLeft="@+id/relation_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="13dp"
        android:layout_toRightOf="@+id/linear_relation_img">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/split_list_left"
                android:ellipsize="marquee"
                android:id="@+id/relation_rank_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Amanda Seyfried"
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/namenpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_rank"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_rank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_point"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_interaction_zero"/>
            </LinearLayout>
            <TextView
                android:textSize="28dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/relation_status_msg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:singleLine="true"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/lbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/linear0">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_bubble_received_text"
                    android:gravity="center"
                    android:id="@+id/relation_received_count"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/relation_received"
                    android:background="@drawable/interaction_rank_01"
                    android:layout_width="18.66dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="250"/>
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/relation_send"
                    android:background="@drawable/interaction_rank_02"
                    android:layout_width="18.66dp"
                    android:layout_height="35dp"
                    android:layout_weight="150"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_bubble_sent_text"
                    android:gravity="center"
                    android:id="@+id/relation_sent_count"
                    android:paddingLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:id="@+id/rbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0"
                    android:layout_toRightOf="@+id/lbar">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:id="@+id/relation_gap"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14.7dp"
                        android:text="@string/setting_interaction_gap"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/lbar"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
