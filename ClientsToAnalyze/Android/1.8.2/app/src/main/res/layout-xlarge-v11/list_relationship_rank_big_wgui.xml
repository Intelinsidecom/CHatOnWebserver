<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlay_relation"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="114dp">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/relationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="14dp">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/relation_img"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/relation_rank_img"
            android:visibility="invisible"
            android:layout_width="85dp"
            android:layout_height="86dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/relationImage">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="17dp">
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:ellipsize="marquee"
                android:id="@+id/relation_rank_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="@string/setting_interaction_wall"
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/namenpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_rank"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_rank_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_point_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buddy_profile_point"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:shadowColor="@color/black"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_point_color"
                    android:id="@+id/relation_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_interaction_zero"/>
            </LinearLayout>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:id="@+id/relation_status_msg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:singleLine="true"/>
            <LinearLayout
                android:id="@+id/lbar"
                android:layout_width="@dimen/my_page_interaction_rank_detail_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_bubble_received_text"
                    android:gravity="center"
                    android:id="@+id/relation_received_pt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/relation_received"
                    android:background="@drawable/interaction_rank_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="250"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/relation_send"
                    android:background="@drawable/interaction_rank_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="150"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/rank_bubble_sent_text"
                    android:gravity="center"
                    android:id="@+id/relation_send_pt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"/>
                <RelativeLayout
                    android:id="@+id/rbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="50">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:id="@+id/relation_gap"
                        android:background="#ffffff"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14.7dp"
                        android:text="@string/setting_interaction_gap"
                        android:layout_alignParentLeft="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#464646"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>
