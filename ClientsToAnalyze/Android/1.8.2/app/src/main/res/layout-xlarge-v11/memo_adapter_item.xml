<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buddy_say_main_layout"
    android:background="@drawable/buddy_item_xml"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:minHeight="80dp">
    <LinearLayout
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/memo_profile_image_outer"
            android:background="@drawable/thumb_default_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="10dp">
            <com.sec.chaton.widget.RoundedImageView
                android:id="@+id/memo_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/buddies_say_layout"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/ics_main_font_color_2"
                android:ellipsize="marquee"
                android:id="@+id/memo_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Name"
                android:singleLine="true"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/ics_main_font_color_2"
                android:id="@+id/memo_content"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Contents"
                android:maxLength="140"/>
        </LinearLayout>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/memo_item_time"
            android:id="@+id/memo_time"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:singleLine="true"
            android:layout_weight="0"/>
    </LinearLayout>
</RelativeLayout>
