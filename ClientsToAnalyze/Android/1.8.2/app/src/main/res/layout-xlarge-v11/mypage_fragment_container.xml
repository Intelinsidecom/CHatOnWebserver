<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlay_details"
            android:background="@drawable/sub_title_bg_xml"
            android:focusable="true"
            android:nextFocusDown="@layout/list_interaction_rank_top1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="6.7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setting_interaction_rank"/>
            <ImageView
                android:id="@+id/title_interaction_rank"
                android:background="@drawable/title_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/interaction_container"
            android:visibility="gone"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp">
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/list_interaction_rank_top1"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/list_interaction_rank_top2"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/list_interaction_rank_top3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/flayout_relationship"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="2dp">
            <Button
                android:textSize="18dp"
                android:textColor="@color/ics_main_font_color_2"
                android:gravity="center"
                android:id="@+id/interaction_rank_no_list"
                android:background="@color/ics_main_background_color_2"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:minHeight="95dp"
                android:text="@string/layout_msgbox_no_interaction_rank"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/buddy_sub_nor"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/memo_layout_title"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/memo_title"/>
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/buddy_say_participants"
                android:paddingLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mypage_write_area"
            android:padding="6.66dp"
            android:layout_width="match_parent"
            android:layout_height="44.66dp">
            <Button
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/memo_btn_write"
                android:background="@drawable/memo_write_button_xml"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/memo_btn_write"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/memo_write_below_line"
            android:background="#333a3a"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </LinearLayout>
</LinearLayout>
