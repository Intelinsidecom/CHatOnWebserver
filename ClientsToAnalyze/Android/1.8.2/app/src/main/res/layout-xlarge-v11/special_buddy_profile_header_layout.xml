<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/main_background_color"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="7dp"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/profile_ignore_special_buddy"
                android:layout_marginRight="4dp"
                android:src="@drawable/add_buddies_special02"
                android:contentDescription="@string/buddy_suggestion_ignore"
                style="@style/BuddyProfileMenuImageButton"/>
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/profile_add_special_buddy"
                android:layout_marginRight="4dp"
                android:src="@drawable/add_buddies_special"
                android:contentDescription="@string/buddy_profile_button_addbuddy"
                style="@style/BuddyProfileMenuImageButton"/>
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/profile_special_chat"
                android:visibility="gone"
                android:layout_marginRight="4dp"
                android:src="@drawable/add_buddies_color_chat_icon"
                android:contentDescription="@string/menu_button_start_chat"
                style="@style/BuddyProfileMenuImageButton"/>
        </LinearLayout>
        <include
            android:id="@+id/layout_profile_phone_no_line"
            layout="@layout/list_divider"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/main_background_color"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:id="@+id/profile_special_url_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/mypage_profile_icon_birthday"
                    android:contentDescription="@string/buddy_profile_birthday"/>
                <TextView
                    android:id="@+id/profile_special_url"
                    android:text="@string/buddy_profile_interaction"
                    android:contentDescription="@string/buddy_profile_interaction"
                    style="@style/BuddyProfileItemTextStyle"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/list_special_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout style="@style/SubTitleStyle">
                <TextView
                    android:id="@+id/special_selected_category"
                    android:layout_width="match_parent"
                    android:text="@string/memo_title"
                    android:contentDescription="@string/memo_title"
                    style="@style/SubTitleTextStyle"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutButton"
            android:background="@drawable/bottom_button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:textSize="18dp"
                android:id="@+id/profile_spcial_buddy_see_more_btn"
                android:background="@drawable/btn_registration_bg_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/special_buddy_button_see_more"
                android:contentDescription="@string/special_buddy_button_see_more"
                style="@style/ShadowTextStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
