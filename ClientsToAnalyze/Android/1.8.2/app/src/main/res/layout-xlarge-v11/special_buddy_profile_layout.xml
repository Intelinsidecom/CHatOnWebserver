<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/ics_main_background_color_2"
    android:descendantFocusability="afterDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="@drawable/ams_bottom_bg"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <LinearLayout
                android:background="@color/ics_main_background_color_2"
                android:descendantFocusability="afterDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/profile_special_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="0"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/profile_special_name_status"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1">
                    <TextView
                        android:textSize="36dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/profile_special_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/buddy_list_item_status"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/profile_special_status_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/profile_specialButton"
                        android:paddingTop="3dp"
                        android:paddingRight="3dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_buddies_special_heart_on_p"/>
                    <CheckBox
                        android:layout_gravity="center"
                        android:id="@+id/profile_special_is_favorite"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:button="@drawable/special_buddyprofile_heart_btn_xml"/>
                    <TextView
                        android:textSize="30dp"
                        android:textColor="#e65f14"
                        android:layout_gravity="center"
                        android:id="@+id/profile_special_like_count"
                        android:paddingRight="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="bottom|right"
                android:layout_gravity="bottom|right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="22dp"
                    android:textColor="@color/ics_main_font_color_2"
                    android:ellipsize="marquee"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/profile_special_subcribed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"/>
            </LinearLayout>
        </FrameLayout>
        <ScrollView
            android:id="@+id/profile_special_scroll_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/list_bg"
                    android:descendantFocusability="afterDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="96dp">
                    <Button
                        android:textSize="22dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/profile_add_special_buddy"
                        android:background="@drawable/bottom_button_background"
                        android:layout_width="316dp"
                        android:layout_height="52dp"
                        android:text="@string/buddy_list_dialog_addbuddy_title"
                        android:contentDescription="@string/buddy_profile_button_addbuddy"/>
                    <Button
                        android:textSize="22dp"
                        android:textColor="@color/ics_main_font_color_2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/profile_special_chat"
                        android:background="@drawable/bottom_button_background"
                        android:visibility="gone"
                        android:layout_width="316dp"
                        android:layout_height="52dp"
                        android:text="@string/menu_button_start_chat"
                        android:contentDescription="@string/menu_button_start_chat"/>
                </LinearLayout>
                <include
                    android:id="@+id/layout_profile_phone_no_line"
                    layout="@layout/list_divider"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/profile_special_url_area"
                    android:background="@color/ics_main_background_color_2"
                    android:paddingTop="12dp"
                    android:paddingBottom="11dp"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/profile_special_url_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:src="@drawable/special_link"/>
                    <TextView
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/profile_special_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/list_special_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SubTitleStyle">
                    <TextView
                        android:id="@+id/special_selected_category"
                        style="@style/SuggestionSubTitleTextStyle"/>
                </LinearLayout>
                <ScrollView
                    android:id="@+id/profile_special_scroll_area"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/special_selected_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="13dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutButton"
            android:background="@drawable/bottom_button_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="18dp"
                android:id="@+id/profile_spcial_buddy_see_more_btn"
                android:background="@drawable/btn_registration_bg_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/special_buddy_button_see_more"
                android:contentDescription="@string/special_buddy_button_see_more"
                style="@style/ShadowTextStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
