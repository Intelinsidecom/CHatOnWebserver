<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/linearComment"
    android:background="@drawable/searchfiled_background_bg"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:layout_width="match_parent"
    android:layout_height="65dp">
    <EditText
        android:id="@+id/trunkCommentEdit"
        android:background="@drawable/btn_search_dialog_xml"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="12dp"
        android:hint="@string/trunk_item_write_a_comment"
        android:maxLines="2"
        android:maxLength="140"
        android:layout_weight="1"
        android:inputType="textMultiLine"/>
    <Button
        android:enabled="false"
        android:textColor="@color/chat_send_button_xml"
        android:id="@+id/trunkCommentSendBtn"
        android:background="@drawable/chat_send_btn_honeycom"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:text="@string/layout_chat_fragment_send"
        android:layout_weight="0"/>
</LinearLayout>
