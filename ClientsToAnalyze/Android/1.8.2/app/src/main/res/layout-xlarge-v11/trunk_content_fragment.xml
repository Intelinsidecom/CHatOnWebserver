<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ics_main_background_color_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/titlelLayout"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/itemTabHeader">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_TopLayout"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <com.sec.chaton.util.EllipsisTextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:gravity="left"
                android:id="@+id/trunkContentTitle"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <com.sec.chaton.util.EllipsisTextView
                android:textSize="18dp"
                android:textColor="#7d7d7d"
                android:id="@+id/trunkContentTitleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/trunkContentBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="537dp"
        android:layout_below="@+id/titlelLayout">
        <ListView
            android:id="@+id/trunkContentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/list_2line"
            android:dividerHeight="1dp"
            android:layout_weight="0"/>
        <RelativeLayout
            android:id="@+id/trunkEmptyView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/color_palette_13"
                android:id="@+id/text_trunkEmptyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_profile_update_status_failed"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/itemOptions"
        android:background="@drawable/more_option_bg"
        android:visibility="gone"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_2line"
        android:layout_below="@+id/itemTabHeader"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="22dp"
        android:textColor="@color/trunk_empty_string"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/networkErrorView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toast_network_unable"
        android:drawableTop="@drawable/network_error"
        android:layout_centerInParent="true"/>
</RelativeLayout>
