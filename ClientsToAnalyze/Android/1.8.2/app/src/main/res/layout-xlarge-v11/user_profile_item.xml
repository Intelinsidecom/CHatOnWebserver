<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flayout_relationship"
    android:layout_width="wrap_content"
    android:layout_height="125dp"
    android:layout_marginRight="5dp">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/rParent"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginRight="3dp">
        <com.sec.chaton.widget.RoundedImageView
            android:id="@+id/imgfriend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/imgfriend_rank"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/imgfriend_focus"
            android:focusable="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/color_mypage_interaction_rank_bubble_name"
                android:ellipsize="marquee"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/textfriend1"
                android:background="@drawable/interaction_rank_name_bg"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginBottom="5dp"
                android:text="Mark"
                android:singleLine="true"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
