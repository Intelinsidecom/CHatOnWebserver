<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/subTitle"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/select_country_hint"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/co_search_plate"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageButton
            android:id="@+id/buttonAdd"
            android:visibility="gone"
            android:layout_width="41.33dp"
            android:layout_height="41.33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0"/>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/brown_color_002"
            android:gravity="center_vertical"
            android:id="@+id/editCountry"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_marginLeft="10.66dp"
            android:layout_marginTop="10.7dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginBottom="10.7dp"
            android:hint="@string/select_country_hint"
            android:singleLine="true"
            android:editable="true"
            android:layout_weight="1"
            android:inputType="textVisiblePassword"
            android:imeOptions="actionNone"/>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollingCache="false"
        android:choiceMode="singleChoice"
        android:layout_weight="1"
        android:fastScrollEnabled="true"/>
</LinearLayout>
