<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/ams_ics_bg_frame_color_width"
    android:layout_height="@dimen/ams_ics_bg_frame_color_height"
    android:weightSum="206">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_default_color"
        android:background="@drawable/ams_popup_bg_top"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="140">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_popup_color_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/btn_color01"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_1_01"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color02"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_1_02"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color03"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_1_03"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color04"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_1_04"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color05"
                android:src="@drawable/color2bg_1_05"
                style="@style/AMSIcsColorButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_popup_color_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/btn_color06"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_2_01"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color07"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_2_02"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color08"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_2_03"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color09"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_2_04"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color10"
                android:src="@drawable/color2bg_2_05"
                style="@style/AMSIcsColorButtonStyle"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_popup_color_row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_color11"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_3_01"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color12"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_3_02"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color13"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_3_03"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color14"
                android:layout_marginRight="5dp"
                android:src="@drawable/color2bg_3_04"
                style="@style/AMSIcsColorButtonStyle"/>
            <ImageView
                android:id="@+id/btn_color15"
                android:src="@drawable/color2bg_3_05"
                style="@style/AMSIcsColorButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_button"
        android:background="@drawable/ams_popup_bg_bottom"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="66">
        <Button
            android:textSize="20dp"
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ams_btn_cancel"/>
    </LinearLayout>
</LinearLayout>
