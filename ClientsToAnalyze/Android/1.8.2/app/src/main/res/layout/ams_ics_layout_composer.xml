<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/view_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_ics_titlebar_height"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_titlebar">
        <LinearLayout
            android:id="@+id/layout_dummy_center_left"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:id="@+id/layout_dummy_center_right"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_button_top"
            android:paddingLeft="8dp"
            android:paddingTop="9dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_ics_composer_top_menu_height"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/btn_tool_background_image"
                android:src="@drawable/ams_ics_selector_bg_frame"
                style="@style/AMSIcsMainButtonTopStyle"/>
            <ImageView
                android:id="@+id/btn_tool_pen"
                android:src="@drawable/ams_ics_selector_pen"
                style="@style/AMSIcsMainButtonTopStyle"/>
            <ImageView
                android:id="@+id/btn_tool_stamp_shape"
                android:src="@drawable/ams_ics_selector_stamp"
                style="@style/AMSIcsMainButtonTopStyle"/>
            <ImageView
                android:id="@+id/btn_tool_text"
                android:src="@drawable/ams_ics_selector_text"
                style="@style/AMSIcsMainButtonTopStyle"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_button_bottom"
            android:background="@drawable/ams_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_ics_composer_bottom_menu_height"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/btn_preview"
                android:src="@drawable/ams_ics_selector_preview"
                style="@style/AMSIcsMainButtonBottomStyle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tab_line_menu"/>
            <ImageView
                android:id="@+id/btn_undo"
                android:src="@drawable/ams_ics_selector_undo"
                style="@style/AMSIcsMainButtonBottomStyle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tab_line_menu"/>
            <ImageView
                android:id="@+id/btn_redo"
                android:src="@drawable/ams_ics_selector_redo"
                style="@style/AMSIcsMainButtonBottomStyle"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tab_line_menu"/>
            <ImageView
                android:id="@+id/btn_send"
                android:src="@drawable/ams_ics_selector_send"
                style="@style/AMSIcsMainButtonBottomStyle"/>
        </LinearLayout>
        <ViewStub
            android:id="@+id/stub_text_slide_menu"
            android:layout="@layout/ams_ics_layout_slide_menu_text"
            android:inflatedId="@+id/object_property"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_ics_composer_top_menu_height"
            android:layout_alignParentLeft="true"/>
        <ViewStub
            android:id="@+id/stub_pen_slide_menu"
            android:layout="@layout/ams_ics_layout_slide_menu_pen"
            android:inflatedId="@+id/object_property"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_ics_composer_top_menu_height"
            android:layout_alignParentLeft="true"/>
        <RelativeLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ams_ics_composer_canvas_margin"
            android:layout_toLeftOf="@+id/layout_dummy_center_right"
            android:layout_toRightOf="@+id/layout_dummy_center_left"
            android:layout_above="@+id/layout_button_bottom"
            android:layout_below="@+id/layout_button_top">
            <RelativeLayout
                android:id="@+id/layout_composer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/layout_ams"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_text_input"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_titlebar"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/layout_text_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_buttons"
            android:layout_alignParentTop="true">
            <com.sec.vip.amschaton.AMSEditText
                android:textSize="20dp"
                android:textColor="@color/black"
                android:gravity="top|left"
                android:id="@+id/edit_text_input"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/chat_enter_message_hint"
                android:capitalize="sentences"
                android:layout_above="@+id/text_remain"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="18dp"
                android:gravity="right"
                android:id="@+id/text_remain"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
