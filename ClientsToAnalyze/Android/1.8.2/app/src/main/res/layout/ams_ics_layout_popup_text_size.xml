<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_popup_text_size"
        android:background="@drawable/ams_toolbar_menu_popup"
        android:paddingLeft="13dp"
        android:paddingTop="15dp"
        android:paddingRight="13dp"
        android:paddingBottom="13dp"
        android:layout_width="@dimen/ams_ics_tool_text_size_popup_w"
        android:layout_height="@dimen/ams_ics_tool_text_size_popup_h"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="9dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <ImageView
                android:id="@+id/btn_text_size1"
                android:src="@drawable/ams_ics_selector_text_size1"
                style="@style/AMSIcsToolSubMenuPopupButtonStyle"/>
            <ImageView
                android:id="@+id/btn_text_size2"
                android:src="@drawable/ams_ics_selector_text_size2"
                style="@style/AMSIcsToolSubMenuPopupButtonStyle"/>
            <ImageView
                android:id="@+id/btn_text_size3"
                android:src="@drawable/ams_ics_selector_text_size3"
                style="@style/AMSIcsToolSubMenuPopupButtonStyle"/>
            <ImageView
                android:id="@+id/btn_text_size4"
                android:src="@drawable/ams_ics_selector_text_size4"
                style="@style/AMSIcsToolSubMenuPopupButtonStyle"/>
            <ImageView
                android:id="@+id/btn_text_size5"
                android:src="@drawable/ams_ics_selector_text_size5"
                style="@style/AMSIcsToolSubMenuPopupButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
