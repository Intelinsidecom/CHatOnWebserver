<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sec.widget.GeneralHeaderView
        android:id="@+id/view_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_ics_titlebar_height"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_preference"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <GridView
            android:id="@+id/gridview_preference"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:columnWidth="87dp"
            android:numColumns="auto_fit"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/stamp_line"
        android:background="@drawable/emoticon_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_stamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <GridView
            android:id="@+id/gridview_stamp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:columnWidth="87dp"
            android:numColumns="auto_fit"/>
    </LinearLayout>
</LinearLayout>
