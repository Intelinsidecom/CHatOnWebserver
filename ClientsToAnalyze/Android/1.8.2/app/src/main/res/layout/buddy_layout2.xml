<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:id="@+id/title_menu"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="7.3dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="25.33dp"
        android:text="@string/buddy_chat_profile"
        android:layout_alignParentTop="true"/>
    <HorizontalScrollView
        android:id="@+id/buddy_choice_panel"
        android:background="@drawable/co_add_plate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title_menu">
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="3.33dp"
            android:paddingTop="2.66dp"
            android:paddingRight="3.33dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"/>
    </HorizontalScrollView>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/searcdh_bar"
        android:background="@drawable/co_search_plate"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/buddy_choice_panel">
        <com.sec.widget.EditTextWithClearButton
            android:textSize="18.66dp"
            android:textColor="@color/brown_color_002"
            android:gravity="center_vertical"
            android:id="@+id/buddy_search"
            android:background="@drawable/btn_search_dialog_xml"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:hint="@string/buddy_list_search_hint"
            android:singleLine="true"
            android:maxLength="30"
            android:editable="true"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/chat_title_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_weight="1">
            <com.sec.widget.EditTextWithClearButton
                android:textSize="18.6dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/edit_title"
                android:background="@drawable/co_textfield_search_empty_02"
                android:paddingLeft="7dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="42.7dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="6dp"
                android:singleLine="true"
                android:maxLength="30"
                android:editable="true"
                android:layout_weight="1"
                android:layout_toLeftOf="@+id/buddy_menu_save"
                android:imeOptions="actionDone"/>
            <EditText
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/tmp_title"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:editable="true"
                android:imeOptions="actionDone"/>
            <Button
                android:enabled="false"
                android:textSize="16dp"
                android:id="@+id/buddy_menu_save"
                android:visibility="visible"
                android:layout_width="97dp"
                android:layout_height="48.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="6dp"
                android:text="@string/save"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <EditText
            android:textSize="14dp"
            android:textColor="@color/brown_color_002"
            android:gravity="center_vertical"
            android:id="@+id/chat_title"
            android:background="@drawable/btn_search_dialog_xml"
            android:paddingLeft="7dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="42.7dp"
            android:layout_marginLeft="10.66dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10.7dp"
            android:layout_marginBottom="6dp"
            android:singleLine="true"
            android:editable="true"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lLayoutProfile"
        android:background="@drawable/messenger_info_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.sec.chaton.util.EllipsisTextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/textNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:lines="2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buddy_list_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searcdh_bar">
        <com.sec.widget.FastScrollableExpandableListView
            android:id="@+id/buddy_list"
            android:background="@null"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollingCache="false"
            android:groupIndicator="@null"
            android:divider="@drawable/divider_horizontal_dark_opaque"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/buddy_list_noresult_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#efad51"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buddy_list_search_noresult"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buddy_menu_bar"
            android:background="@drawable/winset_softkey_bg"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2.6dp">
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_group_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.7dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_broadcast"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1.3dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_invite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1.3dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:enabled="false"
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_add_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.7dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_blind_memo"
                    android:background="@drawable/buddyprofile_chat_button_xml"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1.3dp"
                    android:text="@string/done"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="16dp"
                    android:id="@+id/buddy_menu_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="0.7dp"
                    android:text="@string/buddy_list_menubar_cancel"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tell_friends_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searcdh_bar">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/co_sub_title_bg"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <Button
                android:textSize="@dimen/text_size_buddy_list_tell_friends_button"
                android:id="@+id/tell_friends_button"
                android:layout_width="210.66dp"
                android:layout_height="49.33dp"
                android:layout_marginTop="2dp"
                android:text="@string/buddy_list_tell_friends_button"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/msg_list_id_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.66dp"
                android:layout_marginTop="5.33dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5.33dp"/>
            <TextView
                android:textSize="22dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buddy_list_tell_friends_info"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider_horizontal_dark_opaque"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
