<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/chat_insert_menu_background"
    android:paddingTop="@dimen/insert_menu_grid_top_padding"
    android:layout_width="@dimen/insert_menu_item_size"
    android:layout_height="@dimen/insert_menu_item_size">
    <ImageView
        android:id="@+id/insertMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:textSize="@dimen/insert_menu_text_size"
        android:textColor="@color/chat_insert_menu_text_color"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/insertMenuText"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="@dimen/insert_menu_text_top_margin"
        android:maxLines="2"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="1"/>
</LinearLayout>
