<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/blackscreen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="22dp"
        android:textColor="@color/ics_main_font_color_2"
        android:id="@+id/black_noti_content2"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="34dp"
        android:bufferType="spannable"
        android:maxLines="4"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/noti_chat"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="11dp">
        <EditText
            android:textSize="21dp"
            android:gravity="center_vertical"
            android:id="@+id/noti_edit_chat"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="9dp"
            android:hint="@string/chat_enter_message_hint"
            android:singleLine="true"
            android:maxLength="2000"
            android:editable="true"
            android:layout_weight="1"
            android:imeOptions="actionDone"/>
        <Button
            android:enabled="false"
            android:textSize="18dp"
            android:id="@+id/noti_send_button"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="10dp"
            android:text="@string/layout_chat_fragment_send"
            android:layout_weight="3"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/noti_progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleSmall"/>
</LinearLayout>
