<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_delete"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/bacic_winset_color1"
            android:id="@+id/setting_chaton_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="21dp"
            android:text="@string/setting_delete_account"/>
        <TextView
            android:textSize="15sp"
            android:id="@+id/txt_msisdn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=""/>
        <TextView
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="47dp"
            android:text="@string/setting_delete_account_warning"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_delete_account"
        android:background="@drawable/btn_disclaimer_bg_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="70dp"
        android:text="@string/setting_btn_delete_account_txt"/>
</LinearLayout>
