<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/tab_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnExit"
            android:background="@drawable/header_btn_bg_xml"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:drawableLeft="@drawable/title_arrow_left"
            android:drawableRight="@drawable/chaton_logo"/>
        <TextView
            android:textSize="21dp"
            android:textColor="@color/ics_main_font_color"
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@string/tellfriends_via_facebook"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_height="@dimen/settings_layout_height"
            style="@style/BuddyListItemLayout">
            <TextView
                android:textSize="@dimen/buddy_name_font_size"
                android:textColor="@color/buddy_list_item_name_highlight"
                android:id="@+id/facebook_account"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/settings_layout_marginLeft"
                android:singleLine="false"
                android:layout_weight="1"
                style="@style/BuddyListItemTextName"/>
            <Button
                android:textSize="16dp"
                android:typeface="sans"
                android:ellipsize="marquee"
                android:layout_gravity="center_vertical"
                android:id="@+id/facebook_logout"
                android:background="@drawable/btn_block_buddy_bg_xml"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginRight="8dp"
                android:text="@string/logout"
                android:singleLine="true"/>
        </LinearLayout>
        <include layout="@layout/list_divider"/>
        <TextView
            android:textSize="22dp"
            android:typeface="sans"
            android:textColor="@color/buddy_list_item_name"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:id="@+id/facebook_invitation_card"
            android:background="@drawable/buddy_item_xml"
            android:paddingLeft="8dp"
            android:paddingRight="22dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:text="@string/tellfriends_facebook_submenu_list_invitation_card"
            android:singleLine="true"
            android:drawableRight="@drawable/list_round_more_arrow"/>
        <include layout="@layout/list_divider"/>
        <TextView
            android:textSize="22dp"
            android:typeface="sans"
            android:textColor="@color/buddy_list_item_name"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:id="@+id/facebook_invitation_msg"
            android:background="@drawable/buddy_item_xml"
            android:paddingLeft="8dp"
            android:paddingRight="22dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:text="@string/tellfriends_facebook_submenu_list_invitation_message"
            android:singleLine="true"
            android:drawableRight="@drawable/list_round_more_arrow"/>
        <include layout="@layout/list_divider"/>
    </LinearLayout>
</LinearLayout>
