<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/LinearLayout01"
    android:background="@drawable/chaton_attach_record_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <LinearLayout
            android:gravity="center"
            android:paddingLeft="146dp"
            android:paddingTop="13dp"
            android:visibility="visible"
            android:layout_width="464dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/record_voice_recording"
                android:background="@drawable/chaton_attach_record_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/record_video_recording_status_xml"/>
            <TextView
                android:textSize="28dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/record_voice_elapsed_time"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/layout_audio_rec_string"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/record_bg"
            android:background="@drawable/chaton_chats_attach_record_mic"
            android:layout_width="349dp"
            android:layout_height="506dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/progressbarLayout"
            android:paddingLeft="146dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/Timechek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/layout_audio_timer_run"
                android:layout_toLeftOf="@+id/progressbar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <SeekBar
                android:id="@+id/progressbar"
                android:layout_width="817dp"
                android:layout_height="12dp"
                android:layout_marginLeft="232dp"
                android:max="1200"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@null"
                android:thumbOffset="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#000000"
                android:gravity="center"
                android:id="@+id/Timechekdim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/layout_audio_timer_dim"
                android:layout_toRightOf="@+id/progressbar"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/chaton_attach_record_btbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/Relativebottom"
                android:paddingTop="12dp"
                android:layout_width="564dp"
                android:layout_height="105dp">
                <ImageView
                    android:id="@+id/btn_send_record_audio"
                    android:background="@drawable/bottom_button_background"
                    android:focusable="true"
                    android:layout_width="184dp"
                    android:layout_height="82dp"
                    android:src="@drawable/btn_record_audio_send"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btn_start_record_audio"
                    android:background="@drawable/bottom_button_background"
                    android:focusable="true"
                    android:layout_width="184dp"
                    android:layout_height="82dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/record_voice_recording"
                    android:scaleType="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/btn_cancel_record_audio"
                    android:background="@drawable/bottom_button_background"
                    android:focusable="true"
                    android:layout_width="184dp"
                    android:layout_height="82dp"
                    android:src="@drawable/btn_record_audio_cancel"
                    android:scaleType="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
