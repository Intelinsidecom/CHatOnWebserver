<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/intro_bg_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/brown_color_001"
        android:gravity="center_vertical"
        android:id="@+id/txt_title"
        android:background="@drawable/co_header2_bg"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/layout_regist_country_registration"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="left"
                android:id="@+id/txt_select_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12.6dp"
                android:layout_marginRight="24dp"
                android:text="@string/registration_select_country_or_region_code"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/newSearch"
                android:background="@drawable/co_btn_01_default"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp">
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/country_button_text"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:id="@+id/editCountryName"
                    android:paddingLeft="5dp"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="170dp"
                    android:text="@string/layout_regist_country"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/country_button_text"
                    android:gravity="center_vertical"
                    android:id="@+id/editCountryCode"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_regist_code"
                    android:layout_weight="1"/>
                <ImageView
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/btn_country_code_bg_xml"/>
            </LinearLayout>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:id="@+id/txtRegist_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="24dp"
                android:text="@string/regist_inputPno"/>
            <EditText
                android:id="@+id/editPno"
                android:paddingLeft="10.66dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:maxLength="20"
                android:inputType="number"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="8dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:enabled="false"
            android:id="@+id/btnSelfSMS"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="42.66dp"
            android:layout_marginRight="42.66dp"
            android:text="@string/done"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btnCancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/cancel"
            android:layout_weight="3"/>
        <Button
            android:textSize="7sp"
            android:id="@+id/btnGenerateIMEI"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="IMEI"
            android:layout_weight="3"/>
        <Button
            android:textSize="7sp"
            android:id="@+id/btnNSS"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="NSS"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>
