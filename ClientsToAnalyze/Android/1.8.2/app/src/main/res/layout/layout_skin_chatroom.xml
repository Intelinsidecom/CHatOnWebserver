<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skin_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <ImageView
        android:id="@+id/photo_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/relative_imgfriend"
        android:background="@drawable/thumb_default_line"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="6.7dp"
        android:layout_marginTop="20dp">
        <com.sec.chaton.widget.RoundedImageView
            android:id="@+id/imgfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contacts_default_img"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/textRecvContent"
        android:background="@drawable/message_bubble_read"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/relative_imgfriend"
        android:layout_alignBottom="@+id/relative_imgfriend">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textColorLink="#153da5"
            android:gravity="center"
            android:autoLink="all"
            android:id="@+id/read_font_size"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:text="@string/setting_set_font_hello"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#282319"
            android:id="@+id/read_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="@string/setting_change_skin_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRecvContent">
        <TextView
            android:textSize="11.3dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@+id/textfriend1"
            android:layout_width="wrap_content"
            android:layout_height="16.7dp"
            android:layout_marginLeft="6.7dp"
            android:layout_marginBottom="6.7dp"
            android:text="Victoria Justice"
            android:singleLine="true"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/lLayoutSndContent"
        android:background="@drawable/message_bubble_sent"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textRecvContent"
        android:layout_alignParentRight="true">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textColorLink="#153da5"
            android:gravity="left"
            android:autoLink="all"
            android:id="@+id/sent_font_size"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:text="@string/setting_set_font_hi"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#282319"
            android:id="@+id/sent_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:text="@string/setting_change_skin_time"/>
    </LinearLayout>
</RelativeLayout>
