<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/co_title_bar"
        android:paddingLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="@string/settings_invite_friend"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:gravity="left"
        android:layout_gravity="center"
        android:id="@+id/setting_tell_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="@string/setting_tell_friends"/>
    <ImageView
        android:background="#333a3a"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <Button
                android:textColor="#ffffffff"
                android:id="@+id/btn_email"
                android:background="@drawable/icon_email"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#ffffffff"
                android:gravity="left"
                android:id="@+id/setting_tell_friends_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_tell_friends_email_text"/>
        </LinearLayout>
        <ImageView
            android:background="#333a3a"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayoutSms"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <Button
                android:textColor="#ffffffff"
                android:id="@+id/btn_sms"
                android:background="@drawable/icon_sms"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:textSize="22dp"
                android:textColor="#ffffffff"
                android:gravity="left"
                android:id="@+id/tell_friends_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_tell_frinends_sms_text"/>
        </LinearLayout>
        <ImageView
            android:background="#333a3a"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </LinearLayout>
</LinearLayout>
