<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/twitter_following_thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/buddy_name_font_size"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/twitter_followings_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <Button
            android:textSize="12dp"
            android:textColor="@color/tell_friends_invite_btn_color"
            android:id="@+id/twitter_following_invite"
            android:background="@drawable/unblock_btn_xml"
            android:layout_width="63dp"
            android:layout_height="34dp"
            android:layout_marginRight="8dp"
            android:text="@string/chat_info_invite"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>
