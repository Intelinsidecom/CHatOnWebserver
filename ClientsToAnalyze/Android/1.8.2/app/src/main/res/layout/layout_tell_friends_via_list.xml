<?xml version="1.0" encoding="utf-8"?>
<com.sec.chaton.util.MultiTouchLock xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/headerView"
        android:background="@drawable/tab_title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnExit"
            android:background="@drawable/header_btn_bg_xml"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:drawableLeft="@drawable/title_arrow_left"
            android:drawableRight="@drawable/chaton_logo"/>
        <TextView
            android:textSize="21sp"
            android:textColor="@color/ics_main_font_color"
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="@null"
            android:layout_weight="1"/>
        <Button
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ffc8c8c8"
            android:id="@+id/header_button1"
            android:background="@drawable/header_btn_bg_xml"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:shadowColor="#a0000000"
            android:drawableLeft="@drawable/image_selector_check"
            android:drawablePadding="12dp"/>
        <Button
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ffc8c8c8"
            android:id="@+id/header_button2"
            android:background="@drawable/header_btn_bg_xml"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:shadowColor="#a0000000"
            android:drawableLeft="@drawable/image_selector_cancel"
            android:drawablePadding="12dp"/>
        <Button
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ffc8c8c8"
            android:id="@+id/header_button3"
            android:background="@drawable/header_btn_bg_xml"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:shadowColor="#a0000000"
            android:drawableLeft="@drawable/image_selector_cancel"
            android:drawablePadding="12dp"/>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/footer_divider"
        android:background="@drawable/list_divider_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/no_list_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/no_list_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/setting_explain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_msgbox_no_chat"/>
    </LinearLayout>
</com.sec.chaton.util.MultiTouchLock>
