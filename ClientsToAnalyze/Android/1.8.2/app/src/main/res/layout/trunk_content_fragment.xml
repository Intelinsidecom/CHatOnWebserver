<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/trunkContentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomView"
        android:layout_below="@+id/titleView"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/titleView"
        android:background="@drawable/co_status_bar_header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5.3dp">
        <com.sec.chaton.util.EllipsisTextView
            android:textSize="17.3dp"
            android:textColor="@color/color1"
            android:gravity="center_horizontal"
            android:id="@+id/trunkContentTitle"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:singleLine="true"/>
        <com.sec.chaton.util.EllipsisTextView
            android:textSize="14dp"
            android:textColor="#3c1f0a"
            android:gravity="center_horizontal"
            android:id="@+id/trunkContentTitleTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bottomView"
        android:background="@drawable/co_bg"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="54.6dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/commentButton"
            android:background="@drawable/ams_popup_btn_default"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/trunk_btn_comment"
            android:layout_weight="0.5"/>
        <Button
            android:enabled="false"
            android:id="@+id/trunkContentShareButton"
            android:background="@drawable/ams_popup_btn_default"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/trunk_btn_share"
            android:layout_weight="0.5"/>
    </LinearLayout>
</RelativeLayout>
