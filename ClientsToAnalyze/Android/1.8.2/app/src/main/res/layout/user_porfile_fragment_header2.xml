<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/co_sub_title_bg"
            android:paddingLeft="6.7dp"
            android:layout_width="match_parent"
            android:layout_height="25.3dp">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_profile"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imgbtnUPPhoto"
                android:background="#00000000"
                android:focusable="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="7.3dp"
                android:layout_marginTop="6.67dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout3"
                android:background="@drawable/userprofile_background_name_xml"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6.67dp"
                android:layout_marginRight="4.7dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:id="@+id/textPersonalName"
                        android:paddingLeft="7dp"
                        android:paddingRight="5.3dp"
                        android:duplicateParentState="true"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="35dp"
                        android:hint="Name"
                        android:singleLine="true"
                        android:imeOptions="actionDone"/>
                    <ImageButton
                        android:id="@+id/userprofile_detail"
                        android:background="@drawable/mypage_name_more_background_xml"
                        android:focusable="true"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_toRightOf="@+id/textPersonalName"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:textSize="17dp"
                    android:textColor="#9a9a9a"
                    android:gravity="left"
                    android:id="@+id/user_Pno"
                    android:paddingLeft="7dp"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1234567890"/>
                <TextView
                    android:textSize="17dp"
                    android:textColor="#9a9a9a"
                    android:gravity="left"
                    android:id="@+id/dateDisplay"
                    android:paddingLeft="7dp"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_your_birthday"
                    android:layout_below="@+id/text_birthday"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/llayout_account_1"
            android:paddingLeft="13.3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="64dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_samsung_account"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/ssm_blue"
                android:gravity="left"
                android:id="@+id/user_Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_gmail_account"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/linear_status_message"
            android:paddingLeft="7.3dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/blue_color_021"
                android:textColorHint="@color/blue_color_021"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/textPersonalMsg"
                android:background="@drawable/userprofile_background_xml"
                android:paddingLeft="14.7dp"
                android:paddingRight="14.7dp"
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.5dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="1.5dp"
                android:minHeight="46dp"
                android:hint="@string/mypage_profile_status"
                android:maxLines="3"
                android:drawableLeft="@drawable/mypage_status_input_background_xml"
                android:drawablePadding="10dp"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlayoutBDay"
            android:background="@drawable/userprofile_title_background"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/blue_color_021"
                android:gravity="left"
                android:id="@+id/text_birthday"
                android:paddingLeft="13.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.7dp"
                android:text="@string/setting_birthday"/>
            <ImageButton
                android:id="@+id/birthday_detail"
                android:background="@drawable/ams_btn_radio"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:src="@drawable/detail_round_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rlay_details"
            android:background="@drawable/co_sub_title_bg"
            android:paddingLeft="6.7dp"
            android:layout_width="match_parent"
            android:layout_height="25.3dp"
            android:layout_marginTop="6dp">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_interaction_rank"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/flayout_relationship"
            android:layout_width="match_parent"
            android:layout_height="62dp">
            <LinearLayout
                android:gravity="left"
                android:id="@+id/rParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.sec.widget.HorizontalListView
                    android:id="@+id/interaction_horizontal_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/userprofile_interaction_rank"
                    android:background="@drawable/mypage_name_more_background_xml"
                    android:focusable="true"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:background="#333a3a"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/rlay_details"
            android:paddingLeft="13.3dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_interaction_rank"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/userprofile_detail_del"
                android:background="@drawable/ams_btn_radio"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:src="@drawable/detail_round_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:background="#333a3a"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/list_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/memo_layout_title"
                android:background="@drawable/co_sub_title_bg"
                android:paddingLeft="6.7dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/memo_title"/>
            <LinearLayout
                android:id="@+id/mypage_write_area"
                android:padding="6.66dp"
                android:layout_width="match_parent"
                android:layout_height="44.66dp">
                <Button
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/memo_btn_write"
                    android:background="@drawable/memo_write_button_xml"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/memo_btn_write"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/memo_write_below_line"
                android:background="#333a3a"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
