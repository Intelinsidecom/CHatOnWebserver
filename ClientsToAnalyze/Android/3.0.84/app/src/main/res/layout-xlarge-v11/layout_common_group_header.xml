<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="35dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textAppearance="@style/TextAppearance.List03"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/text1"
            android:background="@drawable/subtitle_selector"
            android:paddingLeft="14dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:drawablePadding="14dp"/>
        <View
            android:background="#c6ced2"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>
    <View
        android:id="@+id/chat_unselector"
        android:background="@drawable/tablet_tw_preference_contents_list_no_arrow_left_holo_light"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
