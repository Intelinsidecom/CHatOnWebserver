<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/breadcrumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/preference_item_breadcrumbs"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        layout="@layout/layout_common_divider5"/>
    <RelativeLayout
        android:id="@+id/layout_setting_auto_contacts"
        android:background="@drawable/listview_selector"
        android:focusable="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">
        <CheckBox
            android:id="@+id/setting_auto_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/checkbox"
            android:layout_alignParentRight="true"/>
        <include
            android:id="@+id/setting_auto_contacts_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/setting_auto_contacts"
            layout="@layout/list_item_common_4"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/setting_auto_divider"
        android:background="@drawable/listview_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/layout_setting_sim_contacts"
        android:background="@drawable/listview_selector"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">
        <CheckBox
            android:id="@+id/setting_sim_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/checkbox"
            android:layout_alignParentRight="true"/>
        <include
            android:id="@+id/setting_sim_contacts_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/setting_sim_contacts"
            layout="@layout/list_item_common_4"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/layout_setting_manual_sync"
        android:background="@drawable/listview_selector"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp">
        <ImageView
            android:id="@+id/setting_manual_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/ic_sync_01"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TableLayout
            android:id="@+id/content"
            android:paddingLeft="@dimen/li4_padding_left"
            android:paddingTop="@dimen/li4_padding_top"
            android:paddingRight="@dimen/li4_padding_right"
            android:paddingBottom="@dimen/li4_padding_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/li4_content_margin_right"
            android:minHeight="@dimen/li4_min_height"
            android:stretchColumns="2"
            android:shrinkColumns="1"
            android:layout_toLeftOf="@+id/setting_manual_sync"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true">
            <TableRow android:gravity="center_vertical">
                <FrameLayout
                    android:id="@+id/space1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.List01.Variable"
                        android:ellipsize="end"
                        android:id="@+id/setting_manual_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.List07.Variable"
                        android:ellipsize="end"
                        android:id="@+id/setting_manual_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li4_text2_margin_top"
                        android:singleLine="false"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
