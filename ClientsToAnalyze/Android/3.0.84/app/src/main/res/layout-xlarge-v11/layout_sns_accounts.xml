<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_snsaccount_paddingleft"
    android:paddingRight="@dimen/layout_snsaccount_paddingright"
    android:paddingBottom="@dimen/layout_snsaccount_paddingbottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:textSize="@dimen/btn_tetxtsize_snsaccount"
        android:textColor="#282828"
        android:gravity="center"
        android:id="@+id/btn_twitter"
        android:paddingLeft="@dimen/btn_paddingleft_snsaccount"
        android:layout_width="@dimen/btn_width_snsaccount"
        android:layout_height="@dimen/btn_height_snsaccount"
        android:layout_marginRight="@dimen/btn_margin_snsaccount"
        android:text="@string/tellfriends_via_twitter"
        android:drawableLeft="@drawable/twitter_btn_normal"
        android:drawablePadding="@dimen/btn_drawablepadding_snsaccount"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_twitter"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:textSize="@dimen/btn_tetxtsize_snsaccount"
        android:textColor="#282828"
        android:gravity="center"
        android:id="@+id/btn_cinaweibo"
        android:paddingLeft="@dimen/btn_paddingleft_snsaccount"
        android:layout_width="@dimen/btn_width_snsaccount"
        android:layout_height="@dimen/btn_height_snsaccount"
        android:layout_marginRight="@dimen/btn_margin_snsaccount"
        android:text="@string/tellfriends_via_weibo"
        android:drawableLeft="@drawable/cinaweibo_btn_normal"
        android:drawablePadding="@dimen/btn_drawablepadding_snsaccount"
        android:layout_weight="1"/>
    <Button
        android:textSize="@dimen/btn_tetxtsize_snsaccount"
        android:textColor="#282828"
        android:gravity="center"
        android:id="@+id/btn_renren"
        android:paddingLeft="@dimen/btn_paddingleft_snsaccount"
        android:layout_width="@dimen/btn_width_snsaccount"
        android:layout_height="@dimen/btn_height_snsaccount"
        android:text="@string/tellfriends_via_renren"
        android:drawableLeft="@drawable/renren_btn_normal"
        android:drawablePadding="@dimen/btn_drawablepadding_snsaccount"
        android:layout_weight="1"/>
</LinearLayout>
