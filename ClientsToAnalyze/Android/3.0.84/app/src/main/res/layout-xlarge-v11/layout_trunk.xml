<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:id="@+id/lLayoutProfile"
        android:focusable="false"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentTop="false">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/optionBar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="68dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.sec.chaton.widget.ProfileImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/Chaticon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="14dp"
                    android:nextFocusForward="@+id/imageTrunkBg"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/Chaticon_loading"
                    android:visibility="visible"
                    android:layout_width="@dimen/profile_image_loader_size"
                    android:layout_height="@dimen/profile_image_loader_size"/>
            </FrameLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/LinearLayoutTitleText"
                android:paddingLeft="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textSize="19dp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="#ff000000"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:id="@+id/chatTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:shadowColor="#80ffffff"
                    android:shadowDx="0"
                    android:shadowDy="-1"/>
                <LinearLayout
                    android:id="@+id/layout_button_start_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15dp"
                        android:textColor="#ff9ba0a5"
                        android:ellipsize="marquee"
                        android:gravity="top"
                        android:id="@+id/textStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="76dp"
                android:layout_height="68dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imageTrunk"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/actionbar_ic_delete"/>
            </LinearLayout>
        </LinearLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            layout="@layout/layout_common_divider1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lLayoutProfile">
        <LinearLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/selectAll"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/select_all_layout_height"
                layout="@layout/layout_common_select_all"/>
            <ListView
                android:id="@+id/trunkItemGridView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="bottom"
                android:id="@+id/moreLoadbar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="17dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/loadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/dialog_connecting_server"/>
        </LinearLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/networkErrorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">
            <TextView
                android:textSize="@dimen/trunk_nothing_font_size"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toast_network_unable"
                android:drawableTop="@drawable/no_contents_network"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/nothingView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/trunk_nothing_font_size"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trunk_controller_nothing"
                    android:drawableTop="@drawable/no_contents_trunk"/>
                <TextView
                    android:textSize="@dimen/trunk_nothing_font_size"
                    android:textColor="@color/setting_explain_text"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trunk_nothing"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>
