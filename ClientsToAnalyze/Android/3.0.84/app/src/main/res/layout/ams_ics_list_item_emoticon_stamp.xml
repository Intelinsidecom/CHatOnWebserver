<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ams_ics2_stamp_item_size"
    android:layout_height="@dimen/ams_ics2_stamp_item_size">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_emoticon"
        android:background="@color/actionbar_tab_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_emoticon"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>
</RelativeLayout>
