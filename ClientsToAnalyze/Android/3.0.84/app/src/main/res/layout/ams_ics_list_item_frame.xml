<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="@dimen/ams_content_layout_column_width"
    android:layout_height="@dimen/ams_content_layout_column_width">
    <RelativeLayout
        android:id="@+id/layout_frame"
        android:background="@color/actionbar_tab_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/image_frame"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:id="@+id/layout_add"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:background="@color/actionbar_tab_background_color"
                android:layout_width="@dimen/ams_ics2_frame_item_content_width"
                android:layout_height="@dimen/ams_ics2_frame_item_content_height"
                android:src="@drawable/ams_default"
                android:scaleType="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_none"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@color/actionbar_tab_background_color"
                android:layout_width="@dimen/ams_ics2_frame_item_content_width"
                android:layout_height="@dimen/ams_ics2_frame_item_content_height"
                android:text="@string/ams_strarr_effect_image_01"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_checkbox"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <CheckBox
            android:id="@+id/checkbox_delete"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
