<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="83dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/profile_image_loading"
                android:visibility="visible"
                android:layout_width="@dimen/profile_image_loader_size"
                android:layout_height="@dimen/profile_image_loader_size"/>
        </FrameLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.List01"
            android:ellipsize="end"
            android:id="@+id/title_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:maxLines="2"
            android:layout_weight="1"/>
        <ImageButton
            android:enabled="true"
            android:layout_gravity="center"
            android:id="@+id/btn_edit"
            android:background="@drawable/listview_selector"
            android:focusable="true"
            android:nextFocusDown="@+id/alert_layout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/mypage_btn_icon_edit"
            android:contentDescription="@string/ams_optmenu_edit"/>
    </LinearLayout>
    <View
        android:background="#e1e1e1"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>
    <include
        android:id="@+id/alert_layout"
        android:background="@drawable/listview_selector"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/list_item_common_4"/>
    <View
        android:background="#e1e1e1"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ChatInfoSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.List03"
            android:id="@+id/ChatInfoBuddyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>
    <View
        android:background="#c6ced2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <Button
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/invite_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/chat_view_menu_invite"
            android:singleLine="true"
            android:layout_weight="1"/>
        <Button
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/create_group_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:text="@string/chat_info_create_group"
            android:singleLine="true"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
