<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/v_install_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/profile_popup_bg_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/buddy_popup_header_name_text_size"
            android:textColor="#0f0f0f"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/buddy_popup_header_name_margin_left"
            android:layout_marginTop="@dimen/buddy_popup_header_name_margin_top"
            android:layout_marginBottom="@dimen/buddy_popup_header_name_margin_bottom"
            android:text="@string/chatonv_install_dialog_title"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:background="#f46c21"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/buddy_popup_header_bottom_divider_margin"
        android:layout_marginRight="@dimen/buddy_popup_header_bottom_divider_margin"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/profile_popup_bg_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/buddy_popup_header_name_margin_left"
                android:text="@string/chatonv_install_dialog_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/profile_popup_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:id="@+id/v_install_dialog__cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="7dp"
            android:text="@string/dialog_cancel"
            android:layout_weight="1"
            style="@style/ButtonStyle.AlertDialog"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/v_install_dialog__continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="7dp"
            android:text="@string/chatonv_install_dialog_continue"
            android:layout_weight="1"
            style="@style/ButtonStyle.AlertDialog"/>
    </LinearLayout>
</LinearLayout>
