<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_auto_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22dp"
                android:id="@+id/label_translate_outgoing_msg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/only_below_ics_translate_switch_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="53dp">
            <CheckBox
                android:id="@+id/only_below_ics_translation_on_off_checkbox"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="17dp"
                android:textColor="@color/translation_popup_text"
                android:id="@+id/only_below_ics_translation_on_off_title"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/linearlayout_translate_incoming_msg"
            android:layout_width="match_parent"
            android:layout_height="53dp">
            <CheckBox
                android:id="@+id/checkbox_translate_incoming_msg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="17dp"
                android:id="@+id/title_translate_incoming_msg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incoming_msg_only"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/layout_profile_phoneNo2_divider"
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linearlayout_myLanguage"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/me_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/profile_photo_buddy_default"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/buddy_list_item_name"
                android:ellipsize="end"
                android:id="@+id/buddy_child_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/setting_interaction_me"
                android:singleLine="true"
                android:layout_toRightOf="@+id/me_image"
                android:layout_centerVertical="true"/>
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="133dp"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/layout_profile_phoneNo2_divider"
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linearlayout_buddyLanguage"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/buddy_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/profile_photo_buddy_default"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="22dp"
                android:textColor="@color/buddy_list_item_name"
                android:ellipsize="end"
                android:id="@+id/buddy_child_name1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/setting_interaction_buddy"
                android:singleLine="true"
                android:layout_toRightOf="@+id/buddy_image"
                android:layout_centerVertical="true"/>
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="133dp"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
