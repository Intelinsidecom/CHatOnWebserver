<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ams_port"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_button_top"
            android:paddingLeft="@dimen/ams_list_padding"
            android:paddingRight="@dimen/ams_list_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_list_tab2_layout_height"
            android:layout_alignParentTop="true">
            <ImageButton
                android:id="@+id/btn_tool_background_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ams_list_tab2_btns_height"
                android:src="@drawable/ams_btn_ic_create_frame"
                android:scaleType="centerInside"
                android:layout_weight="0.25"
                style="@style/TabButtonStyle2.Left"/>
            <View
                android:background="@drawable/tab_2_divider_vertical"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/ams_list_tab2_btns_height"/>
            <ImageButton
                android:id="@+id/btn_tool_pen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ams_list_tab2_btns_height"
                android:scaleType="centerInside"
                android:layout_weight="0.25"
                style="@style/TabButtonStyle2.Center"/>
            <View
                android:background="@drawable/tab_2_divider_vertical"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/ams_list_tab2_btns_height"/>
            <ImageButton
                android:id="@+id/btn_tool_stamp_shape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ams_list_tab2_btns_height"
                android:src="@drawable/ams_btn_ic_create_stamp"
                android:scaleType="centerInside"
                android:layout_weight="0.25"
                style="@style/TabButtonStyle2.Center"/>
            <View
                android:background="@drawable/tab_2_divider_vertical"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/ams_list_tab2_btns_height"/>
            <ImageButton
                android:id="@+id/btn_tool_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ams_list_tab2_btns_height"
                android:src="@drawable/ams_btn_ic_create_text"
                android:scaleType="centerInside"
                android:layout_weight="0.25"
                style="@style/TabButtonStyle2.Right"/>
        </LinearLayout>
        <View
            android:id="@+id/layout_button_top_divider"
            android:background="@drawable/ams_divider_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_button_top"/>
        <View
            android:id="@+id/layout_button_bottom_divider"
            android:background="@drawable/ams_divider_4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/layout_button_bottom"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_button_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ams_ics_composer_bottom_btn_height"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/btn_preview"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ams_btn_composer_preview"
                android:scaleType="centerInside"
                android:layout_weight="1"
                style="@style/AMSButtonStyle"/>
            <View
                android:background="@drawable/ams_divider_2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ams_ics_composer_bottom_btn_divider_margin"
                android:layout_marginBottom="@dimen/ams_ics_composer_bottom_btn_divider_margin"/>
            <ImageView
                android:id="@+id/btn_undo"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ams_btn_composer_undo"
                android:scaleType="centerInside"
                android:layout_weight="1"
                style="@style/AMSButtonStyle"/>
            <View
                android:background="@drawable/ams_divider_2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ams_ics_composer_bottom_btn_divider_margin"
                android:layout_marginBottom="@dimen/ams_ics_composer_bottom_btn_divider_margin"/>
            <ImageView
                android:id="@+id/btn_redo"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ams_btn_composer_redo"
                android:scaleType="centerInside"
                android:layout_weight="1"
                style="@style/AMSButtonStyle"/>
            <View
                android:background="@drawable/ams_divider_2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ams_ics_composer_bottom_btn_divider_margin"
                android:layout_marginBottom="@dimen/ams_ics_composer_bottom_btn_divider_margin"/>
            <ImageView
                android:id="@+id/btn_clear"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ams_btn_composer_clear"
                android:scaleType="centerInside"
                android:layout_weight="1"
                style="@style/AMSButtonStyle"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_button_bottom_divider"
            android:layout_below="@+id/layout_button_top_divider">
            <RelativeLayout
                android:id="@+id/layout_ams"
                android:layout_width="@dimen/ams_composer_port_draw_height"
                android:layout_height="@dimen/ams_composer_port_draw_height"
                android:layout_marginTop="@dimen/ams_composer_land_draw_margin_top"
                android:layout_marginBottom="@dimen/ams_composer_land_draw_margin_bottom"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_text_input"
            android:background="@color/white"
            android:padding="@dimen/ams_ics2_text_input_layout_padding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sec.vip.amschaton.AMSEditText
                    android:textAppearance="@style/TextAppearance.List31"
                    android:gravity="top|left"
                    android:id="@+id/edit_text_input"
                    android:padding="@dimen/ams_ics2_text_input_layout_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/chat_enter_message_hint"
                    android:maxLines="3"
                    android:capitalize="sentences"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.List31"
                    android:gravity="bottom|right"
                    android:id="@+id/text_remain"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ams_land"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout_ams_composer_land"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/layout_button_left"
                android:paddingLeft="@dimen/ams_composer_land_left_btns_margin_left"
                android:paddingRight="@dimen/ams_composer_land_left_btns_margin_right"
                android:layout_width="@dimen/ams_composer_land_left_btns_layout_width"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">
                <ImageButton
                    android:id="@+id/btn_tool_background_image"
                    android:background="@drawable/ams_composer_top_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ams_composer_land_left_btns_height"
                    android:src="@drawable/ams_btn_ic_create_frame"
                    android:scaleType="centerInside"/>
                <ImageButton
                    android:id="@+id/btn_tool_pen"
                    android:background="@drawable/ams_composer_center_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ams_composer_land_left_btns_height"
                    android:scaleType="centerInside"/>
                <ImageButton
                    android:id="@+id/btn_tool_stamp_shape"
                    android:background="@drawable/ams_composer_center_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ams_composer_land_left_btns_height"
                    android:src="@drawable/ams_btn_ic_create_stamp"
                    android:scaleType="centerInside"/>
                <ImageButton
                    android:id="@+id/btn_tool_text"
                    android:background="@drawable/ams_composer_bottom_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ams_composer_land_left_btns_height"
                    android:src="@drawable/ams_btn_ic_create_text"
                    android:scaleType="centerInside"/>
            </LinearLayout>
            <View
                android:id="@+id/layout_button_left_divider"
                android:background="@drawable/ams_divider_2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/layout_button_left"/>
            <View
                android:id="@+id/layout_button_right_divider"
                android:background="@drawable/ams_divider_4"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/layout_button_right"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/layout_button_right"
                android:layout_width="@dimen/ams_composer_land_right_btns_layout_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/btn_preview"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_btn_composer_preview"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    style="@style/AMSButtonStyle"/>
                <View
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ams_divider_2"
                    android:layout_width="@dimen/ams_composer_land_right_btns_divider_width"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/btn_redo"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_btn_composer_redo"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    style="@style/AMSButtonStyle"/>
                <View
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ams_divider_2"
                    android:layout_width="@dimen/ams_composer_land_right_btns_divider_width"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/btn_undo"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_btn_composer_undo"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    style="@style/AMSButtonStyle"/>
                <View
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ams_divider_2"
                    android:layout_width="@dimen/ams_composer_land_right_btns_divider_width"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/btn_clear"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ams_btn_composer_clear"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    style="@style/AMSButtonStyle"/>
            </LinearLayout>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:id="@+id/layout_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ams_composer_land_draw_margin_top"
                android:layout_marginBottom="@dimen/ams_composer_land_draw_margin_bottom"
                android:layout_toLeftOf="@+id/layout_button_right"
                android:layout_toRightOf="@+id/layout_button_left"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">
                <RelativeLayout
                    android:id="@+id/layout_ams"
                    android:layout_width="@dimen/ams_composer_land_draw_width"
                    android:layout_height="@dimen/ams_composer_land_draw_height"
                    android:layout_marginLeft="@dimen/ams_composer_land_draw_margin_bottom"
                    android:layout_marginRight="@dimen/ams_composer_land_draw_margin_bottom"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_text_input"
            android:background="@color/white"
            android:padding="@dimen/ams_ics2_text_input_layout_padding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:id="@+id/layout_text_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layout_buttons"
                android:layout_alignParentTop="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.sec.vip.amschaton.AMSEditText
                        android:textAppearance="@style/TextAppearance.List31"
                        android:gravity="top|left"
                        android:id="@+id/edit_text_input"
                        android:padding="@dimen/ams_ics2_text_input_layout_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/chat_enter_message_hint"
                        android:capitalize="sentences"
                        android:layout_weight="1"
                        android:layout_above="@+id/text_remain"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.List31"
                        android:gravity="bottom|right"
                        android:id="@+id/text_remain"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
