<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/anicon_package_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ams_background_dwnld_tab2_layout_height">
                <ImageView
                    android:id="@+id/anicon_background_item_thumbnail"
                    android:background="@drawable/picturebox"
                    android:layout_width="@dimen/anicon_download_thumbnail_width"
                    android:layout_height="@dimen/anicon_download_thumbnail_height"
                    android:layout_marginLeft="@dimen/ams_background_dwnld_thumb_margin_left"
                    android:layout_marginTop="@dimen/ams_background_dwnld_thumb_margin_top"
                    android:layout_alignParentTop="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/anicon_package_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ams_background_dwnld_text_margin_left"
                    android:layout_marginTop="@dimen/ams_background_dwnld_text_margin_top"
                    android:layout_toLeftOf="@+id/item_download_view"
                    android:layout_toRightOf="@+id/anicon_background_item_thumbnail"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true">
                    <TextView
                        android:textSize="@dimen/ams_background_dwnld_Title_font_size"
                        android:ellipsize="marquee"
                        android:id="@+id/anicon_package_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ams_background_dwnld_title_text_height"
                        android:text="Background"
                        android:singleLine="true"/>
                    <TextView
                        android:textSize="@dimen/ams_background_dwnld_volume_font_size"
                        android:textColor="#e86d00"
                        android:ellipsize="marquee"
                        android:id="@+id/volume_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ams_background_dwnld_volume_text_height"
                        android:layout_marginTop="@dimen/ams_background_dwnld_volume_text_margin_top"
                        android:text="second label"
                        android:singleLine="true"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/item_download_view"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ams_background_dwnld_btn_margin_left"
                    android:layout_marginTop="@dimen/ams_background_dwnld_btn_margin_top"
                    android:layout_marginRight="@dimen/ams_background_dwnld_btn_margin_right"
                    android:src="@drawable/download_ic_download"
                    android:scaleType="centerInside"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/layout_button_top_divider"
                android:background="@drawable/ams_divider_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ams_background_dwnld_top_divider_height"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/ams_item_background_detail_image_view"
                android:layout_width="@dimen/ams_background_dwnld_image_size"
                android:layout_height="@dimen/ams_background_dwnld_image_size"
                android:layout_margin="@dimen/ams_background_dwnld_image_margin"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
