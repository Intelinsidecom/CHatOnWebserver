<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridView
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/ams_item_downloads_list"
        android:paddingTop="@dimen/theme_gridview_padding_height"
        android:paddingBottom="@dimen/theme_gridview_padding_height"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:drawSelectorOnTop="true"
        android:verticalSpacing="@dimen/theme_gridview_item_vertical_spacing"
        android:stretchMode="spacingWidthUniform"
        android:columnWidth="@dimen/theme_gridview_item_width"
        android:numColumns="auto_fit"
        android:layout_weight="1"
        android:fastScrollEnabled="false"/>
</LinearLayout>
