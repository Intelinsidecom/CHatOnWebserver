<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_select_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_common_select_all"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_recent_sample"
        android:paddingLeft="@dimen/ams_list_padding"
        android:paddingRight="@dimen/ams_list_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ams_list_tab2_layout_height">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_recently"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/ams_list_tab2_btns_height"
            android:layout_weight="1"
            style="@style/TabButtonStyle2.Left">
            <ImageView
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ams_btn_ic_recent"
                android:scaleType="centerInside"/>
        </FrameLayout>
        <View
            android:layout_gravity="center_vertical"
            android:background="@drawable/tab_2_divider_vertical"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/ams_list_tab2_btns_height"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_sample"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/ams_list_tab2_btns_height"
            android:layout_weight="1"
            style="@style/TabButtonStyle2.Right">
            <ImageView
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ams_btn_ic_sample"
                android:scaleType="centerInside"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/layout_button_top_divider"
        android:background="@drawable/ams_divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <FrameLayout
        android:id="@+id/ams_message_list"
        android:paddingLeft="@dimen/ams_content_layout_margin_left"
        android:paddingTop="@dimen/ams_content_layout_margin_top"
        android:paddingRight="@dimen/ams_content_layout_margin"
        android:paddingBottom="@dimen/ams_content_layout_margin_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <GridView
            android:gravity="center"
            android:id="@+id/grid_user_file_list"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="@dimen/ams_content_layout_margin"
            android:verticalSpacing="@dimen/ams_content_layout_margin"
            android:columnWidth="@dimen/ams_content_layout_column_width"
            android:numColumns="auto_fit"/>
        <include
            android:layout_gravity="center"
            android:id="@+id/layout_no_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_common_no_contents"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/ams_stamp_list"
        android:paddingLeft="@dimen/ams_ics2_stamp_grid_layout_padding_left"
        android:paddingTop="@dimen/ams_ics2_stamp_grid_layout_padding_top"
        android:paddingRight="@dimen/ams_ics2_stamp_grid_layout_padding_right"
        android:paddingBottom="@dimen/ams_ics2_stamp_grid_layout_padding_bottom"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <GridView
            android:gravity="center"
            android:id="@+id/grid_user_stamp_file_list"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="@dimen/ams_ics2_stamp_grid_layout_horizontal_space"
            android:verticalSpacing="@dimen/ams_ics2_stamp_grid_layout_vertical_space"
            android:columnWidth="@dimen/ams_ics2_stamp_grid_layout_column_width"
            android:numColumns="auto_fit"/>
        <include
            android:layout_gravity="center"
            android:id="@+id/layout_stamp_no_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_common_no_contents"/>
    </FrameLayout>
</LinearLayout>
