<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/button_fix_line"
        android:layout_above="@+id/layout_status"/>
    <LinearLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/btn_play_pause"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ams_btn_ic_play_preview"
            android:layout_weight="0.15"
            style="@style/AMSButtonStyle"/>
        <SeekBar
            android:layout_gravity="center"
            android:id="@+id/progressbar"
            android:paddingRight="16dp"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:maxHeight="9dp"
            android:minHeight="9dp"
            android:thumb="@null"
            android:layout_weight="0.85"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider_line"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/layout_ams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
