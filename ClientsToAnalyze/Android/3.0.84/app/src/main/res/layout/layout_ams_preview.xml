<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/layout_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="41dp">
            <SeekBar
                android:id="@+id/progressbar"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:thumb="@null"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleHorizontal"/>
        </RelativeLayout>
        <View
            android:background="@drawable/tab_2_background"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.sec.common.widget.HoneycombLinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Tab2ButtonBarStyle">
            <ImageButton
                android:id="@+id/btn_play_pause"
                android:src="@drawable/ams_btn_composer_preview"
                style="@style/AMSButtonStyle"/>
            <ImageButton
                android:id="@+id/btn_delete"
                android:src="@drawable/ams_btn_ic_play_del_button"
                style="@style/AMSButtonStyle"/>
            <ImageButton
                android:id="@+id/btn_edit"
                android:src="@drawable/ams_btn_ic_play_edit_button"
                style="@style/AMSButtonStyle"/>
            <ImageButton
                android:id="@+id/btn_send"
                android:src="@drawable/ams_btn_ic_play_chatsend_button"
                style="@style/AMSButtonStyle"/>
        </com.sec.common.widget.HoneycombLinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_status"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/layout_ams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
