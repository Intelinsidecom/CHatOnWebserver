<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/selectAll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_common_select_all"/>
    <include
        android:id="@+id/backup_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/list_item_common_1"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        layout="@layout/layout_common_divider5"/>
    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/backuplist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fastScrollEnabled="true"
            style="@style/ListViewStyle.Common1"/>
        <TextView
            android:gravity="center"
            android:id="@+id/emptylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dialog_title_noblock_item"/>
    </LinearLayout>
</LinearLayout>
