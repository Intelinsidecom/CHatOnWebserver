<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:orientation="vertical"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:focusable="false"
                android:visibility="visible"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_profile_phone_no"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_info_ic_call"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.List04"
                            android:id="@+id/profile_phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <include layout="@layout/layout_common_divider5"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_profile_phone_no2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_info_ic_call"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.List04"
                            android:id="@+id/profile_phone_num2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <include layout="@layout/layout_common_divider5"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_profile_phone_no3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_info_ic_call"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.List04"
                            android:id="@+id/profile_phone_num3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <include layout="@layout/layout_common_divider5"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_profile_phone_no4"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_info_ic_call"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.List04"
                            android:id="@+id/profile_phone_num4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <include layout="@layout/layout_common_divider5"/>
                </LinearLayout>
                <ListView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_profile_samsung_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_info_ic_account"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.List04"
                            android:id="@+id/samsung_email_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <include layout="@layout/layout_common_divider5"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_profile_birthday"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:focusable="true"
                        android:descendantFocusability="afterDescendants"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_info_ic_birthday"/>
                        <TextView
                            android:textAppearance="@style/TextAppearance.List04"
                            android:id="@+id/profile_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/birthday_add_icon"
                            android:focusable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_ic_add"
                            style="@style/ImageButtonStyle7"/>
                    </LinearLayout>
                    <include layout="@layout/layout_common_divider5"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0">
        <include layout="@layout/layout_common_divider8"/>
        <LinearLayout
            android:orientation="horizontal"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/profile_chat"
                android:background="?attr/itemBackground"
                android:src="@drawable/profile_info_ic_chat"
                android:contentDescription="@string/menu_button_start_chat"
                style="@style/BuddyPageCommunicationButton"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/profile_call_divider"
                android:background="#d7d7d7"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:id="@+id/profile_call"
                android:background="?attr/itemBackground"
                android:src="@drawable/profile_info_call"
                android:contentDescription="@string/menu_call"
                style="@style/BuddyPageCommunicationButton"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/profile_v_voice_divider"
                android:background="#d7d7d7"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:id="@+id/profile_v_voice"
                android:background="?attr/itemBackground"
                android:src="@drawable/profile_info_voice"
                android:contentDescription="@string/menu_voice_call"
                style="@style/BuddyPageCommunicationButton"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/profile_v_video_divider"
                android:background="#d7d7d7"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:id="@+id/profile_v_video"
                android:background="?attr/itemBackground"
                android:src="@drawable/profile_info_vt"
                android:contentDescription="@string/menu_video_call"
                style="@style/BuddyPageCommunicationButton"/>
            <View
                android:layout_gravity="center"
                android:id="@+id/profile_contact_divider"
                android:background="#d7d7d7"
                android:visibility="gone"
                android:layout_width="1dp"
                android:layout_height="30dp"/>
            <ImageButton
                android:id="@+id/profile_contact"
                android:background="?attr/itemBackground"
                android:src="@drawable/profile_info_contact"
                android:contentDescription="@string/media_contact"
                style="@style/BuddyPageCommunicationButton"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
