<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="#00000000">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="9dp">
        <FrameLayout
            android:background="@drawable/thum_stroke"
            android:descendantFocusability="afterDescendants"
            android:layout_width="96.5dp"
            android:layout_height="96.5dp"
            android:layout_marginRight="-2dp">
            <ImageView
                android:id="@+id/profile_image"
                android:background="@drawable/mypage_profile_image_selector"
                android:padding="2dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/mypage_profile_image"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/profile_image_loading"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/co_list_bg2"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6.5dp"
                android:layout_marginRight="10dp"
                android:minHeight="37dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.List01"
                    android:ellipsize="end"
                    android:id="@+id/profile_name"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/buddy_profile_status_image"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.List18"
                        android:ellipsize="end"
                        android:id="@+id/profile_status_message"
                        android:focusable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <include
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                layout="@layout/layout_common_divider5"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.5dp">
                    <FrameLayout
                        android:descendantFocusability="afterDescendants"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="6dp">
                        <ImageView
                            android:id="@+id/profile_image_1"
                            android:background="@drawable/mypage_profile_image_selector"
                            android:padding="1dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/mypage_profile_image"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/profile_image_1_loading"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <FrameLayout
                        android:descendantFocusability="afterDescendants"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="4dp">
                        <ImageView
                            android:id="@+id/profile_image_2"
                            android:background="@drawable/mypage_profile_image_selector"
                            android:padding="1dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/mypage_profile_image"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/profile_image_2_loading"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <FrameLayout
                        android:descendantFocusability="afterDescendants"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="4dp">
                        <ImageView
                            android:id="@+id/profile_image_3"
                            android:background="@drawable/mypage_profile_image_selector"
                            android:padding="1dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/mypage_profile_image"/>
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/profile_image_3_loading"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/buddy_profile_more_icon"
                        android:background="?attr/itemBackground"
                        android:focusable="true"
                        android:visibility="gone"
                        android:layout_width="23dp"
                        android:layout_height="32dp"
                        android:src="@drawable/chat_icon_arrow"/>
                </LinearLayout>
                <com.sec.common.widget.HoneycombLinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:descendantFocusability="afterDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="43.5dp"
                    android:divider="@drawable/divider5_vertical"
                    android:showDividers="middle"
                    android:dividerPadding="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_edit_buddyname"
                            android:focusable="true"
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:src="@drawable/registration_ic_edit"
                            android:contentDescription="@string/mypage_edit_profile"
                            style="@style/ImageButtonStyle7"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_buddyprofile_info"
                            android:focusable="true"
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/mypage_btn_icon_info"
                            android:contentDescription="@string/mypage_info"
                            style="@style/ImageButtonStyle7"/>
                    </LinearLayout>
                </com.sec.common.widget.HoneycombLinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="153dp"
        android:layout_marginRight="7.5dp"
        android:layout_marginBottom="9dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:textAppearance="@style/TextAppearance.List19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/poston_title"
                android:shadowColor="#000000"
                android:shadowRadius="2.5"/>
            <ImageView
                android:background="@drawable/mypage_line_poston_write"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="27dp"
                android:contentDescription="@string/poston_title"/>
        </LinearLayout>
        <ImageButton
            android:layout_gravity="right"
            android:id="@+id/buddypage_main_poston_write"
            android:background="@drawable/mypage_edit_btn_selector"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/poston_title"/>
    </FrameLayout>
</LinearLayout>
