<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_event_button">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="left"
                android:layout_width="324dp"
                android:layout_height="42dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/event_popup_title"
                android:scaleType="fitStart"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:id="@+id/event_popup_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="403.5dp"
                    android:src="@drawable/upgrade_info_character"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/layout_event_popup_checkbox_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="19dp">
            <CheckBox
                android:layout_gravity="center"
                android:id="@+id/event_popup_checkbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ams_never_show_again"/>
        </LinearLayout>
        <include
            android:id="@+id/event_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_common_button_6"/>
    </LinearLayout>
</RelativeLayout>
