<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/lLayoutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
        <ImageView
            android:id="@+id/textDateLeft"
            android:background="@drawable/chat_room_system_bubble_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/textDate"
            android:layout_centerVertical="true"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Chat02"
            android:gravity="center"
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/textDateRight"
            android:background="@drawable/chat_room_system_bubble_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/textDate"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:textAppearance="@style/TextAppearance.List01"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:text="title"
                android:singleLine="true"
                android:layout_weight="1"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List40"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_alignTop="@+id/title"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/errorIcon"
                android:visibility="gone"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/download_ic_noti"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List40"
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sub"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="right"
            android:id="@+id/image_layout"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/message">
            <ImageView
                android:id="@+id/image_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
