<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/llayout_info_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:focusable="false"
        android:visibility="visible"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayout_info_register_phone_number"
            android:background="@drawable/listview_selector"
            android:paddingTop="11dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@drawable/mypage_ic_phone"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List01"
                android:ellipsize="marquee"
                android:id="@+id/info_register_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="@string/mypage_register_phone_number"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            android:background="#c6ced2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/llayout_info_phone_number"
            android:background="@drawable/listview_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/info_phone_number_divider"
            android:background="#c6ced2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayout_info_signin_account"
            android:background="@drawable/listview_selector"
            android:paddingTop="11dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@drawable/mypage_ic_account"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List01"
                android:ellipsize="marquee"
                android:id="@+id/info_signin_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/info_signin_account_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/samsungaccount_line"
            android:background="#c6ced2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/llayout_info_birthday"
            android:background="@drawable/listview_selector"
            android:paddingTop="11dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:src="@drawable/mypage_ic_birthday"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List01"
                android:ellipsize="marquee"
                android:id="@+id/info_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="@string/add_your_birthday"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
        <ImageView
            android:background="#c6ced2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
</LinearLayout>
