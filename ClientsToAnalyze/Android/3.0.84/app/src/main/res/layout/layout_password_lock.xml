<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/password_lock_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/msgbox_list_message_unread_count"
        android:layout_width="match_parent"
        android:layout_height="27dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:src="@drawable/chaton_logo"/>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/layout_common_divider2"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.67"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List23"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summary_for_passlock"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/password_square"
                android:layout_width="@dimen/password_square_size"
                android:layout_height="@dimen/password_square_size">
                <ImageView
                    android:id="@+id/code_1"
                    android:background="@drawable/password_circle"
                    android:visibility="invisible"
                    android:layout_width="@dimen/password_circle_size"
                    android:layout_height="@dimen/password_circle_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/password_square"
                android:layout_width="@dimen/password_square_size"
                android:layout_height="@dimen/password_square_size">
                <ImageView
                    android:id="@+id/code_2"
                    android:background="@drawable/password_circle"
                    android:visibility="invisible"
                    android:layout_width="@dimen/password_circle_size"
                    android:layout_height="@dimen/password_circle_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/password_square"
                android:layout_width="@dimen/password_square_size"
                android:layout_height="@dimen/password_square_size">
                <ImageView
                    android:id="@+id/code_3"
                    android:background="@drawable/password_circle"
                    android:visibility="invisible"
                    android:layout_width="@dimen/password_circle_size"
                    android:layout_height="@dimen/password_circle_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/password_square"
                android:layout_width="@dimen/password_square_size"
                android:layout_height="@dimen/password_square_size">
                <ImageView
                    android:id="@+id/code_4"
                    android:background="@drawable/password_circle"
                    android:visibility="invisible"
                    android:layout_width="@dimen/password_circle_size"
                    android:layout_height="@dimen/password_circle_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.69"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List24"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/hint"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"/>
    </LinearLayout>
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="0.41">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List10"
                android:gravity="top|center_horizontal"
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1.2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>
        </LinearLayout>
    </ScrollView>
    <com.sec.chaton.util.MultiTouchLock
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_1"
                    android:nextFocusLeft="@+id/keypad_3"
                    android:nextFocusUp="@+id/keypad_cancel"
                    android:text="1"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_2"
                    android:nextFocusUp="@+id/keypad_0"
                    android:text="2"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_3"
                    android:nextFocusRight="@+id/keypad_1"
                    android:nextFocusUp="@+id/keypad_back"
                    android:text="3"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
            </TableRow>
            <TableRow
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_4"
                    android:nextFocusLeft="@+id/keypad_6"
                    android:text="4"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_5"
                    android:text="5"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_6"
                    android:nextFocusRight="@+id/keypad_4"
                    android:text="6"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
            </TableRow>
            <TableRow
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_7"
                    android:nextFocusLeft="@+id/keypad_9"
                    android:text="7"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_8"
                    android:text="8"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_9"
                    android:nextFocusRight="@+id/keypad_7"
                    android:text="9"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
            </TableRow>
            <TableRow
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp">
                <Button
                    android:enabled="false"
                    android:textAppearance="@style/TextAppearance.Etc10"
                    android:textSize="@dimen/password_lock_delete_account"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/keypad_cancel"
                    android:nextFocusLeft="@+id/keypad_back"
                    android:nextFocusDown="@+id/keypad_1"
                    android:onClick="clickkeypad_cancel"
                    style="@style/Widget.Keypad_b"/>
                <Button
                    android:textAppearance="@style/TextAppearance.Etc08"
                    android:textSize="@dimen/keypad_textsize"
                    android:id="@+id/keypad_0"
                    android:nextFocusDown="@+id/keypad_2"
                    android:text="0"
                    android:onClick="clickkeypad"
                    style="@style/Widget.Keypad_b"/>
                <ImageButton
                    android:id="@+id/keypad_back"
                    android:nextFocusRight="@+id/keypad_cancel"
                    android:nextFocusDown="@+id/keypad_3"
                    android:src="@drawable/keypad_btn_backspace_src"
                    android:onClick="clickkeypad_back"
                    style="@style/Widget.Keypad_b"/>
            </TableRow>
        </TableLayout>
    </com.sec.chaton.util.MultiTouchLock>
</LinearLayout>
