<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/poston_comment_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        layout="@layout/mypage_poston_list_location"/>
    <include
        android:id="@+id/poston_comment_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        layout="@layout/layout_common_text_icon_line"/>
    <FrameLayout
        android:id="@+id/poston_comment_loading_progressbar"
        android:paddingLeft="8dp"
        android:paddingTop="11dp"
        android:paddingRight="8dp"
        android:paddingBottom="11dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
