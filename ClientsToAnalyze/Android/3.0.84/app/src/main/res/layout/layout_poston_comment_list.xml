<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/postOnCommentEditLayout">
        <ListView
            android:id="@+id/poston_comment_list"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            style="@style/ListViewStyle.Common2"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/postOnCommentEditLayout"
        android:paddingLeft="8dp"
        android:paddingTop="7dp"
        android:paddingRight="8dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/postOnCommentEdit"
                android:paddingLeft="7dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:hint="@string/trunk_item_write_a_comment"
                android:inputType="textMultiLine"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/postOnCommentSendBtn"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_btn_icon_send"
            android:contentDescription="@string/buddy_group_edit_menubar_add"
            style="@style/ImageButtonStyle6"/>
    </LinearLayout>
</RelativeLayout>
