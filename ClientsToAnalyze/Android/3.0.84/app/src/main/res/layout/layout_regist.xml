<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/provision_upside"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="81dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/provisioning_chaton_logo"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:textAppearance="@style/TextAppearance.List09"
                        android:autoLink="email"
                        android:id="@+id/txtStartChatAs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/provision_start_chat_as"
                        android:textAlignment="center"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.List10"
                        android:id="@+id/txtRegist_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="@string/provision_regist_notice"
                        android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="@style/TextAppearance.List27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/layout_regist_country_code"/>
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="3dp"
                    layout="@layout/layout_common_text_line2"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.List27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/regist_inputPno"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Chat09"
                    android:id="@+id/include_area"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/registration_include_area_code"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp">
                    <EditText
                        android:textSize="18dp"
                        android:textColor="#72000000"
                        android:id="@+id/editArea"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_marginRight="8dp"
                        android:maxLength="6"
                        android:layout_weight="0.3"
                        android:inputType="number">
                        <requestFocus/>
                    </EditText>
                    <com.sec.chaton.widget.ClearableEditText
                        android:textSize="18dp"
                        android:textColor="#72000000"
                        android:id="@+id/editPno"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:maxLength="20"
                        android:layout_weight="0.7"
                        android:inputType="number"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.List10"
                    android:id="@+id/TextView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/provision_regist_notice"
                    android:layout_weight="1"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">
                    <Button
                        android:enabled="true"
                        android:textSize="18dp"
                        android:id="@+id/btnRegister"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/provision_register"
                        android:layout_weight="1"
                        android:contentDescription="@string/view_send_sms"
                        style="@style/ButtonStyle2"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
