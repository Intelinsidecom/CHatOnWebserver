<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
        <View
            android:background="@drawable/intro_bg_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"/>
        <View
            android:background="@drawable/intro_bg_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.43"/>
        <View
            android:background="@drawable/intro_bg_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo_on"
            android:layout_width="@dimen/intro_chaton_image_width"
            android:layout_height="@dimen/intro_chaton_image_height"
            android:src="@drawable/intro_icon_on"/>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo_text"
            android:layout_width="@dimen/intro_chaton_logo_width"
            android:layout_height="@dimen/intro_chaton_logo_height"
            android:src="@drawable/provisioning_chaton_logo"/>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="#090909"
                android:id="@+id/step_comment"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_regi_preparing_chaton"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/registration_progress"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="60dp"
                android:indeterminateOnly="true"
                style="@style/RegistrationProgressBarHorizontal"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="?android:attr/progressBarStyleSmall"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/dialog_provision_ing"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>
        <TextView
            android:textSize="10dp"
            android:textColor="#324140"
            android:layout_gravity="center_horizontal"
            android:id="@+id/samsung_ltd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/samsung_company"
            android:shadowColor="#4cffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"/>
        <LinearLayout
            android:id="@+id/linear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"/>
        <TextView
            android:textSize="9dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo_differerent_for_canada"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_is_different_for_canada"
            android:shadowColor="#6b000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="1"/>
        <LinearLayout
            android:id="@+id/linear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>
    </LinearLayout>
</FrameLayout>
