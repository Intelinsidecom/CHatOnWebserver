<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skin_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
    <RelativeLayout
        android:id="@+id/layoutReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/imgfriend"
            android:background="@drawable/frame_background"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/contacts_default_01"
            android:scaleType="fitCenter"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#191919"
            android:id="@+id/layout_textfriend"
            android:paddingLeft="12dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Samsung"
            android:singleLine="true"
            android:shadowColor="#ccffffff"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_toRightOf="@+id/imgfriend"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/textRecvContent"
            android:background="@drawable/bubble_receive_01_normal"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgfriend"
            android:layout_below="@+id/layout_textfriend">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:autoLink="all"
                android:id="@+id/read_font_size"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_set_font_hi"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layoutReceived">
        <com.sec.chaton.widget.ProfileImageView
            android:id="@+id/imgMe"
            android:background="@drawable/frame_background"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/contacts_default_01"
            android:scaleType="fitCenter"
            android:layout_alignBottom="@+id/lLayoutSndContent"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/lLayoutSndContent"
            android:background="@drawable/bubble_send_01_normal"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imgMe">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:autoLink="all"
                android:id="@+id/sent_font_size"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_have_a_nice_day"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
