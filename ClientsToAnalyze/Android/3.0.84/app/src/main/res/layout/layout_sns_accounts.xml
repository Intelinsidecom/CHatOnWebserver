<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="11dp"
    android:paddingRight="15dp"
    android:paddingBottom="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.12"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_googlepluse"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/btn_googlepluse"
            android:background="@drawable/googleplus_btn_normal"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_sns_button"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/btn_twitter"
            android:background="@drawable/twitter_btn_normal"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_sns_button"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_cinaweibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/btn_cinaweibo"
            android:background="@drawable/cinaweibo_btn_normal"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_sns_button"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_renren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/btn_renren"
            android:background="@drawable/renren_btn_normal"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_sns_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.12"/>
</LinearLayout>
