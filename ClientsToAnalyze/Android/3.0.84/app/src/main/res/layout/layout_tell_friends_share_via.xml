<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.List27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/setting_tell_friends"
            android:singleLine="false"
            android:layout_weight="1"/>
    </LinearLayout>
    <ImageView
        android:background="@drawable/listview_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="true"
        style="@style/ListViewStyle.Common1"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_provision_ing"/>
    </LinearLayout>
</LinearLayout>
