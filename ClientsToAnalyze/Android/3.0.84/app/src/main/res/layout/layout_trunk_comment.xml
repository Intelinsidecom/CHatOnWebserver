<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="7dp"
    android:paddingRight="8dp"
    android:paddingBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <EditText
            android:textAppearance="@style/TextAppearance.List01"
            android:textSize="@dimen/edit_chat_text_size"
            android:id="@+id/trunkCommentEdit"
            android:paddingLeft="7dp"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:hint="@string/trunk_item_write_a_comment"
            android:maxLength="140"
            android:inputType="textMultiLine"/>
    </LinearLayout>
    <ImageButton
        android:enabled="false"
        android:id="@+id/trunkCommentSendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_btn_icon_send"
        android:contentDescription="@string/done"
        style="@style/ImageButtonStyle6"/>
</LinearLayout>
