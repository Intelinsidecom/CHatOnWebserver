<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:id="@+id/trunk_comment_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/list_item_min_height">
        <RelativeLayout
            android:paddingLeft="15dp"
            android:paddingTop="6dp"
            android:paddingRight="15dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sec.chaton.widget.ProfileImageView
                android:id="@+id/commentBuddyProfile"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginRight="9dp"
                android:layout_alignParentTop="true"
                style="@style/GeneralInformationPictureStyle"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/commentBuddyProfile"
                android:layout_centerVertical="false">
                <LinearLayout
                    android:id="@+id/above_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.List07"
                        android:ellipsize="end"
                        android:id="@+id/commentWriterName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.List08"
                        android:id="@+id/commentRegistrationTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.List09"
                    android:id="@+id/commentBuddyContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:layout_below="@+id/above_layout"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@color/list_divider_color"/>
    </LinearLayout>
</FrameLayout>
