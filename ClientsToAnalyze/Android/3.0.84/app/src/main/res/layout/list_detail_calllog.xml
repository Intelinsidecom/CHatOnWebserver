<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calllog_list"
    android:paddingRight="12dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="61dp">
    <CheckBox
        android:id="@+id/delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:button="@drawable/checkbox"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/call_content"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_toLeftOf="@+id/delete">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/calllog_dummy_calldate"
                android:layout_alignParentLeft="true"
                style="@style/TextAppearance.List01"/>
            <ImageView
                android:id="@+id/call_method"
                android:background="@drawable/buddies_voicecall"
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/call_type"
                android:background="@drawable/common_received"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/image_calllog_reject_message"
                android:background="@drawable/common_small_rejectmessage"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/call_type"
                android:layout_centerVertical="true"/>
            <TextView
                android:ellipsize="marquee"
                android:id="@+id/call_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/calllog_dummy_calldate"
                android:singleLine="true"
                android:layout_toRightOf="@+id/image_calllog_reject_message"
                android:layout_centerVertical="true"
                android:marqueeRepeatLimit="marquee_forever"
                style="@style/TextAppearance.List07"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
