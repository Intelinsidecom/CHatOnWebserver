<?xml version="1.0" encoding="utf-8"?>
<com.sec.chaton.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:local="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/li6_padding_left"
    android:paddingTop="@dimen/li6_padding_top"
    android:paddingRight="@dimen/li6_padding_right"
    android:paddingBottom="@dimen/li6_padding_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/li6_min_height"
    local:checkable_widget="@android:id/checkbox">
    <TableLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:shrinkColumns="2"
        android:layout_toLeftOf="@android:id/checkbox"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true">
        <TableRow android:gravity="center_vertical">
            <FrameLayout
                android:id="@+id/space1"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image1"
                android:background="@drawable/frame_background"
                android:layout_width="@dimen/li6_image1_layout_width"
                android:layout_height="@dimen/li6_image1_layout_height"
                android:layout_marginRight="@dimen/li6_image1_layout_margin_right"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:shrinkColumns="0">
                    <TableRow>
                        <com.sec.chaton.widget.AdaptableTextView
                            android:textAppearance="@style/TextAppearance.List04.Variable"
                            android:ellipsize="end"
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:includeFontPadding="false"/>
                        <FrameLayout
                            android:id="@+id/space3"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.sec.chaton.widget.AdaptableTextView
                                android:textAppearance="@style/TextAppearance.List04.Variable"
                                android:ellipsize="none"
                                android:id="@+id/text1_1"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"/>
                        </FrameLayout>
                    </TableRow>
                </TableLayout>
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:shrinkColumns="0">
                    <TableRow>
                        <com.sec.chaton.widget.AdaptableTextView
                            android:textAppearance="@style/TextAppearance.List07.Variable"
                            android:ellipsize="end"
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/li6_text2_layout_margin_top"
                            android:singleLine="true"
                            android:includeFontPadding="false"/>
                        <FrameLayout
                            android:id="@+id/space4"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <CheckBox
        android:id="@android:id/checkbox"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/li6_content_margin_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/CheckBoxStyle.WithoutText"/>
</com.sec.chaton.widget.CheckableRelativeLayout>
