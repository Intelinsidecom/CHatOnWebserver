<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <RelativeLayout
            android:id="@+id/content_layout"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textAppearance="@style/TextAppearance.List20"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List21"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toLeftOf="@+id/text3"
                android:layout_toRightOf="@+id/text1"
                android:layout_alignBottom="@+id/text1"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List08"
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_alignBottom="@+id/text1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List09"
                android:autoLink="all"
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_alignLeft="@+id/text1"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#dcdcdc"/>
</LinearLayout>
