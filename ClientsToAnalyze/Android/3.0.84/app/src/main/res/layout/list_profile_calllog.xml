<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_call_layout"
    android:layout_width="match_parent"
    android:layout_height="61dp">
    <ImageView
        android:id="@+id/profile_call_type"
        android:background="@drawable/common_received"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:id="@+id/call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp">
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/profile_call_method"
                android:background="@drawable/profile_info_call"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:id="@+id/profile_call_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="00:00:10"
                android:singleLine="true"
                style="@style/TextAppearance.List31"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/call_info"
        android:layout_toRightOf="@+id/profile_call_type"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/profile_call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:singleLine="true"
            style="@style/TextAppearance.Etc01"/>
        <TextView
            android:id="@+id/profile_call_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="date"
            android:singleLine="true"
            style="@style/TextAppearance.List01"/>
    </LinearLayout>
    <View
        android:background="@color/list_expand_child_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
