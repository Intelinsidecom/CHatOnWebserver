<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0">
        <TableRow
            android:id="@+id/table1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.List01.Variable"
                android:ellipsize="none"
                android:id="@+id/chatRoomParticipantsCount"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:includeFontPadding="false"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:id="@+id/count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.Etc01.Variable"
                    android:ellipsize="none"
                    android:id="@+id/chatRoomTrunkUnReadCount"
                    android:background="@drawable/chat_btn_comment_blue"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="99"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Etc01.Variable"
                    android:ellipsize="none"
                    android:id="@+id/chatRoomUnReadCount"
                    android:background="@drawable/chat_btn_comment_orange"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:singleLine="true"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
