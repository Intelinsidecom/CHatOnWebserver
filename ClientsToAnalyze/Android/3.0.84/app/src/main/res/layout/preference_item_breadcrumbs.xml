<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:local="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingTop="0dp"
    android:paddingRight="20dp"
    android:paddingBottom="0dp"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp">
    <TextView
        android:textAppearance="@style/TextAppearance.List30"
        android:id="@+id/breadcrumb1"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/separator1"
        android:background="@drawable/ic_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/breadcrumb1"
        android:layout_centerVertical="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.List30"
        android:id="@+id/breadcrumb2"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/separator1"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/separator2"
        android:background="@drawable/ic_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/breadcrumb2"
        android:layout_centerVertical="true"/>
    <TextView
        android:textAppearance="@style/TextAppearance.List30"
        android:id="@+id/breadcrumb3"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/separator2"
        android:layout_centerVertical="true"/>
</RelativeLayout>
