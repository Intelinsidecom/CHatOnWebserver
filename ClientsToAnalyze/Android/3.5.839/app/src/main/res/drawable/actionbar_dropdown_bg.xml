<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <padding
                        android:top="3dp"
                        android:bottom="3dp"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/pulldown_icw_select"/>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <padding
                        android:top="3dp"
                        android:bottom="3dp"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/pulldown_icw_focus"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <padding
                        android:top="3dp"
                        android:bottom="3dp"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:drawable="@drawable/pulldown_icw_normal"/>
        </layer-list>
    </item>
</selector>
