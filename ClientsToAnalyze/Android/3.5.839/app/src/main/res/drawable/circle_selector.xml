<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <padding
                        android:left="@dimen/half_dip"
                        android:top="0dp"
                        android:right="@dimen/half_dip"
                        android:bottom="1.5dp"/>
                </shape>
            </item>
            <item>
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:thickness="@dimen/one_dip">
                    <solid android:color="@android:color/transparent"/>
                    <stroke
                        android:width="@dimen/one_dip"
                        android:color="#f47e1f"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <padding
                        android:left="@dimen/half_dip"
                        android:top="0dp"
                        android:right="@dimen/half_dip"
                        android:bottom="1.5dp"/>
                </shape>
            </item>
            <item>
                <shape
                    android:dither="true"
                    android:shape="oval">
                    <solid android:color="#66000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
