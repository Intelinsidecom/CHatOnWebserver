<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#dadada"/>
                </shape>
            </item>
            <item android:bottom="@dimen/one_dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/listview_pressed_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ebebeb"/>
            <stroke
                android:width="1dp"
                android:color="@color/actionbar_line_color"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ebebeb"/>
            <stroke
                android:width="1dp"
                android:color="@color/actionbar_line_color"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#dadada"/>
                </shape>
            </item>
            <item android:bottom="@dimen/one_dip">
                <shape android:shape="rectangle">
                    <solid android:color="#ebebeb"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
