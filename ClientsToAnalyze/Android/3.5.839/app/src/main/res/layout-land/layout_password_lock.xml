<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/password_lock_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/msgbox_list_message_unread_count"
        android:layout_width="match_parent"
        android:layout_height="27dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/tablet_chaton_logo_width"
            android:layout_height="@dimen/tablet_chaton_logo_height"
            android:layout_marginLeft="@dimen/tablet_chaton_logo_padding_left"
            android:src="@drawable/chaton_logo"/>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/layout_common_divider2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="24dp"
                    android:textColor="#0f0f0f"
                    android:gravity="center"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_for_passlock"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#f47e1f"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/hint"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"/>
                <ScrollView
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14dp"
                            android:textColor="#5f5f5f"
                            android:gravity="center"
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/password_circle_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/code_1"
                            android:background="@drawable/password_circle_01"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/password_circle_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/code_2"
                            android:background="@drawable/password_circle_02"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/password_circle_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/code_3"
                            android:background="@drawable/password_circle_03"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/password_circle_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/code_4"
                            android:background="@drawable/password_circle_04"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <com.sec.chaton.util.MultiTouchLock
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_1"
                        android:nextFocusLeft="@+id/keypad_3"
                        android:nextFocusUp="@+id/keypad_cancel"
                        android:text="1"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_2"
                        android:nextFocusUp="@+id/keypad_0"
                        android:text="2"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_3"
                        android:nextFocusRight="@+id/keypad_1"
                        android:nextFocusUp="@+id/keypad_back"
                        android:text="3"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                </TableRow>
                <TableRow
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_4"
                        android:nextFocusLeft="@+id/keypad_6"
                        android:text="4"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_5"
                        android:text="5"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_6"
                        android:nextFocusRight="@+id/keypad_4"
                        android:text="6"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                </TableRow>
                <TableRow
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_7"
                        android:nextFocusLeft="@+id/keypad_9"
                        android:text="7"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_8"
                        android:text="8"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_9"
                        android:nextFocusRight="@+id/keypad_7"
                        android:text="9"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                </TableRow>
                <TableRow
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">
                    <Button
                        android:enabled="false"
                        android:textAppearance="@style/TextAppearance.Etc10"
                        android:textSize="@dimen/password_lock_delete_account"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_cancel"
                        android:nextFocusLeft="@+id/keypad_back"
                        android:nextFocusDown="@+id/keypad_1"
                        android:onClick="clickkeypad_cancel"
                        style="@style/Widget.Keypad_b"/>
                    <Button
                        android:textAppearance="@style/TextAppearance.Etc08"
                        android:textSize="@dimen/keypad_textsize"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/keypad_0"
                        android:nextFocusDown="@+id/keypad_2"
                        android:text="0"
                        android:onClick="clickkeypad"
                        style="@style/Widget.Keypad_b"/>
                    <ImageButton
                        android:id="@+id/keypad_back"
                        android:nextFocusRight="@+id/keypad_cancel"
                        android:nextFocusDown="@+id/keypad_3"
                        android:src="@drawable/keypad_btn_backspace_src"
                        android:onClick="clickkeypad_back"
                        android:contentDescription="@string/delete"
                        style="@style/Widget.Keypad_b"/>
                </TableRow>
            </TableLayout>
        </com.sec.chaton.util.MultiTouchLock>
    </LinearLayout>
</LinearLayout>
