<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/chatroom_custom_layout"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        style="@style/ActionButtonStyle">
        <TextView
            android:textAppearance="@style/TextAppearance.Bar01"
            android:ellipsize="end"
            android:id="@+id/chatroom_custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TableLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/subtitle_group"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:layout_alignParentLeft="true">
            <TableRow>
                <ImageView
                    android:id="@+id/image_typing"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Bar06"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/chatroom_custom_sub_title"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:singleLine="true"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/title_alert_off_indicator"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/push_alarm"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
