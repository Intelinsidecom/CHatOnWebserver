<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/chatroom_custom_layout"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        style="@style/ActionButtonStyle">
        <TextView
            android:textAppearance="@style/TextAppearance.Bar01"
            android:ellipsize="end"
            android:id="@+id/chatroom_custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/subtitle_group"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <TextView
                android:textAppearance="@style/TextAppearance.List07"
                android:ellipsize="end"
                android:id="@+id/chatroom_custom_sub_title"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/title_alert_off_indicator"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/push_alarm"
                android:layout_alignParentLeft="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
