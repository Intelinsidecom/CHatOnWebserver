<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/privacy_menu_layout"
        android:background="@drawable/tab_2_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/divider5_vertical"
        android:showDividers="middle">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/privacy_add"
            android:background="?attr/itemBackground"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/buddy_add_contact">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_buddies_special"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/privacy_report"
            android:background="?attr/itemBackground"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/spammer_report_title">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/multi_icon_report"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/privacy_block"
            android:background="?attr/itemBackground"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/buddy_list_contextual_menu_block">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_buddies_special02"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textAppearance="@style/TextAppearance.Chat02"
        android:gravity="center"
        android:id="@+id/privacy_text"
        android:background="@drawable/chat_noti_bar"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/loadMoreProgress"
        android:padding="11dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="31dp"
            android:layout_height="31dp"/>
        <TextView
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/loading_previous_messages"/>
    </LinearLayout>
</LinearLayout>
