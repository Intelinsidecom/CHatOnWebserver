<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/messageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/messageInputLayout"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/imagebackgroup"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/messageHistoryLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/message_select_all"
                    android:background="@drawable/select_all_layout_background"
                    android:focusable="true"
                    android:visibility="gone"
                    android:nextFocusUp="@+id/message_select_all"
                    android:layout_width="match_parent"
                    android:layout_height="37dp">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="#555555"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/select_all"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:id="@+id/message_select_all_chButton"
                        android:focusable="false"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/recipients_subject_linear"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ViewStub
                        android:id="@+id/recipients_editor_stub"
                        android:layout="@layout/recipients_editor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textColor="@android:color/black"
                        android:id="@+id/subject"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subject_hint"
                        android:singleLine="true"
                        android:capitalize="sentences"
                        android:autoText="true"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/messageListViewFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.sec.chaton.smsplugin.p112ui.MessageListView
                            android:id="@+id/history"
                            android:background="@null"
                            android:paddingBottom="@dimen/input_text_height_adjusted"
                            android:alwaysDrawnWithCache="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:listSelector="#00000000"
                            android:cacheColorHint="#00000000"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ScrollView
                                android:id="@+id/attachment_editor_scroll_view"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <view
                                    android:orientation="vertical"
                                    android:id="@+id/attachment_editor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    class="com.sec.chaton.smsplugin.ui.AttachmentEditor">
                                    <ViewStub
                                        android:id="@+id/image_attachment_view_stub"
                                        android:layout="@layout/image_attachment_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <ViewStub
                                        android:id="@+id/video_attachment_view_stub"
                                        android:layout="@layout/video_attachment_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <ViewStub
                                        android:id="@+id/audio_attachment_view_stub"
                                        android:layout="@layout/audio_attachment_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <ViewStub
                                        android:id="@+id/slideshow_attachment_view_stub"
                                        android:layout="@layout/slideshow_attachment_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                    <ViewStub
                                        android:id="@+id/raw_attachment_view_stub"
                                        android:layout="@layout/raw_attachment_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>
                                </view>
                            </ScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/emoticonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/messageInputLayout"
            android:layout_alignParentTop="true"/>
        <FrameLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_gravity="bottom"
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chat_attach_button_xml"
                    android:nextFocusForward="@+id/btnChatImage"/>
                <ImageButton
                    android:layout_gravity="bottom"
                    android:id="@+id/btnChatImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/chat_emoticon_button_xml"
                    android:onClick="onEmoticonClick"
                    android:contentDescription="@string/menu_insert_smiley"
                    android:nextFocusForward="@+id/embedded_text_editor"/>
                <com.sec.chaton.smsplugin.p112ui.widget.MmsMyEditText
                    android:textAppearance="@style/TextAppearance.List01"
                    android:textSize="@dimen/edit_chat_text_size"
                    android:layout_gravity="bottom"
                    android:id="@+id/embedded_text_editor"
                    android:nextFocusRight="@+id/send_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/type_to_compose_sms_message"
                    android:maxLines="7"
                    android:capitalize="sentences"
                    android:autoText="true"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:imeOptions="flagNoEnterAction|flagNoExtractUi|actionSend"/>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:id="@+id/button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:enabled="false"
                        android:id="@+id/send_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/chat_btn_icon_sms_send"
                        android:drawablePadding="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/send"
                        style="@style/ImageButtonStyle6"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="bottom|right"
        android:id="@+id/floating_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="44dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/text_counter_layout"
            android:background="@drawable/floating_text_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#7d7d7d"
                android:id="@+id/text_counter"
                android:paddingLeft="7dp"
                android:paddingTop="6dp"
                android:paddingRight="7dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="#a5a5a5"
                android:layout_gravity="right"
                android:paddingRight="7dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Byte"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text_mms_layout"
            android:background="@drawable/floating_text_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#f47e1f"
                android:id="@+id/text_mms"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mms"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
