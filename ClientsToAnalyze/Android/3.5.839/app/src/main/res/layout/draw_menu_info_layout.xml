<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_mypage_user_guide_page"
    android:background="#cc000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/closeinfo"
            android:background="@drawable/coverstory_setting_guide_close_button_selector"
            android:focusable="true"
            android:layout_width="@dimen/chat_draw_menu_close_button_size"
            android:layout_height="@dimen/chat_draw_menu_close_button_size"
            android:layout_marginRight="@dimen/chat_draw_menu_close_button_margin_right"
            android:src="@drawable/coverstory_setting_guide_close_button"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chat_draw_menu_arrow_width"
            android:layout_marginTop="4dp"
            android:src="@drawable/chats_explain_arrow"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:id="@+id/coverstory_user_guide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/draw_menu_msg"
            android:lines="2"
            android:layout_weight="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"/>
</LinearLayout>
