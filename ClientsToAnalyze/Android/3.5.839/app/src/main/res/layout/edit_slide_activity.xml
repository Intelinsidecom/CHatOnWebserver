<?xml version="1.0" encoding="utf-8"?>
<com.sec.chaton.smsplugin.p112ui.BasicSlideEditorView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/slide_editor_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:drawable/editbox_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image"
                android:background="@android:drawable/picture_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/audio"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mms_music"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/audio_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/pre_slide_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_maps_back"
                    style="?android:attr/buttonStyleSmall"/>
                <ImageButton
                    android:id="@+id/next_slide_button"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_maps_next"
                    style="?android:attr/buttonStyleSmall"/>
            </LinearLayout>
            <Button
                android:id="@+id/preview_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview"
                android:lines="2"
                style="?android:attr/buttonStyleSmall"/>
            <Button
                android:id="@+id/replace_image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replace_image"
                android:lines="2"
                style="?android:attr/buttonStyleSmall"/>
            <Button
                android:id="@+id/remove_slide_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remove_slide"
                android:lines="2"
                style="?android:attr/buttonStyleSmall"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <EditText
            android:textSize="15sp"
            android:id="@+id/text_message"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:nextFocusRight="@+id/done_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/type_to_compose_text_or_leave_blank"
            android:maxLines="1"
            android:capitalize="sentences"
            android:autoText="true"
            android:layout_weight="1">
            <requestFocus/>
        </EditText>
        <Button
            android:id="@+id/done_button"
            android:nextFocusLeft="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"/>
    </LinearLayout>
</com.sec.chaton.smsplugin.p112ui.BasicSlideEditorView>
