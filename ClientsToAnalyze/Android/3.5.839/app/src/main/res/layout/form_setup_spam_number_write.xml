<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="73.33dp">
        <TextView
            android:textSize="17.33dp"
            android:id="@+id/autoreject_item_text"
            android:paddingLeft="12dp"
            android:paddingRight="7.33dp"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spam_msg_number_menu"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/list_create"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:textSize="18sp"
                android:id="@+id/edit_text"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:maxLength="100"
                android:layout_weight="1"
                android:inputType="phone"
                android:imeOptions="flagNoExtractUi"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider1"
        android:background="@drawable/divider_vertical_2line"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/match_criteria_layout"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="65.33dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="65.33dp"
            android:layout_weight="0.9">
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spam_msg_match_criteria_menu"
                android:singleLine="true"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_sub"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <View
        android:id="@+id/divider1"
        android:background="@drawable/divider_vertical_2line"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
