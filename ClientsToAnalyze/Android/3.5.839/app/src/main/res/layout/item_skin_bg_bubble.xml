<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_bg"
        android:background="@color/bg_thumnail_background"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.sec.chaton.widget.SelectableImageView
            android:id="@+id/skin_bg"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="@dimen/change_skin_item_bg_height"
            android:layout_height="@dimen/change_skin_item_bg_height"
            android:scaleType="fitXY"
            local:imageViewSelector="@drawable/imageview_selector"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bubble"
        android:background="@color/bg_thumnail_background"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:gravity="center"
            android:background="@color/bg_thumnail_background"
            android:layout_width="@dimen/change_skin_item_bg_height"
            android:layout_height="@dimen/change_skin_item_bg_height">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/skin_bubble"
                android:background="@drawable/bubble_receive_01_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <com.sec.chaton.widget.SelectableImageView
                android:id="@+id/skin_bubble_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                local:imageViewSelector="@drawable/imageview_selector"/>
        </FrameLayout>
    </LinearLayout>
    <ImageView
        android:layout_gravity="top|right"
        android:id="@+id/frame_check"
        android:background="@drawable/mypage_img_select"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:layout_gravity="top|right"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>
</FrameLayout>
