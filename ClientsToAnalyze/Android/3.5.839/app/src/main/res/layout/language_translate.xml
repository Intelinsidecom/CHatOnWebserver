<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_auto_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22dp"
                android:id="@+id/label_translate_outgoing_msg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/only_below_ics_translate_switch_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:textSize="17dp"
                android:id="@+id/only_below_ics_translation_on_off_title"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <CheckBox
                android:id="@+id/only_below_ics_translation_on_off_checkbox"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/only_below_ics_translation_on_off_divider"
            android:background="@drawable/listview_divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/only_below_ics_translate_incoming_msg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <TextView
                android:textSize="17dp"
                android:id="@+id/only_below_ics_title_translate_incoming_msg"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incoming_msgs_only"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <CheckBox
                android:id="@+id/only_below_ics_checkbox_translate_incoming_msg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/only_below_ics_translation_incoming_msg_divider"
            android:background="@drawable/listview_divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linearlayout_buddyLanguage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_translate_language_spinner_height">
            <TextView
                android:textAppearance="@style/TextAppearance.Pop12"
                android:ellipsize="end"
                android:id="@+id/buddy_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/translator_popup_me_title"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="@dimen/translate_language_spinner_width"
                android:layout_height="@dimen/translate_language_spinner_height"
                android:layout_marginTop="@dimen/translate_language_spinner_margin_top"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="@dimen/translate_language_spinner_margin_bottom"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/layout_profile_phoneNo2_divider"
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linearlayout_myLanguage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_translate_language_spinner_height">
            <TextView
                android:textAppearance="@style/TextAppearance.Pop12"
                android:ellipsize="end"
                android:id="@+id/buddy_child_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/translator_popup_buddy_title"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="@dimen/translate_language_spinner_width"
                android:layout_height="@dimen/translate_language_spinner_height"
                android:layout_marginTop="@dimen/translate_language_spinner_margin_top"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="@dimen/translate_language_spinner_margin_bottom"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/translator_popup_bubby_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="9.5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/buddy_image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/profile_photo_buddy_default"
                    android:contentDescription="@string/setting_interaction_buddy"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/translator_popup_bubby_msg_bubble"
                    android:background="@drawable/bubble_receive_01_normal"
                    android:addStatesFromChildren="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/buddy_image">
                    <TextView
                        android:textSize="@dimen/ft_chat_01_size"
                        android:textColor="@color/translate_source_text"
                        android:id="@+id/translator_popup_bubby_msg_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/translator_popup_buddy_msg_divider"
                        android:background="@drawable/bubble_divider"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:textSize="@dimen/ft_chat_01_size"
                        android:textColor="@color/disclaimer_text_color"
                        android:id="@+id/translator_popup_bubby_msg_translated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/translator_popup_bubby_side_dimmer"
                android:background="#86d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/translator_popup_me_side"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingBottom="9.5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/me_image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/profile_photo_buddy_default"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/setting_interaction_me"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/translator_popup_me_msg_bubble"
                    android:background="@drawable/bubble_send_01_normal"
                    android:addStatesFromChildren="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/me_image">
                    <TextView
                        android:textSize="@dimen/ft_chat_01_size"
                        android:textColor="@color/translate_source_text"
                        android:id="@+id/translator_popup_me_msg_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/translator_popup_me_msg_divider"
                        android:background="@drawable/bubble_divider"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:textSize="@dimen/ft_chat_01_size"
                        android:textColor="@color/disclaimer_text_color"
                        android:id="@+id/translator_popup_me_msg_translated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/translator_popup_me_side_dimmer"
                android:background="#86d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <ImageView
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/linearlayout_translate_incoming_msg"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <CheckBox
                android:id="@+id/checkbox_translate_incoming_msg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="17dp"
                android:id="@+id/title_translate_incoming_msg"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incoming_msgs_only"
                android:singleLine="true"
                android:layout_toRightOf="@+id/checkbox_translate_incoming_msg"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
