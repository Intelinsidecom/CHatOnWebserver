<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridView
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/emoticonGridView"
        android:paddingLeft="@dimen/anicon_gridview_padding_side"
        android:paddingTop="@dimen/anicon_gridview_padding"
        android:paddingRight="@dimen/anicon_gridview_padding_side"
        android:paddingBottom="@dimen/anicon_gridview_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:horizontalSpacing="@dimen/anicon_gridview_item_horizontal_spacing"
        android:verticalSpacing="@dimen/anicon_gridview_item_vertical_spacing"
        android:stretchMode="spacingWidth"
        android:columnWidth="@dimen/anicon_gridview_item_width"
        android:numColumns="auto_fit"
        android:layout_above="@+id/panelLayout"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/emoticonEmptyView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/panelLayout">
        <TextView
            android:textAppearance="@style/TextAppearance.List28"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/emoticion_sticker_recently_used_empty_title"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/characterDownloadView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/panelLayout">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="263dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="88dp"
                android:layout_height="142dp"
                android:src="@drawable/upgrade_info_character"/>
            <LinearLayout
                android:gravity="bottom|right"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:layout_width="175dp"
                android:layout_height="142dp">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/characterButtonLayout"
                    android:background="@drawable/button2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="137dp"
                    android:minHeight="37dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chats_btn_download"/>
                    <TextView
                        android:textAppearance="@style/TextAppearance.Btn04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/download_title"/>
                </LinearLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.Chat29"
                    android:gravity="center_horizontal"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="13dp"
                    android:text="@string/anicon_meet_character"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/panelLayout"
        android:background="@drawable/chat_forward_btn_normal_center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/tab_shop_layout"
            android:focusable="true"
            android:layout_width="@dimen/anicon_tab_indicator_width"
            android:layout_height="@dimen/anicon_tab_indicator_height"
            style="@style/TabButtonStyle2.Center">
            <ImageView
                android:id="@+id/tab_shop"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/chat_anicon_btn_shop"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/panel_shop_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_new"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/divider6_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <HorizontalScrollView
            android:id="@+id/panelScrollView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sec.common.widget.HoneycombLinearLayout
                android:id="@+id/panelContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:divider="@drawable/divider6_vertical"
                android:showDividers="end|middle"/>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>
