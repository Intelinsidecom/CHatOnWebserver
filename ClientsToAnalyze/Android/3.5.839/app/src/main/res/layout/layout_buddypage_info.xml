<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_provision_ing"/>
    </LinearLayout>
    <ScrollView
        android:orientation="vertical"
        android:id="@+id/buddypage_scrollview"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_profile_info"
            android:focusable="false"
            android:visibility="visible"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/layout_name"
                layout="@layout/layout_mypage_info_item"/>
            <include
                android:id="@+id/layout_phone"
                layout="@layout/layout_mypage_info_item"/>
            <include
                android:id="@+id/layout_account"
                layout="@layout/layout_mypage_info_item"/>
            <include
                android:id="@+id/layout_birthday"
                android:focusable="true"
                android:descendantFocusability="afterDescendants"
                layout="@layout/layout_mypage_info_item"/>
            <include
                android:id="@+id/info_sns_account"
                layout="@layout/layout_sns_info_item"/>
        </LinearLayout>
    </ScrollView>
    <com.sec.common.widget.HoneycombLinearLayout
        android:orientation="horizontal"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Tab2ButtonBarStyle">
        <ImageButton
            android:id="@+id/profile_chat"
            android:background="?attr/itemBackground"
            android:src="@drawable/profile_info_ic_chat"
            android:contentDescription="@string/menu_button_start_chat"
            style="@style/Tab2ButtonStyle"/>
        <ImageButton
            android:id="@+id/profile_sms"
            android:background="?attr/itemBackground"
            android:src="@drawable/profile_info_sms"
            android:contentDescription="@string/chat_send_sms"
            style="@style/Tab2ButtonStyle"/>
        <ImageButton
            android:id="@+id/profile_v_voice"
            android:background="?attr/itemBackground"
            android:src="@drawable/profile_info_voice"
            android:contentDescription="@string/menu_voice_call"
            style="@style/Tab2ButtonStyle"/>
        <ImageButton
            android:id="@+id/profile_v_video"
            android:background="?attr/itemBackground"
            android:src="@drawable/profile_info_vt"
            android:contentDescription="@string/menu_video_call"
            style="@style/Tab2ButtonStyle"/>
        <ImageButton
            android:id="@+id/profile_call"
            android:background="?attr/itemBackground"
            android:src="@drawable/profile_info_call"
            android:contentDescription="@string/menu_call"
            style="@style/Tab2ButtonStyle"/>
        <ImageButton
            android:id="@+id/profile_contact"
            android:background="?attr/itemBackground"
            android:src="@drawable/profile_info_contact"
            android:contentDescription="@string/media_contact"
            style="@style/Tab2ButtonStyle"/>
    </com.sec.common.widget.HoneycombLinearLayout>
</LinearLayout>
