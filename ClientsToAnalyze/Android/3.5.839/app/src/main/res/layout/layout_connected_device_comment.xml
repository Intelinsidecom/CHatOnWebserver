<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_divider_pref_connected_devices"/>
    <TextView
        android:textAppearance="@style/TextAppearance.List10"
        android:gravity="center_vertical"
        android:id="@+id/textVeiw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/comment_connected_devices"/>
    <Button
        android:enabled="true"
        android:id="@+id/button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="7dp"
        android:text="@string/connected_device_deregister"
        style="@style/ButtonStyle"/>
    <include layout="@layout/layout_divider_pref_connected_devices"/>
</LinearLayout>
