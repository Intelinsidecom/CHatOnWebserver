<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/popup_winset_top_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Pop01"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="14dp"
            android:text="@string/glympse_title"
            android:maxLines="2"/>
    </LinearLayout>
    <ScrollView
        android:scrollbarStyle="insideOverlay"
        android:background="@drawable/popup_winset_center_bright"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Pop02"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.5dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="22.5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/glympse_install_title"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:src="@drawable/screen_1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/screen_2"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.Pop07"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="22.5dp"
                android:layout_marginBottom="23dp"
                android:text="@string/glympse_install_info_message"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/popup_winset_bottom_medium_01"
        android:paddingLeft="12.5dp"
        android:paddingTop="3dp"
        android:paddingRight="12.5dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/google_play_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="@string/upgrade_google_play"
            style="@style/ButtonStyle.AlertDialog"/>
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel"
            style="@style/ButtonStyle.AlertDialog"/>
    </LinearLayout>
</LinearLayout>
