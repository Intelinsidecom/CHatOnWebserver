<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"/>
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/image1"
                android:layout_width="@dimen/intro_chaton_brige_logo_width"
                android:layout_height="@dimen/intro_chaton_brige_logo_height"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/provisioning_chaton_logo"
                android:scaleType="fitStart"/>
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/image1_2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:src="@drawable/video_voice_logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="61"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/provisioning_samsung_account_not_sign_in_image"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"/>
            <TextView
                android:textSize="@dimen/intro_chaton_brige_summary_text_size"
                android:textStyle="bold"
                android:textColor="#2d2d2d"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:text="@string/multidevice_brige_title2"/>
            <TextView
                android:textSize="@dimen/intro_chaton_brige_explain_text_size"
                android:textColor="#7d7d7d"
                android:gravity="top|center_horizontal"
                android:id="@+id/textComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="4dp"
                android:text="@string/multidevice_brige_comment1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="32"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
