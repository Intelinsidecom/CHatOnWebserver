<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/banner_layout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/shop_menu"
                    layout="@layout/layout_plus_horizontal_first_item"/>
                <HorizontalScrollView
                    android:id="@+id/shop_menu_scroll"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_toRightOf="@+id/shop_menu">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/plus_shop"
                        android:paddingLeft="14.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/subtitle_background_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/live_menu"
                    layout="@layout/layout_plus_horizontal_first_item"/>
                <HorizontalScrollView
                    android:id="@+id/live_menu_scroll"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_toRightOf="@+id/live_menu">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/plus_chatonlive"
                        android:paddingLeft="14.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/subtitle_background_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/plus_topic_layout"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/topic_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="2.5dp">
                    <TextView
                        android:textAppearance="@style/TextAppearance.List03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topic_chat"/>
                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/topic_menu_scroll"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_below="@+id/topic_header">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/plus_topic"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/topic_bottom_line"
                android:background="@color/subtitle_background_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/other_services_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="2.5dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.List03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_services"/>
            </LinearLayout>
            <com.sec.widget.ExpandableHeightGridView
                android:id="@+id/plus_moreapps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@drawable/plus_selector"
                android:drawSelectorOnTop="false"
                android:stretchMode="spacingWidthUniform"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:gravity="bottom"
        android:id="@+id/banner_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="68.5dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/event_top_line"
                android:background="#a4a4a4"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/filter_pager"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/event_top_line"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/banner_item_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/event_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_ic_character"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/indicator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>
