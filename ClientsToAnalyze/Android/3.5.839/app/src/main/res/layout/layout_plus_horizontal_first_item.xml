<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/plus_selector"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/layout_plus_horizontal_first_item_height"
    android:layout_marginRight="1dp">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="13.5dp"
        android:paddingTop="6dp"
        android:paddingRight="13.5dp"
        android:layout_width="89dp"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="62.5dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/plus_first_item"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerInside"/>
            <ImageView
                android:layout_gravity="top|right"
                android:id="@+id/badge"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/common_new"/>
        </FrameLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.List15"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/plus_first_text"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:minHeight="12dp"
            android:maxLines="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:background="#dddddd"
        android:layout_width="1dp"
        android:layout_height="92.5dp"/>
</LinearLayout>
