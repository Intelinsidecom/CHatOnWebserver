<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/progressImage"
        android:background="@drawable/rotate_emoticon_loading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageMessage"
        android:visibility="visible"
        android:layout_width="@dimen/push_popup_contents_size"
        android:layout_height="@dimen/push_popup_contents_size"/>
    <EditText
        android:textAppearance="@style/TextAppearance.Pop05"
        android:scrollbarThumbVertical="@drawable/shape_pushpopup_scroll"
        android:id="@+id/textMessage"
        android:background="@null"
        android:focusable="false"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="62dp"
        android:maxLines="3"
        android:maxLength="100"
        android:editable="false"/>
    <LinearLayout
        android:id="@+id/mixedMessage"
        android:background="@drawable/bubble_receive_01_normal"
        android:paddingLeft="@dimen/push_popup_text_contents_left_padding"
        android:paddingRight="@dimen/buddy_profile_image_margin_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/push_popup_contents_size"
        android:soundEffectsEnabled="false">
        <TextView
            android:textAppearance="@style/TextAppearance.Pop05"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/extraMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"/>
    </LinearLayout>
</LinearLayout>
