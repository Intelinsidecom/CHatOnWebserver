<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/popup_winset_top_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/actionbar_ic_chaton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="9dp">
                <TextView
                    android:textAppearance="@style/TextAppearance.Pop01"
                    android:ellipsize="marquee"
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/popup_winset_center_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.Pop05"
                android:gravity="center_vertical"
                android:id="@+id/textContents"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/push_popup_contents_size"
                android:layout_marginLeft="@dimen/buddy_profile_popup_title_icon_margin_left"
                android:layout_marginRight="@dimen/buddy_profile_popup_title_icon_margin_right"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/popup_winset_bottom_medium_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:measureWithLargestChild="true"
                style="?attr/buttonBarStyle">
                <Button
                    android:layout_gravity="left"
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:maxLines="2"
                    android:layout_weight="1"
                    style="@style/ButtonStyle.AlertDialog"/>
                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:maxLines="2"
                    android:layout_weight="1"
                    style="@style/ButtonStyle.AlertDialog"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
