<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/provision_upside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="81dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/provisioning_chaton_logo"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/txtStartChatAsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAppearance="@style/TextAppearance.List09"
                        android:autoLink="email"
                        android:linksClickable="true"
                        android:id="@+id/txtStartChatAs"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/provision_start_chat_as"
                        android:textAlignment="center"/>
                </RelativeLayout>
                <TextView
                    android:textAppearance="@style/TextAppearance.List48"
                    android:gravity="center"
                    android:id="@+id/txtRegist_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/provision_regist_notice"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAppearance="@style/TextAppearance.List27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:text="@string/layout_regist_country_code2"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3dp"
                layout="@layout/layout_common_text_line2"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="2dp"
                android:text="@string/regist_inputPno"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Chat09"
                android:id="@+id/include_area"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/registration_include_area_code"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">
                <EditText
                    android:textSize="18dp"
                    android:textColor="#72000000"
                    android:id="@+id/editArea"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginRight="8dp"
                    android:maxLength="6"
                    android:layout_weight="0.3"
                    android:inputType="number">
                    <requestFocus/>
                </EditText>
                <com.sec.chaton.widget.ClearableEditText
                    android:textSize="18dp"
                    android:textColor="#72000000"
                    android:id="@+id/editPno"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:maxLength="20"
                    android:layout_weight="0.7"
                    android:inputType="number"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.List10"
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/provision_regist_notice"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearInputName"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.List27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/setting_enter_name"/>
                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="17dp"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:inputType="textCapSentences"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.List10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/regist_name_detail"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp">
                <Button
                    android:enabled="true"
                    android:textSize="18dp"
                    android:id="@+id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_next"
                    android:layout_weight="1"
                    android:contentDescription="@string/dialog_next"
                    style="@style/ButtonStyle2"/>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.List12"
                android:layout_gravity="right"
                android:id="@+id/btnSkip"
                android:background="@drawable/listview_selector"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/registration_skip_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/sns_didver"
            android:background="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/sns_layout"
            android:background="@drawable/listview_selector"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textSize="14dp"
                    android:textColor="#7d7d7d"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="7dp"
                    android:text="@string/sign_in_with_sns_account"/>
                <ImageView
                    android:id="@+id/btn_samsungaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/sns_ic_black_samsungaccount"/>
                <ImageView
                    android:id="@+id/btn_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/sns_ic_black_facebook"/>
                <ImageView
                    android:id="@+id/btn_odnoklassniki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/sns_ic_black_odnoklassniki"/>
                <ImageView
                    android:id="@+id/btn_vkontakte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/sns_ic_black_vkontakte"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
