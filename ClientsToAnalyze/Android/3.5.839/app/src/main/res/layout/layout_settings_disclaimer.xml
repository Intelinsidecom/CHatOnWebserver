<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0.5"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List10"
                android:id="@+id/text_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_about_disclaimer_txt2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="0.4"/>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/setting_about_btn1"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/setting_disclaimer_terms"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0.2"/>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/setting_about_btn2"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/setting_disclaimer_policy"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_weight="0.4"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/spp_marketing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@color/disclaimer_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_preview4"
                    android:background="@drawable/registration_bg"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/disclaimer_text_color"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="13dp"
                        android:text="@string/terms_and_privacy_push_service"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/disclaimer_text_color"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/setting_push_marketing_agree_pop_up"
                        android:maxLines="3"/>
                    <ImageButton
                        android:id="@+id/link_button4"
                        android:background="?attr/itemBackground"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_arrow"
                        android:scaleType="fitEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:id="@+id/linear_disclaimer_chekcbox4"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <CheckBox
                        android:id="@+id/disclaimer_chekcbox4"
                        android:focusable="true"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/checkbox"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disclaimer_agree_optional"
                        style="@style/TextAppearance.List01"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/listtitlecolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/button_fix_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:enabled="true"
            android:id="@+id/setting_about_btn3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="7dp"
            android:text="@string/setting_disclaimer_accept"
            style="@style/ButtonStyle"/>
    </LinearLayout>
</LinearLayout>
