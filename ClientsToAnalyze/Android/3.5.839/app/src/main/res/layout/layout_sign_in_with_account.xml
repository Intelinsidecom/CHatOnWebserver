<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <include
                android:id="@+id/btn_samsung_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/user_samsung_account"
                layout="@layout/layout_common_button_7"/>
            <TextView
                android:textAppearance="@style/TextAppearance.List10"
                android:layout_gravity="left"
                android:layout_width="@dimen/buddy_no_buddy_buttons_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/dialog_sign_in_comment1"/>
            <include
                android:layout_marginBottom="20dp"
                layout="@layout/layout_divider_pref_connected_devices"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <include
                android:id="@+id/btn_facebook_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/user_facebook_account"
                layout="@layout/layout_common_button_7"/>
            <include
                android:id="@+id/btn_od_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/user_od_account"
                layout="@layout/layout_common_button_7"/>
            <include
                android:id="@+id/btn_vk_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/user_vk_account"
                layout="@layout/layout_common_button_7"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
