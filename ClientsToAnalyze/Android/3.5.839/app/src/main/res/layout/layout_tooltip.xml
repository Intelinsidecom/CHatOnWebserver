<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/toolTipArrowUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_guide_tail_top"/>
    <FrameLayout
        android:background="@drawable/user_guide_body_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-8dp"
        android:layout_marginBottom="-8dp"
        android:layout_alignLeft="@+id/contentLayout"
        android:layout_alignTop="@+id/contentLayout"
        android:layout_alignRight="@+id/contentLayout"
        android:layout_alignBottom="@+id/contentLayout"/>
    <FrameLayout
        android:id="@+id/contentLayout"
        android:background="@drawable/user_guide_body"
        android:paddingLeft="16dp"
        android:paddingTop="15dp"
        android:paddingRight="16dp"
        android:paddingBottom="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolTipArrowUp">
        <FrameLayout
            android:id="@+id/toolTipContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="15dp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:id="@+id/toolTipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/toolTipArrowDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_guide_tail_bottom"
        android:layout_below="@+id/contentLayout"/>
</RelativeLayout>
