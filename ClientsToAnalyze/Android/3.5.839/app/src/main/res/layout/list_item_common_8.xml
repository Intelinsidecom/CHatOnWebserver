<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/li8_padding_left"
    android:paddingRight="@dimen/li8_padding_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/li8_min_height">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/li8_image1_layout_width"
        android:layout_height="@dimen/li8_image1_layout_height"/>
    <RelativeLayout
        android:id="@+id/content"
        android:background="@drawable/co_list_bg"
        android:paddingLeft="@dimen/li8_content_padding_left"
        android:paddingRight="@dimen/li8_content_padding_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.sec.chaton.widget.AdaptableTextView
            android:textAppearance="@style/TextAppearance.List20.Variable"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <com.sec.chaton.widget.AdaptableTextView
            android:textAppearance="@style/TextAppearance.List21.Variable"
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/li8_text2_layout_margin_left"
            android:layout_toLeftOf="@+id/text3"
            android:layout_toRightOf="@+id/text1"
            android:layout_centerVertical="true"/>
        <com.sec.chaton.widget.AdaptableTextView
            android:textAppearance="@style/TextAppearance.List08.Variable"
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/li8_text3_layout_margin_left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
