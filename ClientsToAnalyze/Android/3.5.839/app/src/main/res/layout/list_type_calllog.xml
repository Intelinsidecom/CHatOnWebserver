<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp">
    <RelativeLayout
        android:id="@+id/list_bg"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sec.chaton.calllog.buddy.view.BuddyImageView
            android:id="@+id/image_calllog_profile"
            android:background="@drawable/frame_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/profile_photo_buddy_default"
            android:layout_alignParentLeft="true"/>
        <CheckBox
            android:id="@+id/chk_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="4dp"
            android:button="@drawable/checkbox"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chk_delete"
            android:layout_toRightOf="@+id/image_calllog_profile">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_calllog_method"
                    android:background="@drawable/buddies_voicecall"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/image_calllog_method"
                    android:layout_alignParentLeft="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:ellipsize="marquee"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/txt_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/calllog_dummy_username"
                            android:singleLine="true"
                            android:includeFontPadding="false"
                            android:layout_weight="1"
                            style="@style/TextAppearance.List04.Variable"/>
                        <TextView
                            android:ellipsize="none"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/txt_user_count"
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:minWidth="30dp"
                            android:text="@string/calllog_dummy_callcount"
                            android:singleLine="true"
                            android:includeFontPadding="false"
                            android:layout_weight="0"
                            style="@style/TextAppearance.List07.Variable"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_calllog_type"
                    android:background="@drawable/common_received"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/image_calllog_reject_message"
                    android:background="@drawable/common_small_rejectmessage"
                    android:visibility="gone"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/image_calllog_type"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:ellipsize="marquee"
                    android:id="@+id/txt_calllog_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/calllog_dummy_calldate"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    style="@style/TextAppearance.List07"/>
                <TextView
                    android:ellipsize="marquee"
                    android:id="@+id/txt_calllog_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/calllog_dummy_phoneno"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/txt_calllog_time"
                    android:layout_toRightOf="@+id/image_calllog_reject_message"
                    style="@style/TextAppearance.List07"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="@color/list_expand_child_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/callog_hover_layout"
        android:background="@drawable/chatonv_list_bg_hover_popup"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</FrameLayout>
