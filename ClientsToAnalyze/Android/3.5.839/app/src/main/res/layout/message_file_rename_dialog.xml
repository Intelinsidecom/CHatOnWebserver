<?xml version="1.0" encoding="utf-8"?>
<com.sec.chaton.widget.WeightedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="9dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/popup_winset_top_bright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/title_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp">
            <ImageView
                android:layout_gravity="top"
                android:id="@+id/title_icon"
                android:paddingTop="8dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/msg_popup_title_icon"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Bar01"
                android:gravity="center_vertical"
                android:id="@+id/picker_title"
                android:layout_width="match_parent"
                android:layout_height="38dp"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/popup_winset_center_bright"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.Pop04"
                    android:typeface="sans"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="10dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_an_attachment_message"/>
                <EditText
                    android:id="@+id/duplicate_file_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:bufferType="editable"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:maxLength="50"
                    android:imeOptions="flagNoFullscreen|actionDone"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/buttonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/popup_winset_bottom_medium_wrapper"
                    android:paddingLeft="2dp"
                    android:paddingTop="4dp"
                    android:paddingRight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="true">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/leftSpacer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>
                    <Button
                        android:layout_gravity="left"
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="1"
                        style="@style/ButtonStyle.AlertDialog"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/rightSpacer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.02"/>
                    <Button
                        android:layout_gravity="right"
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="1"
                        style="@style/ButtonStyle.AlertDialog"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/rightSpacer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.sec.chaton.widget.WeightedLinearLayout>
