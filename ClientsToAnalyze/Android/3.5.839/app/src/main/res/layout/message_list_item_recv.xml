<?xml version="1.0" encoding="utf-8"?>
<com.sec.chaton.smsplugin.p112ui.MessageListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/mms_layout_view_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/dateseparator"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp">
            <ImageView
                android:id="@+id/textDateLeft"
                android:background="@drawable/chat_room_system_bubble_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/textDate"
                android:layout_centerVertical="true"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Chat02"
                android:gravity="center"
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/textDateRight"
                android:background="@drawable/chat_room_system_bubble_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textDate"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lLayoutRcvContent2"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true">
                <FrameLayout
                    android:layout_width="41dp"
                    android:layout_height="41dp">
                    <com.sec.chaton.widget.ProfileImageView
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:layout_gravity="bottom|right"
                        android:id="@+id/countryFlag"
                        android:visibility="visible"
                        android:layout_width="23dp"
                        android:layout_height="15dp"/>
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:textAppearance="@style/TextAppearance.Chat03"
                android:ellipsize="end"
                android:id="@+id/textName"
                android:paddingLeft="13dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:singleLine="true"
                android:shadowColor="@color/shadow_4"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:layout_toRightOf="@+id/lLayoutRcvContent2"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/message_block"
                android:background="@drawable/bubble_receive_01_normal"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/avatar_width_height"
                android:layout_toRightOf="@+id/lLayoutRcvContent2"
                android:layout_below="@+id/textName">
                <TextView
                    android:textAppearance="@style/TextAppearance.Chat37"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:id="@+id/sms_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_sms_settings_title"
                    android:drawableLeft="@drawable/chat_sms_ic"
                    android:drawablePadding="5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/mms_page_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.Chat01"
                    android:gravity="left"
                    android:autoLink="all"
                    android:linksClickable="false"
                    android:id="@+id/text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/vattachment_separator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>
                <com.sec.chaton.smsplugin.p112ui.VAttachmentListView
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/vattachment_list"
                    android:paddingLeft="@dimen/bubble_vattachment_list_margin_left"
                    android:paddingRight="@dimen/bubble_vattachment_list_margin_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/failed_indicator"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/message_block"
                android:layout_alignBottom="@+id/message_block"/>
            <ImageView
                android:id="@+id/progressClock"
                android:background="@drawable/auto_resend_bird"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/message_block"
                android:layout_alignBottom="@+id/message_block"/>
            <ImageView
                android:id="@+id/btnSendPended"
                android:background="@drawable/auto_resend_bird"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textAppearance="@style/TextAppearance.Chat17"
                android:id="@+id/date_view"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:singleLine="true"
                android:layout_toRightOf="@+id/message_block"
                android:layout_alignBottom="@+id/message_block"/>
            <FrameLayout
                android:id="@+id/mms_downloading_view_stub_layout"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/date_view"
                android:layout_alignBottom="@+id/message_block">
                <ViewStub
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mms_downloading_view_stub"
                    android:layout="@layout/mms_downloading_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <ImageView
                android:id="@+id/locked_indicator"
                android:paddingBottom="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_sms_lock_message"
                android:layout_toRightOf="@+id/mms_downloading_view_stub_layout"
                android:layout_alignBottom="@+id/message_block"/>
            <LinearLayout
                android:gravity="right"
                android:id="@+id/layout_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:focusable="false"
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout_invitation_sent_stamp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/background_invitation_sent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="14dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:textAppearance="@style/TextAppearance.Chat02"
                    android:gravity="center"
                    android:id="@+id/text_invitation_sent"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.sec.chaton.smsplugin.p112ui.MessageListItem>
