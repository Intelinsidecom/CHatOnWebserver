<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:layout_gravity="bottom|right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="@style/TextAppearance.List01.Variable"
        android:ellipsize="none"
        android:id="@+id/chatRoomParticipantsCount"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:includeFontPadding="false"/>
    <LinearLayout
        android:gravity="right"
        android:layout_gravity="bottom"
        android:id="@+id/count_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="@style/TextAppearance.Etc01.Variable"
            android:ellipsize="none"
            android:gravity="center"
            android:id="@+id/chatRoomTrunkUnReadCount"
            android:background="@drawable/chat_btn_comment_blue"
            android:paddingLeft="@dimen/chat_notif_little_right_bubble_padding_left"
            android:paddingRight="@dimen/chat_notif_little_right_bubble_padding_right"
            android:paddingBottom="@dimen/chat_notif_little_right_bubble_padding_bottom"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginRight="2dp"
            android:minWidth="@dimen/chatlist_unread_bubble_minwidth"
            android:minHeight="@dimen/chatlist_unread_bubble_minheight"
            android:text="99"
            android:singleLine="true"
            android:includeFontPadding="false"
            style="@style/MsgBoxListItemUnreadCountStyle"/>
        <TextView
            android:textAppearance="@style/TextAppearance.Etc01.Variable"
            android:ellipsize="none"
            android:gravity="center"
            android:id="@+id/chatRoomUnReadCount"
            android:background="@drawable/chat_btn_comment_orange"
            android:paddingLeft="@dimen/chat_notif_little_right_bubble_padding_left"
            android:paddingRight="@dimen/chat_notif_little_right_bubble_padding_right"
            android:paddingBottom="@dimen/chat_notif_little_right_bubble_padding_bottom"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/chatlist_unread_bubble_minwidth"
            android:minHeight="@dimen/chatlist_unread_bubble_minheight"
            android:text="99"
            android:singleLine="true"
            android:includeFontPadding="false"
            style="@style/MsgBoxListItemUnreadCountStyle"/>
    </LinearLayout>
</LinearLayout>
