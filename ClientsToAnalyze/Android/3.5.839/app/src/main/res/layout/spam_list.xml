<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <include
        android:layout_gravity="top"
        android:nextFocusDown="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/selectall"/>
    <ListView
        android:textAppearance="@style/TextAppearance.List01"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/spam_messages"
        android:focusable="true"
        android:fadingEdgeLength="16dp"
        android:nextFocusUp="@+id/select_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:stackFromBottom="false"
        android:dividerHeight="1dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/spam_empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/empty_list_imageView"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/noitems_text_based"/>
        <TextView
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_message"/>
    </LinearLayout>
</LinearLayout>
