<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.widget.QuickContactBadge
        android:id="@+id/spam_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="@android:style/TextAppearance.Material.Widget.DropDownHint"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/spam_list_item_msgicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="true"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List23"
            android:id="@+id/spam_list_item_name"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/spam_list_item_msgicon"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List24"
            android:id="@+id/spam_list_item_date"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textAppearance="@style/TextAppearance.List24"
            android:ellipsize="end"
            android:id="@+id/spam_list_item_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/spam_list_item_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/spam_list_item_checkbox_layout"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">
        <CheckBox
            android:id="@+id/spam_list_item_checkbox"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>
</LinearLayout>
