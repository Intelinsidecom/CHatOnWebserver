        android:title="@string/pref_title_vibrate_on_switching_to_mms"
        android:key="pref_key_vibrate_on_switching_to_mms"
        android:summary="@string/pref_summary_vibrate_on_switching_to_mms"
        android:order="40"
        android:defaultValue="true"/>
