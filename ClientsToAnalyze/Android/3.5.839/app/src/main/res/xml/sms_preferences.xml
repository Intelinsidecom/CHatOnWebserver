<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="pref_key_sms_settings_screen">
    <Preference
        android:persistent="false"
        android:title="@string/pref_setting_title_default_sms_app"
        android:key="pref_key_kikat_default_sms"
        android:summary="@string/pref_summary_check_your_default_sms_app"
        android:order="10"
        android:defaultValue=""/>
    <CheckBoxPreference
        android:title="@string/pref_title_send_and_receive_sms_mms"
        android:key="pref_key_send_and_receive_sms_mms"
        android:summary="@string/pref_summary_send_and_receive_sms_mms"
        android:order="20"
        android:defaultValue="true"/>
