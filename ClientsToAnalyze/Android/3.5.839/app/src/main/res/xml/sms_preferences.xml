        android:layout="@layout/layout_preference_category"
        android:title="@string/freesms"
        android:key="pref_category_free_message"
        android:order="50"/>
    <CheckBoxPreference
        android:title="@string/freesms_use"
        android:key="pref_key_is_free_sms_enable"
        android:order="52"
        android:defaultValue="false"/>
    <com.sec.chaton.settings.FreeSmsInfoPreference
