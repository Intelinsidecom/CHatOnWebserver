<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ChatON_WoA.Views"
             xmlns:infra="using:ChatOn.Infrastructure"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local1="using:ChatOn.Controls"
             x:Class="ChatOn.Controls.AddBuddyDialog"
             xmlns:customControl="using:ChatOn.Controls"
             mc:Ignorable="d"
             BorderBrush="Black"
             BorderThickness="1">

    <UserControl.Resources>
        <DataTemplate x:Key="BuddyItemTemplate">
            <Grid Tag="tilt"
                  Margin="0,0,0,29">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Stretch="Fill"
                       Width="60"
                       Height="60"
                       Source="/Images/buddies_profile_image.png" />
                <Image HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Stretch="Fill"
                       Width="60"
                       Height="60"
                       Source="{Binding ProfileImage}" />
                <TextBlock Grid.Column="1"
                           Text="{Binding Name}"
                           VerticalAlignment="Top"
                           Margin="21,0,0,0"
                           FontSize="17.333"
                           TextTrimming="WordEllipsis"
                           Foreground="Black"
                           FontFamily="Segoe UI Light" />
                <TextBlock Grid.Column="2"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_POP_ADDED'}"
                           Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibility}}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontSize="15.067"
                           FontFamily="Segoe UI" />
                <Button x:ConnectionId='3'                       
                        Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibility}, ConverterParameter='!'}"
                        Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_ADD'}"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="BuddyItemTemplate2">
            <Grid Tag="tilt"
                  Margin="0,0,0,29">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Stretch="Fill"
                       Width="60"
                       Height="60"
                       Source="{Binding ProfileImage}" />
                <TextBlock Grid.Column="1"
                           Text="{Binding Name}"
                           VerticalAlignment="Top"
                           Margin="21,0,0,0"
                           FontSize="17.333"
                           MaxHeight="20"
                           TextTrimming="WordEllipsis"
                           Foreground="Black"
                           FontFamily="Segoe UI Light" />
                <TextBlock Grid.Column="2"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_POP_ADDED'}"
                           Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibility}}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontSize="15.067"
                           FontFamily="Segoe UI" />
                <Button x:ConnectionId='2'                       
                        Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibility}, ConverterParameter='!'}"
                        Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_ADD'}"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TellFriendsTemplate">
            <Grid x:ConnectionId='1' Margin="0,0,0,0"
                  Width="Auto"
                  Height="Auto"
                                                
                  Tag="{Binding Name}">
                <TextBlock Margin="40,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           x:Name="tbTellFriendName"
                           Text="{Binding Name}"
                           FontSize="24"
                           Foreground="Black"
                           FontFamily="Segoe UI Light" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Width="494"
          Height="500"
          Margin="0,0,40,88"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.RowSpan="2" />
        <Grid Height="100"
              VerticalAlignment="Top">
            <TextBlock x:Name="Text1"
                       HorizontalAlignment="Left"
                       Margin="32,0,0,0"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Text="Add buddy"
                       FontFamily="Segoe UI Light"
                       FontSize="27"
                       Foreground="Black" />
            <customControl:ImageButton x:ConnectionId='15' x:Name="CloseButton"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       NormalImage="Images/Icons/appbtn_cancel.png"
                                       PressedImage="Images/Icons/appbtn_cancel_press.png"
                                                          
                                       Text=""
                                       Margin="0,32,20,0" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="144" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="1"
                       Fill="Black"
                       Stroke="Black"
                       Margin="0,0,0,32" />
            <StackPanel>
                <local1:ImageButton x:ConnectionId='11' x:Name="PhonenumberButton"
                                    NormalImage="/Images/Icons/appbtn_phonenumber.png"
                                    PressedImage="/Images/Icons/appbtn_phonenumber_press.png"
                                    Text="Phone number"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                                                   
                                    Foreground="Black" />
                <local1:ImageButton x:ConnectionId='12' x:Name="SearchButton"
                                    NormalImage="/Images/Icons/appbtn_search.png"
                                                          
                                    Foreground="Black"
                                    Text="Search"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,17,0,0"
                                    PressedImage="Images/Icons/appbtn_search_press.png" />
                <local1:ImageButton x:ConnectionId='13' x:Name="PeopleButton"
                                    NormalImage="/Images/Icons/appbtn_people.png"
                                    PressedImage="/Images/Icons/appbtn_people_press.png"
                                    Foreground="Black"
                                                              
                                    Text="People"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="52,17,52,0" />
                <local1:ImageButton x:ConnectionId='14' x:Name="TellFriendButton"
                                    NormalImage="/Images/Icons/appbtn_tellfriend.png"
                                                                  
                                    Foreground="Black"
                                    Text="Tell friend"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Margin="0,17,0,0"
                                    PressedImage="Images/Icons/appbtn_tellfriend_press.png"
                                    Visibility="Collapsed"
                                    Height="0"
                                    Width="0" />
            </StackPanel>
            <Grid x:Name="PhoneNumberGrid"
                  Grid.Column="2"
                  d:IsHidden="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Text2"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Text="Country code"
                           Margin="40,0,0,0"
                           FontSize="24"
                           FontFamily="Segoe UI Light" />
                <Grid x:ConnectionId='8' Height="32"
                      Margin="40,8,40,0"
                      Grid.Row="1"
                      VerticalAlignment="Top"
                      Background="#FFC8C8C8"
                                            >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="SelectedCountryCode"
                               TextWrapping="NoWrap"
                               VerticalAlignment="Center"
                               Foreground="Black"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               FontFamily="Segoe UI"
                               FontSize="12.8" />
                    <Image Source="Images/drop.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Grid.Column="1" />
                </Grid>
               
                <TextBlock x:Name="Text4"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Text="Phone number"
                           Margin="40,20,0,0"
                           FontSize="24"
                           FontFamily="Segoe UI Light"
                           Grid.Row="3" />
                <Grid Height="32"
                      Margin="40,8,40,0"
                      Grid.Row="4"
                      VerticalAlignment="Top"
                      Background="#FFC8C8C8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='9' x:Name="InputPhoneNumber"
                                                             
                             VerticalAlignment="Top"
                             Background="{x:Null}"
                             BorderThickness="0"
                             BorderBrush="{x:Null}"
                                                             >
                        <TextBox.InputScope>
                            <InputScope>
                                <InputScope.Names>
                                    <InputScopeName NameValue="TelephoneNumber" />
                                </InputScope.Names>
                            </InputScope>
                        </TextBox.InputScope>
                    </TextBox>
                    <Image x:ConnectionId='10' Source="Images/Icons/appbtn_search.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Grid.Column="1"
                           Margin="5"
                           Stretch="Fill"
                                                   />
                </Grid>
                <TextBlock x:Name="Text5"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Text="Results"
                           Margin="40,40,0,0"
                           FontSize="24"
                           FontFamily="Segoe UI Light"
                           Grid.Row="5"
                           Visibility="Collapsed" />
                <ListView SelectionMode="None"
                          Grid.Row="6"
                          ItemsSource="{Binding ResultList}"
                          ItemTemplate="{StaticResource BuddyItemTemplate}"
                          HorizontalContentAlignment="Stretch"
                          Margin="40,0,40,20"
                          ItemContainerStyle="{StaticResource FullWidthListItemStyle}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Grid>
            <Grid x:Name="PeopleGrid"
                  Grid.Column="2"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <local1:ImageButton x:ConnectionId='7' x:Name="AddFromPeopleButton"
                                        NormalImage="Images/Icons/appbtn_add_d.png"
                                        PressedImage="Images/Icons/appbtn_add_d_press.png"
                                                                
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Margin="40,0,0,0"
                                        FontFamily="Segoe UI Light"
                                        FontSize="24" />
                    <TextBlock TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               Foreground="Black"
                               Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_POP_ADD_BUDDIES_FROM_CHATON_USERS_IN_YOUR_CONTACTS'}"
                               Margin="10,0,0,0"
                               FontSize="18"
                               FontFamily="Segoe UI Light"
                               Width="220"
                               HorizontalAlignment="Left" />
                </StackPanel>
                <TextBlock Grid.Row="1"
                           TextWrapping="Wrap"
                           TextTrimming="WordEllipsis"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_YOU_CAN_ENJOY_CHATON_WITH_YOUR_BUDDIES_BY_ADDING_THEM_FROM_YOUR_CONTACTS_MSG'}"
                           Margin="10,0,0,0"
                           FontSize="18"
                           FontFamily="Segoe UI Light"
                           TextAlignment="Left" />
            </Grid>
            <Grid x:Name="SearchIDGrid"
                  Grid.Column="2"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="Text6"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Text="Samsung Account ID"
                           Margin="40,0,0,0"
                           FontSize="24"
                           FontFamily="Segoe UI Light"
                           Grid.Row="0" />
                <Grid Height="32"
                      Margin="40,8,40,0"
                      Grid.Row="1"
                      VerticalAlignment="Top"
                      Background="#FFC8C8C8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='5' x:Name="InputID"
                             VerticalAlignment="Top"
                             Text="example@samsung.com"
                             Background="{x:Null}"
                             Foreground="Gray"
                             BorderThickness="0"
                             BorderBrush="{x:Null}"
                                                          
                                                            
                                                     />
                    <Image x:ConnectionId='6' Source="Images/Icons/appbtn_search.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Grid.Column="1"
                           Margin="5"
                           Stretch="Fill"
                                                   />
                </Grid>
                <TextBlock x:Name="Text7"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Text="Results"
                           Margin="40,40,0,0"
                           FontSize="24"
                           FontFamily="Segoe UI Light"
                           Grid.Row="2"
                           Visibility="Collapsed" />
                <ListView x:Name="SearchIDResultList"
                          SelectionMode="None"
                          Grid.Row="3"
                          ItemsSource="{Binding ResultList2}"
                          ItemTemplate="{StaticResource BuddyItemTemplate}"
                          HorizontalContentAlignment="Stretch"
                          Margin="40,0,40,20"
                          ItemContainerStyle="{StaticResource FullWidthClearListItemStyle}"
                          Visibility="Collapsed">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Grid>
            <Grid x:Name="TellFriendGrid"
                  Grid.Column="2"
                  Visibility="Collapsed">
                <ListView x:ConnectionId='4' Margin="1,0,1,0"
                          BorderThickness="0"
                          x:Name="TellFriendsListBox"
                          ItemTemplate="{StaticResource TellFriendsTemplate}"
                          ItemsSource="{Binding TellFriendsList}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          FontSize="20"
                                                                                
                          SelectionMode="None" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

