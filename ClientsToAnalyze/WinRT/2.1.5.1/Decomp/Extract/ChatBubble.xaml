<UserControl x:ConnectionId='1' x:Class="ChatOn.Controls.ChatBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Customcontrols="using:ChatOn.Controls"
                              
                                  
                                        
    mc:Ignorable="d">
    <Grid>
        <ProgressRing IsActive="False" x:Name="ProgressControl" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50" Foreground="#FFFA8719"/>
        <Grid x:Name="LayoutRoot" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="11,0,11,0"  x:Name="BubbleImage" Stretch="Fill" Grid.Row="1" Grid.Column="1"/>

            <Customcontrols:ChatTextBlock x:Name="ContentTextBlock" IsParsingLinkEnabled="True" EmoticonSize="30" Grid.Column="1" Grid.Row="1" Foreground="Black" ForegroundText="Black" FontSize="24" MaxLength="4000" MaxWidth="600" MinWidth="10" Margin="30,10" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Segoe UI Light"/>

            <StackPanel x:Name="SubTextPanel" Orientation="Horizontal" Grid.Column="2" Grid.Row="1" VerticalAlignment="Bottom" Margin="5,0,10,10">
                <TextBlock x:Name="SubText2Block" TextWrapping="Wrap" Foreground="#FFC42A00" FontFamily="Segoe UI Light" FontSize="13.333" Margin="0,0,5,0"/>
                <TextBlock x:Name="SubTextBlock" TextWrapping="Wrap" Foreground="Black" FontFamily="Segoe UI Light" FontSize="13.333"/>
            </StackPanel>

            <!--<Grid x:Name="PhotoControlGrid" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30,10">
            <Customcontrols:PhotoFrame x:Name="PhotoControl"/>
        </Grid>
        <Grid x:Name="AniconControlGrid" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Customcontrols:AniconPlayer x:Name="AniconControl" Width="170" Height="170"/>
        </Grid>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Orientation="Horizontal" Margin="30,10,30,10">
            <Image x:Name="MediaIcon" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock x:Name="MediaTextBlock" TextWrapping="Wrap" Foreground="Black" FontFamily="Segoe UI Light" FontSize="13.333" Margin="10,0,0,0" HorizontalAlignment="Left" MaxWidth="350" VerticalAlignment="Center" FontWeight="SemiBold"/>
        </StackPanel>
        <Grid x:Name="DownloadImageGrid" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" Margin="0,0,0,30">
            <Image x:Name="DownloadImage" Visibility="{Binding IsReadyToDownload,Converter={StaticResource BoolToVisibility}}" Stretch="None" Source="Images/chat_download.png"/>
        </Grid>-->
        </Grid>
    </Grid>
   
</UserControl>

