<Page x:ConnectionId='1'
    x:Name="pageRoot"
    x:Class="ChatON_WoA.Views.ChatProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:infra="using:ChatOn.Infrastructure"
    xmlns:customControl="using:ChatOn.Controls"
    mc:Ignorable="d"
                                   >

    <Page.Resources>
        <DataTemplate x:Key="BuddyItemTemplate">
            <Grid Width="330" Height="68">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid x:ConnectionId='2'                              >
                    <Image Source="Images/buddies_profile_image.png" Width="60" Height="60" Stretch="Fill" Margin="4"/>
                    <Image x:ConnectionId='4' Source="{Binding ProfileImage}" Width="60" Height="60" Stretch="Fill" Margin="4" x:Name="ProfileImageControl"                                  />
                </Grid>
                <Grid Grid.Column="1" Margin="11,8,0,0" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Name,Mode=TwoWay}" Foreground="Black"
    						TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="25.333" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" FontWeight="Light" MaxHeight="30"/>
                    <TextBlock Text="{Binding Buddy.Status}"
                    	TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="20" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Row="1" />
                </Grid>
                <Button x:ConnectionId='3'                            Visibility="{Binding Buddy, Converter={StaticResource ObjectNullToShow}}" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_SK_LITE_ADD'}" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center"                          />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar x:Name="appBar" Background="#FFFA8719">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="LeftCommands" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" Margin="0,14,0,13">
                </StackPanel>
                <StackPanel x:Name="RightCommands" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0,14,0,13">
                    <!--<customControl:ImageButton x:Name="SendEmailButton" NormalImage="/Images/Icons/appbtn_send_via_email.png" PressedImage="/Images/Icons/appbtn_send_via_email_press.png" 
                                               Text="Send via Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,55,0"/>-->
                    <customControl:ImageButton x:ConnectionId='5' x:Name="CloseChatButton" NormalImage="Images/Icons/appbtn_close_chat.png" PressedImage="Images/Icons/appbtn_close_chat_press.png" 
                    	Foreground="White" Text="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,55,0"                        />
                    <customControl:ImageButton x:ConnectionId='6' x:Name="InviteButton" NormalImage="Images/Icons/appbtn_addbuddy.png" PressedImage="Images/Icons/appbtn_addbuddy_press.png" 
                    	Foreground="White" Text="Invite buddies" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,35,0"                            />
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid x:Name="LayoutRoot" Background="#FFF4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#FFE6E6E6" HorizontalAlignment="Left" Grid.RowSpan="2" Width="358" StrokeThickness="0"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='12' x:Name="backButton" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"                         />
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{Binding ConverterParameter=IDS_CHATON_MBODY_CHAT_INFO, Converter={StaticResource ResourceStringConverter}}" Style="{StaticResource PageHeaderTextStyle}" Foreground="Black"/>
        </Grid>
        <Grid Grid.Row="1" Margin="120,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid HorizontalAlignment="Left" d:LayoutOverrides="Height" Margin="0,0,38,0" Width="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" Text="{Binding ConverterParameter=IDS_CHATON_OPT_NAME, Converter={StaticResource ResourceStringConverter}}" VerticalAlignment="Top" FontFamily="Segoe UI Light" FontSize="41.333" Padding="0,26,0,0" FontWeight="Light" Foreground="Black"/>
                <StackPanel Grid.Row="2" FlowDirection="LeftToRight" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal">
                    <TextBox x:ConnectionId='11' x:Name="ChatNameControl"
                                                         
                                                            Text="{Binding Name,Mode=TwoWay}" Width="198" VerticalAlignment="Top" MaxHeight="30" MaxLength="30"/>
                    <!--<TextBlock x:Name="ChatNameLabel" Text="{Binding Name,Mode=TwoWay}" Width="198" VerticalAlignment="Top" MaxHeight="30" Visibility="{Binding Chat.ChatType,Converter={StaticResource ChatTypeToShow}}" FontSize="14" TextTrimming="WordEllipsis"/>-->
                </StackPanel>
                <StackPanel Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Horizontal">
                    <Button x:ConnectionId='10' IsEnabled="{Binding RenameButtonVisibility}" Content="{Binding ConverterParameter=IDS_CHATON_OPT_RENAME, Converter={StaticResource ResourceStringConverter}}"                        x:Name="btnRename"  Padding="22,4" ClickMode="Press" UseLayoutRounding="True" Margin="-2,0,0,0"/>                    
                </StackPanel>
                
                
                <Grid x:ConnectionId='8'                               >
                    <Image HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="200" Stretch="UniformToFill" Source="{Binding ImageProfileChat}"/>
                    <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Images/chat_info_add.png" Stretch="None" Visibility="{Binding AddButtonVisibility, Converter={StaticResource BoolToVisibility}}"/>
                </Grid>
                <TextBlock HorizontalAlignment="Left" Grid.Row="4" TextWrapping="Wrap" Text="{Binding ConverterParameter=IDS_CHATON_BODY_ALERT, Converter={StaticResource ResourceStringConverter}}" VerticalAlignment="Bottom" FontFamily="Segoe UI Light" FontSize="41.333" Padding="0,26,0,0" FontWeight="Light" Foreground="Black" Visibility="{Binding AlertVisibility}"/>
                <ToggleSwitch x:ConnectionId='9' x:Name="ToggleAllertEnable" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment='Bottom'  IsOn="{Binding IsAlertEnable, Mode=TwoWay}"                                Visibility="{Binding AlertVisibility}"/>
            </Grid>
            <Grid Grid.Column="1" Margin="30,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" x:Name="BuddyCountControl" VerticalAlignment="Top" FontSize="41.333" FontFamily="Segoe UI Light" Margin="0,0,0,20" FontWeight="Light" Foreground="Black"/>
                <GridView Grid.Row="1" SelectionMode="None" ItemsSource="{Binding ShowingItems}" ItemTemplate="{StaticResource BuddyItemTemplate}" Margin="0,0,0,150">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
                <Button x:ConnectionId='7' Content="{Binding ConverterParameter=IDS_CHATON_BUTTON_CREATE_GROUP, Converter={StaticResource ResourceStringConverter}}" Visibility="{Binding CreateGroupVisibility}" HorizontalAlignment="Right" Margin="0,0,30,100" Grid.Row="1" VerticalAlignment="Bottom"                          />
            </Grid>
        </Grid>
    </Grid>
</Page>

