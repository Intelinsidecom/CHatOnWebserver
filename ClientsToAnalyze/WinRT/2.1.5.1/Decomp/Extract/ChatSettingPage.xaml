<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:ChatOn.Controls"
    x:Name="pageRoot"
    x:Class="ChatON_WoA.Views.ChatSettingPage"
    mc:Ignorable="d">
    <Page.Resources>
    </Page.Resources>

    <ScrollViewer Background="White" HorizontalScrollMode="Disabled" ZoomMode="Disabled">
        <StackPanel VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_CHANGE_BACKGROUND_STYLE'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,59,0,0"/>
            <Grid x:ConnectionId='1' HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="100" Height="100"                     >
                <Image x:Name="SelectedBGImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <TextBlock TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_CHANGE_BUBBLE_STYLE'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,59,0,0"/>
            <Grid x:ConnectionId='2' HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="100" Height="100"                       >
                <Image Source="Images/bubble_style_bg.png" Stretch="Fill"/>
                <Controls:ChatBubble x:Name="BuddyBubble" Type="0" SubText="" Height="50"
                                       HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                <Controls:ChatBubble x:Name="MyBubble" Type="1" SubText="" Height="50"
                                       HorizontalContentAlignment="Right" VerticalContentAlignment="Top" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,0,0"/>
            </Grid>
            <TextBlock TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_FONT_SIZE'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,59,0,0"/>
            <ScrollViewer VerticalScrollMode="Disabled" HorizontalAlignment="Left" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" ZoomMode="Disabled">
                <StackPanel x:ConnectionId='4' x:Name="spFontSize"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0"                           >
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Tag="0">
                        <Controls:ChatBubble x:Name="cbExtraSmall" Type="2" Visibility="{Binding SelectedFontSize, ConverterParameter=0, Converter={StaticResource IntEqualToVisibility}}" FixedFontSize="14" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_EXTRA_SMALL'}" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>                        
                    </Grid>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Tag="1">
                        <Controls:ChatBubble x:Name="cbSmall" Type="2" Visibility="{Binding SelectedFontSize, ConverterParameter=1, Converter={StaticResource IntEqualToVisibility}}" FixedFontSize="18" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_SMALL'}" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>                        
                    </Grid>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Tag="2">
                        <Controls:ChatBubble x:Name="cbMedium" Type="2" Visibility="{Binding SelectedFontSize, ConverterParameter=2, Converter={StaticResource IntEqualToVisibility}}" FixedFontSize="22" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_MEDIUM'}" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>                        
                    </Grid>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Tag="3">
                        <Controls:ChatBubble x:Name="cbLarge" Type="2" Visibility="{Binding SelectedFontSize, ConverterParameter=3, Converter={StaticResource IntEqualToVisibility}}" FixedFontSize="26" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_LARGE'}" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>                        
                    </Grid>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Tag="4">
                        <Controls:ChatBubble x:Name="cbExtraLarge" Type="2" Visibility="{Binding SelectedFontSize, ConverterParameter=4, Converter={StaticResource IntEqualToVisibility}}" FixedFontSize="58" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_EXTRA_LARGE'}" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>                        
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            <!--<TextBlock Margin="0,30,0,0" TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_POP_SENDING_ING'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light"/>
            <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="14.667" Margin="0,14,0,0" Text="{Binding Converter={StaticResource ResourceStringConverter},ConverterParameter='IDS_CHATON_BODY_YOU_CAN_SELECT_A_SIZE_FOR_SENDING_PICTURES_HOWEVER_THE_REAL_SIZE_OF_THE_PICTURE_WHEN_RECEIVED_WILL_DEPEND_ON_THE_RECEIVERS_DEVICE'}" FontFamily="Segoe UI"/>
            <ComboBox Margin="0,10,0,0" x:Name="cmbSizePicture" 
                      SelectionChanged="cmbSizePicture_SelectionChanged"
                      HorizontalAlignment="Left" Width="200"></ComboBox>-->

            <TextBlock Margin="0,30,0,0" TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_USE_THE_ENTER_KEY_TO_SEND'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light"/>
            <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="14.667" Margin="0,14,0,0" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_AFFECTS_THE_ENTER_KEY_ON_EXTERNAL_KEYBOARDS_ABB'}" FontFamily="Segoe UI"/>
            <ToggleSwitch x:ConnectionId='3' x:Name="ToggleSendWithEnterKey" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Top"                                            Style="{StaticResource LightThemeToggleSwitchStyle}" Margin="0,0,0,50"/>
        </StackPanel>
    </ScrollViewer>
</Page>

