<Page x:ConnectionId='1' x:Name="pageRoot"
      x:Class="ChatON_WoA.Views.CropPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ChatON_WoA.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:customControl="using:ChatOn.Controls"
      mc:Ignorable="d"
                              >

    <Page.BottomAppBar>
        <AppBar x:Name="appBar"
                Background="#FFFA8719">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="LeftCommands"
                            Orientation="Horizontal"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Margin="0,14,0,13">
                </StackPanel>
                <StackPanel x:Name="RightCommands"
                            Orientation="Horizontal"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Margin="0,14,0,13">
                    <customControl:ImageButton x:ConnectionId='2' x:Name="SaveButton"
                                               NormalImage="Images/Icons/appbtn_save.png"
                                               PressedImage="Images/Icons/appbtn_save_press.png"
                                                                 
                                               Foreground="White"
                                               Text="Save"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Margin="0,0,55,0" />
                    <customControl:ImageButton x:ConnectionId='3' x:Name="CancelButton"
                                               NormalImage="Images/Icons/appbtn_deletegroup.png"
                                               PressedImage="Images/Icons/appbtn_deletegroup_press.png"
                                                                   
                                               Foreground="White"
                                               Text="Cancel"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Margin="0,0,35,0" />
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid x:Name="LayoutRoot"
          Background="#FFF4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='6' x:Name="backButton"
                    Margin="20,40,0,0"
                    VerticalAlignment="Top"
                    IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}"
                    Style="{StaticResource BackButtonStyle}"
                                             />
            <Grid x:ConnectionId='7' HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  x:Name="MainCanvas"
                                                      
                  Margin="150,70,50,50"
                  Height="Auto"
                  Width="Auto">
                <Image Stretch="Uniform"
                       x:Name="ImageControl"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       MaxHeight="600" />
                <Canvas>
                    <Rectangle x:Name="tg"
                               Fill="Black"
                               StrokeThickness="0"
                               Opacity="0.5" />
                    <Rectangle x:Name="lg"
                               Fill="Black"
                               StrokeThickness="0"
                               Opacity="0.5" />
                    <Rectangle x:Name="rg"
                               Fill="Black"
                               StrokeThickness="0"
                               Opacity="0.5" />
                    <Rectangle x:Name="bg"
                               Fill="Black"
                               StrokeThickness="0"
                               Opacity="0.5" />
                    <Rectangle x:ConnectionId='8' x:Name="area"
                               Fill="Transparent"
                               StrokeThickness="0"
                               ManipulationMode="All"
                                                                            />
                    <Ellipse x:ConnectionId='9' Opacity="0.7"
                             x:Name="lt"
                             Visibility="Collapsed"
                             ManipulationMode="All"
                                                                    
                             Fill="#FFF4F4F5"
                             HorizontalAlignment="Left"
                             Height="40"
                             Stroke="Black"
                             VerticalAlignment="Top"
                             Width="40"
                             StrokeThickness="3" />
                    <Ellipse x:ConnectionId='10' Opacity="0.7"
                             x:Name="rt"
                             Visibility="Collapsed"
                             ManipulationMode="All"
                                                                    
                             Fill="#FFF4F4F5"
                             HorizontalAlignment="Left"
                             Height="40"
                             Stroke="Black"
                             VerticalAlignment="Top"
                             Width="40"
                             StrokeThickness="3" />
                    <Ellipse x:ConnectionId='11' Opacity="0.7"
                             x:Name="lb"
                             Visibility="Collapsed"
                             ManipulationMode="All"
                                                                    
                             Fill="#FFF4F4F5"
                             HorizontalAlignment="Left"
                             Height="40"
                             Stroke="Black"
                             VerticalAlignment="Top"
                             Width="40"
                             StrokeThickness="3" />
                    <Ellipse x:ConnectionId='12' Opacity="0.7"
                             x:Name="rb"
                             Visibility="Collapsed"
                             ManipulationMode="All"
                                                                    
                             Fill="#FFF4F4F5"
                             HorizontalAlignment="Left"
                             Height="40"
                             Stroke="Black"
                             VerticalAlignment="Top"
                             Width="40"
                             StrokeThickness="3" />
                </Canvas>
            </Grid>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Margin="0 0 20 30">
            <Button x:ConnectionId='4' x:Name="btnAttach"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Grid.Column="1"
                    FontSize="13.333"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Background="White"
                    Height="40"
                    MinWidth="120"
                    Foreground="Black"
                                            />
            <Button x:ConnectionId='5' x:Name="btnCancel"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Grid.Column="1"
                    Margin="20,0,0 0"
                    FontSize="13.333"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Background="White"
                    Height="40"
                    MinWidth="120"
                    Foreground="Black"
                                            />
        </StackPanel>
    </Grid>
</Page>

