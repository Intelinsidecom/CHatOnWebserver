<Page x:ConnectionId='1'
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:ChatOn.Controls"
    x:Name="pageRoot"
    x:Class="ChatON_WoA.Views.DownloadSettingPage"
                                       
                                           
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="PackageItemTemplate">
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.RowSpan="3" BorderBrush="#FF212121" Height="70" Width="70" BorderThickness="2">
                    <Grid Height="70" Width="70">
                        <Image Source="{Binding ThumbImageUri}" HorizontalAlignment="Center" Height="70" Width="70"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Column="2" Foreground="Black" 
                           HorizontalAlignment="Left" Margin="0,15,5,2" TextWrapping="Wrap" 
                           Text="{Binding Name}" FontFamily="Segoe UI" FontSize="18"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Foreground="Black"
                           Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}, ConverterParameter='!'}"
                           HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding GetSubInfoString}" 
                           FontFamily="Segoe UI" FontSize="16" FontWeight="Light"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Foreground="Black" 
                           HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding GetSubInfoString}"
                           Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}}" 
                           FontFamily="Segoe UI" FontSize="12" Margin="0,10,0,0" FontWeight="Light"/>

                <ProgressBar VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" 
                             Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}}" 
                             Height="10" Margin="0,0,160,0" Value="{Binding DownloadPercent}"/>

                <Button x:ConnectionId='2' VerticalAlignment="Center" IsEnabled="{Binding IsEnableButtonCancel}" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_CANCEL'}" 
                        MinWidth="150"                              HorizontalAlignment="Right" Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}}" 
                        Grid.RowSpan="2" Grid.Column="3" Margin="0,0,0,0" Height="40" Grid.ColumnSpan="2" ></Button>

                <Button x:ConnectionId='3' Grid.Column="3" Grid.RowSpan="2" IsEnabled="{Binding IsEnableButtonUninstall}" HorizontalAlignment="Right" MinWidth="150"
                        Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibility}, ConverterParameter='!'}" 
                        Content="{Binding IsNeedDownload, Converter={StaticResource AniconButtonTextConverter}}" 
                        VerticalAlignment="Center" Margin="0,0,0,0"
                                                       Height="40"/>

            </Grid>
        </DataTemplate>


