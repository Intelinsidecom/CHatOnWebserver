                </StackPanel>
            </Grid>
        </DataTemplate>-->


    </Page.Resources>

    <Grid Background="White" x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Margin="0,59,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Bottom"  TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_TAB4_ANICON'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,0,0,0"/>

            <StackPanel  Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 20 ,0">
                <ComboBox x:Name="cmbSelectSort" Height="40" MinWidth="150" Margin="0,0,30,0" VerticalAlignment="Bottom" IsEnabled="{Binding isEnable}" SelectedIndex="{Binding SelectedIndexComboBox, Mode=TwoWay}">
                </ComboBox>

                <Controls:ImageButton x:ConnectionId='4' Margin="0,22,0,-22" x:Name="DownloadAllButton" VerticalContentAlignment="Bottom" VerticalAlignment="Bottom" NormalImage="Images/Icons/appbtn_select all.png"                                 PressedImage="Images/Icons/appbtn_select all_press.png"/>
            </StackPanel>

        </Grid>
        <ListView 
            x:Name="List" 
            Grid.Row="1"
            Visibility="{Binding PackageVisibility}"
            Margin="0,40,0,30" SelectionMode="None" 
            ItemTemplate="{StaticResource PackageItemTemplate}" ItemsSource="{Binding PackageItems}" 
            ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.HorizontalScrollMode="Disabled" 
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            HorizontalContentAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter x:Name="contentPresenter"
                                                  HorizontalAlignment="Stretch"
                                                  ContentTransitions="{TemplateBinding ContentTransitions}"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!--<GridView Margin="0,40,0,30" SelectionMode="None" Grid.Row="1" ItemTemplate="{StaticResource PackageItemTemplate}" ItemsSource="{Binding PackageItems}" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.HorizontalScrollMode="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </GridView>-->
    </Grid>
</Page>

