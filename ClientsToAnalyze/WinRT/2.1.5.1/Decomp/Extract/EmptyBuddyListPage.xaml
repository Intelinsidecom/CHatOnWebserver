<Page
    x:Class="ChatON_WoA.Views.EmptyBuddyListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:infra="using:ChatOn.Infrastructure"
    xmlns:customControl="using:ChatOn.Controls"
    mc:Ignorable="d">
    <Page.Resources>
    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar x:Name="appBar" Background="#FFFA8719">
            <Grid Background="#FFFA8719">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="LeftCommands" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" Margin="0,14,0,13">
                </StackPanel>
                <StackPanel x:Name="RightCommands" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right"  Margin="0,14,0,13">
                    <customControl:ImageButton x:ConnectionId='1' x:Name="SuggestionsButton" NormalImage="/Images/Icons/appbtn_suggestions.png" PressedImage="/Images/Icons/appbtn_suggestions_press.png"                          
                                               Foreground="White" Text="Suggestions" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,55,0"/>
                    <customControl:ImageButton x:ConnectionId='2' x:Name="AddBuddyButton" NormalImage="Images/Icons/appbtn_addbuddy.png" PressedImage="Images/Icons/appbtn_addbuddy_press.png" 
                    	Foreground="White" Text="Add buddy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,35,0"                       />
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid x:Name="LayoutRoot"  Margin="0,0,120,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"  />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Background="White" Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

            <Image Grid.Row="1" Width="121" Height="171" Source="/Images/buddies_default2.png"></Image>
            
            <StackPanel Orientation="Vertical" Grid.Row="3" HorizontalAlignment="Center" >
                <TextBlock MinHeight="55" Margin="0,0,0,2" x:Name="Text1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_WHO_WILL_BE_YOUR_FIRST_BUDDY_Q'}" Foreground="Black" FontFamily="Segoe UI Light" FontSize="42"/>
                <TextBlock MinHeight="32" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='WP7_CHATON_IT_IS_LONELY'}"  Foreground="Black" FontFamily="Segoe UI Light" FontWeight="ExtraLight" FontSize="24"/>
            </StackPanel>

        
            <StackPanel Grid.Row="5" HorizontalAlignment="Center" Orientation="Vertical">
                <Button x:ConnectionId='3' Margin="0,0,0,10" MinWidth="200" x:Name="btnAdd" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_ADD_BUDDY'}" HorizontalAlignment="Center"                        />
                <Button x:ConnectionId='4' Margin="0,0,0,10" MinWidth="200" x:Name="btnContactSync"  Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_HEADER_CONTACT_SYNC'}" HorizontalAlignment="Center"                      />
                <Button x:ConnectionId='5' Margin="0,0,0,10" MinWidth="200" x:Name="btnTellFriends" Visibility="Collapsed" Height="0" Width="0" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_TELL_FRIENDS'}" HorizontalAlignment="Center"                          />
                <!--<Button Margin="0,0,0,10" MinWidth="200" x:Name="btnSamsungAccount" Visibility="{Binding MyProfile.Email, Converter={StaticResource StringNullOrEmptyToHide}, ConverterParameter='!'}" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_SAMSUNG_ACCOUNT'}" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Click="SamsungAccount_Click"/>-->
            </StackPanel>
        </Grid>
        
        <!--<Grid  Background="White" Grid.Column="1">
            <Border BorderBrush="Black" BorderThickness="1"/>
