<UserControl
    x:Class="ChatON_WoA.FontSizePopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:ChatOn.Controls"
    mc:Ignorable="d"
    Width="500">

    <Grid x:Name="LayoutRoot" Background="#FFF4F4F4" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="2" Grid.RowSpan="2"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_FONT_SIZE'}" VerticalAlignment="Top" Foreground="#FF212121" FontFamily="Segoe UI" FontSize="24" Margin="32,32,0,0"/>
        <Grid Height="Auto" VerticalAlignment="Top" Grid.Row="1">
            <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled" ZoomMode="Disabled" HorizontalAlignment="Center" Margin="0,20,0,30">
                <StackPanel x:Name="spFontSize"  Orientation="Vertical" Width="350" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0">
                    <Grid x:ConnectionId='1' HorizontalAlignment="Stretch" VerticalAlignment="Top" Tag="0"                          >
                        <Controls:ChatBubble Height="70" x:Name="cbExtraSmall" Type="2" FixedFontSize="14"  Margin="0,10" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_EXTRA_SMALL'}"/>
                        <Border BorderThickness="2" Visibility="{Binding SelectedFontSize, ConverterParameter=0, Converter={StaticResource IntEqualToVisibility}}" BorderBrush="#FFFE6000"/>
                    </Grid>
                    <Grid x:ConnectionId='2' HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Tag="1"                         >
                        <Controls:ChatBubble  Height="70" x:Name="cbSmall" Type="2" FixedFontSize="18" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_SMALL'}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
                        <Border BorderThickness="2" Visibility="{Binding SelectedFontSize, ConverterParameter=1, Converter={StaticResource IntEqualToVisibility}}" BorderBrush="#FFFE6000"/>
                    </Grid>
                    <Grid x:ConnectionId='3' HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Tag="2"                         >
                        <Controls:ChatBubble Height="70" x:Name="cbMedium" Type="2" FixedFontSize="22" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_MEDIUM'}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
                        <Border BorderThickness="2" Visibility="{Binding SelectedFontSize, ConverterParameter=2, Converter={StaticResource IntEqualToVisibility}}" BorderBrush="#FFFE6000"/>
                    </Grid>
                    <Grid x:ConnectionId='4'  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Tag="3"                         >
                        <Controls:ChatBubble Height="70" x:Name="cbLarge" Type="2" FixedFontSize="26" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_LARGE'}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
                        <Border BorderThickness="2" Visibility="{Binding SelectedFontSize, ConverterParameter=3, Converter={StaticResource IntEqualToVisibility}}" BorderBrush="#FFFE6000"/>
                    </Grid>
                    <Grid x:ConnectionId='5'  HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,0" Tag="4"                         >
                        <Controls:ChatBubble Height="100" Type="2" x:Name="cbExtraLarge" FixedFontSize="58" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_EXTRA_LARGE'}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="0,10" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
                        <Border BorderThickness="2" Visibility="{Binding SelectedFontSize, ConverterParameter=4, Converter={StaticResource IntEqualToVisibility}}" BorderBrush="#FFFE6000"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>

