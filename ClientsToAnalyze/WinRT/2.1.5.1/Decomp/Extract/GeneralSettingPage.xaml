<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:ChatOn.Controls"
    x:Name="pageRoot"
    x:Class="ChatON_WoA.Views.GeneralSettingPage"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="local_newNumberText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="FontSize" Value="14.667"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="local_newNumberImage" TargetType="Image">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Stretch" Value="None"/>
            <Setter Property="Source" Value="Images/headers_new_number.png"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <ScrollViewer Background="White" HorizontalScrollMode="Disabled" ZoomMode="Disabled">
            <StackPanel VerticalAlignment="Top" Width="1366">
                <StackPanel Orientation="Horizontal" Margin="0,59,0,0">
                    <TextBlock x:ConnectionId='4' TextWrapping="Wrap" Grid.Column="0" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_NOTICE'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,0,0,0"                             VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Top" Grid.Column="1" Margin="0,4,0,0" Visibility="{Binding IsNewNotice,Converter={StaticResource BoolToVisibility}}" >
                        <Image Style="{StaticResource local_newNumberImage}" Stretch="Uniform" Width="23" Height="23"/>
                        <TextBlock Style="{StaticResource local_newNumberText}" Text="N"/>
                    </Grid>
                </StackPanel>
                    <!--<TextBlock TextWrapping="Wrap" Text="{Binding ConverterParameter=IDS_CHATON_HEADER_CONTACT_SYNC, Converter={StaticResource ResourceStringConverter}}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,30,0,0" VerticalAlignment="Top"/>
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,14,0,0" Tapped="SyncBuddy_Tapped_1">
                    <Image Margin="0" VerticalAlignment="Center" Stretch="None" HorizontalAlignment="Left" Source="Images/appbtn_sync.png"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="14.667" Text="{Binding ConverterParameter=IDS_CHATON_BODY_SYNCHRONISE_CONTACTS_IN_MY_DEVICE_WITH_CHATON_BUDDIES, Converter={StaticResource ResourceStringConverter}}" FontFamily="Segoe UI Light" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                </StackPanel>-->
                <!--<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="ContactSync" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,31,0,0"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="Black" FontSize="12" Margin="0,14,0,0" Text="Syncronize contacts in my device" FontFamily="Segoe UI"/>-->
                <!--<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tell friends" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,41,0,0"/>-->
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON2_DELETE_ACCOUNT'}" FontSize="26.667" Foreground="#FFFF9600" FontFamily="Segoe UI Light" Margin="0,31,0,0" VerticalAlignment="Top"/>
                    <TextBlock TextWrapping="Wrap" Text="ChatON account" FontSize="20" Foreground="Black" FontFamily="Segoe UI Light" Margin="0,10,0,0" VerticalAlignment="Top" x:Name="txtChatOnAccount"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Grid Width="64"
                              Height="64"
                              HorizontalAlignment="Left">
                            <Image Source="{Binding MyProfile.ProfileImage}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <TextBlock Text="{Binding MyProfile.Name}" FontSize="18" TextTrimming="WordEllipsis" TextWrapping="NoWrap" MaxHeight="20"/>
                            <TextBlock Text="{Binding MyProfile.PhoneNumber, Converter={StaticResource InternationalPhonenumberConverter}}" Opacity="50"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" Foreground="Black" FontSize="14.667" Margin="0,14,0,0" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_POP_ALL_YOUR_CHATON_DATA_WILL_BE_DELETED'}" FontFamily="Segoe UI Light" VerticalAlignment="Top"/>
                    <Button x:ConnectionId='3' Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON2_DELETE_ACCOUNT'}" HorizontalAlignment="Left" Margin="0,10,0,0" MinWidth="200"                            x:Name="DeleteBtn" Background="Gray"/>
                </StackPanel>
                <TextBlock x:ConnectionId='1' TextWrapping="Wrap" Foreground="#FFFF9600" FontSize="26.667" Margin="0,40,0,0" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_SK_HELP'}" FontFamily="Segoe UI Light"                             VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='2' TextWrapping="Wrap" Foreground="#FFFF9600" FontSize="26.667" Margin="0,36,0,0" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_HEADER_CONTACT_US'}" FontFamily="Segoe UI Light"                             VerticalAlignment="Top"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

