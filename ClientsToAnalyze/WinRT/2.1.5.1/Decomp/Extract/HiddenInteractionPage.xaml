<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:ChatOn.Controls"
    x:Class="ChatON_WoA.Views.HiddenInteractionPage"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="BlockBuddyItemTemplate">
            <Grid Tag="tilt" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" Width="60" Height="60" Source="{Binding ProfileImage}"/>
                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Top" Margin="21,0,0,0" FontSize="15.067" TextTrimming="WordEllipsis" Foreground="Black" FontFamily="Segoe UI"/>
                <CheckBox x:ConnectionId='1' VerticalAlignment="Center" Grid.Column="2" IsChecked="{Binding IsChecked, Mode=TwoWay}" Visibility="{Binding IsInteractionDeleteMode, Converter={StaticResource BoolToVisibility}}"                                                                 />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid x:ConnectionId='2' Background="Transparent"                       />
        <Grid Background="#FFF4F4F4" Width="346" HorizontalAlignment="Right" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_HEADER_HIDE_LIST'}" FontSize="26.667" Foreground="Black" FontFamily="Segoe UI Light" Margin="40,59,0,0"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding HideList.Count, Converter={StaticResource TotalMemberConverter}}" FontSize="26.667" Foreground="Black" FontFamily="Segoe UI Light" Margin="5,59,0,0"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="1" Margin="40,0,0,20">
                <StackPanel x:Name="RemoveTriggerPanel">
                    <Button x:ConnectionId='7' x:Name="RemoveTriggerButton" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_SK_REMOVE'}" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,20,0,0"                                    />
                </StackPanel>
                
                <StackPanel x:Name="RemovePanel" VerticalAlignment="Top" Orientation="Horizontal" Visibility="Collapsed" >
                    <Button x:ConnectionId='4' x:Name="RemoveBlockBuddy" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_SK_REMOVE'}" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,20,0,0"                               />
                    <Button x:ConnectionId='5' x:Name="CheckAllBlockBuddyButton" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_SELECT_ALL'}" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,20,0,0"                                 />
                    <Button x:ConnectionId='6' x:Name="CancelBlockToogleBuddy" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_SK_CANCEL'}" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,20,0,0"                           />
                </StackPanel>

                <StackPanel x:ConnectionId='3'  VerticalAlignment="Top" Orientation="Horizontal"                           >
                    <Image Source="Images/chat_info_add.png" Stretch="Fill" Width="45" Height="45" />
                    <TextBlock Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_SK3_ADD_BUDDIES'}" FontSize="20"  Margin="10,12,0,0"  />
                </StackPanel>
                
            </StackPanel>
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,109,0,0">
                <Image x:Name="NoBlockListImage" Source="Images/buddies_default2.png" Stretch="None" Width="121" Height="171" HorizontalAlignment="Center" Visibility="Collapsed" />
                <TextBlock Width="200" x:Name="NoBlacklistItemText" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_AFTER_YOU_HIDE_BUDDIES_IN_INTERACTION_RANK_HIDDEN_BUDDIES_WILL_BE_SHOWN'}" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="200" FontFamily="Segoe UI Light" FontSize="14" Margin="13,10,20,20" Foreground="Black" Visibility="Collapsed"  />
            </StackPanel>
            <!--<Controls:ImageButton x:Name="HideInteractionButton1" NormalImage="/Images/Icons/icon_setting_add_btn.png" PressedImage="/Images/Icons/icon_setting_add_btn.png" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Margin="40,20,0,20" Click="HideInteractionButton_Click_1"/>-->
            
            <!--<TextBlock TextWrapping="Wrap" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_AFTER_YOU_HIDE_BUDDIES_IN_INTERACTION_RANK_HIDDEN_BUDDIES_WILL_BE_SHOWN'}" FontSize="20" Foreground="Black" FontFamily="Segoe UI Light" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2" Margin="40,0,0,0" Visibility="{Binding HideList, Converter={StaticResource ObjectCountToHide}}"/>-->
            <ListView SelectionMode="None" ItemsSource="{Binding HideList}" ItemTemplate="{StaticResource BlockBuddyItemTemplate}" HorizontalContentAlignment="Stretch" ItemContainerStyle="{StaticResource FullWidthListItemStyle}" Margin="40, 0, 0, 0" Grid.Row="2">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Grid>
    </Grid>
</Page>

