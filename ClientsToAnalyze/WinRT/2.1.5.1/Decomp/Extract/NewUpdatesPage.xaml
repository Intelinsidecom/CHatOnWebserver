<Page x:Class="ChatON_WoA.NewUpdatesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ChatON_WoA"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Converter="using:ChatOn.Infrastructure"
      mc:Ignorable="d">

    <Page.Resources>

        <DataTemplate x:Key="UpdatesTemplateTwoLine">
            <Grid Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      >
                    <Image Stretch="Fill"
                           Width="75"
                           Height="75"
                           Source="/Images/buddies_profile_image.png" />
                    <Image Stretch="Fill"
                           Width="75"
                           Height="75"
                           Source="{Binding thumbProfile,Mode=TwoWay}" />
                </Grid>
                
                <Grid Grid.Column="1"
                      Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding push_message}"
                               VerticalAlignment="Bottom"
                               Grid.Row="0"
                               FontSize="20"
                               d:LayoutOverrides="VerticalAlignment"
                               TextTrimming="WordEllipsis" />
                    <TextBlock Text="{Binding additional.comment}"
                               VerticalAlignment="Top"
                               Grid.Row="1"
                               FontSize="20"
                               TextWrapping="Wrap" />
                </Grid>
                <TextBlock Grid.Column="3"
                           TextAlignment="Right"
                           TextWrapping="Wrap"
                           Text="{Binding created, Converter={StaticResource LongToDateOnUpdatesConverter}}"
                           VerticalAlignment="Center"
                           FontSize="14"
                           HorizontalAlignment="Right" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UpdatesTemplateOneLine">
            <Grid Margin="0,5,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Stretch="Fill"
                       Width="75"
                       Height="75"
                       Source="/ChatON;component/Images/my page_default image.png" />
                <TextBlock Grid.Column="1"
                           Margin="5,0,5,0"
                           Text="{Binding push_message}"
                           VerticalAlignment="Center"
                           FontSize="20"
                           TextWrapping="Wrap" />
                <TextBlock Grid.Column="3"
                           TextAlignment="Right"
                           TextWrapping="Wrap"
                           Text="{Binding created}"
                           VerticalAlignment="Center"
                           FontSize="14"
                           HorizontalAlignment="Right" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#FFF4F4F4"
          x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='2' x:Name="backButton"
                    IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}"
                    Style="{StaticResource BackButtonStyle}"
                                             />
            <TextBlock x:Name="pageTitle"
                       Grid.Column="1"
                       Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='recent_story_title'}"
                       Style="{StaticResource PageHeaderTextStyle}"
                       Foreground="Black" />
        </Grid>
        <Grid Grid.Row="1"
              Margin="120,0,120,80">
            <ListBox x:ConnectionId='1' ItemsSource="{Binding ListOfNewUpdate}"
                     ItemTemplate="{StaticResource UpdatesTemplateTwoLine}"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     BorderThickness="0"
                     Background="#FFF4F4F4"
                     x:Name="NewUpdateList"
                                            
                                                   >
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
        <TextBlock Grid.Row="1"
                   x:Name="NoListText"
                   Visibility="Collapsed"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="{Binding ConverterParameter=IDS_CHATON_BODY_NO_LISTS, Converter={StaticResource ResourceStringConverter}}"
                   FontFamily="Segoe UI"
                   FontSize="32"
                   Foreground="Black" />
    </Grid>
</Page>

