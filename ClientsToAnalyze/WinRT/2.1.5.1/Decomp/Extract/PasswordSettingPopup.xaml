<UserControl x:ConnectionId='1' xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ChatON_WoA.Views"
             xmlns:infra="using:ChatOn.Infrastructure"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:CustomControls="using:ChatOn.Controls"
             x:Class="ChatOn.Controls.PasswordSettingPopup"
                                                 
                                               
             mc:Ignorable="d"
             BorderThickness="1">

    <Grid x:Name="LayoutRoot"
          Width="2000"
          Margin="0,140,0,239"
          Height="400"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Background="#FF212121">
        <Border BorderBrush="Black"
                BorderThickness="2"
                Grid.RowSpan="2" />
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       x:Name="TitleText"
                       HorizontalAlignment="Left"
                       TextWrapping="Wrap"
                       Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_HEADER_SET_PASSWORD'}"
                       VerticalAlignment="Top"
                       Foreground="#FFFFFF"
                       FontFamily="Segoe UI Light"
                       FontSize="26.667" />
            <Grid HorizontalAlignment="Center"
                  Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Visibility="{Binding CurrentPasswordVisibility}"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_ENTER_YOUR_PASSWORD'}"
                           VerticalAlignment="Center"
                           Margin="0,10,22,0"
                           Foreground="#FFFFFF"
                           FontFamily="Segoe UI Light"
                           FontSize="14.667" />
                <PasswordBox MaxLength="10"
                             x:Name="CurrentPasswordbox"
                             Visibility="{Binding CurrentPasswordVisibility}"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Width="280"
                             Style="{StaticResource LightThemePasswordBoxStyle}"
                             Grid.Column="1"
                             Margin="0,10,0,0" />
                <TextBlock HorizontalAlignment="Left"
                           Visibility="{Binding NewPasswordVisibility}"
                           TextWrapping="Wrap"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_ENTER_NEW_PASSWORD'}"
                           VerticalAlignment="Center"
                           Margin="0,10,22,0"
                           Foreground="#FFFFFF"
                           FontFamily="Segoe UI Light"
                           FontSize="14.667"
                           Grid.Row="1" />
                <PasswordBox MaxLength="10"
                             x:Name="NewPasswordbox"
                             Visibility="{Binding NewPasswordVisibility}"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Width="280"
                             Style="{StaticResource LightThemePasswordBoxStyle}"
                             Grid.Column="1"
                             Margin="0,10,0,0"
                             Grid.Row="1" />
                <TextBlock HorizontalAlignment="Left"
                           Visibility="{Binding NewPasswordVisibility}"
                           TextWrapping="Wrap"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BODY_CONFIRM_PASSWORD'}"
                           VerticalAlignment="Center"
                           Foreground="#FFFFFF"
                           FontFamily="Segoe UI Light"
                           FontSize="14.667"
                           Grid.Row="2"
                           Margin="0,10,22,0" />
                <PasswordBox MaxLength="10"
                             x:Name="ConfirmPasswordbox"
                             Visibility="{Binding NewPasswordVisibility}"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Width="280"
                             Style="{StaticResource LightThemePasswordBoxStyle}"
                             Grid.Column="1"
                             Margin="0,10,0,0"
                             Grid.Row="2" />
                <TextBlock HorizontalAlignment="Left"
                           Visibility="{Binding HintVisibility}"
                           TextWrapping="Wrap"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_MBODY_PASSWORD_HINT'}"
                           VerticalAlignment="Center"
                           Foreground="#FFFFFF"
                           FontFamily="Segoe UI Light"
                           FontSize="14.667"
                           Grid.Row="3"
                           Margin="0,10,22,0" />
                <TextBox MaxLength="20"
                         x:Name="PasswordHint"
                         Visibility="{Binding HintVisibility}"
                         Grid.Column="1"
                         HorizontalAlignment="Left"
                         Grid.Row="3"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         Width="280"
                         Style="{StaticResource LightThemeTextBoxStyle}"
                         Margin="0,10,0,0" />
                <StackPanel Grid.Column="2"
                            Grid.RowSpan="4"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left">
                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding ErrorMessage}"
                               Foreground="#FFFF9621"
                               FontFamily="Segoe UI Light"
                               FontSize="14.667"
                               Margin="22,10,0,0"
                               MaxWidth="300" />

                    <TextBlock x:Name="HintMessage"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontSize="14.667"
                               MaxWidth="300"
                               Margin="110,0,0,0"
                               FontWeight="Light"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.Row="4"
                            VerticalAlignment="Top"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,5">
                    <Button x:ConnectionId='2' Content="{Binding ConverterParameter=IDS_CHATON_BUTTON_SAVE, Converter={StaticResource ResourceStringConverter}}"
                            HorizontalAlignment="Left"
                            Style="{StaticResource WinsetButton}"
                            VerticalAlignment="Top"
                                               />
                    <Button x:ConnectionId='3' Content="{Binding ConverterParameter=IDS_CHATON_OPT_CANCEL_ABB, Converter={StaticResource ResourceStringConverter}}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                                                 />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

