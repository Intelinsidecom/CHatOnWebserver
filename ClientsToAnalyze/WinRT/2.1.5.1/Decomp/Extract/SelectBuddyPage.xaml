<Page x:ConnectionId='1'
    x:Class="ChatON_WoA.Views.SelectBuddyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:infra="using:ChatOn.Infrastructure"
    xmlns:customControl="using:ChatOn.Controls"
    xmlns:common="using:ChatON_WoA.Common"
    xmlns:converter="using:ChatOn.Infrastructure"
    mc:Ignorable="d"
                                   >
    <Page.Resources>
        <converter:BracketConverter x:Key="BracketConverter"/>
        <converter:GroupMembersToCountConverter x:Key="GroupMembersToCountConverter"/>
        <common:SelectBuddyTemplateSelector x:Key="SelectBuddyTemplateSelector"/>
        <DataTemplate x:Key="IndexNormalTemplate">
            <Grid Height="60" Width="60" Background="{StaticResource OrangeFillCollor}" Margin="4,4,0,4" >
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="3,0,0,3" Text="{Binding HeaderName}" Foreground="#FCFFFFFF" FontFamily="Segoe UI" FontSize="36"/>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,3,0" Text="{Binding Count}" Foreground="#FCFFFFFF" FontFamily="Segoe UI" FontSize="14"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="IndexFavoriteTemplate">
            <Grid Height="60" Width="60" Background="{StaticResource OrangeFillCollor}" Margin="4,4,0,4" >
                <Image Source="/Images/icon_star.png" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="50" Margin="3,0,0,3"/>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,3,0" Text="{Binding Count}" Foreground="#FCFFFFFF" FontFamily="Segoe UI" FontSize="14"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="IndexAllTemplate">
            <StackPanel Height="60" Margin="4,4,0,4" IsTapEnabled="False" Orientation="Horizontal">
                <TextBlock Text="All ( " VerticalAlignment="Bottom" FontSize="36"/>
                <TextBlock Text="{Binding Path=Count}" FontSize="36" VerticalAlignment="Bottom"/>
                <TextBlock Text=" )" VerticalAlignment="Bottom" FontSize="36"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="IndexBirthdayTemplate">
            <Grid Height="60" Width="60" Background="{StaticResource OrangeFillCollor}" Margin="4,4,0,4" >
                <Image Source="/Images/icon_birthday.png" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="50" Margin="3,0,0,3"/>
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,3,0" Text="{Binding Count}" Foreground="#FCFFFFFF" FontFamily="Segoe UI" FontSize="14"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="IndexNewTemplate">
            <Grid Height="60" Width="60" Background="{StaticResource OrangeFillCollor}" Margin="4,4,0,4" IsTapEnabled="False">
                <Image Source="/Images/icon_new.png" Grid.Row="1" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="50" Margin="3,0,0,3"/>
                <TextBlock TextWrapping="Wrap" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,3,0" Text="{Binding Count}" Foreground="#FCFFFFFF" FontFamily="Segoe UI" FontSize="14"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="IndexGroupTemplate">
            <Grid Height="60" Width="60" Background="{StaticResource OrangeFillCollor}" Margin="4,4,0,4" >
                <Image Source="/Images/icon_talk.png" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="50" Width="50" Margin="3,0,0,3" />
                <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,3,0" Text="{Binding Count}" Foreground="#FCFFFFFF" FontFamily="Segoe UI" FontSize="14"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="IndexMeTemplate">
            <Grid Height="60" Width="60" Background="{StaticResource OrangeFillCollor}" Margin="4,4,0,4">

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="IndexItemTemplate">
            <Grid HorizontalAlignment="Left" Height="68" Width="344" Margin="0,0,0,0" VerticalAlignment="Top">
                <ContentControl HorizontalAlignment="Left" VerticalAlignment="Top" 
                                ContentTemplate="{Binding HeaderType, Converter={StaticResource IndexToTemplate}, ConverterParameter='IndexMeTemplate,IndexNewTemplate,IndexBirthdayTemplate,IndexFavoriteTemplate,IndexGroupTemplate,IndexNormalTemplate,IndexAllTemplate,IndexAllTemplate,SelectBuddyPage'}" 
                                Content="{Binding}"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="BuddyItemTemplate">
            <Grid Width="344" Height="68" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition  Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid x:ConnectionId='5' Grid.Column="0"                        >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding Buddy.ProfileImage}" Margin="4,4,0,4" Width="60" Height="60" Stretch="Fill"/>
                    <Grid Grid.Column="1" Margin="11,8,0,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding Buddy.Name}" Foreground="{Binding NameForeground}"
                			TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="25.333" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" FontWeight="Light" MaxHeight="30"/>
                        <TextBlock Text="{Binding Buddy.Status}"
                			TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="20" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Row="1" Foreground="{Binding Buddy.StatusForeground}"/>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="GroupItemTemplate">
            <Grid x:ConnectionId='4' Width="344" Height="68" Background="{Binding Background}"                      >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image x:Name="GroupProfileImage" Margin="4,4,0,4"  Width="60" Height="60" Source="{Binding Group.ProfileImage}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Grid Grid.Column="1" Margin="11,8,0,0" Background="Transparent" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="{Binding NameForeground}" Text="{Binding Group.Name,Converter={StaticResource GroupNameConverter}}" TextWrapping="NoWrap" FontSize="25.333" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" FontWeight="Light" TextTrimming="WordEllipsis"/>
                    <TextBlock Grid.Column="1" Foreground="{Binding NameForeground}" Text="{Binding Group.Members, Converter={StaticResource GroupMembersToCountConverter}}" TextWrapping="NoWrap" FontSize="25.333" FontFamily="Segoe UI Light" HorizontalAlignment="Right" Margin="5,0" VerticalAlignment="Top" FontWeight="Light"/>
                    <TextBlock Grid.ColumnSpan="2" Foreground="{Binding Group.StatusForeground}" TextWrapping="NoWrap" FontSize="20" FontFamily="Segoe UI Light" Text="{Binding Group.Members,Converter={StaticResource PhoneNumbersToNames}}" Grid.Row="1" VerticalAlignment="Top" TextTrimming="WordEllipsis"/>
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="SelectedBuddyItemTemplate">
            <Grid x:ConnectionId='3' Width="200" Height="48"                             >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding Buddy.ProfileImage}" Margin="4,4,0,4" Width="40" Height="40" Stretch="Fill"/>
                    <Grid Grid.Column="1" Margin="11,8,0,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding Buddy.Name}" Foreground="Black"
                		TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="20.333" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" FontWeight="Light"/>
                        <TextBlock Text="{Binding Buddy.OrgNumber}"
                		TextTrimming="WordEllipsis" TextWrapping="NoWrap" FontSize="14" FontFamily="Segoe UI Light" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Grid.Row="1" Foreground="{Binding Buddy.StatusForeground}" Visibility="{Binding Buddy.OrgPhoneNumberVisible}"/>
                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="BuddyListItemTemplate">
            <Grid Margin="0,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ContentControl VerticalAlignment="Top"
                                ContentTemplate="{Binding Type, Converter={StaticResource IndexToTemplate}, ConverterParameter='IndexItemTemplate,BuddyItemTemplate,GroupItemTemplate,ProfileItemTemplate,GroupProfileItemTemplate,SelectBuddyPage'}" 
                                Content="{Binding}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ProfileItemTemplate">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                <customControl:BuddyProfileDialog BuddyInfo="{Binding Buddy}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="GroupProfileItemTemplate">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                <customControl:GroupProfileDialog GroupInfo="{Binding Group}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ZoomedOutIndexItemTemplate">
            <Grid x:ConnectionId='2' Height="80" Width="200" Margin="0, 0, 6, 6" Background="Gray"                       >
                <Grid Background="{StaticResource OrangeFillCollor}" Visibility="{Binding Index, Converter={StaticResource BiggerThanParamToVisibility}, ConverterParameter='-1'}"/>
                <StackPanel Orientation="Horizontal" Margin="20, 0, 0, 0">
                    <TextBlock FontSize="28" FontFamily="Segoe WP SemiLight" VerticalAlignment="Center" Text="{Binding Title}" TextWrapping="Wrap" Foreground="{StaticResource WhiteForegroundColor}"/>
                    <TextBlock Margin="5 0" FontSize="28" FontFamily="Segoe WP SemiLight" VerticalAlignment="Center" Text="{Binding TotalMember, Converter={StaticResource TotalMemberConverter}}" Foreground="{StaticResource WhiteForegroundColor}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundLayoutRoot}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Height="140">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='9' x:Name="backButton" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"                         />
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <TextBlock x:Name="pageTitle1" Grid.Column="1" Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_HEADER_SELECT_MEMBERS'}" Style="{StaticResource PageHeaderTextStyle}" Foreground="Black"/>
                <TextBlock x:Name="txtsubCount" Grid.Column="1" VerticalAlignment="Bottom" Style="{StaticResource PageSubheaderTextStyle}" />
            </StackPanel>
            <customControl:ImageButton x:ConnectionId='10' x:Name="SelectAllButton" NormalImage="Images/Icons/appbtn_select all.png" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,40,40,0" Grid.Column="1"                              PressedImage="Images/Icons/appbtn_select all_press.png"/>
        </Grid>

        <Grid x:Name="Current" Grid.Row="1" Margin="120,0,0,50">
            <SemanticZoom x:Name="semanticZoom">
                <SemanticZoom.ZoomedOutView>
                    <GridView x:Name="ZoomedOutGridView" 
                              ItemContainerStyle="{StaticResource GridViewEmptyListStyle}"
                              ItemsSource="{Binding HeaderItems}" 
                              ItemTemplate="{StaticResource ZoomedOutIndexItemTemplate}"  
                              VerticalAlignment="Center">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </SemanticZoom.ZoomedOutView>
                <SemanticZoom.ZoomedInView>
                    <GridView x:ConnectionId='8' x:Name="gridView"  
                              SelectionMode="Multiple" 
                              ItemsSource="{Binding ShowingItems}" 
                              ItemTemplateSelector="{StaticResource SelectBuddyTemplateSelector}"
                              ItemContainerStyle="{StaticResource GridViewBuddyListStyle}" 
                              Margin="-4,0,4,0"
                                                                          >
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                    </GridView>
                </SemanticZoom.ZoomedInView>
            </SemanticZoom>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView 
                Grid.Column="0"
                Margin="120,0,70,10" 
                VerticalAlignment="Bottom" 
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
                ScrollViewer.HorizontalScrollMode="Enabled" SelectionMode="None"                          
                ItemsSource="{Binding SelectBuddyModel.SelectedBuddyItems}" 
                ItemTemplate="{StaticResource SelectedBuddyItemTemplate}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,70,40">
                <Button x:ConnectionId='6' x:Name="OKButton" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_ADD'}" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="100"                         />
                <Button x:ConnectionId='7' Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_CANCEL'}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" MinWidth="100"                       />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

