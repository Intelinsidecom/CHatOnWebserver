<UserControl x:Class="ChatON_WoA.Views.SelectCountryCodeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ChatON_WoA.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="535"
             Height="471">

    <UserControl.Resources>
        <DataTemplate x:Key="CountryItemTemplate">
            <Grid x:ConnectionId='1' Width="300"
                  Height="47"
                  Margin="60,0,40,0"
                                        
                  Background="Transparent"
                  IsTapEnabled="{Binding isTapEnabled}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="{Binding Name}"
                           VerticalAlignment="Top"
                           FontFamily="Segoe UI Light"
                           FontSize="14.667"
                           Margin="0"
                           Foreground="{Binding Foreground}"
                           FontWeight="SemiBold" />
                <TextBlock HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           Text="{Binding Code}"
                           VerticalAlignment="Top"
                           FontFamily="Segoe UI Light"
                           FontSize="14.667"
                           Grid.Column="1"
                           Foreground="Black"
                           FontWeight="SemiBold" />
                <Rectangle Height="1"
                           Visibility="{Binding ShowRectangle}"
                           Stroke="Black"
                           StrokeThickness="1" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          Background="White">
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.RowSpan="2" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock HorizontalAlignment="Left"
                           Height="33.296"
                           Margin="0"
                           TextWrapping="Wrap"
                           Text="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_MBODY_COUNTRY_OR_REGION_CODE'}"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI Light"
                           FontSize="26.667"
                           Grid.Column="1"
                           Foreground="Black" />
                <Image x:ConnectionId='3' HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Source="Images/Icons/appbtn_back.png"
                                              
                       Stretch="None"
                       Margin="26,0,20,0" />
            </Grid>
            <Grid Grid.Row="1"
                  Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Margin="80,0,0,0"
                      VerticalAlignment="Top"
                      Height="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='2' x:Name="InputBox"
                             VerticalAlignment="Top"
                                                     
                                                                
                             Style="{StaticResource LightThemeTextBoxStyle}" />
                </Grid>
                <ListView Margin="86,30,0,0"
                          Grid.Row="1"
                          Visibility="{Binding IsEmtpyList, Converter={StaticResource BoolToVisibility}, ConverterParameter='!'}"
                          ItemTemplate="{StaticResource CountryItemTemplate}"
                          ItemsSource="{Binding SearchResult}"
                          x:Name="CountryGrid"
                          SelectionMode="None" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>

