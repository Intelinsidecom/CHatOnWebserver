<Page x:Name="pageRoot"
      x:Class="ChatON_WoA.Views.SelectLanguagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ChatON_WoA.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:infra="using:ChatOn.Infrastructure"
      mc:Ignorable="d">

    <UserControl.Resources>

        <DataTemplate x:Key="ZoomedOutIndexItemTemplate">
            <Grid x:ConnectionId='2' Width="150"
                  Height="70"
                  Background="#FFFA8719"
                  Margin="60,10,40,0"
                                        >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                           TextWrapping="Wrap"
                           Text="{Binding}"
                           VerticalAlignment="Center"
                           FontFamily="Segoe UI Light"
                           Style="{StaticResource SubheaderTextStyle}"
                           FontWeight="SemiBold"
                           Foreground="White" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="BuddyListItemTemplate">
            <Grid Margin="0,0,0,6"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top">
                <ContentControl VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                ContentTemplate="{Binding Type, Converter={StaticResource IndexToTemplate}, ConverterParameter='IndexItemTemplate,BuddyItemTemplate,GroupItemTemplate,ProfileItemTemplate,GroupProfileItemTemplate,PivotPage'}"
                                Content="{Binding}" />
            </Grid>
        </DataTemplate>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <DataTemplate x:Key="CountryItemTemplate">
            <Grid x:ConnectionId='1' Background='Transparent'
                                        >
                <Grid Width="300"
                      Height="40"
                      Margin="60,10,40,0"
                      Background="{Binding Background}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
                               TextWrapping="Wrap"
                               Text="{Binding Name}"
                               VerticalAlignment="Top"
                               FontFamily="Segoe UI Light"
                               FontSize="18"
                               Margin="10,0,0,0"
                               FontWeight="SemiBold"
                               Foreground="Black" />
                    <TextBlock HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               Text="{Binding Code}"
                               VerticalAlignment="Top"
                               FontFamily="Segoe UI Light"
                               FontSize="18"
                               Margin="0,0,0,0"
                               Grid.Column="1"
                               FontWeight="SemiBold"
                               Foreground="Black" />
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          Background="#FFF4F4F4">
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='4' x:Name="backButton"
                    IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}"
                    Style="{StaticResource BackButtonStyle}"
                                               />
            <TextBlock x:Name="pageTitle"
                       Grid.Column="1"
                       Style="{StaticResource PageHeaderTextStyle}"
                       Foreground="Black" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Margin="120,0,0,0"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Height="32"
                  Width="266">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:ConnectionId='3' x:Name="InputBox"
                         VerticalAlignment="Top"
                                                 
                                                            >
                    <TextBox.InputScope>
                        <InputScope>
                            <InputScope.Names>
                                <InputScopeName NameValue="Search" />
                            </InputScope.Names>
                        </InputScope>
                    </TextBox.InputScope>
                </TextBox>
            </Grid>

            <SemanticZoom x:Name="semanticZoom"
                          Grid.Row="1">
                <SemanticZoom.ZoomedOutView>
                    <GridView x:Name="ZoomedOutGridView"
                              Margin="120,29,0,108"
                              ItemsSource="{Binding HeaderCountryCode}"
                              ItemTemplate="{StaticResource ZoomedOutIndexItemTemplate}"
                              VerticalAlignment="Center">
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView>

                </SemanticZoom.ZoomedOutView>

                <SemanticZoom.ZoomedInView>
                    <GridView SelectionMode="None"
                              Margin="120,29,0,108"
                              Background="White"
                              x:Name="CountryGrid"
                              ItemTemplate="{StaticResource CountryItemTemplate}"
                              ItemContainerStyle="{StaticResource GridViewItemStyle1}"
                              ItemsSource="{Binding SearchResult}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <infra:WrapPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </GridView>
                </SemanticZoom.ZoomedInView>
            </SemanticZoom>

        </Grid>
    </Grid>
</Page>

