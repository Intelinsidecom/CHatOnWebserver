<Page
    x:Name="pageRoot"
    x:Class="ChatON_WoA.Views.SuggestionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChatON_WoA.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:infra="using:ChatOn.Infrastructure"
    xmlns:customControl="using:ChatOn.Controls"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="BuddyItemTemplate">
            <Grid Width="330"
                  Height="68">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid x:ConnectionId='1' Background="Transparent"
                                            >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding ProfileImage}"
                           Width="60"
                           Height="60"
                           Stretch="Fill"
                           Margin="4" />
                    <!--<customControl:ImageDelayControl ProfileImageSource="{Binding ProfileImage}" Width="60" Height="60" StretchMode="1" Margin="4" IsDownloading="{Binding IsDownloading}"/>-->
                    <Grid Grid.Column="1"
                          Margin="11,8,0,0"
                          Background="Transparent">
                        <TextBlock Text="{Binding Name}"
                                   Foreground="Black"
                                   TextWrapping="NoWrap"
                                   FontSize="25.333"
                                   FontFamily="Segoe UI Light"
                                   HorizontalAlignment="Left"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   FontWeight="Light"
                                   TextTrimming="WordEllipsis" />
                    </Grid>
                </Grid>
                <Button x:ConnectionId='2'                          
                        Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_ADD'}"
                        Background="#FFFFFF"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Width="65" />
                <!--<Button Click="IgnoreButton_Click" Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_IGNORE'}" Background="#FFFFFF" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"/>-->
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#FFF4F4F4" x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='6' x:Name="backButton" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"                         />
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Suggestions" Style="{StaticResource PageHeaderTextStyle}" Foreground="Black"/>
                <TextBlock x:Name="txtsubCount" Grid.Column="1" FontSize="19" FontFamily="Segoe UI Light" VerticalAlignment="Bottom" Style="{StaticResource PageSubheaderTextStyle}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Margin="120,0,0,0">
            <GridView Grid.Row="1" SelectionMode="None" Margin="0,0,0,150" ItemsSource="{Binding BuddyItems}" ItemTemplate="{StaticResource BuddyItemTemplate}">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" FlowDirection="LeftToRight" Orientation="Horizontal" Grid.Row="1" Margin="10,0,30,100" >
                <Button x:ConnectionId='3' Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_ADD_ALL'}"                           Visibility="{Binding IsModifyActionEnable, Converter={StaticResource BoolToVisibility}}" Background="#FFFFFFFF" BorderBrush="Black" BorderThickness="2" Width="109"/>
                <Button x:ConnectionId='4' Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_IGNORE_ALL'}"                             Visibility="{Binding IsModifyActionEnable, Converter={StaticResource BoolToVisibility}}" Background="#FFFFFFFF" BorderBrush="Black" BorderThickness="2" Width="109"/>
                <Button x:ConnectionId='5' Content="{Binding Converter={StaticResource ResourceStringConverter}, ConverterParameter='IDS_CHATON_BUTTON_CANCEL'}"                          Background="#FFFFFFFF" BorderBrush="Black" BorderThickness="2" Width="109"/>
            </StackPanel>
            
        </Grid>
        <TextBlock Grid.Row="1" x:Name="NoListText" Visibility="Collapsed" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ConverterParameter=IDS_CHATON_BODY_NO_LISTS, Converter={StaticResource ResourceStringConverter}}" FontFamily="Segoe UI" FontSize="32" Foreground="Black"/>
    </Grid>
</Page>

