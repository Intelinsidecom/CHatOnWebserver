<UserControl x:ConnectionId='1' xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ChatON_WoA.Views"
             xmlns:infra="using:ChatOn.Infrastructure"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local1="using:ChatOn.Controls"
             x:Class="ChatOn.Controls.UnknownBuddyProfileDialog"
             mc:Ignorable="d"
             BorderBrush="Black"
             BorderThickness="1"
                                               >
    
    <Grid x:Name="LayoutRoot"
          Background="White"
          Width="800"
          Height="525">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel HorizontalAlignment="Left"
                        Width="220"
                        Margin="0,0,20,0"
                        Background="#FFF">
                <Grid x:Name="ProfileImageGrid"
                      Tag="tilt"
                      VerticalAlignment="Top"
                      Width="184"
                      Height="184"
                      HorizontalAlignment="Left"
                      Margin="11,11,0,0">
                    <!--<Image  HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Images/buddies_profile_image.png" Width="184" />
                    <Image  HorizontalAlignment="Left" VerticalAlignment="Top" Source="{Binding Buddy.ProfileImageUri}" Width="184" Stretch="Fill" Height="184"/>-->
                    <Image Source="{Binding Buddy.ProfileImage}"
                           HorizontalAlignment="Left"
                           Width="184"
                           Height="184"
                           Grid.Row="1"
                           VerticalAlignment="Top" />
                    <Image Source="{Binding Buddy.FlagImage}"
                           HorizontalAlignment="Right"
                           Height="57"
                           Grid.Row="1"
                           VerticalAlignment="Bottom"
                           Width="79"
                           Stretch="Fill"
                           Margin="0,72,3,0" />
                </Grid>
                <Grid x:ConnectionId='3' VerticalAlignment="Top"
                      Margin="11,36,0,0"
                                             
                      IsTapEnabled="True"
                      Visibility="{Binding btnAddVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Stretch="None"
                           Source="/Images/Icons/appbtn_addbuddy_b.png" />
                    <TextBlock HorizontalAlignment="Left"
                               TextWrapping="Wrap"
                               Text="{Binding ConverterParameter=IDS_CHATON_BUTTON_ADD_BUDDY, Converter={StaticResource ResourceStringConverter}}"
                               VerticalAlignment="Center"
                               Foreground="Black"
                               FontFamily="Segoe UI Light"
                               FontSize="21.333"
                               Grid.Column="1"
                               Margin="10,0,0,0" />
                </Grid>
                <!-- Commented because API Not yet available-->
                <!--<Grid x:Name="ReportGrid" VerticalAlignment="Top" Margin="11,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="169"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None" Source="Images/Icons/appbtn_pintostart_o.png"/>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding ConverterParameter=IDS_CHATON_BUTTON_REPORT, Converter={StaticResource ResourceStringConverter}}" VerticalAlignment="Center" Foreground="Black" FontFamily="Segoe UI Light" FontSize="21.333" Grid.Column="1" Margin="10,0,0,0"/>
                </Grid>-->
                <Grid x:ConnectionId='4' x:Name="BlockGrid"
                      VerticalAlignment="Top"
                      Margin="11,20,0,0"
                                                 
                      IsTapEnabled="True"
                      Visibility="{Binding btnAddVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Stretch="None"
                           Source="/Images/Icons/appbtn_block.png" />
                    <TextBlock HorizontalAlignment="Left"
                               TextWrapping="Wrap"
                               Text="{Binding ConverterParameter=IDS_CHATON_OPT_BLOCK, Converter={StaticResource ResourceStringConverter}}"
                               VerticalAlignment="Center"
                               Foreground="Black"
                               FontFamily="Segoe UI Light"
                               FontSize="21.333"
                               Grid.Column="1"
                               Margin="10,0,0,0" />
                </Grid>
                <Grid x:ConnectionId='5' x:Name="UnBlockGrid"
                      VerticalAlignment="Top"
                      Margin="11,20,0,0"
                                                   
                      IsTapEnabled="True"
                      Visibility="{Binding btnUnblockVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Stretch="None"
                           Source="/Images/Icons/appbtn_addbuddy_b.png" />
                    <TextBlock HorizontalAlignment="Left"
                               TextWrapping="Wrap"
                               Text="{Binding ConverterParameter=IDS_CHATON_SK_UNBLOCK, Converter={StaticResource ResourceStringConverter}}"
                               VerticalAlignment="Center"
                               Foreground="Black"
                               FontFamily="Segoe UI Light"
                               FontSize="21.333"
                               Grid.Column="1"
                               Margin="10,0,0,0" />
                </Grid>
            </StackPanel>
            <Grid Grid.Column="2"
                  Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel x:Name="DetailGrid"
                            VerticalAlignment="Center">
                    <Grid Margin="0, 10, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!-- {Binding Buddy.Name}-->
                        <StackPanel>
                            <TextBlock TextWrapping="Wrap"
                                       VerticalAlignment="Top"
                                       Foreground="Black"
                                       Text="{Binding Buddy.Name}"
                                       FontSize="45.333"
                                       FontFamily="Segoe UI Light"
                                       FontWeight="Light" />
                            <TextBlock TextWrapping="Wrap"
                                       VerticalAlignment="Top"
                                       Foreground="Black"
                                       Text="{Binding Buddy.Status}"
                                       FontSize="18"
                                       FontFamily="Segoe UI Light"
                                       FontWeight="Light" />
                        </StackPanel>
                        <Grid Grid.Column="1"
                              Margin="0,0,0,5">
                            <local1:ImageButton x:ConnectionId='2' x:Name="CloseButton"
                                                Grid.Column="2"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                NormalImage="Images/Icons/appbtn_cancel.png"
                                                PressedImage="Images/Icons/appbtn_cancel_press.png"
                                                                   
                                                Text="" />
                        </Grid>
                    </Grid>

                    <Grid Margin="0, 150, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="WarningText"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   Foreground="Black"
                                   FontSize="22"
                                   FontFamily="Segoe UI Light"
                                   FontWeight="Light"
                                   Text="{Binding Buddy.InfoMessage}" />
                    </Grid>
                </StackPanel>
            </Grid>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.ColumnSpan="3" />
        </Grid>
    </Grid>
</UserControl>

