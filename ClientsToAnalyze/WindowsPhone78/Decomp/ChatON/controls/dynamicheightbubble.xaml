<UserControl x:Class="ChatOn.Controls.DynamicHeightBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="480" Width="Auto" Height="Auto" x:Name="Root">
    
    <Grid x:Name="LayoutRoot" VerticalAlignment="Top" Tag="tilt" HorizontalAlignment="Left">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="Auto"/>
    		<ColumnDefinition Width="Auto"/>
    		<ColumnDefinition Width="Auto"/>
    	</Grid.ColumnDefinitions>
        
        <Image x:Name="tl" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None"/>
        <Image x:Name="tc" Grid.Column="1" Stretch="Fill" VerticalAlignment="Top"/>
        <Image x:Name="tr" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Stretch="None"/>
        <Image x:Name="ml" Grid.Row="1" Stretch="Fill"/>
        <Image x:Name="mc" Grid.Row="1" Stretch="Fill" Grid.Column="1"/>
        <Image x:Name="mr" Grid.Row="1" Grid.Column="2" Stretch="Fill" HorizontalAlignment="Left"/>
        <Image x:Name="bl" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2" Stretch="None"/>
        <Image x:Name="bc" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Stretch="Fill"/>
        <Image x:Name="br" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" Stretch="None"/>

        <TextBlock x:Name="ContentTextControl" MinWidth="{Binding Path=MinWidth, ElementName=Root}" 
                   FontSize="{Binding Path=FontSize, ElementName=Root}" 
                   FontFamily="{Binding Path=FontFamily, ElementName=Root}" 
                   Foreground="{Binding Path=Foreground, ElementName=Root}" 
                   Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,-20"/>
        <TextBlock x:Name="DefaultTextControl" MinWidth="{Binding Path=MinWidth, ElementName=Root}" 
                   FontSize="{Binding Path=FontSize, ElementName=Root}" 
                   FontFamily="{Binding Path=FontFamily, ElementName=Root}" 
                   Foreground="{Binding Path=Foreground, ElementName=Root}" 
                   Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,-20"/>
    </Grid>
</UserControl>
