<UserControl x:Class="ChatOn.Controls.InteractionRankShareFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        	<Grid.ColumnDefinitions>
        		<ColumnDefinition Width="Auto"/>
        		<ColumnDefinition/>
        	</Grid.ColumnDefinitions>
        	<Image Source="/chaton_icon_device_62x62.png" Stretch="None" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        	<TextBlock x:Name="ApplicationTitle" Text="{Binding MyResContainer.IDS_CHATON_HEADER_INTERACTION_RANK, Converter={StaticResource UpperCaseConverter}, Source={StaticResource LocalizedStrings}}" Style="{StaticResource PhoneTextNormalStyle}" FontSize="23" FontFamily="Segoe WP Semibold" d:LayoutOverrides="Height" Grid.Column="1" VerticalAlignment="Center"/>
        </Grid>
    	<Image x:Name="CapturedImage" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1" Stretch="None" Margin="0,12,0,0"/>
    </Grid>
</UserControl>
