<UserControl x:Class="ChatOn.Controls.PhotoFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
    	</Grid.RowDefinitions>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
    	</Grid.ColumnDefinitions>
    	<Image x:Name="PhotoImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-7" Grid.Row="1" Grid.Column="1"/>
    	<Image x:Name="tl" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Top" Source="/ChatOn;component/Images/chat_photo_frame_top_l.png"/>
        <Image x:Name="tc" Grid.Column="1" Stretch="Fill" Source="/ChatOn;component/Images/chat_photo_frame_top_center.png"/>
        <Image x:Name="tr" Grid.Column="2" HorizontalAlignment="Left" Stretch="Fill" VerticalAlignment="Top" Source="/ChatOn;component/Images/chat_photo_frame_top_r.png"/>
        <Image x:Name="ml" Grid.Row="1" Stretch="Fill" HorizontalAlignment="Left" Source="/ChatOn;component/Images/chat_photo_frame_middle_l.png"/>
        <Image x:Name="mr" Grid.Column="2" Grid.Row="1" Stretch="Fill" HorizontalAlignment="Left" Source="/ChatOn;component/Images/chat_photo_frame_middle_r.png"/>
        <Image x:Name="bl" Grid.Row="2" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Left" Source="/ChatOn;component/Images/chat_photo_frame_bottom_l_.png"/>
        <Image x:Name="bc" Grid.Column="1" Grid.Row="2" Stretch="Fill" Source="/ChatOn;component/Images/chat_photo_frame_bottom_center.png"/>
        <Image x:Name="br" Grid.Column="2" Grid.Row="2" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/ChatOn;component/Images/chat_photo_frame_bottom_r.png"/>
    </Grid>
</UserControl>
