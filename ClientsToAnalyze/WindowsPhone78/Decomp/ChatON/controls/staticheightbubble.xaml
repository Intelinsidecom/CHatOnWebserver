<UserControl x:Class="ChatOn.Controls.StaticHeightBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="480" d:DesignWidth="480" Width="Auto" Height="Auto" x:Name="Root">
    
    <Grid x:Name="LayoutRoot" VerticalAlignment="Top" Tag="tilt">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="Auto"/>
    		<ColumnDefinition Width="Auto"/>
    		<ColumnDefinition Width="Auto"/>
    	</Grid.ColumnDefinitions>
        <Image x:Name="LeftImageControl" HorizontalAlignment="Left" Stretch="None" VerticalAlignment="Top"/>
    	<Image x:Name="CenterImageControl" Stretch="Fill" VerticalAlignment="Stretch" Grid.Column="1"/>
        <Image x:Name="RightImageControl" HorizontalAlignment="Left" Stretch="None" VerticalAlignment="Top" Grid.Column="2"/>
        <TextBlock x:Name="ContentTextControl" MinWidth="{Binding Path=MinWidth, ElementName=Root}" 
                   FontSize="{Binding Path=FontSize, ElementName=Root}" 
                   FontFamily="{Binding Path=FontFamily, ElementName=Root}" 
                   Foreground="{Binding Path=Foreground, ElementName=Root}" 
                   Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
        <TextBlock x:Name="DefaultTextControl" MinWidth="{Binding Path=MinWidth, ElementName=Root}" 
                   FontSize="{Binding Path=FontSize, ElementName=Root}" 
                   FontFamily="{Binding Path=FontFamily, ElementName=Root}" 
                   Foreground="{Binding Path=Foreground, ElementName=Root}" 
                   Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
